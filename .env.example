# ========================================
# PAYMENT GATEWAY CONFIGURATION
# ========================================

# Xendit Configuration
XENDIT_API_KEY=your_xendit_api_key_here
XENDIT_SECRET_KEY=your_xendit_secret_key_here
XENDIT_BASE_URL=https://api.xendit.co
XENDIT_WEBHOOK_SECRET=your_xendit_webhook_secret_here

# Mitra Payment Configuration
MITRA_API_KEY=your_mitra_api_key_here
MITRA_SECRET_KEY=your_mitra_secret_key_here
MITRA_BASE_URL=https://api.mitra.com
MITRA_WEBHOOK_SECRET=your_mitra_webhook_secret_here

# Tripay Configuration
TRIPAY_API_KEY=your_tripay_api_key_here
TRIPAY_SECRET_KEY=your_tripay_secret_key_here
TRIPAY_BASE_URL=https://tripay.co.id/api
TRIPAY_MERCHANT_CODE=your_merchant_code_here
TRIPAY_WEBHOOK_SECRET=your_tripay_webhook_secret_here

# ========================================
# BILLING SCHEDULER CONFIGURATION
# ========================================

# Invoice Auto-Generation
INVOICE_AUTO_GENERATE=true
INVOICE_CRON_SCHEDULE=0 1 1 * *
INVOICE_DUE_DATE_OFFSET=7
INVOICE_AUTO_SEND_WHATSAPP=true

# ========================================
# WHATSAPP INTEGRATION
# ========================================

WHATSAPP_AUTO_RESPONSE=true
WHATSAPP_BOT_ENABLED=true
WHATSAPP_SESSION_NAME=billing-whatsapp

# ========================================
# DATABASE CONFIGURATION
# ========================================

DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=billing

# ========================================
# APPLICATION CONFIGURATION
# ========================================

PORT=3000
SESSION_SECRET=billing-secret-key-change-this-in-production
NODE_ENV=development

# ========================================
# NOTIFICATION SETTINGS
# ========================================

# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com

# SMS notifications (optional)
SMS_PROVIDER=twilio
SMS_API_KEY=your_sms_api_key
