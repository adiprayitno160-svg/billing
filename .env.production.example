# Production Environment Configuration
# Copy this to .env on production server and update values

# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration (Update with your production database)
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=billing

# Session Secret (Generate a strong random secret)
SESSION_SECRET=your-production-secret-key-change-this

# GenieACS Configuration
GENIEACS_URL=http://192.168.239.154:7557
GENIEACS_USERNAME=admin
GENIEACS_PASSWORD=admin

# MikroTik Configuration
MIKROTIK_HOST=192.168.88.1
MIKROTIK_USERNAME=admin
MIKROTIK_PASSWORD=your_mikrotik_password
MIKROTIK_PORT=8728

# Payment Gateway Configuration (if using)
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_IS_PRODUCTION=false

# Email Configuration (if using)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# AI/Gemini Configuration (if using)
GEMINI_API_KEY=your_gemini_api_key

# Feature Flags
HIDE_BILLING_CUSTOMERS_MENU=false
