<div class="rounded border border-slate-200 bg-white p-4">
    <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold">Daftar OLT</h2>
        <a href="/ftth/olt/add" class="px-3 py-1.5 rounded bg-blue-600 text-white text-sm hover:bg-blue-700">Tambah
            OLT</a>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
            <thead class="text-left text-slate-600 bg-slate-50/50">
                <tr>
                    <th class="py-2 px-3 font-medium">ID</th>
                    <th class="py-2 px-3 font-medium">Nama OLT</th>
                    <th class="py-2 px-3 font-medium">Lokasi</th>
                    <th class="py-2 px-3 font-medium">IP Address</th>
                    <th class="py-2 px-3 font-medium">Status</th>
                    <th class="py-2 px-3 font-medium">Port (T/U)</th>
                    <th class="py-2 px-3 text-right">Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% (items || []).forEach(function(olt){ %>
                    <tr class="border-t border-slate-100 hover:bg-slate-50/50 transition-colors">
                        <td class="py-2 px-3 text-slate-400">#<%= olt.id %>
                        </td>
                        <td class="py-2 px-3 font-medium text-slate-700">
                            <%= olt.name %>
                        </td>
                        <td class="py-2 px-3 text-slate-500 text-xs">
                            <%= olt.location || '-' %>
                        </td>
                        <td class="py-2 px-3 text-slate-600 font-mono">
                            <%= olt.ip_address || '-' %>
                        </td>
                        <td class="py-2 px-3">
                            <span
                                class="px-2 py-0.5 text-xs rounded-full font-medium <%= olt.status === 'online' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
                                <%= olt.status || 'offline' %>
                            </span>
                        </td>
                        <td class="py-2 px-3">
                            <span class="font-semibold text-slate-700">
                                <%= olt.total_ports || 0 %>
                            </span> /
                            <span class="font-semibold text-blue-600">
                                <%= olt.used_ports || 0 %>
                            </span>
                        </td>
                        <td class="py-2 px-3 text-right">
                            <div class="flex justify-end gap-2 text-xs">
                                <a href="/ftth/olt/<%= olt.id %>"
                                    class="px-2 py-1 rounded border border-slate-300 text-slate-600 hover:bg-white">Edit</a>
                                <form method="post" action="/ftth/olt/<%= olt.id %>/delete"
                                    onsubmit="return confirm('Hapus OLT ini?');" class="inline">
                                    <button type="submit"
                                        class="px-2 py-1 rounded border border-rose-200 text-rose-600 hover:bg-rose-50">Hapus</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                        <% if (!items || items.length===0) { %>
                            <tr>
                                <td colspan="7" class="py-6 text-center text-slate-500">Belum ada data OLT</td>
                            </tr>
                            <% } %>
            </tbody>
        </table>
    </div>
</div>