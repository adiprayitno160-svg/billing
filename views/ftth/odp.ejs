<div class="rounded border border-slate-200 bg-white p-4">
    <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold">Daftar ODP <%= odcId ? ('(ODC #' + odcId + ')') : '' %></h2>
        <a href="/ftth/odp/add<%= odcId ? ('?odc_id=' + odcId) : '' %>" class="px-3 py-1.5 rounded bg-blue-600 text-white text-sm hover:bg-blue-700">Tambah ODP</a>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
            <thead class="text-left text-slate-600">
                <tr>
                    <th class="py-2 pr-4">Nama</th>
                    <th class="py-2 pr-4">ODC</th>
                    <th class="py-2 pr-4">Lokasi</th>
                    <th class="py-2 pr-4">Total</th>
                    <th class="py-2 pr-4">Terpakai</th>
                    <th class="py-2 pr-4">Sisa</th>
                    <th class="py-2 pr-4">Koordinat</th>
                    <th class="py-2 pr-4">Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% (items || []).forEach(function(odp){ %>
                <tr class="border-t border-slate-100">
                    <td class="py-2 pr-4"><%= odp.name %></td>
                    <td class="py-2 pr-4">#<%= odp.odc_id %></td>
                    <td class="py-2 pr-4"><%= odp.location || '-' %></td>
                    <td class="py-2 pr-4"><%= odp.total_ports %></td>
                    <td class="py-2 pr-4"><%= odp.used_ports %></td>
                    <td class="py-2 pr-4"><%= (odp.total_ports - odp.used_ports) %></td>
                    <td class="py-2 pr-4"><%= (odp.latitude && odp.longitude) ? (odp.latitude + ', ' + odp.longitude) : '-' %></td>
                    <td class="py-2 pr-4 flex gap-2">
                        <a href="/ftth/odp/<%= odp.id %>" class="px-2 py-1 text-xs rounded border border-slate-300">Edit</a>
                        <form method="post" action="/ftth/odp/<%= odp.id %>/delete" onsubmit="return confirm('Hapus ODP ini?');">
                            <button type="submit" class="px-2 py-1 text-xs rounded border border-rose-300 text-rose-700">Hapus</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
                <% if (!items || items.length === 0) { %>
                <tr><td colspan="8" class="py-6 text-center text-slate-500">Belum ada data</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

