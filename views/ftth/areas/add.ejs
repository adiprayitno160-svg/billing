<div class="rounded border border-slate-200 bg-white p-4">
    <div class="flex items-center justify-between mb-4">
        <div>
            <h2 class="text-lg font-semibold">Tambah Area Baru</h2>
            <p class="text-xs text-slate-500">Buat data area/wilayah baru</p>
        </div>
        <a href="/ftth/areas" class="px-3 py-1.5 rounded border border-slate-300 text-sm hover:bg-slate-50">Kembali</a>
    </div>

    <!-- Alert -->
    <%- include('../../partials/flash') %>

        <form action="/ftth/areas" method="POST" class="grid grid-cols-1 gap-4 max-w-xl">

            <!-- Code -->
            <div>
                <label for="code" class="block text-xs text-slate-600 mb-1">Kode Area</label>
                <input type="text" name="code" id="code" required
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
                    placeholder="Contoh: WNG-01">
                <p class="mt-1 text-[10px] text-slate-400">Kode unik untuk identifikasi area (tanpa spasi)</p>
            </div>

            <!-- Name -->
            <div>
                <label for="name" class="block text-xs text-slate-600 mb-1">Nama Area</label>
                <input type="text" name="name" id="name" required
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
                    placeholder="Contoh: Kelurahan Sukamaju">
            </div>

            <!-- Description -->
            <div>
                <label for="description" class="block text-xs text-slate-600 mb-1">Deskripsi (Opsional)</label>
                <textarea name="description" id="description" rows="3"
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
                    placeholder="Keterangan tambahan area ini..."></textarea>
            </div>

            <!-- Actions -->
            <div class="flex justify-end gap-2 mt-2">
                <a href="/ftth/areas"
                    class="px-3 py-1.5 rounded border border-slate-300 text-sm hover:bg-slate-50">Batal</a>
                <button type="submit"
                    class="px-3 py-1.5 rounded bg-blue-600 text-white text-sm hover:bg-blue-700 transition-colors">
                    Simpan Area
                </button>
            </div>
        </form>
</div>