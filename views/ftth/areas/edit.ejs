<div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-6 flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600">
                Edit Data Area
            </h1>
            <p class="text-slate-500 mt-1">Perbarui informasi wilayah</p>
        </div>
        <a href="/ftth/areas"
            class="px-4 py-2 bg-white border border-slate-200 text-slate-700 rounded-xl hover:bg-slate-50 hover:text-blue-600 transition-all shadow-sm flex items-center gap-2 font-medium">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18">
                </path>
            </svg>
            Kembali
        </a>
    </div>

    <!-- Main Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="p-6 border-b border-slate-100 bg-slate-50/50 flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-indigo-100 text-indigo-600 flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z">
                    </path>
                </svg>
            </div>
            <div>
                <h3 class="font-bold text-slate-800">Edit Area: <%= area.name %>
                </h3>
                <p class="text-xs text-slate-500">Update detail area dan kode wilayah</p>
            </div>
        </div>

        <!-- Alert -->
        <%- include('../../partials/flash') %>

            <form action="/ftth/areas/<%= area.id %>/update" method="POST" class="p-6 space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Code -->
                    <div class="space-y-2">
                        <label for="code" class="block text-sm font-medium text-slate-700">Kode Area <span
                                class="text-red-500">*</span></label>
                        <div class="relative">
                            <input type="text" name="code" id="code" required value="<%= area.code %>"
                                class="w-full px-4 py-2.5 bg-slate-50 border border-slate-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all font-mono uppercase">
                        </div>
                    </div>

                    <!-- Name -->
                    <div class="space-y-2">
                        <label for="name" class="block text-sm font-medium text-slate-700">Nama Area <span
                                class="text-red-500">*</span></label>
                        <input type="text" name="name" id="name" required value="<%= area.name %>"
                            class="w-full px-4 py-2.5 bg-slate-50 border border-slate-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all font-medium">
                    </div>

                    <!-- Description -->
                    <div class="col-span-1 md:col-span-2 space-y-2">
                        <label for="description" class="block text-sm font-medium text-slate-700">Deskripsi <span
                                class="text-slate-400 font-normal">(Opsional)</span></label>
                        <textarea name="description" id="description" rows="3"
                            class="w-full px-4 py-2.5 bg-slate-50 border border-slate-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all resize-none"><%= area.description %></textarea>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex gap-3 pt-6 border-t border-slate-100 mt-6">
                    <button type="submit"
                        class="flex-1 px-6 py-2.5 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-xl hover:from-blue-700 hover:to-indigo-700 transition-all font-semibold shadow-lg shadow-blue-500/30">
                        Simpan Perubahan
                    </button>
                    <a href="/ftth/areas"
                        class="px-6 py-2.5 border border-slate-300 text-slate-700 rounded-xl hover:bg-slate-50 font-medium transition-all">
                        Batal
                    </a>
                </div>
            </form>
    </div>
</div>