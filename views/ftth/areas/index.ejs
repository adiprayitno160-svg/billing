<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Data Master Area</h1>
            <p class="text-gray-600">Kelola data wilayah/area untuk pengelompokan ODC & ODP</p>
        </div>
        <a href="/ftth/areas/create"
            class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <i class="fas fa-plus mr-2"></i>
            Tambah Area
        </a>
    </div>

    <!-- Alert -->
    <%- include('../../partials/alert') %>

        <!-- Table -->
        <div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Kode</th>
                            <th scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Nama Area</th>
                            <th scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Deskripsi</th>
                            <th scope="col"
                                class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Aksi</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% if (areas.length===0) { %>
                            <tr>
                                <td colspan="4" class="px-6 py-4 text-center text-gray-500 text-sm">
                                    Belum ada data area. Silakan tambah area baru.
                                </td>
                            </tr>
                            <% } else { %>
                                <% areas.forEach(area=> { %>
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                            <span
                                                class="inline-flex items-center px-2.5 py-0.5 rounded font-mono text-xs font-medium bg-gray-100 text-gray-800">
                                                <%= area.code %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            <%= area.name %>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-gray-500">
                                            <%= area.description || '-' %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            <div class="flex justify-end gap-2">
                                                <a href="/ftth/areas/<%= area.id %>/edit"
                                                    class="text-blue-600 hover:text-blue-900">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form action="/ftth/areas/<%= area.id %>/delete" method="POST"
                                                    onsubmit="return confirm('Yakin ingin menghapus area ini? Data ODC terkait mungkin akan kehilangan referensi area.');"
                                                    class="inline">
                                                    <button type="submit" class="text-red-600 hover:text-red-900">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
</div>