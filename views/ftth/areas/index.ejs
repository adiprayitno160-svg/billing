<div class="rounded border border-slate-200 bg-white p-4">
    <div class="flex items-center justify-between mb-4">
        <div>
            <h2 class="text-lg font-semibold">Data Master Area</h2>
            <p class="text-xs text-slate-500">Kelola data wilayah/area untuk pengelompokan ODC & ODP</p>
        </div>
        <a href="/ftth/areas/create"
            class="px-3 py-1.5 rounded bg-blue-600 text-white text-sm hover:bg-blue-700 transition-colors">
            Tambah Area
        </a>
    </div>

    <!-- Alert -->
    <%- include('../../partials/flash') %>

        <div class="overflow-x-auto">
            <table class="min-w-full text-sm">
                <thead class="text-left text-slate-600 bg-slate-50/50">
                    <tr>
                        <th class="py-2 px-3 font-medium">Kode</th>
                        <th class="py-2 px-3 font-medium">Nama Area</th>
                        <th class="py-2 px-3 font-medium">Deskripsi</th>
                        <th class="py-2 px-3 font-medium text-right">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (areas.length===0) { %>
                        <tr>
                            <td colspan="4" class="py-6 text-center text-slate-500 border-t border-slate-100">
                                Belum ada data area. Silakan tambah area baru.
                            </td>
                        </tr>
                        <% } else { %>
                            <% areas.forEach(area=> { %>
                                <tr class="border-t border-slate-100 hover:bg-slate-50/50 transition-colors">
                                    <td class="py-2 px-3">
                                        <span class="bg-slate-100 text-slate-700 px-2 py-0.5 rounded text-xs font-mono">
                                            <%= area.code %>
                                        </span>
                                    </td>
                                    <td class="py-2 px-3 font-medium text-slate-700">
                                        <%= area.name %>
                                    </td>
                                    <td class="py-2 px-3 text-slate-500">
                                        <%= area.description || '-' %>
                                    </td>
                                    <td class="py-2 px-3 text-right">
                                        <div class="flex justify-end gap-2">
                                            <a href="/ftth/areas/<%= area.id %>/edit"
                                                class="px-2 py-1 text-xs rounded border border-slate-300 text-slate-600 hover:border-slate-400 hover:text-slate-800 bg-white transition-colors">
                                                Edit
                                            </a>
                                            <form action="/ftth/areas/<%= area.id %>/delete" method="POST"
                                                onsubmit="return confirm('Yakin ingin menghapus area ini? Data ODC terkait mungkin akan kehilangan referensi area.');"
                                                class="inline">
                                                <button type="submit"
                                                    class="px-2 py-1 text-xs rounded border border-rose-200 text-rose-600 hover:bg-rose-50 hover:border-rose-300 transition-colors">
                                                    Hapus
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                                    <% } %>
                </tbody>
            </table>
        </div>
</div>