<div class="space-y-6 pb-24">
    <!-- Header -->
    <div
        class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-slate-800 flex items-center gap-3">
                <span class="w-10 h-10 rounded-lg bg-blue-100 text-blue-600 flex items-center justify-center">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                </span>
                Tambah ODC Baru
            </h1>
            <p class="text-slate-500 mt-1 ml-13">Konfigurasi Optical Distribution Cabinet baru</p>
        </div>
    </div>

    <!-- Main Form -->
    <form id="addOdcForm" method="post" action="/ftth/odc">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

            <!-- Left Column: Form Inputs -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Data Card -->
                <div class="bg-white rounded-xl shadow-sm border border-slate-200">
                    <div class="p-4 border-b border-slate-100 bg-slate-50 rounded-t-xl">
                        <h3 class="font-bold text-slate-800">Informasi ODC</h3>
                    </div>

                    <div class="p-6 space-y-4">
                        <!-- OLT Select -->
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-1">OLT Utama <span
                                    class="text-red-500">*</span></label>
                            <select name="olt_id" required
                                class="w-full px-4 py-2 bg-white border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                <option value="">-- Pilih OLT --</option>
                                <% (olts || []).forEach(o=> { %>
                                    <option value="<%= o.id %>" <%=(typeof oltId !=='undefined' && oltId==o.id)
                                        ? 'selected' : '' %>><%= o.name %> (Sisa: <%= o.total_ports - o.used_ports %>
                                                port)</option>
                                    <% }) %>
                            </select>
                            <p class="text-xs text-slate-500 mt-1">Sumber sinyal uplink untuk ODC ini.</p>
                        </div>

                        <!-- Area Select -->
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-1">Area Layanan</label>
                            <select name="area_id"
                                class="w-full px-4 py-2 bg-white border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                <option value="">-- Pilih Area --</option>
                                <% (typeof areas !=='undefined' ? areas : []).forEach(a=> { %>
                                    <option value="<%= a.id %>">
                                        <%= a.name %> (<%= a.code %>)
                                    </option>
                                    <% }) %>
                            </select>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-1">Nama ODC <span
                                        class="text-red-500">*</span></label>
                                <input type="text" name="name" required
                                    class="w-full px-4 py-2 bg-white border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 font-medium"
                                    placeholder="Contoh: ODC-Area-A-01">
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-1">Total Port <span
                                        class="text-red-500">*</span></label>
                                <input type="number" name="total_ports" value="8" required
                                    class="w-full px-4 py-2 bg-white border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                                    min="0">
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-1">Lokasi Fisik</label>
                            <input type="text" name="location"
                                class="w-full px-4 py-2 bg-white border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                                placeholder="Alamat lengkap lokasi pemasangan">
                        </div>

                        <!-- Uplink Config -->
                        <div class="bg-blue-50 p-4 rounded-lg border border-blue-100">
                            <h4 class="text-xs font-bold text-blue-800 uppercase mb-2">Konfigurasi Sambungan OLT</h4>
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                                <div class="md:col-span-2">
                                    <select name="olt_card"
                                        class="w-full px-3 py-2 text-sm border border-blue-300 rounded focus:ring-2 focus:ring-blue-500">
                                        <option value="">-- Pilih Line Card / Port OLT --</option>
                                        <% (olts || []).forEach(o=> { %>
                                            <% if((o.line_cards || 0)> 0) { %>
                                                <% for(let i=1; i<=o.line_cards; i++) { %>
                                                    <option value="<%= i %>">
                                                        <%= o.name %> - Card/Slot <%= i %>
                                                    </option>
                                                    <% } %>
                                                        <% } else { %>
                                                            <option value="1">
                                                                <%= o.name %> - Default Port
                                                            </option>
                                                            <% } %>
                                                                <% }) %>
                                    </select>
                                </div>
                                <div>
                                    <input type="number" name="olt_port" placeholder="Port No"
                                        class="w-full px-3 py-2 text-sm border border-blue-300 rounded focus:ring-2 focus:ring-blue-500">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Map -->
            <div class="space-y-6">
                <!-- Map Card -->
                <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
                    <div class="p-3 border-b border-slate-100 bg-slate-50 flex justify-between items-center">
                        <h3 class="font-bold text-slate-800 text-sm">Koordinat Peta</h3>
                        <button type="button" id="btnGetLocation"
                            class="text-xs bg-white border px-2 py-1 rounded shadow-sm hover:bg-slate-50">üìç Lokasi
                            Saya</button>
                    </div>
                    <!-- Map Container -->
                    <div id="mapOdc" class="w-full h-64 bg-slate-100 relative z-0"></div>

                    <div class="p-3 bg-slate-50 border-t border-slate-100 grid grid-cols-2 gap-2">
                        <div>
                            <label class="text-[10px] uppercase font-bold text-slate-500">Latitude</label>
                            <input type="number" step="0.0000001" name="latitude" id="latInput"
                                class="w-full text-xs text-center border p-1 rounded bg-white" placeholder="Lat">
                        </div>
                        <div>
                            <label class="text-[10px] uppercase font-bold text-slate-500">Longitude</label>
                            <input type="number" step="0.0000001" name="longitude" id="lngInput"
                                class="w-full text-xs text-center border p-1 rounded bg-white" placeholder="Lng">
                        </div>
                    </div>
                    <div class="p-4 border-t border-slate-100">
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Catatan</label>
                        <textarea name="notes" rows="2"
                            class="w-full px-3 py-2 bg-white border border-slate-300 rounded text-sm resize-none"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- PERMANENT FOOTER BAR (Sticky Strategy) -->
<div
    class="sticky bottom-0 -mx-4 md:-mx-6 lg:-mx-8 -mb-6 p-4 bg-white border-t border-slate-200 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.1)] z-[100] flex justify-end gap-3 rounded-none">
    <a href="/ftth/odc"
        class="px-6 py-2 border border-slate-300 text-slate-700 rounded-lg hover:bg-slate-50 font-bold transition-colors">Batal</a>
    <button type="submit" form="addOdcForm"
        class="px-8 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-bold shadow-sm hover:shadow-md transition-all flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        SIMPAN DATA
    </button>
</div>

<!-- Leaflet di-load global dari layout utama -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        let map, marker;

        function waitForLeaflet() {
            return new Promise((resolve, reject) => {
                let attempts = 0;
                const maxAttempts = 50; // 5 detik maksimal

                const checkLeaflet = () => {
                    attempts++;
                    if (typeof L !== 'undefined') {
                        resolve();
                    } else if (attempts >= maxAttempts) {
                        reject(new Error('Leaflet tidak dapat dimuat dalam waktu yang ditentukan'));
                    } else {
                        setTimeout(checkLeaflet, 100);
                    }
                };

                checkLeaflet();
            });
        }

        function initMap() {
            try {
                // Pastikan elemen map ada
                const mapElement = document.getElementById('mapOdc');
                if (!mapElement) {
                    console.error('Map element not found');
                    return;
                }

                // Pastikan container map terlihat
                if (mapElement.offsetWidth === 0 || mapElement.offsetHeight === 0) {
                    console.warn('Map container has no dimensions, retrying...');
                    setTimeout(initMap, 200);
                    return;
                }

                // Hapus map yang sudah ada jika ada
                if (map) {
                    map.remove();
                }

                // Inisialisasi map
                map = L.map('mapOdc', {
                    preferCanvas: false
                }).setView([-6.2, 106.8], 11);

                // Tambahkan tile layer
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    maxZoom: 19,
                    attribution: '¬© OpenStreetMap contributors'
                }).addTo(map);

                // Tambahkan marker default
                marker = L.marker([-6.2, 106.8]).addTo(map);

                // Get form input elements
                const latInput = document.querySelector('input[name="latitude"]');
                const lngInput = document.querySelector('input[name="longitude"]');

                // Event click pada map untuk mengubah lokasi
                map.on('click', function (e) {
                    const lat = e.latlng.lat;
                    const lng = e.latlng.lng;

                    // Update marker
                    marker.setLatLng([lat, lng]);

                    // Update form fields
                    if (latInput) latInput.value = lat.toFixed(7);
                    if (lngInput) lngInput.value = lng.toFixed(7);
                });

                // Trigger resize untuk memastikan map ter-render dengan benar
                setTimeout(() => {
                    if (map) {
                        map.invalidateSize();
                    }
                }, 100);

                // Otomatis ambil lokasi saat ini jika koordinat masih kosong
                if ((!latInput || !latInput.value) && (!lngInput || !lngInput.value)) {
                    if (navigator.geolocation) {
                        navigator.geolocation.getCurrentPosition(function (position) {
                            const lat = position.coords.latitude;
                            const lng = position.coords.longitude;

                            // Update map view
                            if (map) {
                                map.setView([lat, lng], 15);
                                marker.setLatLng([lat, lng]);
                            }

                            // Update form fields
                            if (latInput) latInput.value = lat.toFixed(7);
                            if (lngInput) lngInput.value = lng.toFixed(7);
                        }, function (error) {
                            console.log('Tidak dapat mengambil lokasi otomatis:', error.message);
                            // Tidak menampilkan error, hanya log saja karena ini opsional
                        }, { enableHighAccuracy: true, timeout: 10000, maximumAge: 30000 });
                    }
                }

                console.log('Map initialized successfully');
            } catch (error) {
                console.error('Error initializing map:', error);
            }
        }

        // Ambil lokasi saat ini
        const getLocationBtn = document.getElementById('btnGetLocation');
        if (getLocationBtn) {
            getLocationBtn.addEventListener('click', function () {
                const btn = this;
                const originalText = btn.innerHTML;
                btn.disabled = true;
                btn.innerHTML = '‚è≥ Mencari...';

                if (navigator.geolocation) {
                    navigator.geolocation.getCurrentPosition(function (position) {
                        const lat = position.coords.latitude;
                        const lng = position.coords.longitude;

                        // Update map view
                        if (map) {
                            map.setView([lat, lng], 15);
                            marker.setLatLng([lat, lng]);
                        }

                        // Update form fields
                        const latInput = document.querySelector('input[name="latitude"]');
                        const lngInput = document.querySelector('input[name="longitude"]');
                        if (latInput) latInput.value = lat.toFixed(7);
                        if (lngInput) lngInput.value = lng.toFixed(7);

                        btn.disabled = false;
                        btn.innerHTML = originalText;
                    }, function (error) {
                        let msg = error.message;
                        if (error.code === 1) msg = "Izin lokasi ditolak";
                        else if (error.code === 2) msg = "Posisi tidak tersedia";
                        else if (error.code === 3) msg = "Timeout";

                        alert('Error: ' + msg);
                        btn.disabled = false;
                        btn.innerHTML = originalText;
                    }, { enableHighAccuracy: true, timeout: 10000 });
                } else {
                    alert('Browser tidak mendukung geolocation');
                    btn.disabled = false;
                    btn.innerHTML = originalText;
                }
            });
        }

        // Initialize map dengan menunggu Leaflet siap
        waitForLeaflet().then(() => {
            console.log('Leaflet loaded, initializing map...');
            setTimeout(initMap, 100);
        }).catch((error) => {
            console.error('Failed to load Leaflet:', error);
            // Fallback: coba lagi setelah delay lebih lama
            setTimeout(() => {
                if (typeof L !== 'undefined') {
                    initMap();
                }
            }, 2000);
        });
    });
</script>