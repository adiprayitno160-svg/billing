<div class="space-y-6 w-full">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Monitor Pelanggan Trouble</h1>
            <p class="text-sm text-gray-500 mt-1">Daftar pelanggan yang mengalami gangguan (Offline, Maintenance, High
                Latency, dll)</p>
        </div>
        <div class="flex items-center gap-3">
            <span class="text-sm text-gray-500">
                Update terakhir: <%= new Date(updatedAt).toLocaleTimeString('id-ID') %>
            </span>
            <button onclick="window.location.reload()"
                class="inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-sm transition-all duration-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                Refresh
            </button>
        </div>
    </div>

    <!-- Stats Cards Summary -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <% const stats={ total: troubleCustomers.length, offline: troubleCustomers.filter(c=> c.issue_type ===
            'Offline').length,
            maintenance: troubleCustomers.filter(c => c.trouble_type === 'maintenance').length,
            sla: troubleCustomers.filter(c => c.trouble_type === 'sla_incident').length
            };
            %>

            <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-200">
                <div class="text-sm font-medium text-gray-500">Total Trouble</div>
                <div class="mt-1 text-2xl font-bold text-gray-900">
                    <%= stats.total %>
                </div>
            </div>

            <div class="bg-red-50 rounded-xl p-4 shadow-sm border border-red-100">
                <div class="text-sm font-medium text-red-600">Offline</div>
                <div class="mt-1 text-2xl font-bold text-red-700">
                    <%= stats.offline %>
                </div>
            </div>

            <div class="bg-yellow-50 rounded-xl p-4 shadow-sm border border-yellow-100">
                <div class="text-sm font-medium text-yellow-600">Maintenance</div>
                <div class="mt-1 text-2xl font-bold text-yellow-700">
                    <%= stats.maintenance %>
                </div>
            </div>

            <div class="bg-orange-50 rounded-xl p-4 shadow-sm border border-orange-100">
                <div class="text-sm font-medium text-orange-600">SLA Incident</div>
                <div class="mt-1 text-2xl font-bold text-orange-700">
                    <%= stats.sla %>
                </div>
            </div>
    </div>

    <!-- Main Table -->
    <div class="bg-white border border-gray-300 rounded-2xl shadow-xl overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Pelanggan</th>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Koneksi</th>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Lokasi (ODC/ODP)</th>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Masalah</th>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Status</th>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sejak
                        </th>
                        <th scope="col"
                            class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Aksi
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (troubleCustomers && troubleCustomers.length> 0) { %>
                        <% troubleCustomers.forEach(function(customer) { %>
                            <tr class="hover:bg-gray-50 transition-colors duration-150">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div
                                            class="flex-shrink-0 h-10 w-10 bg-gray-100 rounded-full flex items-center justify-center text-gray-500 font-bold">
                                            <%= customer.name.charAt(0).toUpperCase() %>
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-gray-900">
                                                <%= customer.name %>
                                            </div>
                                            <div class="text-xs text-gray-500">
                                                <%= customer.customer_code %>
                                            </div>
                                            <% if (customer.phone) { %>
                                                <div class="text-xs text-gray-500 flex items-center mt-0.5">
                                                    <svg class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24"
                                                        stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                                    </svg>
                                                    <%= customer.phone %>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">
                                        <%= customer.connection_type==='pppoe' ? 'PPPoE' : 'Static IP' %>
                                    </div>
                                    <div class="text-xs text-gray-500">
                                        <%= customer.pppoe_username || '-' %>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <% if (customer.odc_id || customer.odp_id) { %>
                                        <div class="text-xs">
                                            <% if (customer.odc_id) { %>
                                                <span
                                                    class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 mb-1">
                                                    ODC: <%= customer.odc_id %>
                                                </span>
                                                <% } %>
                                                    <% if (customer.odp_id) { %>
                                                        <br>
                                                        <span
                                                            class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                                                            ODP: <%= customer.odp_id %>
                                                        </span>
                                                        <% } %>
                                        </div>
                                        <% } else { %>
                                            <span class="text-xs text-gray-400">-</span>
                                            <% } %>
                                                <% if (customer.address) { %>
                                                    <div class="text-xs text-gray-500 mt-1 truncate max-w-[150px]"
                                                        title="<%= customer.address %>">
                                                        <%= customer.address %>
                                                    </div>
                                                    <% } %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900">
                                        <%= customer.issue_type || '-' %>
                                    </div>

                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <% if (customer.maintenance_status==='in_progress' ) { %>
                                        <span
                                            class="inline-flex items-center rounded-full bg-yellow-100 px-2.5 py-0.5 text-xs font-medium text-yellow-800">
                                            Sedang Ditangani
                                        </span>
                                        <% } else if (customer.maintenance_status==='scheduled' ) { %>
                                            <span
                                                class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">
                                                Terjadwal
                                            </span>
                                            <% } else if (customer.issue_type==='Offline' ) { %>
                                                <span
                                                    class="inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800">
                                                    <span class="h-2 w-2 rounded-full bg-red-500 mr-1.5"></span>
                                                    Offline
                                                </span>
                                                <% } else if (customer.issue_type &&
                                                    customer.issue_type.startsWith('SLA:')) { %>
                                                    <span
                                                        class="inline-flex items-center rounded-full bg-orange-100 px-2.5 py-0.5 text-xs font-medium text-orange-800">
                                                        ⚠️ Incident
                                                    </span>
                                                    <% } else { %>
                                                        <span
                                                            class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
                                                            <%= customer.status %>
                                                        </span>
                                                        <% } %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    <% if (customer.trouble_since) { %>
                                        <% const since=new Date(customer.trouble_since); const now=new Date(); const
                                            diffMs=now - since; const diffMins=Math.floor(diffMs / 60000); const
                                            diffHrs=Math.floor(diffMins / 60); let durationStr='' ; if (diffHrs> 24) {
                                            durationStr = Math.floor(diffHrs / 24) + ' hari';
                                            } else if (diffHrs > 0) {
                                            durationStr = diffHrs + ' jam ' + (diffMins % 60) + ' menit';
                                            } else {
                                            durationStr = diffMins + ' menit';
                                            }
                                            %>
                                            <div class="font-medium">
                                                <%= since.toLocaleString('id-ID', { day: '2-digit' , month: 'short' ,
                                                    hour: '2-digit' , minute: '2-digit' }) %>
                                            </div>
                                            <div class="text-xs text-red-500 font-medium mt-0.5">
                                                <%= durationStr %> yang lalu
                                            </div>
                                            <% } else { %>
                                                -
                                                <% } %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex items-center justify-end space-x-2">
                                        <button onclick="checkStatus(<%= customer.id %>)"
                                            class="text-indigo-600 hover:text-indigo-900 border border-indigo-200 bg-indigo-50 hover:bg-indigo-100 rounded px-2 py-1 text-xs transition-colors">
                                            Cek
                                        </button>
                                        <a href="/customers/<%= customer.id %>" target="_blank"
                                            class="text-gray-600 hover:text-gray-900 border border-gray-200 bg-gray-50 hover:bg-gray-100 rounded px-2 py-1 text-xs transition-colors">
                                            Detail
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                                            <div class="flex flex-col items-center">
                                                <div
                                                    class="h-16 w-16 bg-green-100 rounded-full flex items-center justify-center mb-4">
                                                    <svg xmlns="http://www.w3.org/2000/svg"
                                                        class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24"
                                                        stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                    </svg>
                                                </div>
                                                <h3 class="text-lg font-medium text-gray-900">Semua sistem normal</h3>
                                                <p class="mt-1 text-sm text-gray-500">Tidak ada pelanggan yang mengalami
                                                    gangguan saat ini.</p>
                                            </div>
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- contentFor('scripts') %>
    <script>
        // Include moment js if needed or just use vanilla JS

        function checkStatus(id) {
            // Implementasi cek status ping/koneksi real-time
            alert('Fitur cek status cepat untuk ID ' + id + ' akan segera hadir.');
        }

        // Auto refresh every 60 seconds
        setInterval(() => {
            window.location.reload();
        }, 60000);
    </script>