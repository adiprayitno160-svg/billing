<div class="space-y-6">
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6">
            <div>
                <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-2 flex items-center">
                    <div
                        class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center mr-4 shadow-lg shadow-red-200">
                        <i class="fas fa-exclamation-triangle text-white text-xl"></i>
                    </div>
                    Monitor Trouble
                </h1>
                <p class="text-gray-600 ml-16 italic">Daftar pelanggan yang mengalami gangguan (Offline, Maintenance,
                    High Latency)</p>
            </div>
            <div class="flex items-center gap-3 ml-16 sm:ml-0">
                <span
                    class="text-xs font-semibold text-gray-400 uppercase tracking-widest bg-white px-3 py-1.5 rounded-lg border border-gray-200 shadow-sm">
                    Live: <%= new Date(updatedAt).toLocaleTimeString('id-ID') %>
                </span>
                <button onclick="window.location.reload()"
                    class="px-4 py-2.5 bg-white border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-all duration-200 shadow-sm flex items-center gap-2 font-medium">
                    <i class="fas fa-sync-alt"></i>
                    Refresh
                </button>
            </div>
        </div>
    </div>

    <!-- Stats Cards Summary -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <% const stats={ total: troubleCustomers.length, offline: troubleCustomers.filter(c=> c.issue_type ===
            'Offline').length,
            maintenance: troubleCustomers.filter(c => c.trouble_type === 'maintenance').length,
            sla: troubleCustomers.filter(c => c.trouble_type === 'sla_incident').length
            };
            %>

            <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center text-gray-600">
                        <i class="fas fa-list-check text-xl"></i>
                    </div>
                    <span class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">TOTAL ISSUE</span>
                </div>
                <div class="text-3xl font-bold text-gray-900 mb-1">
                    <%= stats.total %>
                </div>
                <div class="text-sm text-gray-500">Jumlah Gangguan</div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm border border-red-200 p-6 hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center text-red-600">
                        <i class="fas fa-signal-slash text-xl"></i>
                    </div>
                    <span class="text-[10px] font-bold text-red-600 uppercase tracking-widest">OFFLINE</span>
                </div>
                <div class="text-3xl font-bold text-red-600 mb-1">
                    <%= stats.offline %>
                </div>
                <div class="text-sm text-red-500/70">Koneksi Terputus</div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm border border-yellow-200 p-6 hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 bg-yellow-100 rounded-xl flex items-center justify-center text-yellow-600">
                        <i class="fas fa-tools text-xl"></i>
                    </div>
                    <span class="text-[10px] font-bold text-yellow-600 uppercase tracking-widest">MAINTENANCE</span>
                </div>
                <div class="text-3xl font-bold text-yellow-600 mb-1">
                    <%= stats.maintenance %>
                </div>
                <div class="text-sm text-yellow-600/70">Perbaikan Aktif</div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm border border-orange-200 p-6 hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center text-orange-600">
                        <i class="fas fa-triangle-exclamation text-xl"></i>
                    </div>
                    <span class="text-[10px] font-bold text-orange-600 uppercase tracking-widest">SLA INCIDENT</span>
                </div>
                <div class="text-3xl font-bold text-orange-600 mb-1">
                    <%= stats.sla %>
                </div>
                <div class="text-sm text-orange-600/70">Gangguan SLA</div>
            </div>
    </div>

    <!-- Main Table -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col"
                            class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">
                            Pelanggan</th>
                        <th scope="col"
                            class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">
                            Koneksi</th>
                        <th scope="col"
                            class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">
                            Lokasi (ODC/ODP)</th>
                        <th scope="col"
                            class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">
                            Masalah</th>
                        <th scope="col"
                            class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">
                            Status</th>
                        <th scope="col"
                            class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">
                            Sejak</th>
                        <th scope="col"
                            class="px-6 py-4 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">
                            Aksi</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-100">
                    <% if (troubleCustomers && troubleCustomers.length> 0) { %>
                        <% troubleCustomers.forEach(function(customer, index) { %>
                            <tr
                                class="hover:bg-gray-50 transition-colors duration-150 <%= index % 2 === 0 ? 'bg-white' : 'bg-gray-50/50' %>">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div
                                            class="flex-shrink-0 h-10 w-10 bg-gradient-to-br from-gray-100 to-gray-200 rounded-lg flex items-center justify-center text-gray-600 font-bold">
                                            <%= customer.name.charAt(0).toUpperCase() %>
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-semibold text-gray-900">
                                                <%= customer.name %>
                                            </div>
                                            <div class="text-xs text-gray-500">
                                                <%= customer.customer_code %>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900">
                                        <%= customer.connection_type==='pppoe' ? 'PPPoE' : 'Static IP' %>
                                    </div>
                                    <div class="text-xs text-blue-600 font-mono">
                                        <%= customer.pppoe_username || customer.ip_address || '-' %>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="space-y-1">
                                        <% if (customer.odc_name) { %>
                                            <span
                                                class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-bold bg-blue-50 text-blue-700 border border-blue-100">
                                                ODC: <%= customer.odc_name %>
                                            </span>
                                            <% } %>
                                                <% if (customer.odp_id) { %>
                                                    <span
                                                        class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-bold bg-purple-50 text-purple-700 border border-purple-100">
                                                        ODP: <%= customer.odp_id %>
                                                    </span>
                                                    <% } %>
                                    </div>
                                    <% if (customer.address) { %>
                                        <div class="text-[10px] text-gray-500 mt-1 truncate max-w-[150px]"
                                            title="<%= customer.address %>">
                                            <%= customer.address %>
                                        </div>
                                        <% } %>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm font-bold text-red-600">
                                        <%= customer.issue_type || '-' %>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <% if (customer.maintenance_status==='in_progress' ) { %>
                                        <span
                                            class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-bold bg-yellow-100 text-yellow-800 border border-yellow-200">
                                            <i class="fas fa-tools mr-1.5 text-[10px]"></i> Sedang Ditangani
                                        </span>
                                        <% } else if (customer.maintenance_status==='scheduled' ) { %>
                                            <span
                                                class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-bold bg-blue-100 text-blue-800 border border-blue-200">
                                                <i class="fas fa-calendar-alt mr-1.5 text-[10px]"></i> Terjadwal
                                            </span>
                                            <% } else if (customer.issue_type==='Offline' ) { %>
                                                <span
                                                    class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-bold bg-red-100 text-red-800 border border-red-200">
                                                    <span
                                                        class="h-2 w-2 rounded-full bg-red-500 mr-1.5 animate-pulse"></span>
                                                    Offline
                                                </span>
                                                <% } else { %>
                                                    <span
                                                        class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-bold bg-gray-100 text-gray-800 border border-gray-200">
                                                        <%= customer.status || 'Unknown' %>
                                                    </span>
                                                    <% } %>

                                                        <!-- CPE Status (GenieACS) -->
                                                        <% if (customer.ont_status) { %>
                                                            <div
                                                                class="mt-2 pt-2 border-t border-gray-100 flex items-center justify-between">
                                                                <span
                                                                    class="text-[10px] font-bold text-gray-500 uppercase tracking-tight">modem:</span>
                                                                <% if (customer.ont_status==='online' ) { %>
                                                                    <div class="flex items-center gap-1.5">
                                                                        <span
                                                                            class="w-1.5 h-1.5 rounded-full bg-green-500"></span>
                                                                        <span
                                                                            class="text-[10px] font-bold text-green-600">ONLINE</span>
                                                                        <% if(customer.ont_last_seen) { %>
                                                                            <span class="text-[9px] text-gray-400">(<%=
                                                                                    new
                                                                                    Date(customer.ont_last_seen).toLocaleTimeString('id-ID',
                                                                                    {hour:'2-digit', minute:'2-digit'})
                                                                                    %>)</span>
                                                                            <% } %>
                                                                    </div>
                                                                    <% } else { %>
                                                                        <div class="flex items-center gap-1.5">
                                                                            <span
                                                                                class="w-1.5 h-1.5 rounded-full bg-gray-400"></span>
                                                                            <span
                                                                                class="text-[10px] font-bold text-gray-500">OFFLINE</span>
                                                                        </div>
                                                                        <% } %>
                                                            </div>
                                                            <% } %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <% if (customer.trouble_since) { %>
                                        <% const since=new Date(customer.trouble_since); const now=new Date(); const
                                            diffMs=now - since; const diffMins=Math.floor(diffMs / 60000); const
                                            diffHrs=Math.floor(diffMins / 60); let durationStr='' ; if (diffHrs> 24) {
                                            durationStr = Math.floor(diffHrs / 24) + ' hari';
                                            } else if (diffHrs > 0) {
                                            durationStr = diffHrs + ' j ' + (diffMins % 60) + ' m';
                                            } else {
                                            durationStr = diffMins + ' m';
                                            }
                                            %>
                                            <div class="text-sm font-semibold text-gray-900">
                                                <%= since.toLocaleTimeString('id-ID', { hour: '2-digit' ,
                                                    minute: '2-digit' }) %>
                                            </div>
                                            <div class="text-[10px] text-red-500 font-bold uppercase tracking-wider">
                                                <%= durationStr %> yang lalu
                                            </div>
                                            <% } else { %>
                                                <span class="text-gray-400">-</span>
                                                <% } %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right">
                                    <div class="flex items-center justify-end space-x-2">
                                        <button onclick="checkStatus(<%= customer.id %>)"
                                            class="px-3 py-1.5 bg-indigo-50 text-indigo-700 hover:bg-indigo-100 border border-indigo-200 rounded-lg text-xs font-bold transition-all transform active:scale-95">
                                            CEK
                                        </button>
                                        <a href="/customers/<%= customer.id %>"
                                            class="px-3 py-1.5 bg-gray-50 text-gray-700 hover:bg-gray-100 border border-gray-200 rounded-lg text-xs font-bold transition-all">
                                            DETAIL
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="px-6 py-24 text-center">
                                            <div class="flex flex-col items-center justify-center">
                                                <div
                                                    class="w-20 h-20 bg-green-50 rounded-full flex items-center justify-center mb-6 ring-8 ring-green-50/50">
                                                    <i class="fas fa-check-circle text-4xl text-green-500"></i>
                                                </div>
                                                <h3 class="text-xl font-bold text-gray-900 mb-1">Semua Sistem Normal
                                                </h3>
                                                <p class="text-gray-500">Tidak ada pelanggan yang mengalami gangguan
                                                    saat ini.</p>
                                            </div>
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function checkStatus(id) {
        // QUICK CHECK ANIMATION
        const btn = event.target;
        const originalText = btn.innerText;
        btn.disabled = true;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

        setTimeout(() => {
            btn.innerHTML = originalText;
            btn.disabled = false;
            alert('Fitur cek status cepat untuk ID ' + id + ' akan segera hadir.');
        }, 1000);
    }

    // Auto refresh every 60 seconds
    setInterval(() => {
        window.location.reload();
    }, 60000);
</script>