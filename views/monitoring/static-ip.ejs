<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Billing System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <%- include('../partials/navbar') %>
    
    <div class="flex">
        <main class="flex-1 p-8 max-w-7xl mx-auto w-full">
            <!-- Page Header -->
            <div class="mb-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-800 mb-2">
                            <i class="fas fa-network-wired mr-3 text-purple-600"></i>
                            Monitor Static IP
                        </h1>
                        <p class="text-gray-600">Monitor real-time status pelanggan Static IP dengan ping monitoring</p>
                    </div>
                    <a href="/monitoring/dashboard" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Kembali
                    </a>
                </div>
            </div>

            <!-- Filters -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
                <form method="GET" action="/monitoring/static-ip" class="flex flex-wrap items-end gap-4">
                    <!-- Ping Status Filter -->
                    <div class="flex-1 min-w-[200px]">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Status Ping</label>
                        <select name="ping_status" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            <option value="">Semua Status</option>
                            <option value="online" <%= filters.ping_status === 'online' ? 'selected' : '' %>>ðŸŸ¢ Online</option>
                            <option value="offline" <%= filters.ping_status === 'offline' ? 'selected' : '' %>>ðŸ”´ Offline</option>
                            <option value="degraded" <%= filters.ping_status === 'degraded' ? 'selected' : '' %>>ðŸŸ¡ Degraded</option>
                            <option value="isolated" <%= filters.ping_status === 'isolated' ? 'selected' : '' %>>â›” Isolir</option>
                            <option value="unknown" <%= filters.ping_status === 'unknown' ? 'selected' : '' %>>âšª Unknown</option>
                        </select>
                    </div>

                    <!-- Account Status Filter -->
                    <div class="flex-1 min-w-[200px]">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Status Akun</label>
                        <select name="status" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            <option value="">Semua Status</option>
                            <option value="active" <%= filters.status === 'active' ? 'selected' : '' %>>Active</option>
                            <option value="inactive" <%= filters.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                        </select>
                    </div>

                    <!-- Search -->
                    <div class="flex-1 min-w-[300px]">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Cari</label>
                        <input type="text" name="search" value="<%= filters.search %>" 
                               placeholder="Nama client, IP address..." 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                    </div>

                    <!-- Buttons -->
                    <div class="flex gap-2">
                        <button type="submit" class="px-6 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors">
                            <i class="fas fa-filter mr-2"></i>Filter
                        </button>
                        <a href="/monitoring/static-ip" class="px-6 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors">
                            <i class="fas fa-redo mr-2"></i>Reset
                        </a>
                    </div>
                </form>
            </div>

            <!-- Stats Summary -->
            <div class="grid grid-cols-2 md:grid-cols-6 gap-4 mb-6">
                <div class="bg-white rounded-lg shadow-sm border p-4">
                    <div class="text-xs text-gray-600 mb-1">Total</div>
                    <div class="text-2xl font-bold text-gray-800"><%= stats.total %></div>
                </div>
                <div class="bg-white rounded-lg shadow-sm border p-4">
                    <div class="text-xs text-gray-600 mb-1">ðŸŸ¢ Online</div>
                    <div class="text-2xl font-bold text-green-600"><%= stats.online %></div>
                </div>
                <div class="bg-white rounded-lg shadow-sm border p-4">
                    <div class="text-xs text-gray-600 mb-1">ðŸ”´ Offline</div>
                    <div class="text-2xl font-bold text-red-600"><%= stats.offline %></div>
                </div>
                <div class="bg-white rounded-lg shadow-sm border p-4">
                    <div class="text-xs text-gray-600 mb-1">ðŸŸ¡ Degraded</div>
                    <div class="text-2xl font-bold text-yellow-600"><%= stats.degraded %></div>
                </div>
                <div class="bg-white rounded-lg shadow-sm border p-4">
                    <div class="text-xs text-gray-600 mb-1">â›” Isolir</div>
                    <div class="text-2xl font-bold text-orange-600"><%= stats.isolated %></div>
                </div>
                <div class="bg-white rounded-lg shadow-sm border p-4">
                    <div class="text-xs text-gray-600 mb-1">âšª Unknown</div>
                    <div class="text-2xl font-bold text-gray-400"><%= stats.unknown %></div>
                </div>
            </div>

            <!-- Clients Table -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client / IP</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ping Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Response / Loss</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Uptime 24h</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Check</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Downtime</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Aksi</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% if (clients.length === 0) { %>
                                <tr>
                                    <td colspan="8" class="px-6 py-12 text-center text-gray-500">
                                        <i class="fas fa-inbox text-4xl mb-3 text-gray-300"></i>
                                        <p>Tidak ada data client</p>
                                    </td>
                                </tr>
                            <% } else { %>
                                <% clients.forEach(client => { %>
                                    <tr class="hover:bg-gray-50 transition-colors">
                                        <!-- Ping Status Badge -->
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <% if (client.actual_status === 'online') { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                    <span class="w-2 h-2 bg-green-500 rounded-full mr-1.5 animate-pulse"></span>
                                                    Online
                                                </span>
                                            <% } else if (client.actual_status === 'offline') { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                    <span class="w-2 h-2 bg-red-500 rounded-full mr-1.5"></span>
                                                    Offline
                                                </span>
                                            <% } else if (client.actual_status === 'degraded') { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                    <span class="w-2 h-2 bg-yellow-500 rounded-full mr-1.5"></span>
                                                    Degraded
                                                </span>
                                            <% } else if (client.actual_status === 'isolated') { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                                                    <span class="w-2 h-2 bg-orange-500 rounded-full mr-1.5"></span>
                                                    Isolir
                                                </span>
                                            <% } else { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                                                    <span class="w-2 h-2 bg-gray-400 rounded-full mr-1.5"></span>
                                                    Unknown
                                                </span>
                                            <% } %>
                                        </td>

                                        <!-- Client Info -->
                                        <td class="px-6 py-4">
                                            <div class="font-medium text-gray-900"><%= client.client_name %></div>
                                            <code class="text-xs bg-gray-100 px-2 py-0.5 rounded font-mono"><%= client.ip_address %></code>
                                            <% if (client.customer_code) { %>
                                                <div class="text-xs text-gray-500 mt-1"><%= client.customer_code %></div>
                                            <% } %>
                                        </td>

                                        <!-- Ping Status Detail -->
                                        <td class="px-6 py-4 text-sm">
                                            <% if (client.ping_status) { %>
                                                <div class="text-gray-900 font-medium capitalize"><%= client.ping_status %></div>
                                                <% if (client.consecutive_failures > 0) { %>
                                                    <div class="text-xs text-red-600">
                                                        Gagal: <%= client.consecutive_failures %>x
                                                    </div>
                                                <% } %>
                                            <% } else { %>
                                                <span class="text-gray-400">-</span>
                                            <% } %>
                                        </td>

                                        <!-- Response Time / Packet Loss -->
                                        <td class="px-6 py-4 text-sm">
                                            <% if (client.response_time_ms !== null && client.response_time_ms !== undefined) { %>
                                                <div class="text-gray-900">
                                                    <i class="fas fa-clock text-blue-500 text-xs mr-1"></i>
                                                    <%= client.response_time_ms %> ms
                                                </div>
                                                <% if (client.packet_loss_percent !== null && client.packet_loss_percent !== undefined) { %>
                                                    <div class="text-xs <%= client.packet_loss_percent > 0 ? 'text-red-600' : 'text-gray-500' %> mt-1">
                                                        <i class="fas fa-chart-line text-xs mr-1"></i>
                                                        Loss: <%= client.packet_loss_percent %>%
                                                    </div>
                                                <% } %>
                                            <% } else { %>
                                                <span class="text-gray-400">-</span>
                                            <% } %>
                                        </td>

                                        <!-- 24h Uptime -->
                                        <td class="px-6 py-4 text-sm">
                                            <% if (client.uptime_percent_24h !== null && client.uptime_percent_24h !== undefined) { %>
                                                <% const uptimePercent = parseFloat(client.uptime_percent_24h) || 0; %>
                                                <div class="flex items-center">
                                                    <div class="w-16 h-2 bg-gray-200 rounded-full mr-2">
                                                        <div class="h-full rounded-full <%= uptimePercent >= 95 ? 'bg-green-500' : uptimePercent >= 80 ? 'bg-yellow-500' : 'bg-red-500' %>" 
                                                             style="width: <%= uptimePercent %>%"></div>
                                                    </div>
                                                    <span class="text-xs font-medium <%= uptimePercent >= 95 ? 'text-green-600' : uptimePercent >= 80 ? 'text-yellow-600' : 'text-red-600' %>">
                                                        <%= uptimePercent.toFixed(1) %>%
                                                    </span>
                                                </div>
                                            <% } else { %>
                                                <span class="text-gray-400">-</span>
                                            <% } %>
                                        </td>

                                        <!-- Last Check -->
                                        <td class="px-6 py-4 text-xs text-gray-600 whitespace-nowrap">
                                            <% if (client.ping_last_check) { %>
                                                <%= new Date(client.ping_last_check).toLocaleString('id-ID', { 
                                                    day: '2-digit', 
                                                    month: 'short', 
                                                    hour: '2-digit', 
                                                    minute: '2-digit' 
                                                }) %>
                                            <% } else { %>
                                                <span class="text-gray-400">-</span>
                                            <% } %>
                                        </td>

                                        <!-- Downtime -->
                                        <td class="px-6 py-4 text-sm">
                                            <% if (client.current_downtime) { %>
                                                <div class="text-red-600 font-medium">
                                                    <i class="fas fa-exclamation-triangle mr-1"></i>
                                                    <%= Math.floor(client.current_downtime.duration_minutes / 60) %>h <%= client.current_downtime.duration_minutes % 60 %>m
                                                </div>
                                                <div class="text-xs text-gray-500 mt-1">
                                                    Sejak: <%= new Date(client.current_downtime.start_time).toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' }) %>
                                                </div>
                                            <% } else { %>
                                                <span class="text-green-600 text-xs">
                                                    <i class="fas fa-check-circle mr-1"></i>Normal
                                                </span>
                                            <% } %>
                                        </td>

                                        <!-- Actions -->
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            <button onclick="showClientDetail(<%= client.customer_id %>)" 
                                                    class="text-purple-600 hover:text-purple-800 mr-3" 
                                                    title="Detail & History">
                                                <i class="fas fa-chart-line"></i>
                                            </button>
                                            <a href="/packages/static-ip/<%= client.package_id %>/clients/<%= client.id %>/edit" 
                                               class="text-blue-600 hover:text-blue-800" 
                                               title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <% if (pagination.totalPages > 1) { %>
                    <div class="bg-gray-50 px-6 py-4 border-t border-gray-200">
                        <div class="flex items-center justify-between">
                            <div class="text-sm text-gray-700">
                                Menampilkan <span class="font-medium"><%= ((pagination.currentPage - 1) * pagination.limit) + 1 %></span>
                                sampai <span class="font-medium"><%= Math.min(pagination.currentPage * pagination.limit, pagination.totalCount) %></span>
                                dari <span class="font-medium"><%= pagination.totalCount %></span> hasil
                            </div>
                            <div class="flex gap-2">
                                <% if (pagination.currentPage > 1) { %>
                                    <a href="?page=<%= pagination.currentPage - 1 %>&status=<%= filters.status %>&search=<%= filters.search %>&ping_status=<%= filters.ping_status %>" 
                                       class="px-3 py-2 border border-gray-300 rounded-lg text-sm hover:bg-gray-100">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                <% } %>
                                <% for (let i = Math.max(1, pagination.currentPage - 2); i <= Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
                                    <a href="?page=<%= i %>&status=<%= filters.status %>&search=<%= filters.search %>&ping_status=<%= filters.ping_status %>" 
                                       class="px-4 py-2 border border-gray-300 rounded-lg text-sm <%= i === pagination.currentPage ? 'bg-purple-600 text-white border-purple-600' : 'hover:bg-gray-100' %>">
                                        <%= i %>
                                    </a>
                                <% } %>
                                <% if (pagination.currentPage < pagination.totalPages) { %>
                                    <a href="?page=<%= pagination.currentPage + 1 %>&status=<%= filters.status %>&search=<%= filters.search %>&ping_status=<%= filters.ping_status %>" 
                                       class="px-3 py-2 border border-gray-300 rounded-lg text-sm hover:bg-gray-100">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>

            <!-- Info Notes -->
            <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
                    <div class="flex items-start">
                        <i class="fas fa-info-circle text-blue-500 text-xl mt-1 mr-3"></i>
                        <div>
                            <h4 class="font-semibold text-blue-900 mb-1">Status Monitoring</h4>
                            <ul class="text-sm text-blue-800 space-y-1">
                                <li>ðŸŸ¢ <strong>Online:</strong> Ping berhasil, response normal</li>
                                <li>ðŸ”´ <strong>Offline:</strong> Ping gagal (bukan karena isolir)</li>
                                <li>ðŸŸ¡ <strong>Degraded:</strong> Ping lambat (>200ms)</li>
                                <li>â›” <strong>Isolir:</strong> Pelanggan di-isolir dari sistem</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="bg-purple-50 border border-purple-200 rounded-xl p-4">
                    <div class="flex items-start">
                        <i class="fas fa-clock text-purple-500 text-xl mt-1 mr-3"></i>
                        <div>
                            <h4 class="font-semibold text-purple-900 mb-1">Downtime Tracking</h4>
                            <p class="text-sm text-purple-800">
                                <strong>Downtime</strong> hanya dihitung dari status offline yang terdeteksi dari ping.
                                Downtime karena isolir <strong>TIDAK DIHITUNG</strong> dalam statistik SLA.
                                Sistem melakukan ping check setiap 1-5 menit.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Detail Modal -->
    <div id="detailModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="bg-white rounded-xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-hidden">
            <div class="p-6 border-b border-gray-200 flex items-center justify-between">
                <h3 class="text-xl font-bold text-gray-800">
                    <i class="fas fa-chart-line text-purple-600 mr-2"></i>
                    Detail Monitoring
                </h3>
                <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <div id="modalContent" class="p-6 overflow-y-auto max-h-[calc(90vh-80px)]">
                <div class="flex items-center justify-center py-12">
                    <div class="text-center">
                        <i class="fas fa-spinner fa-spin text-4xl text-purple-600 mb-4"></i>
                        <p class="text-gray-600">Memuat data...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto refresh setiap 60 detik
        let autoRefreshTimer = setTimeout(() => location.reload(), 60000);

        // Show client detail
        async function showClientDetail(customerId) {
            const modal = document.getElementById('detailModal');
            const modalContent = document.getElementById('modalContent');
            
            modal.classList.remove('hidden');
            modalContent.innerHTML = `
                <div class="flex items-center justify-center py-12">
                    <div class="text-center">
                        <i class="fas fa-spinner fa-spin text-4xl text-purple-600 mb-4"></i>
                        <p class="text-gray-600">Memuat data...</p>
                    </div>
                </div>
            `;

            try {
                const response = await fetch(`/monitoring/static-ip/${customerId}/status`);
                const result = await response.json();

                if (result.success) {
                    const data = result.data;
                    const customer = data.customer;
                    const downtime = data.downtime_history;
                    const ongoing = data.ongoing_incident;

                    let html = `
                        <div class="space-y-6">
                            <!-- Customer Info -->
                            <div class="bg-gradient-to-r from-purple-50 to-blue-50 rounded-lg p-6">
                                <h4 class="font-semibold text-gray-800 mb-4">Informasi Pelanggan</h4>
                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <div class="text-sm text-gray-600">Nama</div>
                                        <div class="font-medium text-gray-900">${customer.name || customer.client_name}</div>
                                    </div>
                                    <div>
                                        <div class="text-sm text-gray-600">IP Address</div>
                                        <code class="font-mono text-sm bg-white px-2 py-1 rounded">${customer.ip_address}</code>
                                    </div>
                                    <div>
                                        <div class="text-sm text-gray-600">Status Ping</div>
                                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium ${
                                            customer.ping_status === 'online' ? 'bg-green-100 text-green-800' :
                                            customer.ping_status === 'offline' ? 'bg-red-100 text-red-800' :
                                            customer.ping_status === 'degraded' ? 'bg-yellow-100 text-yellow-800' :
                                            'bg-gray-100 text-gray-800'
                                        }">
                                            ${customer.ping_status || 'Unknown'}
                                        </span>
                                    </div>
                                    <div>
                                        <div class="text-sm text-gray-600">Uptime 24h</div>
                                        <div class="font-medium ${customer.uptime_percent_24h >= 95 ? 'text-green-600' : 'text-red-600'}">
                                            ${customer.uptime_percent_24h ? parseFloat(customer.uptime_percent_24h).toFixed(2) + '%' : '-'}
                                        </div>
                                    </div>
                                    <div>
                                        <div class="text-sm text-gray-600">Response Time</div>
                                        <div class="font-medium text-gray-900">
                                            ${customer.response_time_ms ? customer.response_time_ms + ' ms' : '-'}
                                        </div>
                                    </div>
                                    <div>
                                        <div class="text-sm text-gray-600">Packet Loss</div>
                                        <div class="font-medium ${customer.packet_loss_percent > 0 ? 'text-red-600' : 'text-green-600'}">
                                            ${customer.packet_loss_percent !== null ? customer.packet_loss_percent + '%' : '-'}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            ${ongoing ? `
                                <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-6">
                                    <h4 class="font-semibold text-red-800 mb-2">
                                        <i class="fas fa-exclamation-triangle mr-2"></i>
                                        Downtime Sedang Berlangsung
                                    </h4>
                                    <div class="text-red-700">
                                        <div class="text-sm">Durasi: <strong>${Math.floor(ongoing.duration_minutes / 60)}h ${ongoing.duration_minutes % 60}m</strong></div>
                                        <div class="text-sm mt-1">Sejak: ${new Date(ongoing.start_time).toLocaleString('id-ID')}</div>
                                    </div>
                                </div>
                            ` : ''}

                            <!-- Downtime History -->
                            <div>
                                <h4 class="font-semibold text-gray-800 mb-4">Riwayat Downtime (30 Hari Terakhir)</h4>
                                ${downtime.length > 0 ? `
                                    <div class="space-y-2">
                                        ${downtime.slice(0, 10).map(d => `
                                            <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
                                                <div class="flex items-center justify-between">
                                                    <div class="flex-1">
                                                        <div class="flex items-center gap-2">
                                                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium ${
                                                                d.status === 'ongoing' ? 'bg-red-100 text-red-800' :
                                                                d.status === 'resolved' ? 'bg-green-100 text-green-800' :
                                                                'bg-gray-100 text-gray-800'
                                                            }">
                                                                ${d.status}
                                                            </span>
                                                            ${d.is_counted_in_sla ? '<span class="text-xs text-blue-600">âœ“ Counted in SLA</span>' : '<span class="text-xs text-gray-500">âœ— Excluded</span>'}
                                                        </div>
                                                        <div class="text-sm text-gray-600 mt-1">
                                                            ${new Date(d.start_time).toLocaleString('id-ID')} 
                                                            ${d.end_time ? 'â†’ ' + new Date(d.end_time).toLocaleString('id-ID') : '(Ongoing)'}
                                                        </div>
                                                    </div>
                                                    <div class="text-right">
                                                        <div class="font-semibold text-gray-900">
                                                            ${Math.floor(d.duration_minutes / 60)}h ${d.duration_minutes % 60}m
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        `).join('')}
                                    </div>
                                ` : '<p class="text-gray-500 text-center py-8">Tidak ada riwayat downtime</p>'}
                            </div>
                        </div>
                    `;

                    modalContent.innerHTML = html;
                } else {
                    modalContent.innerHTML = `
                        <div class="text-center py-12">
                            <i class="fas fa-exclamation-triangle text-4xl text-red-500 mb-4"></i>
                            <p class="text-gray-600">${result.message || 'Gagal memuat data'}</p>
                        </div>
                    `;
                }
            } catch (error) {
                modalContent.innerHTML = `
                    <div class="text-center py-12">
                        <i class="fas fa-exclamation-triangle text-4xl text-red-500 mb-4"></i>
                        <p class="text-gray-600">Terjadi kesalahan: ${error.message}</p>
                    </div>
                `;
            }
        }

        function closeModal() {
            document.getElementById('detailModal').classList.add('hidden');
        }

        // Close modal on ESC key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeModal();
            }
        });

        // Close modal on outside click
        document.getElementById('detailModal').addEventListener('click', (e) => {
            if (e.target.id === 'detailModal') {
                closeModal();
            }
        });
    </script>
