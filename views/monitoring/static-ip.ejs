<div class="space-y-6">
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
            <div>
                <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-2 flex items-center">
                    <div
                        class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center mr-4 shadow-lg">
                        <i class="fas fa-network-wired text-white text-xl"></i>
                    </div>
                    Monitor Static IP
                </h1>
                <p class="text-gray-600 ml-16">Monitor real-time status pelanggan Static IP dengan
                    ping monitoring</p>
            </div>
            <div class="flex gap-2 ml-16 sm:ml-0">
                <button onclick="location.reload()"
                    class="px-4 py-2.5 bg-white border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-all duration-200 shadow-sm flex items-center gap-2">
                    <i class="fas fa-sync-alt"></i>
                    <span class="hidden sm:inline">Refresh</span>
                </button>
                <a href="/monitoring/dashboard"
                    class="px-4 py-2.5 bg-white border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-all duration-200 shadow-sm flex items-center gap-2">
                    <i class="fas fa-arrow-left"></i>
                    <span class="hidden sm:inline">Kembali</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
        <form method="GET" action="/monitoring/static-ip" class="flex flex-wrap items-end gap-4">
            <!-- Ping Status Filter -->
            <div class="flex-1 min-w-[200px]">
                <label class="block text-sm font-medium text-gray-700 mb-2">Status Ping</label>
                <select name="ping_status"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                    <option value="">Semua Status</option>
                    <option value="online" <%=filters.ping_status==='online' ? 'selected' : '' %>>🟢
                        Online</option>
                    <option value="offline" <%=filters.ping_status==='offline' ? 'selected' : '' %>
                        >🔴 Offline</option>
                    <option value="degraded" <%=filters.ping_status==='degraded' ? 'selected' : '' %>>🟡 Degraded
                    </option>
                    <option value="isolated" <%=filters.ping_status==='isolated' ? 'selected' : '' %>>⛔ Isolir</option>
                    <option value="unknown" <%=filters.ping_status==='unknown' ? 'selected' : '' %>
                        >⚪ Unknown</option>
                </select>
            </div>

            <!-- Account Status Filter -->
            <div class="flex-1 min-w-[200px]">
                <label class="block text-sm font-medium text-gray-700 mb-2">Status Akun</label>
                <select name="status"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                    <option value="">Semua Status</option>
                    <option value="active" <%=filters.status==='active' ? 'selected' : '' %>>Active
                    </option>
                    <option value="inactive" <%=filters.status==='inactive' ? 'selected' : '' %>
                        >Inactive</option>
                </select>
            </div>

            <!-- ODP Filter -->
            <div class="flex-1 min-w-[200px]">
                <label class="block text-sm font-medium text-gray-700 mb-2">Area ODP</label>
                <select name="odp_id"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                    <option value="">Semua ODP</option>
                    <% if (typeof odpList !=='undefined' ) { %>
                        <% odpList.forEach(odp=> { %>
                            <option value="<%= odp.id %>" <%=filters.odp_id==odp.id ? 'selected' : '' %>>
                                <%= odp.name %>
                            </option>
                            <% }); %>
                                <% } %>
                </select>
            </div>

            <!-- Search -->
            <div class="flex-1 min-w-[300px]">
                <label class="block text-sm font-medium text-gray-700 mb-2">Cari</label>
                <input type="text" name="search" value="<%= filters.search %>" placeholder="Nama client, IP address..."
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
            </div>

            <!-- Buttons -->
            <div class="flex gap-2">
                <button type="submit"
                    class="px-6 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors">
                    <i class="fas fa-filter mr-2"></i>Filter
                </button>
                <a href="/monitoring/static-ip"
                    class="px-6 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors">
                    <i class="fas fa-redo mr-2"></i>Reset
                </a>
            </div>
        </form>
    </div>

    <!-- Stats Summary -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-8">
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-5 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between mb-3">
                <div class="w-10 h-10 bg-gray-100 rounded-xl flex items-center justify-center text-gray-600">
                    <i class="fas fa-users text-lg"></i>
                </div>
                <span class="text-[10px] font-bold text-gray-400 uppercase tracking-wider">TOTAL</span>
            </div>
            <div class="text-2xl font-bold text-gray-900">
                <%= stats.total %>
            </div>
            <div class="text-xs text-gray-500">Total Clients</div>
        </div>

        <div class="bg-white rounded-2xl shadow-sm border border-green-200 p-5 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between mb-3">
                <div class="w-10 h-10 bg-green-100 rounded-xl flex items-center justify-center text-green-600">
                    <i class="fas fa-signal text-lg"></i>
                </div>
                <span class="text-[10px] font-bold text-green-600 uppercase tracking-wider">ONLINE</span>
            </div>
            <div class="text-2xl font-bold text-green-600">
                <%= stats.online %>
            </div>
            <div class="text-xs text-gray-500 text-green-600/70">Responsive</div>
        </div>

        <div class="bg-white rounded-2xl shadow-sm border border-red-200 p-5 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between mb-3">
                <div class="w-10 h-10 bg-red-100 rounded-xl flex items-center justify-center text-red-600">
                    <i class="fas fa-signal-slash text-lg"></i>
                </div>
                <span class="text-[10px] font-bold text-red-600 uppercase tracking-wider">OFFLINE</span>
            </div>
            <div class="text-2xl font-bold text-red-600">
                <%= stats.offline %>
            </div>
            <div class="text-xs text-gray-500 text-red-600/70">No Response</div>
        </div>

        <div class="bg-white rounded-2xl shadow-sm border border-yellow-200 p-5 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between mb-3">
                <div class="w-10 h-10 bg-yellow-100 rounded-xl flex items-center justify-center text-yellow-600">
                    <i class="fas fa-exclamation-triangle text-lg"></i>
                </div>
                <span class="text-[10px] font-bold text-yellow-600 uppercase tracking-wider">DEGRADED</span>
            </div>
            <div class="text-2xl font-bold text-yellow-600">
                <%= stats.degraded %>
            </div>
            <div class="text-xs text-gray-500 text-yellow-600/70">High Latency</div>
        </div>

        <div class="bg-white rounded-2xl shadow-sm border border-orange-200 p-5 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between mb-3">
                <div class="w-10 h-10 bg-orange-100 rounded-xl flex items-center justify-center text-orange-600">
                    <i class="fas fa-user-slash text-lg"></i>
                </div>
                <span class="text-[10px] font-bold text-orange-600 uppercase tracking-wider">ISOLATED</span>
            </div>
            <div class="text-2xl font-bold text-orange-600">
                <%= stats.isolated %>
            </div>
            <div class="text-xs text-gray-500 text-orange-600/70">Blocked</div>
        </div>

        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-5 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between mb-3">
                <div class="w-10 h-10 bg-gray-50 rounded-xl flex items-center justify-center text-gray-400">
                    <i class="fas fa-question text-lg"></i>
                </div>
                <span class="text-[10px] font-bold text-gray-400 uppercase tracking-wider">UNKNOWN</span>
            </div>
            <div class="text-2xl font-bold text-gray-400">
                <%= stats.unknown %>
            </div>
            <div class="text-xs text-gray-500">Not Checked</div>
        </div>
    </div>

    <!-- Clients Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Status Akun</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Client / IP</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Status Ping</th>
                        <th
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">
                            ODP</th>
                        <th
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">
                            Usage (24h)</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Uptime 24h</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Last
                            Check</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Downtime</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Aksi
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (clients.length===0) { %>
                        <tr>
                            <td colspan="8" class="px-6 py-12 text-center text-gray-500">
                                <i class="fas fa-inbox text-4xl mb-3 text-gray-300"></i>
                                <p>Tidak ada data client</p>
                            </td>
                        </tr>
                        <% } else { %>
                            <% clients.forEach(client=> { %>
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <!-- Account Status Badge -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% if (client.status==='active' ) { %>
                                            <span
                                                class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-300">
                                                <i class="fas fa-check-circle mr-1"></i>
                                                Aktif
                                            </span>
                                            <% } else if (client.status==='inactive' ) { %>
                                                <span
                                                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600 border border-gray-300">
                                                    <i class="fas fa-pause-circle mr-1"></i>
                                                    Nonaktif
                                                </span>
                                                <% } else { %>
                                                    <span
                                                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600 border border-gray-300">
                                                        <i class="fas fa-question-circle mr-1"></i>
                                                        Unknown
                                                    </span>
                                                    <% } %>
                                    </td>

                                    <!-- Client Info -->
                                    <td class="px-6 py-4">
                                        <div class="font-medium text-gray-900">
                                            <%= client.client_name %>
                                        </div>
                                        <% if (client.peer_ip) { %>
                                            <div class="text-xs text-gray-600 mt-1">
                                                <span class="font-semibold">Monitor:</span>
                                                <code
                                                    class="bg-green-100 px-2 py-0.5 rounded font-mono text-green-800"><%= client.peer_ip %></code>
                                                <span class="text-gray-500 ml-2">(Router
                                                    Client)</span>
                                            </div>
                                            <div class="text-xs text-gray-500 mt-0.5">
                                                <span class="font-semibold">MikroTik:</span>
                                                <code
                                                    class="bg-gray-100 px-2 py-0.5 rounded font-mono"><%= client.ip_address %></code>
                                            </div>
                                            <% } else { %>
                                                <code
                                                    class="text-xs bg-gray-100 px-2 py-0.5 rounded font-mono"><%= client.ip_address %></code>
                                                <% } %>
                                    </td>

                                    <!-- Ping Status Detail -->
                                    <td class="px-6 py-4 text-sm">
                                        <% const pingStatus=client.actual_status || client.ping_status || 'unknown' ; %>
                                            <% if (pingStatus==='online' ) { %>
                                                <span
                                                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-300">
                                                    <span
                                                        class="w-2 h-2 bg-green-500 rounded-full mr-1.5 animate-pulse"></span>
                                                    Online
                                                </span>
                                                <% if (client.consecutive_failures> 0) { %>
                                                    <div class="text-xs text-yellow-600 mt-1">
                                                        <i class="fas fa-exclamation-triangle mr-1"></i>Gagal:
                                                        <%= client.consecutive_failures %>x
                                                    </div>
                                                    <% } %>
                                                        <% } else if (pingStatus==='offline' ) { %>
                                                            <span
                                                                class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 border border-red-300">
                                                                <span
                                                                    class="w-2 h-2 bg-red-500 rounded-full mr-1.5"></span>
                                                                Offline
                                                            </span>
                                                            <% if (client.consecutive_failures> 0) {
                                                                %>
                                                                <div class="text-xs text-red-600 mt-1">
                                                                    <i class="fas fa-times-circle mr-1"></i>Gagal:
                                                                    <%= client.consecutive_failures %>x
                                                                </div>
                                                                <% } %>
                                                                    <% } else if (pingStatus==='degraded' ) { %>
                                                                        <span
                                                                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 border border-yellow-300">
                                                                            <span
                                                                                class="w-2 h-2 bg-yellow-500 rounded-full mr-1.5"></span>
                                                                            Degraded
                                                                        </span>
                                                                        <% } else if (pingStatus==='isolated' ) { %>
                                                                            <span
                                                                                class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800 border border-orange-300">
                                                                                <span
                                                                                    class="w-2 h-2 bg-orange-500 rounded-full mr-1.5"></span>
                                                                                Isolir
                                                                            </span>
                                                                            <% } else { %>
                                                                                <span
                                                                                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600 border border-gray-300">
                                                                                    <span
                                                                                        class="w-2 h-2 bg-gray-400 rounded-full mr-1.5"></span>
                                                                                    Unknown
                                                                                </span>
                                                                                <div class="text-xs text-gray-500 mt-1">
                                                                                    <i
                                                                                        class="fas fa-info-circle mr-1"></i>Belum
                                                                                    di-check
                                                                                </div>
                                                                                <% } %>
                                    </td>

                                    <!-- ODP -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900 font-medium">
                                            <%= client.odp_name || '-' %>
                                        </div>
                                    </td>

                                    <!-- Usage (24h) -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex flex-col gap-1">
                                            <div
                                                class="text-[10px] flex items-center gap-1 p-0.5 px-1 bg-green-50 text-green-700 rounded border border-green-100 w-fit">
                                                <i class="fas fa-download text-[9px]"></i>
                                                <span class="font-bold">
                                                    <%= client.usage_rx_gb || '0.00' %>
                                                </span>
                                                <span class="opacity-70">GB</span>
                                            </div>
                                            <div
                                                class="text-[10px] flex items-center gap-1 p-0.5 px-1 bg-blue-50 text-blue-700 rounded border border-blue-100 w-fit">
                                                <i class="fas fa-upload text-[9px]"></i>
                                                <span class="font-bold">
                                                    <%= client.usage_tx_gb || '0.00' %>
                                                </span>
                                                <span class="opacity-70">GB</span>
                                            </div>
                                        </div>
                                    </td>

                                    <!-- 24h Uptime -->
                                    <td class="px-6 py-4 text-sm">
                                        <% if (client.uptime_percent_24h !==null && client.uptime_percent_24h
                                            !==undefined) { %>
                                            <% const uptimePercent=parseFloat(client.uptime_percent_24h) || 0; %>
                                                <div class="flex items-center">
                                                    <div class="w-16 h-2 bg-gray-200 rounded-full mr-2">
                                                        <div class="h-full rounded-full <%= uptimePercent >= 95 ? 'bg-green-500' : uptimePercent >= 80 ? 'bg-yellow-500' : 'bg-red-500' %>"
                                                            style="width: <%= uptimePercent %>%">
                                                        </div>
                                                    </div>
                                                    <span
                                                        class="text-xs font-medium <%= uptimePercent >= 95 ? 'text-green-600' : uptimePercent >= 80 ? 'text-yellow-600' : 'text-red-600' %>">
                                                        <%= uptimePercent.toFixed(1) %>%
                                                    </span>
                                                </div>
                                                <% } else { %>
                                                    <span class="text-gray-400">-</span>
                                                    <% } %>
                                    </td>

                                    <!-- Last Check -->
                                    <td class="px-6 py-4 text-xs text-gray-600 whitespace-nowrap">
                                        <% if (client.ping_last_check) { %>
                                            <%= new Date(client.ping_last_check).toLocaleString('id-ID', {
                                                day: '2-digit' , month: 'short' , hour: '2-digit' , minute: '2-digit' })
                                                %>
                                                <% } else { %>
                                                    <span class="text-gray-400">-</span>
                                                    <% } %>
                                    </td>

                                    <!-- Downtime -->
                                    <td class="px-6 py-4 text-sm">
                                        <% if (client.current_downtime) { %>
                                            <div class="text-red-600 font-medium">
                                                <i class="fas fa-exclamation-triangle mr-1"></i>
                                                <%= Math.floor(client.current_downtime.duration_minutes / 60) %>h <%=
                                                        client.current_downtime.duration_minutes % 60 %>m
                                            </div>
                                            <div class="text-xs text-gray-500 mt-1">
                                                Sejak: <%= new
                                                    Date(client.current_downtime.start_time).toLocaleTimeString('id-ID',
                                                    { hour: '2-digit' , minute: '2-digit' }) %>
                                            </div>
                                            <% } else { %>
                                                <span class="text-green-600 text-xs">
                                                    <i class="fas fa-check-circle mr-1"></i>Normal
                                                </span>
                                                <% } %>
                                    </td>

                                    <!-- Actions -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                                        <button onclick="showClientDetail(<%= client.customer_id || client.id %>)"
                                            class="text-purple-600 hover:text-purple-800 mr-3" title="Detail & History">
                                            <i class="fas fa-chart-line"></i>
                                        </button>
                                        <a href="/packages/static-ip/<%= client.package_id %>/clients/<%= client.id %>/edit"
                                            class="text-blue-600 hover:text-blue-800" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                                <% }); %>
                                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <% if (pagination.totalPages> 1) { %>
            <div class="bg-gray-50 px-6 py-4 border-t border-gray-200">
                <div class="flex items-center justify-between">
                    <div class="text-sm text-gray-700">
                        Menampilkan <span class="font-medium">
                            <%= ((pagination.currentPage - 1) * pagination.limit) + 1 %>
                        </span>
                        sampai <span class="font-medium">
                            <%= Math.min(pagination.currentPage * pagination.limit, pagination.totalCount) %>
                        </span>
                        dari <span class="font-medium">
                            <%= pagination.totalCount %>
                        </span> hasil
                    </div>
                    <div class="flex gap-2">
                        <% if (pagination.currentPage> 1) { %>
                            <a href="?page=<%= pagination.currentPage - 1 %>&status=<%= filters.status %>&search=<%= filters.search %>&ping_status=<%= filters.ping_status %>"
                                class="px-3 py-2 border border-gray-300 rounded-lg text-sm hover:bg-gray-100">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                            <% } %>
                                <% for (let i=Math.max(1, pagination.currentPage - 2); i
                                    <=Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
                                    <a href="?page=<%= i %>&status=<%= filters.status %>&search=<%= filters.search %>&ping_status=<%= filters.ping_status %>"
                                        class="px-4 py-2 border border-gray-300 rounded-lg text-sm <%= i === pagination.currentPage ? 'bg-purple-600 text-white border-purple-600' : 'hover:bg-gray-100' %>">
                                        <%= i %>
                                    </a>
                                    <% } %>
                                        <% if (pagination.currentPage < pagination.totalPages) { %>
                                            <a href="?page=<%= pagination.currentPage + 1 %>&status=<%= filters.status %>&search=<%= filters.search %>&ping_status=<%= filters.ping_status %>"
                                                class="px-3 py-2 border border-gray-300 rounded-lg text-sm hover:bg-gray-100">
                                                <i class="fas fa-chevron-right"></i>
                                            </a>
                                            <% } %>
                    </div>
                </div>
            </div>
            <% } %>
    </div>

    <!-- Info Notes -->
    <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
            <div class="flex items-start">
                <i class="fas fa-info-circle text-blue-500 text-xl mt-1 mr-3"></i>
                <div>
                    <h4 class="font-semibold text-blue-900 mb-1">Status Monitoring</h4>
                    <ul class="text-sm text-blue-800 space-y-1">
                        <li>🟢 <strong>Online:</strong> Ping berhasil, response normal</li>
                        <li>🔴 <strong>Offline:</strong> Ping gagal (bukan karena isolir)</li>
                        <li>🟡 <strong>Degraded:</strong> Ping lambat (>200ms)</li>
                        <li>⛔ <strong>Isolir:</strong> Pelanggan di-isolir dari sistem</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="bg-purple-50 border border-purple-200 rounded-xl p-4">
            <div class="flex items-start">
                <i class="fas fa-clock text-purple-500 text-xl mt-1 mr-3"></i>
                <div>
                    <h4 class="font-semibold text-purple-900 mb-1">Downtime Tracking</h4>
                    <p class="text-sm text-purple-800">
                        <strong>Downtime</strong> hanya dihitung dari status offline yang terdeteksi
                        dari ping.
                        Downtime karena isolir <strong>TIDAK DIHITUNG</strong> dalam statistik SLA.
                        Sistem melakukan ping check setiap 10 menit.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Detail Modal -->
<div id="detailModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-hidden">
        <div class="p-6 border-b border-gray-200 flex items-center justify-between">
            <h3 class="text-xl font-bold text-gray-800">
                <i class="fas fa-chart-line text-purple-600 mr-2"></i>
                Detail Monitoring
            </h3>
            <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        <div id="modalContent" class="p-6 overflow-y-auto max-h-[calc(90vh-80px)]">
            <div class="flex items-center justify-center py-12">
                <div class="text-center">
                    <i class="fas fa-spinner fa-spin text-4xl text-purple-600 mb-4"></i>
                    <p class="text-gray-600">Memuat data...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Auto refresh setiap 60 detik
    let autoRefreshTimer = setTimeout(() => location.reload(), 60000);

    // Show client detail
    async function showClientDetail(customerId) {
        const modal = document.getElementById('detailModal');
        const modalContent = document.getElementById('modalContent');

        modal.classList.remove('hidden');
        modalContent.innerHTML = `
        <div class="flex items-center justify-center py-12">
            <div class="text-center">
                <i class="fas fa-spinner fa-spin text-4xl text-purple-600 mb-4"></i>
                <p class="text-gray-600">Memuat data...</p>
            </div>
        </div>
    `;

        try {
            const response = await fetch(`/monitoring/static-ip/${customerId}/status`);
            const result = await response.json();

            if (result.success) {
                const data = result.data;
                const customer = data.customer;
                const downtime = data.downtime_history;
                const ongoing = data.ongoing_incident;

                let html = `
                <div class="space-y-6">
                    <!-- Customer Info -->
                    <div class="bg-gradient-to-r from-purple-50 to-blue-50 rounded-lg p-6">
                        <h4 class="font-semibold text-gray-800 mb-4">Informasi Pelanggan</h4>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <div class="text-sm text-gray-600">Nama</div>
                                <div class="font-medium text-gray-900">${customer.name || customer.client_name}</div>
                            </div>
                            <div>
                                <div class="text-sm text-gray-600">IP Address</div>
                                <code class="font-mono text-sm bg-white px-2 py-1 rounded">${customer.ip_address_display || customer.ip_address}</code>
                                ${customer.ip_address && customer.ip_address.includes('/') ? `<div class="text-xs text-gray-500 mt-1">Gateway: ${customer.ip_address}</div>` : ''}
                            </div>
                            <div>
                                <div class="text-sm text-gray-600">Status Ping</div>
                                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium ${customer.ping_status === 'online' ? 'bg-green-100 text-green-800' :
                        customer.ping_status === 'offline' ? 'bg-red-100 text-red-800' :
                            customer.ping_status === 'degraded' ? 'bg-yellow-100 text-yellow-800' :
                                'bg-gray-100 text-gray-800'
                    }">
                                    ${customer.ping_status || 'Unknown'}
                                </span>
                            </div>
                            <div>
                                <div class="text-sm text-gray-600">Uptime 24h</div>
                                <div class="font-medium ${customer.uptime_percent_24h >= 95 ? 'text-green-600' : 'text-red-600'}">
                                    ${customer.uptime_percent_24h ? parseFloat(customer.uptime_percent_24h).toFixed(2) + '%' : '-'}
                                </div>
                            </div>
                            <div>
                                <div class="text-sm text-gray-600">Response Time</div>
                                <div class="font-medium text-gray-900">
                                    ${customer.response_time_ms ? customer.response_time_ms + ' ms' : '-'}
                                </div>
                            </div>
                            <div>
                                <div class="text-sm text-gray-600">Packet Loss</div>
                                <div class="font-medium ${customer.packet_loss_percent > 0 ? 'text-red-600' : 'text-green-600'}">
                                    ${customer.packet_loss_percent !== null ? customer.packet_loss_percent + '%' : '-'}
                                </div>
                            </div>
                        </div>
                    </div>

                    ${ongoing ? `
                        <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-6">
                            <h4 class="font-semibold text-red-800 mb-2">
                                <i class="fas fa-exclamation-triangle mr-2"></i>
                                Downtime Sedang Berlangsung
                            </h4>
                            <div class="text-red-700">
                                <div class="text-sm">Durasi: <strong>${Math.floor(ongoing.duration_minutes / 60)}h ${ongoing.duration_minutes % 60}m</strong></div>
                                <div class="text-sm mt-1">Sejak: ${new Date(ongoing.start_time).toLocaleString('id-ID')}</div>
                            </div>
                        </div>
                    ` : ''}

                    <!-- Downtime History -->
                    <div>
                        <h4 class="font-semibold text-gray-800 mb-4">Riwayat Downtime (30 Hari Terakhir)</h4>
                        ${downtime.length > 0 ? `
                            <div class="space-y-2">
                                ${downtime.slice(0, 10).map(d => `
                                    <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
                                        <div class="flex items-center justify-between">
                                            <div class="flex-1">
                                                <div class="flex items-center gap-2">
                                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium ${d.status === 'ongoing' ? 'bg-red-100 text-red-800' :
                            d.status === 'resolved' ? 'bg-green-100 text-green-800' :
                                'bg-gray-100 text-gray-800'
                        }">
                                                        ${d.status}
                                                    </span>
                                                    ${d.is_counted_in_sla ? '<span class="text-xs text-blue-600">✓ Counted in SLA</span>' : '<span class="text-xs text-gray-500">✗ Excluded</span>'}
                                                </div>
                                                <div class="text-sm text-gray-600 mt-1">
                                                    ${new Date(d.start_time).toLocaleString('id-ID')} 
                                                    ${d.end_time ? '→ ' + new Date(d.end_time).toLocaleString('id-ID') : '(Ongoing)'}
                                                </div>
                                            </div>
                                            <div class="text-right">
                                                <div class="font-semibold text-gray-900">
                                                    ${Math.floor(d.duration_minutes / 60)}h ${d.duration_minutes % 60}m
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                `).join('')}
                            </div>
                        ` : '<p class="text-gray-500 text-center py-8">Tidak ada riwayat downtime</p>'}
                    </div>
                </div>
            `;

                modalContent.innerHTML = html;
            } else {
                modalContent.innerHTML = `
                <div class="text-center py-12">
                    <i class="fas fa-exclamation-triangle text-4xl text-red-500 mb-4"></i>
                    <p class="text-gray-600">${result.message || 'Gagal memuat data'}</p>
                </div>
            `;
            }
        } catch (error) {
            modalContent.innerHTML = `
            <div class="text-center py-12">
                <i class="fas fa-exclamation-triangle text-4xl text-red-500 mb-4"></i>
                <p class="text-gray-600">Terjadi kesalahan: ${error.message}</p>
            </div>
        `;
        }
    }

    function closeModal() {
        document.getElementById('detailModal').classList.add('hidden');
    }

    // Close modal on ESC key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
            closeModal();
        }
    });

    // Close modal on outside click
    document.getElementById('detailModal').addEventListener('click', (e) => {
        if (e.target.id === 'detailModal') {
            closeModal();
        }
    });
</script>