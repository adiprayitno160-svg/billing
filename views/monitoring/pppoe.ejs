                </div>
            `;
        }
    }

    function formatBytes(bytes, decimals = 2) {
        if (!+bytes) return '0 B';
        const k = 1024;
        const dm = decimals < 0 ? 0 : decimals;
        const sizes = ['B', 'KB', 'MB', 'GB', 'TB', 'PB', 'EB', 'ZB', 'YB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return `${parseFloat((bytes / Math.pow(k, i)).toFixed(dm))} ${sizes[i]}`;
    }

    async function pollTraffic(username) {
        // Initial fetch handled by HTML render, subsequent by interval
        trafficInterval = setInterval(async () => {
            try {
                const url = `/monitoring/traffic/${encodeURIComponent(username)}`;
                const response = await fetch(url);
                const result = await response.json();

                if (result.success && result.online) {
                    const rxEl = document.getElementById('modal-rx');
                    const txEl = document.getElementById('modal-tx');
                    if (rxEl) rxEl.textContent = formatBytes(result.data.download);
                    if (txEl) txEl.textContent = formatBytes(result.data.upload);
                }
            } catch (e) {
                console.error('Traffic poll error:', e);
            }
        }, 2000);
    }
