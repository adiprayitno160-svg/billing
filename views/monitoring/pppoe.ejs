                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <script>
                // Filtering Functions
                function showAllCustomers() {
                    // Clear all filters and reload
                    window.location.href = '/monitoring/pppoe';
                }

                function filterOnlineCustomers() {
                    // Add online filter to URL
                    const url = new URL(window.location);
                    url.searchParams.set('status_filter', 'online');
                    window.location.href = url.toString();
                }

                function filterOfflineCustomers() {
                    // Add offline filter to URL
                    const url = new URL(window.location);
                    url.searchParams.set('status_filter', 'offline');
                    window.location.href = url.toString();
                }

                // Highlight offline rows
                function highlightOfflineRows() {
                    document.querySelectorAll('tr[data-status="offline"]').forEach(row => {
                        row.style.backgroundColor = '#fef2f2'; // Light red background
                        row.style.borderLeft = '3px solid #ef4444'; // Red left border
                    });
                }

                // Auto-run on page load
                document.addEventListener('DOMContentLoaded', function () {
                    highlightOfflineRows();

                    // Update last update time
                    const updateTimeElement = document.getElementById('last-update-time');
                    if (updateTimeElement) {
                        const now = new Date();
                        updateTimeElement.textContent = now.toLocaleTimeString('id-ID');
                    }
                });

                async function disconnectSession(sessionId, evt) {
                    if (!confirm('⚠️ Yakin ingin memutus koneksi session ini?\n\nPelanggan akan terputus dari jaringan.')) return;

                    const button = (evt && evt.target) ? evt.target.closest('button') : document.activeElement;
                    if (!button) return;
                    const originalHTML = button.innerHTML;
                    button.disabled = true;
                    button.innerHTML = '<i class="fas fa-spinner fa-spin mr-1.5"></i>Memutus...';

                    try {
                        const response = await fetch('/monitoring/disconnect-session', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ sessionId })
                        });

                        const result = await response.json();
                        if (result.success) {
                            // Show success message
                            button.innerHTML = '<i class="fas fa-check mr-1.5"></i>Berhasil';
                            button.className = button.className.replace('bg-red-50 text-red-700 border-red-200', 'bg-green-50 text-green-700 border-green-200');

                            setTimeout(() => {
                                location.reload();
                            }, 1000);
                        } else {
                            alert('❌ Gagal: ' + result.message);
                            button.innerHTML = originalHTML;
                            button.disabled = false;
                        }
                    } catch (error) {
                        alert('❌ Error: ' + error.message);
                        button.innerHTML = originalHTML;
                        button.disabled = false;
                    }
                }

                // Auto refresh setiap 60 detik
                let refreshCountdown = 60;
                const refreshInterval = setInterval(() => {
                    refreshCountdown--;
                    if (refreshCountdown <= 0) {
                        location.reload();
                    }
                }, 1000);

                // Show countdown in console
                console.log('Auto-refresh enabled. Page will refresh in 60 seconds.');

                // Modal variables - initialized after DOM is ready
                let modal, modalContent, trafficInterval;

                document.addEventListener('DOMContentLoaded', function () {
                    modal = document.getElementById('detailModal');
                    modalContent = document.getElementById('modalContent');

                    // Close modal on ESC and outside click
                    document.addEventListener('keydown', (e) => {
                        if (e.key === 'Escape') closeModal();
                    });

                    if (modal) {
                        modal.addEventListener('click', (e) => {
                            if (e.target.id === 'detailModal') closeModal();
                        });
                    }
                });

                function closeModal() {
                    if (modal) modal.classList.add('hidden');
                    if (trafficInterval) clearInterval(trafficInterval);
                }

                async function showCustomerDetail(customerId) {
                    if (!modal || !modalContent) {
                        console.error('Modal elements not found');
                        return;
                    }
                    modal.classList.remove('hidden');
                    modalContent.innerHTML = `
            <div class="flex items-center justify-center py-12">
                <div class="text-center">
                    <i class="fas fa-spinner fa-spin text-4xl text-blue-600 mb-4"></i>
                    <p class="text-gray-600">Memuat data pelanggan...</p>
                </div>
                </div>
            </div>
        `;

                    try {
                        const response = await fetch(`/monitoring/customer/${customerId}`);
                        const result = await response.json();

                        if (result.success) {
                            const customer = result.customer;
                            const isOnline = customer.is_online;
                            const session = customer.session_info || {};

                            let html = `
                    <div class="space-y-6">
                        <!-- Header Status -->
                        <div class="flex items-center justify-between bg-gray-50 p-4 rounded-xl border border-gray-200">
                            <div class="flex items-center gap-4">
                                <div class="w-12 h-12 ${isOnline ? 'bg-green-100' : 'bg-gray-100'} rounded-full flex items-center justify-center">
                                    <i class="fas ${isOnline ? 'fa-wifi text-green-600' : 'fa-wifi-slash text-gray-400'} text-xl"></i>
                                </div>
                                <div>
                                    <h4 class="font-bold text-gray-900">${customer.name}</h4>
                                    <div class="flex items-center gap-2 text-sm">
                                        <span class="font-mono text-gray-500">${customer.customer_code}</span>
                                        <span class="text-gray-300">|</span>
                                        <span class="${isOnline ? 'text-green-600 font-semibold' : 'text-gray-500'}">
                                            ${isOnline ? 'Online' : 'Offline'}
                                        </span>
                                    </div>
                                </div>
                            </div>
                            ${isOnline ? `
                                <div class="text-right">
                                    <div class="text-xs text-gray-500 uppercase tracking-wider mb-1">UPTIME</div>
                                    <div class="font-mono font-bold text-blue-600">${session.uptime || '-'}</div>
                                </div>
                            ` : ''}
                        </div>

                        <!-- Technical Details -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- Account Info -->
                            <div class="bg-white border border-gray-200 rounded-xl p-5">
                                <h5 class="font-semibold text-gray-800 mb-4 flex items-center">
                                    <i class="fas fa-user-cog text-blue-500 mr-2"></i> Informasi Akun
                                </h5>
                                <div class="space-y-3">
                                    <div class="flex justify-between border-b border-gray-100 pb-2">
                                        <span class="text-gray-500 text-sm">Username</span>
                                        <code class="text-blue-600 bg-blue-50 px-2 py-0.5 rounded text-sm">${customer.pppoe_username}</code>
                                    </div>
                                    <div class="flex justify-between border-b border-gray-100 pb-2">
                                        <span class="text-gray-500 text-sm">Password</span>
                                        <span class="text-gray-700 font-mono text-sm">${customer.pppoe_password || '12345'}</span>
                                    </div>
                                    <div class="flex justify-between border-b border-gray-100 pb-2">
                                        <span class="text-gray-500 text-sm">Paket</span>
                                        <span class="text-gray-900 font-medium text-sm">${customer.package_name || '-'}</span>
                                    </div>
                                    <div class="flex justify-between border-b border-gray-100 pb-2">
                                        <span class="text-gray-500 text-sm">Harga</span>
                                        <span class="text-gray-900 font-medium text-sm">Rp ${parseInt(customer.price || 0).toLocaleString('id-ID')}</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-gray-500 text-sm">ODC</span>
                                        <span class="text-purple-600 bg-purple-50 px-2 py-0.5 rounded text-sm font-medium">${customer.odc_name || '-'}</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Network Info -->
                            <div class="bg-white border border-gray-200 rounded-xl p-5">
                                <h5 class="font-semibold text-gray-800 mb-4 flex items-center">
                                    <i class="fas fa-network-wired text-green-500 mr-2"></i> Informasi Jaringan
                                </h5>
                                <div class="space-y-3">
                                    <div class="flex justify-between border-b border-gray-100 pb-2">
                                        <span class="text-gray-500 text-sm">IP Address</span>
                                        <code class="text-green-700 bg-green-50 px-2 py-0.5 rounded text-sm">${session.address || '-'}</code>
                                    </div>
                                    <div class="flex justify-between border-b border-gray-100 pb-2">
                                        <span class="text-gray-500 text-sm">MAC Address</span>
                                        <code class="text-gray-600 font-mono text-sm">${session['caller-id'] || '-'}</code>
                                    </div>
                                    <div class="flex justify-between border-b border-gray-100 pb-2">
                                        <span class="text-gray-500 text-sm">Limit Rx/Tx</span>
                                        <span class="text-gray-700 text-sm font-mono">${customer.rate_limit_rx || 'Unl'} / ${customer.rate_limit_tx || 'Unl'}</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-gray-500 text-sm">Interface</span>
                                        <span class="text-gray-700 text-sm">${session.interface || '-'}</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Live Traffic Stats (If Online) -->
                        ${isOnline ? `
                            <div class="bg-gray-900 rounded-xl p-5 text-white">
                                <h5 class="font-semibold mb-4 flex items-center">
                                    <i class="fas fa-chart-area text-blue-400 mr-2"></i> Traffic Session Ini
                                </h5>
                                <div class="grid grid-cols-2 gap-6">
                                    <div class="text-center p-3 bg-gray-800 rounded-lg">
                                        <div class="text-gray-400 text-xs uppercase mb-1">Download (Rx)</div>
                                        <div class="text-xl font-bold text-green-400" id="modal-rx">
                                            ${formatBytes(session['bytes-out'] || 0)}
                                        </div>
                                    </div>
                                    <div class="text-center p-3 bg-gray-800 rounded-lg">
                                        <div class="text-gray-400 text-xs uppercase mb-1">Upload (Tx)</div>
                                        <div class="text-xl font-bold text-blue-400" id="modal-tx">
                                            ${formatBytes(session['bytes-in'] || 0)}
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4 text-center text-xs text-gray-500">
                                    Data traffic akumulatif untuk sesi saat ini
                                </div>
                            </div>
                        ` : ''}

                        <div class="flex justify-end pt-4 border-t border-gray-100">
                            <a href="/customers/${customer.id}" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                                <i class="fas fa-external-link-alt mr-2"></i> Buka Halaman Pelanggan
                            </a>
                        </div>
                    </div>
                style="width: <%= rate %>%;"
                modalContent.innerHTML = html;

                // Start polling traffic if online
                if (isOnline) {
                    pollTraffic(customer.pppoe_username);
                style="width: <%= rate %>%;"

            } else {
                throw new Error(result.message || 'Gagal mengambil data');
            style="width: <%= rate %>%;"
        } catch (error) {
            modalContent.innerHTML = `
                                < div class="text-center py-12" >
                    <i class="fas fa-exclamation-circle text-4xl text-red-500 mb-4"></i>
                    <p class="text-gray-600">Terjadi kesalahan: ${error.message}</p>
                    <button onclick="closeModal()" class="mt-4 px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300">Tutup</button>
                </div >
                                style="width: <%= rate %>%;"
                            style = "width: <%= rate %>%;"
                            style = "width: <%= rate %>%;"

                            function formatBytes(bytes, decimals = 2) {
                                if (!+bytes) return '0 B';
                                const k = 1024;
                                const dm = decimals < 0 ? 0 : decimals;
                                const sizes = ['B', 'KB', 'MB', 'GB', 'TB', 'PB', 'EB', 'ZB', 'YB'];
                                const i = Math.floor(Math.log(bytes) / Math.log(k));
                                return `${parseFloat((bytes / Math.pow(k, i)).toFixed(dm))} ${sizes[i]}`;
                                style = "width: <%= rate %>%;"

                                async function pollTraffic(username) {
                                    // Initial fetch handled by HTML render, subsequent by interval
                                    trafficInterval = setInterval(async () => {
                                        try {
                                            const url = `/monitoring/traffic/${encodeURIComponent(username)}`;
                                            const response = await fetch(url);
                                            const result = await response.json();

                                            if (result.success && result.online) {
                                                const rxEl = document.getElementById('modal-rx');
                                                const txEl = document.getElementById('modal-tx');
                                                if (rxEl) rxEl.textContent = formatBytes(result.data.download);
                                                if (txEl) txEl.textContent = formatBytes(result.data.upload);
                                                style = "width: <%= rate %>%;"
                                            } catch (e) {
                                                console.error('Traffic poll error:', e);
                                                style = "width: <%= rate %>%;"
                                            }, 2000);
                                    style = "width: <%= rate %>%;"
            </script>

            <!-- Add Modal HTML at the end of body -->
            <div id="detailModal"
                class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
