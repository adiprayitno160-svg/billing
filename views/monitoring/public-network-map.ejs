        // Trace Route to OLT Logic
        function traceRouteToOlt(deviceId) {
            clearTrace();
            const path = [];
            const nodes = [];
            let current = deviceMap[deviceId];
            let totalDist = 0;

            console.log('Tracing Route from:', current?.name);

            while (current) {
                path.push([parseFloat(current.latitude), parseFloat(current.longitude)]);
                nodes.push(current);

                // Find parent via link or parent_id
                let parent = null;

                // 1. Check parent_id field
                if (current.parent_id && deviceMap[current.parent_id]) {
                    parent = deviceMap[current.parent_id];
                }

                // 2. Check currentLinks
                if (!parent) {
                    const link = currentLinks.find(l =>
                        (l.source_device_id == current.id && deviceMap[l.target_device_id]?.device_type !== 'customer') ||
                        (l.target_device_id == current.id && deviceMap[l.source_device_id]?.device_type !== 'customer')
                    );
                    if (link) {
                        const pid = link.source_device_id == current.id ? link.target_device_id : link.source_device_id;
                        parent = deviceMap[pid];
                    }
                }

                // If parent is the same as current (loop) or no parent, stop
                if (!parent || parent.id === current.id) break;

                // Accumulate distance
                totalDist += calculateDirectDistance(
                    parseFloat(current.latitude), parseFloat(current.longitude),
                    parseFloat(parent.latitude), parseFloat(parent.longitude)
                );

                current = parent;
                if (current.device_type === 'olt') {
                    path.push([parseFloat(current.latitude), parseFloat(current.longitude)]);
                    nodes.push(current);
                    break;
                }
            }

            if (path.length > 1) {
                const tracePoly = L.polyline(path, {
                    color: '#ff00ea',
                    weight: 6,
                    opacity: 0.9,
                    className: 'trace-line'
                }).addTo(traceLayer);

                map.fitBounds(tracePoly.getBounds(), { padding: [50, 50] });

                // Update Overlay UI
                const overlay = document.getElementById('traceOverlay');
                const distEl = document.getElementById('traceDistance');
                distEl.textContent = totalDist > 1000 ? (totalDist / 1000).toFixed(2) + 'km' : totalDist + 'm';

                // Build Node HTML
                overlay.innerHTML = nodes.reverse().map((n, i) => {
                    const iconClass = n.device_type === 'customer' ? 'fa-user text-green-500' :
                        n.device_type === 'odp' ? 'fa-cube text-blue-500' :
                            n.device_type === 'odc' ? 'fa-box text-orange-500' : 'fa-server text-purple-500';
                    return `
                        <div class="trace-node"><i class="fas ${iconClass}"></i> ${n.name}</div>
                        ${i < nodes.length - 1 ? '<div class="trace-arrow"><i class="fas fa-chevron-right"></i></div>' : ''}
                    `;
                }).join('') + `
                    <div style="margin-left: 20px; border-left: 1px solid rgba(255,255,255,0.2); padding-left: 15px; display: flex; align-items: center; gap: 15px;">
                        <span id="traceDistance" style="color: #fca311; font-weight: 800; font-size: 14px;">${totalDist > 1000 ? (totalDist / 1000).toFixed(2) + 'km' : totalDist + 'm'}</span>
                        <button onclick="clearTrace()" style="color: #ef4444; background: none; border: none; cursor: pointer; font-size: 16px;"><i class="fas fa-times-circle"></i></button>
                    </div>
                `;

                overlay.style.display = 'flex';
            }
        }

