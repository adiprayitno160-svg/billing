                subdomains: 'abcd',
                maxZoom: 20
            }).addTo(map);

            // Add link layers to map
            linkLayers.addTo(map);
            traceLayer.addTo(map);

            // Load data
            loadNetworkData();

            // Auto refresh every 10 seconds for "live" feel
            setInterval(refreshData, 10000);
        }

        // Search logic
        function onSearchInput(value) {
            searchQuery = value.toLowerCase();
            applyFilters();
        }

        // Toggle Offline Only
        function toggleOfflineOnly() {
            const checkbox = document.getElementById('filter-offline-only');
            isOfflineOnly = !checkbox.checked;
            checkbox.checked = isOfflineOnly;

            const icon = document.getElementById('offline-filter-icon');
            const label = document.getElementById('offline-filter-label');

            if (isOfflineOnly) {
                icon.parentElement.style.background = '#ef4444';
                label.style.color = '#ef4444';
            } else {
                icon.parentElement.style.background = '#9ca3af';
                label.style.color = '#6b7280';
            }

            applyFilters();
        }

        // Apply all active filters (Type, Search, Offline Status)
        // Apply all active filters (Type, Search, Offline Status)
        function applyFilters() {
            if (!allDevices || allDevices.length === 0) return;

            const filteredDevices = allDevices.filter(device => {
                // 1. Type Filter
                if (!activeFilters[device.device_type]) return false;

                // 2. Offline Only Filter
                if (isOfflineOnly && device.status !== 'offline') return false;

                // 3. Search Query Filter
                if (searchQuery) {
                    const nameMatch = device.name.toLowerCase().includes(searchQuery);
                    const ipMatch = (device.ip_address && device.ip_address.toLowerCase().includes(searchQuery)) ||
                        (device.metadata && device.metadata.ip_address && device.metadata.ip_address.toLowerCase().includes(searchQuery));
                    const addressMatch = device.address && device.address.toLowerCase().includes(searchQuery);

                    let pppoeMatch = false;
                    const meta = typeof device.metadata === 'string' ? JSON.parse(device.metadata || '{}') : (device.metadata || {});
                    if (meta.pppoe_username) {
                        pppoeMatch = meta.pppoe_username.toLowerCase().includes(searchQuery);
                    }

                    if (!nameMatch && !ipMatch && !addressMatch && !pppoeMatch) return false;
                }

                return true;
            });

            renderDevices(filteredDevices);

            // If search has exactly one result, center on it and auto-trace
            if (searchQuery && filteredDevices.length === 1) {
                const d = filteredDevices[0];
                const lat = parseFloat(d.latitude);
                const lng = parseFloat(d.longitude);
                if (!isNaN(lat) && !isNaN(lng)) {
                    map.setView([lat, lng], 19);
                    setTimeout(() => {
                        if (markers[d.id]) markers[d.id].openPopup();
                        // Auto-trace path to OLT for the found device
                        traceRouteToOlt(d.id);
                        // Also show detail sidebar
                        showDeviceDetail(d);
                    }, 500);
                }
            }
        }

        // Enhanced Audio Notification System
        let audioCtx = null;
        let isAudioEnabled = true;

        // Initialize audio context on first user interaction
        function initAudio() {
            if (!audioCtx) {
                audioCtx = new (window.AudioContext || window.webkitAudioContext)();
            }

            // Resume if suspended
            if (audioCtx.state === 'suspended') {
                audioCtx.resume();
            }
        }

        // Different sound types for different alerts
        function playAlertSound(type = 'warning') {
            if (!isAudioEnabled) return;

            initAudio();

            const osc = audioCtx.createOscillator();
            const gainNode = audioCtx.createGain();

            osc.connect(gainNode);
            gainNode.connect(audioCtx.destination);

            switch (type) {
                case 'critical': // For offline devices
                    osc.type = 'sawtooth';
                    osc.frequency.setValueAtTime(440, audioCtx.currentTime);
                    osc.frequency.exponentialRampToValueAtTime(220, audioCtx.currentTime + 0.3);
                    gainNode.gain.setValueAtTime(0.3, audioCtx.currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + 0.5);
                    break;
                case 'warning': // For general warnings
                    osc.type = 'square';
                    osc.frequency.setValueAtTime(554.37, audioCtx.currentTime); // C#5
