        // Initialize on page load
        // Toggle Live Traffic
        function toggleLiveTraffic() {
            const checkbox = document.getElementById('live-traffic-toggle');
            const isChecked = !checkbox.checked; // Toggle state because click triggered on parent div usually, or we handle the input click event

            // If the user clicked the div, we manually toggle the checkbox
            // If the user clicked the checkbox directly, it already toggled.
            // Let's rely on checking the current state after the event or just force consistency.

            // To be safe, let's just check the current state of body and invert it
            const body = document.body;
            const isTrafficEnabled = !body.classList.contains('live-traffic-disabled');

            if (isTrafficEnabled) {
                // Turn OFF
                body.classList.add('live-traffic-disabled');
                checkbox.checked = false;
                checkbox.style.borderColor = '#ccc';
                checkbox.style.background = 'white';
                checkbox.nextElementSibling.style.background = '#e2e8f0'; // Label gray

                // Icon styling
                const iconDiv = checkbox.closest('.filter-item').querySelector('.filter-icon');
                if (iconDiv) {
                    iconDiv.style.background = '#94a3b8';
                    iconDiv.innerHTML = '<i class="fas fa-bolt"></i>';
                }
                const labelSpan = checkbox.closest('.filter-item').querySelector('span');
                if (labelSpan) labelSpan.style.color = '#64748b';

                localStorage.setItem('liveTrafficEnabled', 'false');
            } else {
                // Turn ON
                body.classList.remove('live-traffic-disabled');
                checkbox.checked = true;
                checkbox.style.borderColor = '#ef4444';
                checkbox.style.background = '#ef4444';
                checkbox.nextElementSibling.style.background = '#fee2e2'; // Label light red

                // Icon styling
                const iconDiv = checkbox.closest('.filter-item').querySelector('.filter-icon');
                if (iconDiv) {
                    iconDiv.style.background = '#ef4444';
                    iconDiv.innerHTML = '<i class="fas fa-bolt animate-pulse"></i>';
                }
                const labelSpan = checkbox.closest('.filter-item').querySelector('span');
                if (labelSpan) labelSpan.style.color = '#ef4444';

                localStorage.setItem('liveTrafficEnabled', 'true');
            }
        }

        // Initialize Live Traffic State
        function initLiveTrafficState() {
            const savedState = localStorage.getItem('liveTrafficEnabled');
            // Default to true if not set
            const shouldEnable = savedState === null || savedState === 'true';

            const checkbox = document.getElementById('live-traffic-toggle');
            if (checkbox.checked !== shouldEnable) {
                // If checkbox state doesn't match saved state, toggle it
                // We manually trigger the logic to ensure UI consistency
                // If saved is false and checkbox is true (default), we need to disable
                if (!shouldEnable) {
                    document.body.classList.add('live-traffic-disabled');
                    checkbox.checked = false;
                    checkbox.style.borderColor = '#ccc';
                    checkbox.style.background = 'white';
                    checkbox.nextElementSibling.style.background = '#e2e8f0';

                    const iconDiv = checkbox.closest('.filter-item').querySelector('.filter-icon');
                    if (iconDiv) {
                        iconDiv.style.background = '#94a3b8';
                        iconDiv.innerHTML = '<i class="fas fa-bolt"></i>';
                    }
                    const labelSpan = checkbox.closest('.filter-item').querySelector('span');
                    if (labelSpan) labelSpan.style.color = '#64748b';
                }
            } else if (!shouldEnable) {
                // Even if checkbox is correct, ensure body class is correct
                document.body.classList.add('live-traffic-disabled');
            }
        }

        // Handle checkbox change directly if clicked
        document.getElementById('live-traffic-toggle').addEventListener('click', function (e) {
            e.stopPropagation(); // Stop bubbling to div onclick

            const checkbox = e.target;
            const body = document.body;

            if (!checkbox.checked) {
