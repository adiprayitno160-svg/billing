                    const tgt = deviceMap[link.target_device_id];
                    if (link.source_device_id == odp.id && (tgt?.device_type === 'ont' || tgt?.device_type === 'customer')) {
                        ontIds.add(link.target_device_id);
                    } else if (link.target_device_id == odp.id && (src?.device_type === 'ont' || src?.device_type === 'customer')) {
                        ontIds.add(link.source_device_id);
                    }
                });

                // Fallback parent check
                Object.values(deviceMap).forEach(d => {
                    if ((d.device_type === 'ont' || d.device_type === 'customer') && d.parent_id == odp.id) {
                        ontIds.add(d.id);
                    }
                });

                const linkedOnts = Array.from(ontIds).map(id => deviceMap[id]).filter(d => !!d);
                const onlineCount = linkedOnts.filter(d => d.status === 'online').length;
                const offlineCount = linkedOnts.filter(d => d.status === 'offline').length;

                onlineOnt += onlineCount;
                offlineOnt += offlineCount;

                // Port Capacity (Default 16)
                let capacity = 16;
                try {
                    const meta = typeof odp.metadata === 'string' ? JSON.parse(odp.metadata) : (odp.metadata || {});
                    capacity = parseInt(meta.capacity) || 16;
                } catch (e) { }

                totalPorts += capacity;
                usedPorts += linkedOnts.length;

                return {
                    ...odp,
                    distance: dist,
                    onlineCount,
                    offlineCount,
                    capacity,
                    linkedCount: linkedOnts.length
                };
            }).sort((a, b) => a.distance - b.distance); // SORT NEAREST TO FARTHEST

            // Update UI Sidebar Stats
            document.getElementById('statOdpCount').textContent = `${connectedOdps.length} / 16`;
            document.getElementById('statPortUsage').textContent = `${usedPorts} / ${totalPorts}`;
            document.getElementById('statOntOnline').textContent = onlineOnt;
            document.getElementById('statOntOffline').textContent = offlineOnt;

            // Render ODP List
            const listContainer = document.getElementById('odpList');
            if (listContainer) {
                listContainer.innerHTML = '';

                if (odpsWithDist.length === 0) {
                    listContainer.innerHTML = `
                        <div style="text-align: center; padding: 40px 20px; color: #94a3b8;">
                            <i class="fas fa-satellite-dish" style="font-size: 32px; opacity: 0.3; margin-bottom: 10px; display: block;"></i>
                            <p style="font-size: 13px; font-style: italic;">No ODPs found for this ODC</p>
                        </div>
                    `;
                } else {
                    odpsWithDist.forEach((odp, index) => {
                        const item = document.createElement('div');
                        item.className = 'odp-item';
                        item.style.animationDelay = `${index * 0.05}s`;

                        item.onclick = (e) => {
                            e.stopPropagation();
                            map.setView([odp.latitude, odp.longitude], 19);
                            if (markers[odp.id]) {
                                markers[odp.id].openPopup();
                            }
                        };

                        item.innerHTML = `
                            <div class="odp-info-main">
                                <span class="odp-name">${odp.name}</span>
                                <span class="odp-dist">
                                    <i class="fas fa-location-arrow" style="font-size: 10px; margin-right: 4px;"></i>
                                    ${odp.distance} meter
                                </span>
                            </div>
                            <div class="odp-badges">
                                <span class="badge badge-port">${odp.linkedCount}/${odp.capacity} P</span>
                                <span class="badge ${odp.onlineCount > 0 ? 'badge-online' : 'badge-offline'}">
                                    ${odp.onlineCount} ON
                                </span>
                            </div>
                        `;
                        listContainer.appendChild(item);
                    });
                }
            }

            sidebar.classList.add('active');
        }

        function closeOdcSidebar() {
            const sidebar = document.getElementById('odcSidebar');
            if (sidebar) sidebar.classList.remove('active');
        }

        // Direct distance calculation in meters
        function calculateDirectDistance(lat1, lon1, lat2, lon2) {
            const R = 6371e3; // Earth radius
            const dLat = (lat2 - lat1) * Math.PI / 180;
            const dLon = (lon2 - lon1) * Math.PI / 180;
            const a = Math.sin(dLat / 2) * Math.sin(dLat / 2) +
                Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) *
                Math.sin(dLon / 2) * Math.sin(dLon / 2);
            const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
            return Math.round(R * c);
        }

