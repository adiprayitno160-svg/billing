        // Calculate initial center based on device locations
        function calculateInitialCenter(devices) {
            if (!devices || devices.length === 0) {
                // Default center if no devices
                return { lat: -6.200000, lng: 106.816666, zoom: 13 };
            }

            // Filter devices with valid coordinates
            const validDevices = devices.filter(d => {
                const lat = parseFloat(d.latitude);
                const lng = parseFloat(d.longitude);
                return !isNaN(lat) && !isNaN(lng) && d.latitude && d.longitude;
            });

            if (validDevices.length === 0) {
                return { lat: -6.200000, lng: 106.816666, zoom: 13 };
            }

            // Calculate bounds
            let minLat = Infinity, maxLat = -Infinity;
            let minLng = Infinity, maxLng = -Infinity;

            validDevices.forEach(d => {
                const lat = parseFloat(d.latitude);
                const lng = parseFloat(d.longitude);

                if (lat < minLat) minLat = lat;
                if (lat > maxLat) maxLat = lat;
                if (lng < minLng) minLng = lng;
                if (lng > maxLng) maxLng = lng;
            });

            // Calculate center
            const centerLat = (minLat + maxLat) / 2;
            const centerLng = (minLng + maxLng) / 2;

            // Calculate appropriate zoom based on spread
            const latDiff = maxLat - minLat;
            const lngDiff = maxLng - minLng;
            const maxDiff = Math.max(latDiff, lngDiff);

            // Rough estimation of zoom level based on area size
            let zoom = 13; // default
            if (maxDiff < 0.01) zoom = 16; // Very small area
            else if (maxDiff < 0.05) zoom = 14;
            else if (maxDiff < 0.1) zoom = 12;
            else if (maxDiff < 0.5) zoom = 10;
            else zoom = 8;

            return { lat: centerLat, lng: centerLng, zoom: zoom };
        }

