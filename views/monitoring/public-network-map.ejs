    <script>
        async function syncData() {
            const btn = document.getElementById('btn-sync-data');
            const icon = btn.querySelector('i');
            const originalText = btn.innerHTML;

            if (confirm('Jalankan SINKRONISASI Data? \n\nAksi ini akan:\n1. Mengambil data OLT/ODC/ODP terbaru.\n2. Update data Customer (termasuk referensi ke ODP).\n3. Membuat link koneksi otomatis.\n\nLanjutkan?')) {
                try {
                    btn.disabled = true;
                    btn.style.opacity = '0.7';
                    icon.classList.add('fa-spin');
                    btn.innerHTML = '<i class="fas fa-sync-alt fa-spin"></i> Memproses...';

                    console.log('Starting sync process...');

                    // 1. Sync FTTH
                    console.log('Syncing FTTH...');
                    await fetch('/monitoring/api/sync/ftth', { method: 'POST' });

                    // 2. Sync Customers
                    console.log('Syncing Customers...');
                    await fetch('/monitoring/api/sync/customers', { method: 'POST' });

                    // 3. Sync Links
                    console.log('Syncing Links...');
                    await fetch('/monitoring/api/sync/links', { method: 'POST' });

                    alert('✅ Sinkronisasi Berhasil!\nHalaman akan dimuat ulang untuk menampilkan data terbaru.');
                    location.reload();
                } catch (e) {
                    console.error('Sync failed:', e);
                    alert('❌ Gagal melakukan sinkronisasi: ' + e.message);
                    btn.disabled = false;
                    btn.style.opacity = '1';
                    btn.innerHTML = originalText;
                }
            }
        }
