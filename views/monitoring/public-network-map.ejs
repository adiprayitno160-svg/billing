    <!-- ROOT LEVEL FORENSIC CLEANER -->
    <script>
        (function () {
            const blocker = document.getElementById('extensionBlocker');

            function enforceRootCleaning() {
                // DOM DOMINANCE V2: Append to HTML (Parent of Body) not Body
                // This forces our blocker to be a sibling of the extension
                if (document.documentElement && document.documentElement.lastElementChild !== blocker) {
                    try {
                        document.documentElement.appendChild(blocker);
                        // Also force style update in case extension fights back
                        blocker.style.display = 'block';
                        blocker.style.zIndex = '2147483647';
                    } catch (e) {
                        // Fallback
                        if (document.body) document.body.appendChild(blocker);
                    }
                }

                // ROOT SCAN
                const children = document.documentElement.children;
                for (let i = 0; i < children.length; i++) {
                    const el = children[i];
                    if (el === document.body || el === document.head || el === blocker) continue;

                    const id = el.id ? el.id.toLowerCase() : '';
                    if (id.includes('aiinhbfoop') || el.className.toString().includes('aiinhbfoop')) {
                        try { el.remove(); } catch (e) { }
                    }
                }
            }

            // Continuous scanning
            setInterval(enforceRootCleaning, 100);
        })();
    </script>



