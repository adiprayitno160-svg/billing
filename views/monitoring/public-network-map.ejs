    <script>
        // Global variables
        let map;
        let markers = {};
        let linkLayers = L.layerGroup(); // Use layer group for links
        let currentLinks = []; // Store active links
        let activeFilters = {
            customer: true,
            ont: true,
            olt: true,
            odc: true,
            odp: true
        };
        let selectedDevice = null;
        let routingControl = null;
        let deviceMap = {};
        let linksMap = {}; // Track active link polyline objects
        let searchQuery = '';
        let isOfflineOnly = false;
        let isHeatmapActive = false;
        let allDevices = []; // Cache for filtering without re-fetching
