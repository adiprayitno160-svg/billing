<!-- SLA Monitoring Dashboard -->
<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">
        <i class="fas fa-chart-line mr-3 text-blue-600"></i>
        SLA Monitoring Dashboard
    </h1>
    <p class="text-gray-600">Service Level Agreement Performance Tracking</p>
</div>

<div class="container-fluid px-4 py-6">
    <!-- Page Controls -->
    <div class="mb-6">
        <div class="flex justify-between items-center">
            <div>
            
            <!-- Month Selector -->
            <div class="flex items-center gap-4">
                <input type="month" 
                       id="monthSelector" 
                       value="<%= month %>" 
                       class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                
                <button id="recalculateBtn" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    üîÑ Recalculate SLA
                </button>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <!-- Total Customers -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm font-medium">Total Customers</p>
                    <p class="text-3xl font-bold text-gray-900 mt-1">
                        <%= summary.total_customers || 0 %>
                    </p>
                </div>
                <div class="bg-blue-100 p-3 rounded-full">
                    <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <!-- SLA Met -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm font-medium">SLA Met</p>
                    <p class="text-3xl font-bold text-green-600 mt-1">
                        <%= summary.customers_met_sla || 0 %>
                    </p>
                    <% if (summary.total_customers > 0) { %>
                    <p class="text-sm text-gray-500 mt-1">
                        <%= ((summary.customers_met_sla / summary.total_customers) * 100).toFixed(1) %>%
                    </p>
                    <% } %>
                </div>
                <div class="bg-green-100 p-3 rounded-full">
                    <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <!-- SLA Breach -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm font-medium">SLA Breach</p>
                    <p class="text-3xl font-bold text-red-600 mt-1">
                        <%= summary.customers_breach_sla || 0 %>
                    </p>
                    <% if (summary.total_customers > 0) { %>
                    <p class="text-sm text-gray-500 mt-1">
                        <%= ((summary.customers_breach_sla / summary.total_customers) * 100).toFixed(1) %>%
                    </p>
                    <% } %>
                </div>
                <div class="bg-red-100 p-3 rounded-full">
                    <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <!-- Total Discount -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm font-medium">Total Discount</p>
                    <p class="text-3xl font-bold text-orange-600 mt-1">
                        Rp <%= (summary.total_discount_amount || 0).toLocaleString('id-ID') %>
                    </p>
                    <p class="text-sm text-gray-500 mt-1">
                        Approved: Rp <%= (summary.approved_discount_amount || 0).toLocaleString('id-ID') %>
                    </p>
                </div>
                <div class="bg-orange-100 p-3 rounded-full">
                    <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Incidents & Connection Status -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <!-- Active Incidents -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-4">üî¥ Active Incidents</h2>
            
            <% if (activeIncidents && activeIncidents.length > 0) { %>
            <div class="space-y-3 max-h-96 overflow-y-auto">
                <% activeIncidents.forEach(incident => { %>
                <div class="border-l-4 border-red-500 bg-red-50 p-4 rounded-r-lg hover:shadow-md transition-shadow">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <h3 class="font-semibold text-gray-900"><%= incident.customer_name %></h3>
                            <p class="text-sm text-gray-600">üìç <%= incident.area || 'N/A' %> ‚Ä¢ <%= incident.service_type.toUpperCase() %></p>
                            <p class="text-xs text-gray-500 mt-1">‚è±Ô∏è <%= incident.duration_minutes %> minutes</p>
                        </div>
                        <div class="flex flex-col items-end gap-2">
                            <span class="px-3 py-1 bg-red-100 text-red-800 text-xs font-semibold rounded-full">
                                ONGOING
                            </span>
                            <% if (incident.technician_name) { %>
                            <span class="text-xs text-gray-600">üë∑ <%= incident.technician_name %></span>
                            <% } %>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            <% } else { %>
            <div class="text-center py-8 text-gray-500">
                <svg class="w-16 h-16 mx-auto text-gray-300 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <p>No active incidents</p>
            </div>
            <% } %>
        </div>

        <!-- Connection Status -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-4">üì° Connection Status</h2>
            
            <% if (connectionStatus && connectionStatus.length > 0) { %>
            <div class="space-y-4">
                <% 
                const total = connectionStatus.reduce((sum, s) => sum + parseInt(s.count), 0);
                connectionStatus.forEach(status => { 
                    const percentage = total > 0 ? (status.count / total * 100).toFixed(1) : 0;
                    const color = status.current_status === 'online' ? 'green' : 
                                  status.current_status === 'offline' ? 'red' : 'yellow';
                %>
                <div>
                    <div class="flex justify-between items-center mb-2">
                        <span class="text-sm font-medium text-gray-700 capitalize">
                            <%= status.current_status || 'Unknown' %>
                        </span>
                        <span class="text-sm font-semibold text-gray-900">
                            <%= status.count %> (<%= percentage %>%)
                        </span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-3">
                        <div class="bg-<%= color %>-500 h-3 rounded-full transition-all duration-300" 
                             style="width: <%= percentage %>%"></div>
                    </div>
                </div>
                <% }) %>
            </div>
            <% } else { %>
            <div class="text-center py-8 text-gray-500">
                <p>No connection data available</p>
            </div>
            <% } %>
        </div>
    </div>

    <!-- SLA Breach Table -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-bold text-gray-900">‚ö†Ô∏è Customers with SLA Issues</h2>
            <a href="/monitoring/sla/incidents" class="text-blue-600 hover:text-blue-800 font-medium">
                View All Incidents ‚Üí
            </a>
        </div>
        
        <% if (breaches && breaches.length > 0) { %>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Area</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">SLA %</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Target</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Downtime</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Discount</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% breaches.forEach(breach => { %>
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900"><%= breach.customer_name %></div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= breach.area || 'N/A' %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= breach.service_type.toUpperCase() %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-semibold <%= breach.sla_percentage < breach.sla_target ? 'text-red-600' : 'text-yellow-600' %>">
                                <%= breach.sla_percentage.toFixed(2) %>%
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= breach.sla_target %>%
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= breach.counted_downtime_minutes %> min
                            <% if (breach.excluded_downtime_minutes > 0) { %>
                            <br><span class="text-xs text-gray-400">(Excluded: <%= breach.excluded_downtime_minutes %> min)</span>
                            <% } %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-semibold text-orange-600">
                                Rp <%= breach.discount_amount.toLocaleString('id-ID') %>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <% if (breach.discount_approved) { %>
                            <span class="px-3 py-1 bg-green-100 text-green-800 text-xs font-semibold rounded-full">
                                APPROVED
                            </span>
                            <% } else { %>
                            <span class="px-3 py-1 bg-yellow-100 text-yellow-800 text-xs font-semibold rounded-full">
                                PENDING
                            </span>
                            <% } %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            <a href="/monitoring/sla/customer/<%= breach.customer_id %>?month=<%= month %>" 
                               class="text-blue-600 hover:text-blue-900 font-medium">
                                View Detail ‚Üí
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <div class="text-center py-12 text-gray-500">
            <svg class="w-16 h-16 mx-auto text-gray-300 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-lg font-medium">All customers meeting SLA targets! üéâ</p>
        </div>
        <% } %>
    </div>
</div>

<script>
// Month selector change event
document.addEventListener('DOMContentLoaded', function() {
    const monthSelector = document.getElementById('monthSelector');
    const recalculateBtn = document.getElementById('recalculateBtn');
    
    if (monthSelector) {
        monthSelector.addEventListener('change', function() {
            window.location.href = '/monitoring/sla?month=' + this.value;
        });
    }
    
    if (recalculateBtn) {
        recalculateBtn.addEventListener('click', calculateSLA);
    }
});

async function calculateSLA() {
    const month = document.getElementById('monthSelector').value;
    
    if (!confirm('Recalculate SLA for ' + month + '? This may take a few minutes.')) {
        return;
    }
    
    try {
        const response = await fetch('/monitoring/sla/api/calculate', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ month })
        });
        
        const data = await response.json();
        
        if (data.success) {
            alert('SLA calculation started. Page will reload in 5 seconds...');
            setTimeout(() => location.reload(), 5000);
        } else {
            alert('Error: ' + data.message);
        }
    } catch (error) {
        alert('Error: ' + error.message);
    }
}
</script>
