<%- include('../../layouts/header') %>

<div class="container-fluid px-4 py-6">
    <!-- Page Header -->
    <div class="mb-6">
        <div class="flex items-center gap-3">
            <a href="/monitoring/telegram/users" class="text-blue-600 hover:text-blue-800">
                ‚Üê Back to Users
            </a>
        </div>
        <h1 class="text-3xl font-bold text-gray-900 mt-4">‚ûï Create Invite Code</h1>
        <p class="text-gray-600 mt-1">Generate an invite code for new staff member</p>
    </div>

    <!-- Form Card -->
    <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-lg shadow-md p-6">
            <form id="inviteForm" onsubmit="createInvite(event)">
                <!-- Role Selection -->
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Role <span class="text-red-500">*</span>
                    </label>
                    <select name="role" required 
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        <option value="">-- Select Role --</option>
                        <option value="admin">üëë Admin (Full Access)</option>
                        <option value="teknisi">üîß Teknisi (Field Technician)</option>
                        <option value="kasir">üí∞ Kasir (Cashier)</option>
                    </select>
                    <p class="text-xs text-gray-500 mt-1">
                        Admin receives all alerts, Teknisi receives alerts for their area, Kasir receives payment alerts
                    </p>
                </div>

                <!-- Area Coverage -->
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Area Coverage
                        <span class="text-gray-400 text-xs">(Optional for Admin, leave blank for all areas)</span>
                    </label>
                    
                    <div class="grid grid-cols-2 gap-2 mb-2">
                        <% if (areas && areas.length > 0) { %>
                            <% areas.forEach(area => { %>
                            <label class="flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
                                <input type="checkbox" 
                                       name="areas" 
                                       value="<%= area.area %>"
                                       class="mr-2 w-4 h-4 text-blue-600 rounded focus:ring-blue-500">
                                <span class="text-sm text-gray-700"><%= area.area %></span>
                            </label>
                            <% }) %>
                        <% } else { %>
                            <p class="text-gray-500 col-span-2">No areas defined yet</p>
                        <% } %>
                    </div>
                    
                    <p class="text-xs text-gray-500 mt-1">
                        Teknisi will only receive alerts for selected areas. Leave blank for all areas.
                    </p>
                </div>

                <!-- Submit Button -->
                <div class="flex gap-3">
                    <button type="submit" 
                            class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium">
                        üé´ Generate Invite Code
                    </button>
                    <a href="/monitoring/telegram/users" 
                       class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-medium">
                        Cancel
                    </a>
                </div>
            </form>
        </div>

        <!-- Result Card (Hidden by default) -->
        <div id="resultCard" class="bg-green-50 border border-green-200 rounded-lg p-6 mt-6 hidden">
            <h3 class="text-lg font-bold text-green-900 mb-3">‚úÖ Invite Code Generated!</h3>
            
            <div class="bg-white p-4 rounded-lg border border-green-300 mb-4">
                <p class="text-xs text-gray-600 mb-2">Invite Code:</p>
                <div class="flex items-center gap-2">
                    <input type="text" 
                           id="inviteCodeDisplay" 
                           readonly 
                           class="flex-1 px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg font-mono text-lg font-bold text-center"
                           value="">
                    <button onclick="copyInviteCode()" 
                            class="px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                        üìã Copy
                    </button>
                </div>
            </div>

            <div class="bg-blue-50 p-4 rounded-lg mb-4">
                <p class="text-sm text-blue-900 font-medium mb-2">üì± Instructions for Staff:</p>
                <ol class="list-decimal list-inside space-y-1 text-sm text-blue-800">
                    <li>Open Telegram app</li>
                    <li>Search for bot: <code class="bg-blue-100 px-2 py-1 rounded">@YourBotName</code></li>
                    <li>Send: <code class="bg-blue-100 px-2 py-1 rounded">/start</code></li>
                    <li>Send: <code class="bg-blue-100 px-2 py-1 rounded">/register <span id="inviteCodeInstructions"></span></code></li>
                    <li>Bot will confirm registration</li>
                </ol>
            </div>

            <div class="bg-yellow-50 p-4 rounded-lg">
                <p class="text-sm text-yellow-900">
                    ‚ö†Ô∏è <strong>Important:</strong> This invite code will expire in <strong>7 days</strong>. 
                    Make sure to send it to the staff member promptly.
                </p>
            </div>

            <div class="mt-4 flex gap-2">
                <a href="/monitoring/telegram/users" 
                   class="flex-1 px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 font-medium text-center">
                    ‚úì Done - Back to Users
                </a>
                <button onclick="location.reload()" 
                        class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-medium">
                    + Create Another
                </button>
            </div>
        </div>
    </div>
</div>

<script>
async function createInvite(event) {
    event.preventDefault();
    
    const form = event.target;
    const formData = new FormData(form);
    
    const role = formData.get('role');
    const areas = formData.getAll('areas');
    
    if (!role) {
        alert('Please select a role');
        return;
    }
    
    try {
        const response = await fetch('/api/monitoring/telegram/create-invite', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ role, areas })
        });
        
        const data = await response.json();
        
        if (data.success) {
            // Show result card
            document.getElementById('resultCard').classList.remove('hidden');
            document.getElementById('inviteCodeDisplay').value = data.inviteCode;
            document.getElementById('inviteCodeInstructions').textContent = data.inviteCode;
            
            // Hide form
            form.style.display = 'none';
            
            // Scroll to result
            document.getElementById('resultCard').scrollIntoView({ behavior: 'smooth' });
        } else {
            alert('Error: ' + data.message);
        }
    } catch (error) {
        alert('Error: ' + error.message);
    }
}

function copyInviteCode() {
    const codeInput = document.getElementById('inviteCodeDisplay');
    codeInput.select();
    document.execCommand('copy');
    
    alert('‚úì Invite code copied to clipboard!');
}
</script>

