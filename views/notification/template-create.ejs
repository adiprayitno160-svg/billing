<!-- Create Notification Template Page -->
<div class="animate-content-fade-in max-w-5xl mx-auto py-6">
    <!-- Header -->
    <div class="flex items-center justify-between mb-10">
        <div class="flex items-center gap-5">
            <a href="/notification/templates"
                class="w-12 h-12 bg-white border border-gray-100 rounded-2xl flex items-center justify-center text-gray-400 hover:text-blue-600 hover:shadow-lg transition-all active:scale-95 shadow-sm">
                <i class="fas fa-arrow-left"></i>
            </a>
            <div>
                <h1 class="text-3xl font-black text-gray-900 tracking-tighter">Tambah Template</h1>
                <p
                    class="text-xs font-black text-blue-500 uppercase tracking-widest mt-0.5 shadow-sm inline-block px-2 py-0.5 bg-blue-50 rounded italic">
                    NEW_NOTIFICATION_ENTRY</p>
            </div>
        </div>
        <div class="hidden md:flex items-center gap-2">
            <span class="w-3 h-3 rounded-full bg-green-500 animate-pulse"></span>
            <span class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Sistem Siap</span>
        </div>
    </div>

    <!-- Main Container -->
    <form id="createTemplateForm" class="space-y-8">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">

            <!-- Left Side: Basic Config (Width: 5) -->
            <div class="lg:col-span-5 space-y-8">
                <div
                    class="bg-white rounded-[2.5rem] shadow-xl shadow-gray-200/50 border border-gray-100 overflow-hidden">
                    <div class="p-8 border-b border-gray-50 bg-gray-50/30 flex items-center gap-3">
                        <div
                            class="w-10 h-10 rounded-xl bg-blue-600 text-white flex items-center justify-center shadow-lg shadow-blue-100">
                            <i class="fas fa-cog"></i>
                        </div>
                        <h3 class="text-sm font-black text-gray-900 uppercase tracking-tighter">Konfigurasi Dasar</h3>
                    </div>
                    <div class="p-8 space-y-6">
                        <div class="space-y-2">
                            <label class="text-[11px] font-black text-gray-400 uppercase tracking-widest ml-1">Template
                                Code <span class="text-red-500">*</span></label>
                            <input type="text" name="template_code" required placeholder="e.g. invoice_warning"
                                class="w-full px-5 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:border-blue-500 focus:bg-white focus:ring-[6px] focus:ring-blue-100 transition-all outline-none font-bold text-gray-700 shadow-inner">
                        </div>
                        <div class="space-y-2">
                            <label class="text-[11px] font-black text-gray-400 uppercase tracking-widest ml-1">Template
                                Name <span class="text-red-500">*</span></label>
                            <input type="text" name="template_name" required placeholder="Display name for system"
                                class="w-full px-5 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:border-blue-500 focus:bg-white focus:ring-[6px] focus:ring-blue-100 transition-all outline-none font-bold text-gray-700 shadow-inner">
                        </div>
                        <div class="space-y-2 text-sm">
                            <label
                                class="text-[11px] font-black text-gray-400 uppercase tracking-widest ml-1 block mb-3">Target
                                Channel & Priority</label>
                            <div class="grid grid-cols-2 gap-3">
                                <label class="cursor-pointer group">
                                    <input type="radio" name="channel" value="whatsapp" class="peer sr-only" required
                                        checked>
                                    <div
                                        class="py-4 border-2 border-gray-100 rounded-2xl group-hover:bg-gray-50 peer-checked:border-green-500 peer-checked:bg-green-50 peer-checked:text-green-700 text-center transition-all flex flex-col items-center gap-1.5">
                                        <i class="fab fa-whatsapp text-xl"></i>
                                        <span class="text-[10px] font-black uppercase tracking-tighter">WhatsApp</span>
                                    </div>
                                </label>
                                <label class="cursor-pointer group">
                                    <input type="radio" name="channel" value="email" class="peer sr-only">
                                    <div
                                        class="py-4 border-2 border-gray-100 rounded-2xl group-hover:bg-gray-50 peer-checked:border-blue-500 peer-checked:bg-blue-50 peer-checked:text-blue-700 text-center transition-all flex flex-col items-center gap-1.5">
                                        <i class="fab fa-google text-xl"></i>
                                        <span class="text-[10px] font-black uppercase tracking-tighter">Email</span>
                                    </div>
                                </label>
                            </div>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pt-2">
                            <div class="space-y-2">
                                <label
                                    class="text-[11px] font-black text-gray-400 uppercase tracking-widest ml-1">Priority</label>
                                <select name="priority"
                                    class="w-full px-5 py-3.5 bg-gray-50 border-2 border-transparent rounded-2xl focus:border-blue-500 transition-all font-bold text-gray-700 outline-none appearance-none">
                                    <option value="low">LOW</option>
                                    <option value="normal" selected>NORMAL</option>
                                    <option value="high">HIGH / URGENT</option>
                                </select>
                            </div>
                            <div class="space-y-2">
                                <label class="text-[11px] font-black text-gray-400 uppercase tracking-widest ml-1">Init
                                    Status</label>
                                <select name="is_active"
                                    class="w-full px-5 py-3.5 bg-gray-50 border-2 border-transparent rounded-2xl focus:border-blue-500 transition-all font-bold text-gray-700 outline-none appearance-none">
                                    <option value="true" selected>AKTIF</option>
                                    <option value="false">DRAFT / STANDBY</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div
                    class="p-6 bg-gradient-to-br from-indigo-600 to-blue-700 rounded-[2.5rem] shadow-xl shadow-blue-200 text-white relative overflow-hidden group">
                    <i
                        class="fas fa-magic absolute -right-4 -bottom-4 text-8xl text-white/10 group-hover:rotate-12 transition-transform duration-700"></i>
                    <h4 class="text-sm font-black uppercase tracking-widest mb-4 flex items-center gap-2 italic">
                        <i class="fas fa-code"></i> Dynamic Library
                    </h4>
                    <p class="text-[11px] font-medium opacity-80 leading-relaxed mb-6">Klik variabel di bawah untuk
                        menyisipkan ke dalam isi pesan Anda secara otomatis.</p>
                    <div class="flex flex-wrap gap-2 relative z-10">
                        <% ['customer_name', 'customer_code' , 'invoice_number' , 'invoice_amount' , 'due_date'
                            , 'package_info' ].forEach(v=> { %>
                            <button type="button" onclick="insertVariable('{<%= v %>}')"
                                class="px-3 py-2 bg-white/10 hover:bg-white/20 border border-white/20 rounded-xl text-[10px] font-black font-mono transition-all">
                                {<%= v %>}
                            </button>
                            <% }) %>
                    </div>
                </div>
            </div>

            <!-- Right Side: Content (Width: 7) -->
            <div class="lg:col-span-7 space-y-8">
                <div
                    class="bg-white rounded-[2.5rem] shadow-xl shadow-gray-200/50 border border-gray-100 overflow-hidden min-h-[500px]">
                    <div class="p-8 border-b border-gray-50 bg-gray-50/30 flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div
                                class="w-10 h-10 rounded-xl bg-orange-500 text-white flex items-center justify-center shadow-lg shadow-orange-100">
                                <i class="fas fa-file-invoice"></i>
                            </div>
                            <h3 class="text-sm font-black text-gray-900 uppercase tracking-tighter">Event & Content</h3>
                        </div>
                        <select name="notification_type" required
                            class="px-4 py-2 border-2 border-orange-100 rounded-xl font-black text-[10px] uppercase tracking-tighter text-orange-600 appearance-none bg-orange-50 outline-none hover:bg-orange-100 transition-colors">
                            <option value="">-- PILIH TIPE EVENT --</option>
                            <option value="invoice_created">Invoice Dibuat</option>
                            <option value="invoice_overdue">Invoice Terlambat</option>
                            <option value="payment_received">Pembayaran Diterima</option>
                            <option value="service_blocked">Layanan Diblokir</option>
                            <option value="service_unblocked">Layanan Aktif Kembali</option>
                        </select>
                    </div>
                    <div class="p-8 space-y-8">
                        <div class="space-y-3">
                            <label class="text-[11px] font-black text-gray-400 uppercase tracking-widest ml-1">Payload
                                Title / Subject (Header)</label>
                            <input type="text" name="title_template" required placeholder="Subject notifikasi..."
                                class="w-full px-6 py-5 bg-gray-50 border-2 border-transparent rounded-2xl focus:border-blue-500 focus:bg-white focus:ring-[6px] focus:ring-blue-100 transition-all outline-none font-black text-gray-800 shadow-inner italic">
                        </div>
                        <div class="space-y-3">
                            <label class="text-[11px] font-black text-gray-400 uppercase tracking-widest ml-1">Message
                                Body (WhatsApp / Email Content)</label>
                            <textarea id="message_template" name="message_template" rows="12" required
                                placeholder="Tulis isi pesan di sini..."
                                class="w-full px-6 py-6 bg-gray-50 border-2 border-transparent rounded-[2rem] focus:border-blue-500 focus:bg-white focus:ring-[6px] focus:ring-blue-100 transition-all outline-none font-medium text-gray-700 shadow-inner resize-none leading-relaxed"></textarea>
                        </div>

                        <div class="pt-4 flex flex-col md:flex-row gap-4">
                            <button type="submit" id="submitBtn"
                                class="flex-1 py-5 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-[1.5rem] font-black text-lg tracking-tighter transition-all flex items-center justify-center gap-3 shadow-2xl shadow-blue-200 hover:-translate-y-1 active:scale-95 disabled:opacity-50 group">
                                <i class="fas fa-save text-xl group-hover:scale-110 transition-transform"></i>
                                PUBLISH TEMPLATE
                            </button>
                            <a href="/notification/templates"
                                class="px-10 py-5 bg-gray-100 hover:bg-gray-200 text-gray-600 rounded-[1.5rem] font-black text-xs tracking-widest transition-all flex items-center justify-center uppercase">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    @keyframes content-fade-in {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-content-fade-in {
        animation: content-fade-in 0.7s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .font-black {
        font-weight: 900;
    }
</style>

<script>
    function insertVariable(variable) {
        const textarea = document.getElementById('message_template');
        const start = textarea.selectionStart;
        const end = textarea.selectionEnd;
        const text = textarea.value;
        const before = text.substring(0, start);
        const after = text.substring(end, text.length);
        textarea.value = before + variable + after;
        textarea.focus();
        textarea.selectionStart = textarea.selectionEnd = start + variable.length;
    }

    document.getElementById('createTemplateForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const submitBtn = document.getElementById('submitBtn');
        const originalBtnContent = submitBtn.innerHTML;
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin text-xl"></i> OPTIMIZING PAYLOAD...';

        const formData = new FormData(e.target);
        const data = {
            template_code: formData.get('template_code'),
            template_name: formData.get('template_name'),
            notification_type: formData.get('notification_type'),
            channel: formData.get('channel'),
            title_template: formData.get('title_template'),
            message_template: formData.get('message_template'),
            priority: formData.get('priority'),
            is_active: formData.get('is_active') === 'true',
            variables: [] // Backend handles extraction usually
        };

        try {
            const response = await fetch('/api/notification/templates', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            const result = await response.json();
            if (result.success) {
                window.location.href = '/notification/templates';
            } else {
                alert('CRITICAL ERROR: ' + result.message);
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalBtnContent;
            }
        } catch (error) {
            alert('SYSTEM FAILURE: Connection lost.');
            submitBtn.disabled = false;
            submitBtn.innerHTML = originalBtnContent;
        }
    });
</script>