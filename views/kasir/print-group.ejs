<!-- Print Tagihan Kelompok -->
<div class="space-y-6">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-sm p-6 border-l-4 border-orange-500">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">
            <i class="fas fa-print text-orange-600 mr-2"></i>
            Print Tagihan Kelompok
        </h2>
        <p class="text-gray-600">Print tagihan berdasarkan kelompok ODC atau semua tagihan</p>
    </div>

    <!-- Print Options -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Print All -->
        <div class="bg-white rounded-xl shadow-sm p-6 border-l-4 border-green-500">
            <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center mr-4">
                    <i class="fas fa-file-invoice text-white text-xl"></i>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-900">Print Semua Tagihan</h3>
                    <p class="text-sm text-gray-600">Cetak semua tagihan pending</p>
                </div>
            </div>
            
            <div class="space-y-3">
                <a href="/kasir/print-all?format=thermal" target="_blank"
                   class="block w-full px-4 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition text-center font-semibold">
                    <i class="fas fa-print mr-2"></i>Print Thermal (58mm)
                </a>
                <a href="/kasir/print-all?format=a4" target="_blank"
                   class="block w-full px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition text-center font-semibold">
                    <i class="fas fa-file-pdf mr-2"></i>Print A4
                </a>
            </div>
        </div>

        <!-- Print by ODC -->
        <div class="bg-white rounded-xl shadow-sm p-6 border-l-4 border-orange-500">
            <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center mr-4">
                    <i class="fas fa-network-wired text-white text-xl"></i>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-900">Print by ODC</h3>
                    <p class="text-sm text-gray-600">Cetak berdasarkan area ODC</p>
                </div>
            </div>
            
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    Pilih ODC:
                </label>
                <select id="odcSelect" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500">
                    <option value="">-- Pilih ODC --</option>
                    <% if (odcList && odcList.length > 0) { %>
                        <% odcList.forEach(odc => { %>
                            <option value="<%= odc.id %>"><%= odc.name %></option>
                        <% }); %>
                    <% } else { %>
                        <option value="">Tidak ada data ODC</option>
                    <% } %>
                </select>
            </div>
            
            <div class="space-y-3">
                <button id="btnPrintThermal"
                        class="block w-full px-4 py-3 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition text-center font-semibold">
                    <i class="fas fa-print mr-2"></i>Print Thermal (58mm)
                </button>
                <button id="btnPrintA4"
                        class="block w-full px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition text-center font-semibold">
                    <i class="fas fa-file-pdf mr-2"></i>Print A4
                </button>
            </div>
        </div>
    </div>

    <!-- Statistics -->
    <div class="bg-white rounded-xl shadow-sm p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
            <i class="fas fa-chart-bar text-orange-600 mr-2"></i>
            Statistik Tagihan
        </h3>
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="text-center p-4 bg-blue-50 rounded-lg">
                <div class="text-3xl font-bold text-blue-600"><%= stats.total || 0 %></div>
                <div class="text-sm text-gray-600 mt-1">Total Tagihan</div>
            </div>
            <div class="text-center p-4 bg-yellow-50 rounded-lg">
                <div class="text-3xl font-bold text-yellow-600"><%= stats.pending || 0 %></div>
                <div class="text-sm text-gray-600 mt-1">Pending</div>
            </div>
            <div class="text-center p-4 bg-red-50 rounded-lg">
                <div class="text-3xl font-bold text-red-600"><%= stats.overdue || 0 %></div>
                <div class="text-sm text-gray-600 mt-1">Overdue</div>
            </div>
            <div class="text-center p-4 bg-purple-50 rounded-lg">
                <div class="text-3xl font-bold text-purple-600">
                    Rp <%= new Intl.NumberFormat('id-ID').format(parseFloat(stats.total_amount) || 0) %>
                </div>
                <div class="text-sm text-gray-600 mt-1">Total Amount</div>
            </div>
        </div>
    </div>

    <!-- ODC List with Invoice Count -->
    <% if (odcList && odcList.length > 0) { %>
    <div class="bg-white rounded-xl shadow-sm p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
            <i class="fas fa-list text-orange-600 mr-2"></i>
            Daftar ODC
        </h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% odcList.forEach(odc => { %>
            <div class="border rounded-lg p-4 hover:shadow-md transition">
                <div class="flex items-center justify-between mb-3">
                    <div class="flex-1">
                        <div class="font-semibold text-gray-900"><%= odc.name %></div>
                        <div class="text-sm text-gray-600"><%= odc.location || 'No location' %></div>
                        <div class="mt-2 flex items-center space-x-3 text-xs">
                            <span class="inline-flex items-center px-2 py-1 bg-blue-100 text-blue-800 rounded">
                                <i class="fas fa-users mr-1"></i><%= odc.customer_count || 0 %> Customer
                            </span>
                            <% if (odc.pending_invoice_count > 0) { %>
                                <span class="inline-flex items-center px-2 py-1 bg-red-100 text-red-800 rounded">
                                    <i class="fas fa-file-invoice mr-1"></i><%= odc.pending_invoice_count %> Tagihan
                                </span>
                            <% } else { %>
                                <span class="inline-flex items-center px-2 py-1 bg-green-100 text-green-800 rounded">
                                    <i class="fas fa-check mr-1"></i>Lunas
                                </span>
                            <% } %>
                        </div>
                    </div>
                    <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center flex-shrink-0 ml-2">
                        <i class="fas fa-network-wired text-orange-600"></i>
                    </div>
                </div>
                <div class="flex gap-2 mt-4">
                    <a href="/kasir/print-odc/<%= odc.id %>?format=thermal" target="_blank"
                       class="flex-1 px-3 py-2 bg-orange-600 text-white rounded text-center text-sm hover:bg-orange-700 transition font-semibold">
                        <i class="fas fa-print"></i> Thermal
                    </a>
                    <a href="/kasir/print-odc/<%= odc.id %>?format=a4" target="_blank"
                       class="flex-1 px-3 py-2 bg-blue-600 text-white rounded text-center text-sm hover:bg-blue-700 transition font-semibold">
                        <i class="fas fa-file-pdf"></i> A4
                    </a>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
    <% } %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Print Thermal button
    const btnPrintThermal = document.getElementById('btnPrintThermal');
    if (btnPrintThermal) {
        btnPrintThermal.addEventListener('click', function() {
            printODC('thermal');
        });
    }
    
    // Print A4 button
    const btnPrintA4 = document.getElementById('btnPrintA4');
    if (btnPrintA4) {
        btnPrintA4.addEventListener('click', function() {
            printODC('a4');
        });
    }
});

function printODC(format) {
    const odcId = document.getElementById('odcSelect').value;
    
    if (!odcId) {
        alert('Silakan pilih ODC terlebih dahulu');
        return;
    }
    
    const url = `/kasir/print-odc/${odcId}?format=${format}`;
    window.open(url, '_blank');
}
</script>
