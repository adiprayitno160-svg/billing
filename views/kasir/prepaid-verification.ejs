<!-- Halaman Verifikasi Pembayaran Prepaid -->
<div class="max-w-7xl mx-auto space-y-6">
    <!-- Header -->
    <div class="bg-gradient-to-r from-purple-600 to-purple-700 rounded-2xl shadow-lg p-6 text-white">
        <div class="flex items-center justify-between">
            <div>
                <h2 class="text-3xl font-bold mb-2">
                    üí≥ Verifikasi Pembayaran Prepaid
                </h2>
                <p class="text-purple-100">Verifikasi dan aktivasi paket prepaid</p>
            </div>
            <div class="bg-white rounded-xl px-6 py-3 text-purple-700">
                <div class="text-sm font-semibold">Total Pending</div>
                <div class="text-2xl font-bold"><%= stats.total_pending || 0 %> transaksi</div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-purple-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Total Pending</p>
                    <p class="text-3xl font-bold text-gray-900"><%= stats.total_pending || 0 %></p>
                </div>
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-clock text-purple-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-blue-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Total Amount</p>
                    <p class="text-3xl font-bold text-gray-900">Rp <%= (stats.total_amount || 0).toLocaleString('id-ID') %></p>
                </div>
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-money-bill-wave text-blue-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-orange-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Overdue 24h</p>
                    <p class="text-3xl font-bold text-gray-900"><%= stats.overdue_24h || 0 %></p>
                </div>
                <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-exclamation-triangle text-orange-600 text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Payments Table -->
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-bold text-gray-900">
                <i class="fas fa-list mr-2 text-purple-600"></i>
                Daftar Pembayaran Pending
            </h3>
        </div>

        <% if (pendingPayments && pendingPayments.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">ID</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Customer</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Paket</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Jumlah</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Pending</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Bukti</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-700 uppercase">Aksi</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% pendingPayments.forEach(payment => { %>
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="font-bold text-gray-900">#<%= payment.id %></div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="font-semibold text-gray-900"><%= payment.customer_name %></div>
                                    <div class="text-sm text-gray-600"><%= payment.customer_phone %></div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="font-medium text-gray-900"><%= payment.package_name %></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="font-bold text-gray-900">Rp <%= (payment.amount || 0).toLocaleString('id-ID') %></div>
                                </td>
                                <td class="px-6 py-4">
                                    <% const hours = payment.hours_pending || 0; %>
                                    <% if (hours > 24) { %>
                                        <span class="px-3 py-1 bg-red-100 text-red-700 rounded-full text-xs font-bold">
                                            <%= Math.floor(hours / 24) %> hari
                                        </span>
                                    <% } else { %>
                                        <span class="px-3 py-1 bg-yellow-100 text-yellow-700 rounded-full text-xs font-bold">
                                            <%= hours %> jam
                                        </span>
                                    <% } %>
                                </td>
                                <td class="px-6 py-4">
                                    <% if (payment.payment_proof_url) { %>
                                        <button 
                                            onclick='viewProof("<%= payment.payment_proof_url %>")'
                                            class="px-3 py-1 bg-blue-100 text-blue-700 rounded-lg text-xs font-semibold hover:bg-blue-200"
                                        >
                                            <i class="fas fa-image mr-1"></i>Lihat
                                        </button>
                                    <% } else { %>
                                        <span class="text-gray-400 text-xs">-</span>
                                    <% } %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center">
                                    <div class="flex items-center justify-center space-x-2">
                                        <button 
                                            onclick='verifyPayment(<%= payment.id %>, "<%= payment.customer_name %>", <%= payment.amount %>)'
                                            class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 font-semibold text-sm"
                                        >
                                            <i class="fas fa-check mr-1"></i>Verify
                                        </button>
                                        <button 
                                            onclick='rejectPayment(<%= payment.id %>, "<%= payment.customer_name %>")'
                                            class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 font-semibold text-sm"
                                        >
                                            <i class="fas fa-times mr-1"></i>Tolak
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-16">
                <div class="inline-block w-20 h-20 bg-gray-100 rounded-2xl flex items-center justify-center mb-4">
                    <i class="fas fa-check-circle text-gray-400 text-3xl"></i>
                </div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">Tidak Ada Pembayaran Pending</h3>
                <p class="text-gray-600">Semua pembayaran sudah diverifikasi</p>
            </div>
        <% } %>
    </div>
</div>

<!-- Modal Verify -->
<div id="verifyModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl p-6 max-w-md w-full mx-4">
        <h3 class="text-xl font-bold text-gray-900 mb-4">
            <i class="fas fa-check-circle text-green-600 mr-2"></i>Verifikasi Pembayaran
        </h3>
        <div id="verifyModalContent"></div>
        <form id="verifyForm" onsubmit="submitVerify(event)">
            <input type="hidden" id="verifyTransactionId">
            <div class="mb-4">
                <label class="block text-sm font-semibold text-gray-700 mb-2">Catatan (opsional)</label>
                <textarea 
                    id="verifyNotes"
                    rows="3"
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-green-100 focus:border-green-500"
                    placeholder="Catatan verifikasi..."
                ></textarea>
            </div>
            <div class="flex space-x-3">
                <button 
                    type="submit"
                    class="flex-1 px-6 py-3 bg-green-600 text-white rounded-xl hover:bg-green-700 font-bold"
                >
                    <i class="fas fa-check mr-2"></i>Verifikasi
                </button>
                <button 
                    type="button"
                    onclick="closeVerifyModal()"
                    class="px-6 py-3 bg-gray-200 text-gray-700 rounded-xl hover:bg-gray-300 font-semibold"
                >
                    Batal
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Modal Reject -->
<div id="rejectModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl p-6 max-w-md w-full mx-4">
        <h3 class="text-xl font-bold text-gray-900 mb-4">
            <i class="fas fa-times-circle text-red-600 mr-2"></i>Tolak Pembayaran
        </h3>
        <div id="rejectModalContent"></div>
        <form id="rejectForm" onsubmit="submitReject(event)">
            <input type="hidden" id="rejectTransactionId">
            <div class="mb-4">
                <label class="block text-sm font-semibold text-gray-700 mb-2">Alasan Penolakan *</label>
                <textarea 
                    id="rejectReason"
                    rows="3"
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-red-100 focus:border-red-500"
                    placeholder="Masukkan alasan penolakan..."
                    required
                ></textarea>
            </div>
            <div class="flex space-x-3">
                <button 
                    type="submit"
                    class="flex-1 px-6 py-3 bg-red-600 text-white rounded-xl hover:bg-red-700 font-bold"
                >
                    <i class="fas fa-times mr-2"></i>Tolak
                </button>
                <button 
                    type="button"
                    onclick="closeRejectModal()"
                    class="px-6 py-3 bg-gray-200 text-gray-700 rounded-xl hover:bg-gray-300 font-semibold"
                >
                    Batal
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Modal Proof -->
<div id="proofModal" class="hidden fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl p-6 max-w-2xl w-full mx-4">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-xl font-bold text-gray-900">Bukti Pembayaran</h3>
            <button onclick="closeProofModal()" class="text-gray-500 hover:text-gray-700">
                <i class="fas fa-times text-2xl"></i>
            </button>
        </div>
        <div id="proofImageContainer" class="max-h-96 overflow-auto">
            <img id="proofImage" src="" alt="Bukti Pembayaran" class="w-full rounded-lg">
        </div>
    </div>
</div>

<script>
function verifyPayment(id, customerName, amount) {
    document.getElementById('verifyTransactionId').value = id;
    document.getElementById('verifyModalContent').innerHTML = `
        <div class="mb-4 p-4 bg-green-50 rounded-xl border-2 border-green-200">
            <div class="font-semibold text-gray-900">Customer: ${customerName}</div>
            <div class="text-sm text-gray-600">Jumlah: Rp ${amount.toLocaleString('id-ID')}</div>
        </div>
    `;
    document.getElementById('verifyNotes').value = '';
    document.getElementById('verifyModal').classList.remove('hidden');
}

function closeVerifyModal() {
    document.getElementById('verifyModal').classList.add('hidden');
}

function submitVerify(e) {
    e.preventDefault();
    const transactionId = document.getElementById('verifyTransactionId').value;
    const notes = document.getElementById('verifyNotes').value;
    
    fetch(`/kasir/prepaid-verification/verify/${transactionId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ notes })
    })
    .then(res => res.json())
    .then(data => {
        if (data.success) {
            alert('‚úÖ ' + data.message);
            location.reload();
        } else {
            alert('‚ùå ' + (data.error || 'Gagal memverifikasi pembayaran'));
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('‚ùå Terjadi kesalahan');
    });
}

function rejectPayment(id, customerName) {
    document.getElementById('rejectTransactionId').value = id;
    document.getElementById('rejectModalContent').innerHTML = `
        <div class="mb-4 p-4 bg-red-50 rounded-xl border-2 border-red-200">
            <div class="font-semibold text-gray-900">Customer: ${customerName}</div>
        </div>
    `;
    document.getElementById('rejectReason').value = '';
    document.getElementById('rejectModal').classList.remove('hidden');
}

function closeRejectModal() {
    document.getElementById('rejectModal').classList.add('hidden');
}

function submitReject(e) {
    e.preventDefault();
    const transactionId = document.getElementById('rejectTransactionId').value;
    const reason = document.getElementById('rejectReason').value;
    
    if (!reason.trim()) {
        alert('‚ùå Alasan penolakan harus diisi');
        return;
    }
    
    fetch(`/kasir/prepaid-verification/reject/${transactionId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ reason })
    })
    .then(res => res.json())
    .then(data => {
        if (data.success) {
            alert('‚úÖ ' + data.message);
            location.reload();
        } else {
            alert('‚ùå ' + (data.error || 'Gagal menolak pembayaran'));
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('‚ùå Terjadi kesalahan');
    });
}

function viewProof(url) {
    document.getElementById('proofImage').src = url;
    document.getElementById('proofModal').classList.remove('hidden');
}

function closeProofModal() {
    document.getElementById('proofModal').classList.add('hidden');
}

// Close modals on outside click
document.getElementById('verifyModal')?.addEventListener('click', function(e) {
    if (e.target === this) closeVerifyModal();
});
document.getElementById('rejectModal')?.addEventListener('click', function(e) {
    if (e.target === this) closeRejectModal();
});
document.getElementById('proofModal')?.addEventListener('click', function(e) {
    if (e.target === this) closeProofModal();
});
</script>



