<!-- Halaman Laporan Kasir -->
<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Laporan</h1>
            <p class="text-gray-600">Laporan transaksi dan kinerja kasir</p>
        </div>
        <div class="mt-4 sm:mt-0">
            <button onclick="exportReport()" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg flex items-center transition duration-200">
                <i class="fas fa-download mr-2"></i>
                Export Laporan
            </button>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="bg-white rounded-xl shadow-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
            <i class="fas fa-filter mr-2 text-blue-600"></i>Filter Laporan
        </h3>
        <form method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Periode</label>
                <select 
                    name="type" 
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                >
                    <option value="daily" <%= type === 'daily' ? 'selected' : '' %>>Harian</option>
                    <option value="weekly" <%= type === 'weekly' ? 'selected' : '' %>>Mingguan</option>
                    <option value="monthly" <%= type === 'monthly' ? 'selected' : '' %>>Bulanan</option>
                    <option value="custom" <%= type === 'custom' ? 'selected' : '' %>>Kustom</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Tanggal Mulai</label>
                <input 
                    type="date" 
                    name="startDate" 
                    value="<%= startDate || '' %>"
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                >
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Tanggal Akhir</label>
                <input 
                    type="date" 
                    name="endDate" 
                    value="<%= endDate || '' %>"
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                >
            </div>
            <div class="flex items-end">
                <button 
                    type="submit" 
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition duration-200"
                >
                    <i class="fas fa-search mr-2"></i>Filter
                </button>
            </div>
        </form>
    </div>

    <!-- Summary Cards -->
    <% 
    const summary = reports && reports.summary ? reports.summary : {};
    const totalTransactions = summary.total_transactions || 0;
    const totalRevenue = summary.total_revenue || 0;
    const avgPerTransaction = totalTransactions > 0 ? (totalRevenue / totalTransactions) : 0;
    const daysCount = summary.days_count || 1;
    const avgPerDay = daysCount > 0 ? (totalTransactions / daysCount) : 0;
    %>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-blue-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Total Transaksi</p>
                    <p class="text-3xl font-bold text-gray-900"><%= totalTransactions %></p>
                </div>
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-receipt text-blue-600 text-xl"></i>
                </div>
            </div>
            <div class="mt-4 flex items-center text-sm text-gray-600">
                <i class="fas fa-calendar mr-1"></i>
                <span><%= daysCount %> hari periode</span>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-green-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Total Pendapatan</p>
                    <p class="text-3xl font-bold text-gray-900">Rp <%= new Intl.NumberFormat('id-ID').format(totalRevenue) %></p>
                </div>
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-money-bill-wave text-green-600 text-xl"></i>
                </div>
            </div>
            <div class="mt-4 flex items-center text-sm text-gray-600">
                <i class="fas fa-chart-line mr-1"></i>
                <span>Periode terpilih</span>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-yellow-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Rata-rata per Transaksi</p>
                    <p class="text-3xl font-bold text-gray-900">Rp <%= new Intl.NumberFormat('id-ID').format(avgPerTransaction) %></p>
                </div>
                <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-calculator text-yellow-600 text-xl"></i>
                </div>
            </div>
            <div class="mt-4 flex items-center text-sm text-gray-600">
                <i class="fas fa-equals mr-1"></i>
                <span>Average value</span>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-purple-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Rata-rata per Hari</p>
                    <p class="text-3xl font-bold text-gray-900"><%= avgPerDay.toFixed(1) %></p>
                </div>
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-chart-line text-purple-600 text-xl"></i>
                </div>
            </div>
            <div class="mt-4 flex items-center text-sm text-gray-600">
                <i class="fas fa-calendar-day mr-1"></i>
                <span>Transaksi/hari</span>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Revenue Chart -->
        <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-chart-line mr-2 text-blue-600"></i>Grafik Pendapatan
            </h3>
            <div class="h-64 flex items-center justify-center bg-gray-50 rounded-lg">
                <div class="text-center">
                    <i class="fas fa-chart-line text-4xl text-gray-400 mb-2"></i>
                    <p class="text-gray-600">Grafik pendapatan akan ditampilkan di sini</p>
                </div>
            </div>
        </div>

        <!-- Payment Methods Chart -->
        <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-chart-pie mr-2 text-blue-600"></i>Metode Pembayaran
            </h3>
            <% 
            const cashTotal = summary.cash_total || 0;
            const transferTotal = summary.transfer_total || 0;
            const gatewayTotal = summary.gateway_total || 0;
            const totalPayments = cashTotal + transferTotal + gatewayTotal;
            const cashPercent = totalPayments > 0 ? ((cashTotal / totalPayments) * 100).toFixed(1) : 0;
            const transferPercent = totalPayments > 0 ? ((transferTotal / totalPayments) * 100).toFixed(1) : 0;
            const gatewayPercent = totalPayments > 0 ? ((gatewayTotal / totalPayments) * 100).toFixed(1) : 0;
            %>
            <div class="space-y-4">
                <% if (cashTotal > 0) { %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <div class="flex items-center">
                        <div class="w-4 h-4 bg-green-500 rounded-full mr-3"></div>
                        <span class="font-medium">Tunai</span>
                    </div>
                    <div class="text-right">
                        <div class="font-semibold">Rp <%= new Intl.NumberFormat('id-ID').format(cashTotal) %></div>
                        <div class="text-sm text-gray-600"><%= cashPercent %>%</div>
                    </div>
                </div>
                <% } %>
                <% if (transferTotal > 0) { %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <div class="flex items-center">
                        <div class="w-4 h-4 bg-blue-500 rounded-full mr-3"></div>
                        <span class="font-medium">Transfer Bank</span>
                    </div>
                    <div class="text-right">
                        <div class="font-semibold">Rp <%= new Intl.NumberFormat('id-ID').format(transferTotal) %></div>
                        <div class="text-sm text-gray-600"><%= transferPercent %>%</div>
                    </div>
                </div>
                <% } %>
                <% if (gatewayTotal > 0) { %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <div class="flex items-center">
                        <div class="w-4 h-4 bg-purple-500 rounded-full mr-3"></div>
                        <span class="font-medium">Payment Gateway</span>
                    </div>
                    <div class="text-right">
                        <div class="font-semibold">Rp <%= new Intl.NumberFormat('id-ID').format(gatewayTotal) %></div>
                        <div class="text-sm text-gray-600"><%= gatewayPercent %>%</div>
                    </div>
                </div>
                <% } %>
                <% if (totalPayments === 0) { %>
                <div class="text-center py-8 text-gray-500">
                    <i class="fas fa-inbox text-4xl mb-2"></i>
                    <p>Belum ada transaksi pada periode ini</p>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Detailed Report Table -->
    <div class="bg-white rounded-xl shadow-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
            <i class="fas fa-table mr-2 text-blue-600"></i>Laporan Detail per Hari
        </h3>
        <div class="overflow-x-auto">
            <% if (reports && reports.details && reports.details.length > 0) { %>
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tanggal</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Transaksi</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tunai</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Transfer</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Gateway</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% reports.details.forEach(function(detail) { 
                        const detailDate = new Date(detail.date);
                        const dateStr = detailDate.toLocaleDateString('id-ID', { day: '2-digit', month: 'short', year: 'numeric' });
                    %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= dateStr %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                <%= detail.transactions %>
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">Rp <%= new Intl.NumberFormat('id-ID').format(detail.cash || 0) %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">Rp <%= new Intl.NumberFormat('id-ID').format(detail.transfer || 0) %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">Rp <%= new Intl.NumberFormat('id-ID').format(detail.gateway || 0) %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">Rp <%= new Intl.NumberFormat('id-ID').format(detail.revenue || 0) %></td>
                    </tr>
                    <% }); %>
                </tbody>
                <tfoot class="bg-gray-50">
                    <tr>
                        <td class="px-6 py-4 text-sm font-bold text-gray-900">TOTAL</td>
                        <td class="px-6 py-4 text-sm font-bold text-gray-900 text-center">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-200 text-blue-900">
                                <%= totalTransactions %>
                            </span>
                        </td>
                        <td class="px-6 py-4 text-sm font-bold text-gray-900">Rp <%= new Intl.NumberFormat('id-ID').format(cashTotal) %></td>
                        <td class="px-6 py-4 text-sm font-bold text-gray-900">Rp <%= new Intl.NumberFormat('id-ID').format(transferTotal) %></td>
                        <td class="px-6 py-4 text-sm font-bold text-gray-900">Rp <%= new Intl.NumberFormat('id-ID').format(gatewayTotal) %></td>
                        <td class="px-6 py-4 text-sm font-bold text-gray-900">Rp <%= new Intl.NumberFormat('id-ID').format(totalRevenue) %></td>
                    </tr>
                </tfoot>
            </table>
            <% } else { %>
            <div class="text-center py-12">
                <i class="fas fa-inbox text-5xl text-gray-300 mb-4"></i>
                <p class="text-gray-600 text-lg">Tidak ada transaksi pada periode ini</p>
                <p class="text-gray-500 text-sm mt-2">Silakan pilih periode yang berbeda atau tunggu ada transaksi baru</p>
            </div>
            <% } %>
        </div>
    </div>

    <!-- Quick Info -->
    <div class="bg-gradient-to-r from-blue-500 to-indigo-600 rounded-xl shadow-lg p-6 text-white">
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-lg font-semibold mb-2">
                    <i class="fas fa-info-circle mr-2"></i>Informasi Laporan
                </h3>
                <p class="text-sm opacity-90">
                    Periode: <strong><%= reports && reports.startDate ? new Date(reports.startDate).toLocaleDateString('id-ID') : '-' %></strong> 
                    s/d 
                    <strong><%= reports && reports.endDate ? new Date(reports.endDate).toLocaleDateString('id-ID') : '-' %></strong>
                </p>
                <p class="text-sm opacity-90 mt-1">
                    Laporan ini menampilkan seluruh transaksi pembayaran yang diproses oleh kasir
                </p>
            </div>
            <div class="text-right">
                <div class="text-3xl font-bold"><%= daysCount %></div>
                <div class="text-sm opacity-90">Hari</div>
            </div>
        </div>
    </div>
</div>

<script>
    function exportReport() {
        // Get current filter parameters
        const urlParams = new URLSearchParams(window.location.search);
        const startDate = urlParams.get('startDate') || '';
        const endDate = urlParams.get('endDate') || '';
        const type = urlParams.get('type') || 'daily';
        
        // Build export URL with current filters
        let exportUrl = '/kasir/reports/export?type=' + type;
        if (startDate) exportUrl += '&startDate=' + startDate;
        if (endDate) exportUrl += '&endDate=' + endDate;
        
        // Trigger download
        window.location.href = exportUrl;
    }

    // Auto-submit form when period type changes to custom
    document.querySelector('select[name="type"]').addEventListener('change', function() {
        if (this.value === 'custom') {
            // Show date inputs
            document.querySelector('input[name="startDate"]').style.display = 'block';
            document.querySelector('input[name="endDate"]').style.display = 'block';
        } else {
            // Hide date inputs for predefined periods
            document.querySelector('input[name="startDate"]').style.display = 'none';
            document.querySelector('input[name="endDate"]').style.display = 'none';
        }
    });
</script>