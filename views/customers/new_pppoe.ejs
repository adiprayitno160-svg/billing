                                                <option value="">-- Pilih Paket Internet --</option>
                                                <% (packages || []).forEach(function(pkg){ %>
                                                    <option value="<%= pkg.id %>">
                                                        <%= pkg.name %> — Rp <%= pkg.price.toLocaleString('id-ID') %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>

