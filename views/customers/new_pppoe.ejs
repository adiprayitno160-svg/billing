<div class="space-y-6">
    <!-- Header with clean breadcrumb look -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 pb-2">
        <div class="flex items-center gap-4">
            <div
                class="w-12 h-12 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg shadow-blue-200 text-white shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                </svg>
            </div>
            <div>
                <h2 class="text-2xl font-bold text-slate-900 tracking-tight">Pelanggan Baru PPPoE</h2>
                <div class="flex items-center gap-2 text-sm text-slate-500 font-medium">
                    <span>Pelanggan</span>
                    <span class="text-slate-300">•</span>
                    <span class="text-blue-600">Buat Baru</span>
                </div>
            </div>
        </div>
        <a href="/customers/list"
            class="px-5 py-2.5 bg-white border border-slate-200 text-slate-600 rounded-xl hover:bg-slate-50 hover:text-blue-600 hover:border-blue-200 transition-all font-semibold text-sm shadow-sm flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18">
                </path>
            </svg>
            Kembali
        </a>
    </div>

    <!-- Feedback Messages -->
    <% if (typeof error !=='undefined' && error) { %>
        <div
            class="p-4 bg-red-50 border border-red-200 rounded-xl flex items-start gap-3 shadow-sm animate-fade-in relative z-10">
            <div class="shrink-0 w-6 h-6 bg-red-100 text-red-600 rounded-full flex items-center justify-center mt-0.5">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                    </path>
                </svg>
            </div>
            <div>
                <h4 class="text-red-800 font-bold text-sm">Gagal Menyimpan</h4>
                <p class="text-red-600 text-sm mt-0.5">
                    <%= error %>
                </p>
            </div>
        </div>
        <% } %>

            <% if (typeof success !=='undefined' && success) { %>
                <div
                    class="p-4 bg-green-50 border border-green-200 rounded-xl flex items-start gap-3 shadow-sm animate-fade-in relative z-10">
                    <div
                        class="shrink-0 w-6 h-6 bg-green-100 text-green-600 rounded-full flex items-center justify-center mt-0.5">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7">
                            </path>
                        </svg>
                    </div>
                    <div>
                        <h4 class="text-green-800 font-bold text-sm">Berhasil</h4>
                        <p class="text-green-600 text-sm mt-0.5">Pelanggan PPPOE berhasil dibuat!</p>
                    </div>
                </div>
                <% } %>

                    <form method="post" action="/customers/new-pppoe" id="pppoe-form" onsubmit="return validateForm()">
                        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">

                            <!-- LEFT COLUMN: Identity & Settings (7) -->
                            <div class="lg:col-span-7 space-y-6">

                                <!-- CARD 1: Identity -->
                                <div
                                    class="bg-white rounded-3xl shadow-sm border border-slate-200 overflow-hidden group hover:shadow-md transition-shadow">
                                    <div
                                        class="px-6 py-4 bg-slate-50 border-b border-slate-100 flex items-center gap-3">
                                        <div
                                            class="w-8 h-8 rounded-lg bg-indigo-100 text-indigo-600 flex items-center justify-center">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z">
                                                </path>
                                            </svg>
                                        </div>
                                        <h3 class="font-bold text-slate-800 text-sm uppercase tracking-wide">Identitas
                                            Pelanggan</h3>
                                    </div>
                                    <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-5">
                                        <!-- ID (Readonly) -->
                                        <div class="md:col-span-2 relative">
                                            <label
                                                class="block text-[11px] font-bold text-slate-400 uppercase tracking-wider mb-1">ID
                                                Pelanggan</label>
                                            <div
                                                class="flex items-center bg-slate-50 border border-slate-200 rounded-xl px-4 py-2.5">
                                                <span class="text-slate-400 mr-2 font-mono">#</span>
                                                <input name="customer_code" readonly
                                                    value="<%= typeof initial_customer_code !== 'undefined' ? initial_customer_code : '' %>"
                                                    class="bg-transparent border-none p-0 w-full text-sm font-mono text-slate-500 focus:ring-0 cursor-default" />
                                            </div>
                                        </div>

                                        <!-- Nama -->
                                        <div class="md:col-span-1">
                                            <label
                                                class="block text-[11px] font-bold text-slate-500 uppercase tracking-wider mb-1.5 ml-1">Nama
                                                Lengkap <span class="text-red-500">*</span></label>
                                            <input name="client_name" required placeholder="Nama Pelanggan"
                                                class="w-full rounded-xl border-slate-200 px-4 py-2.5 text-sm font-semibold text-slate-700 focus:border-indigo-500 focus:ring-4 focus:ring-indigo-50/50 transition-all placeholder:text-slate-300" />
                                        </div>

                                        <!-- Phone -->
                                        <div class="md:col-span-1">
                                            <label
                                                class="block text-[11px] font-bold text-slate-500 uppercase tracking-wider mb-1.5 ml-1">WhatsApp
                                                / Telepon</label>
                                            <div class="relative">
                                                <span
                                                    class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 text-sm font-bold">+62</span>
                                                <input name="phone_number" placeholder="812xxx" type="tel"
                                                    class="w-full rounded-xl border-slate-200 pl-12 pr-4 py-2.5 text-sm font-mono font-semibold text-slate-700 focus:border-green-500 focus:ring-4 focus:ring-green-50/50 transition-all placeholder:text-slate-300" />
                                            </div>
                                        </div>

                                        <!-- Alamat -->
                                        <div class="md:col-span-2">
                                            <label
                                                class="block text-[11px] font-bold text-slate-500 uppercase tracking-wider mb-1.5 ml-1">Alamat
                                                Pemasangan</label>
                                            <textarea name="address" placeholder="Alamat lengkap..." rows="2"
                                                class="w-full rounded-xl border-slate-200 px-4 py-3 text-sm text-slate-600 focus:border-indigo-500 focus:ring-4 focus:ring-indigo-50/50 transition-all resize-none"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <!-- CARD 2: PPPoE Configuration -->
                                <div
                                    class="bg-white rounded-3xl shadow-sm border border-slate-200 overflow-hidden group hover:shadow-md transition-shadow">
                                    <div
                                        class="px-6 py-4 bg-slate-50 border-b border-slate-100 flex items-center gap-3">
                                        <div
                                            class="w-8 h-8 rounded-lg bg-blue-100 text-blue-600 flex items-center justify-center">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                            </svg>
                                        </div>
                                        <h3 class="font-bold text-slate-800 text-sm uppercase tracking-wide">Konfigurasi
                                            PPPoE</h3>
                                    </div>
                                    <div class="p-6 space-y-5">
                                        <!-- Username/Pass Row -->
