                        <i class="fas fa-users"></i>
                    </div>
                    <div>
                        <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">Total</p>
                        <p class="text-xl font-black text-slate-800 tracking-tight">
                            <%= totalVal %>
                        </p>
                    </div>
                </div>
