        return;
    }
    
    if (!fileInput.files || fileInput.files.length === 0) {
        alert('❌ Silakan pilih file Excel terlebih dahulu!');
        return;
    }
    
    const file = fileInput.files[0];
    
    // Validate file type
    if (!file.name.endsWith('.xlsx') && !file.name.endsWith('.xls')) {
        alert('❌ File harus berformat .xlsx atau .xls');
        return;
    }
    
    // Validate file size
    if (file.size > 10 * 1024 * 1024) {
        alert('❌ File terlalu besar! Maksimal 10 MB');
        return;
    }
    
    // Create FormData
    const formData = new FormData();
    formData.append('excelFile', file);
    
    // Disable button
    if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Mengimport...';
    }
    
    // Send request
    
    fetch('/customers/import', {
        method: 'POST',
        body: formData,
        credentials: 'same-origin'
    })
    .then(async response => {
        let data;
        try {
            const text = await response.text();
            console.log('Raw response:', text);
            data = JSON.parse(text);
        } catch (e) {
            if (submitBtn) {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Import Data';
            }
            alert('❌ ERROR: Response tidak valid!\n\nStatus: ' + response.status + '\n\nCoba lagi!');
            return null;
        }
        
        // Reset button ALWAYS
        if (submitBtn) {
            submitBtn.disabled = false;
            submitBtn.textContent = 'Import Data';
        }
        
        if (!response.ok) {
            alert('❌ SERVER ERROR!\n\n' + (data.error || 'HTTP ' + response.status));
            return null;
        }
        
        return data;
    })
    .then(data => {
        if (!data) {
            console.error('No data received');
            return;
        }
        
        console.log('Import result:', data);
        
        if (data.success) {
            let message = '✅ HASIL IMPORT\n\n';
