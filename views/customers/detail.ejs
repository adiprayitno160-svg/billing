<div class="space-y-8">
	<!-- Header Section -->
	<div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
		<div class="flex items-center gap-3">
			<div class="p-3 bg-indigo-600 shadow-lg shadow-indigo-200 rounded-2xl text-white">
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
						d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
				</svg>
			</div>
			<div>
				<h1 class="text-2xl font-bold text-slate-800">
					<%= customer.name %>
				</h1>
				<div class="flex items-center gap-2 text-sm font-medium text-slate-500">
					<span>
						<%= customer.customer_code || '-' %>
					</span>
					<span>‚Ä¢</span>
					<span class="<%= customer.status === 'active' ? 'text-green-600' : 'text-red-600' %>">
						<%= customer.status==='active' ? 'Active' : 'Isolated' %>
					</span>
					<% if (customer.connection_type==='pppoe' ) { %>
						<span>‚Ä¢</span>
						<a href="/pppoe/activation?search=<%= customer.customer_code %>"
							class="px-2 py-0.5 rounded-lg text-[10px] font-bold uppercase tracking-wider <%= customer.pppoe_username ? 'bg-blue-100 text-blue-700' : 'bg-slate-100 text-slate-700' %>">
							PPPoE: <%= customer.pppoe_username ? 'Activated' : 'Wait for Activation' %> ‚ö°
						</a>
						<% } %>
				</div>
			</div>
		</div>
		<div class="flex items-center gap-3">
			<a href="/customers/list"
				class="px-5 py-2.5 border border-slate-200 text-slate-600 rounded-xl hover:bg-slate-50 hover:text-indigo-600 transition-all font-bold text-sm">
				‚Üê Kembali
			</a>
			<a href="/customers/<%= customer.id %>/edit"
				class="px-6 py-2.5 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 shadow-lg shadow-indigo-200 transition-all font-bold text-sm flex items-center gap-2">
				<span>‚úèÔ∏è</span> Edit Data
			</a>
		</div>
	</div>

	<div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
		<!-- Main Content (Left 8) -->
		<div class="lg:col-span-8 space-y-8">

			<!-- Bandwidth Usage Card -->
			<div
				class="rounded-3xl border border-slate-200 bg-white shadow-sm overflow-hidden transition-all duration-300 hover:shadow-md">
				<div class="px-6 py-4 bg-slate-50/50 border-b border-slate-100 flex items-center justify-between">
					<div class="flex items-center gap-3">
						<div class="w-8 h-8 rounded-xl bg-blue-100 text-blue-600 flex items-center justify-center">
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
									d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z">
								</path>
							</svg>
						</div>
						<h3 class="font-bold text-slate-800 text-sm">Traffic Usage (12 Jam)</h3>
					</div>
					<button id="refreshTrafficBtn" onclick="loadBandwidthData()"
						class="text-xs px-3 py-1.5 bg-blue-50 text-blue-600 rounded-lg hover:bg-blue-100 font-bold transition-colors">
						üîÑ Refresh
					</button>
				</div>
				<div class="p-6">
					<div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-6">
						<div class="p-4 rounded-2xl bg-slate-50 border border-slate-100">
							<p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">Avg Download
							</p>
							<p class="text-lg font-black text-blue-600"><span id="avgDownload">0</span> <span
									class="text-xs font-normal text-slate-500">Mbps</span></p>
						</div>
						<div class="p-4 rounded-2xl bg-slate-50 border border-slate-100">
							<p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">Avg Upload
							</p>
							<p class="text-lg font-black text-green-600"><span id="avgUpload">0</span> <span
									class="text-xs font-normal text-slate-500">Mbps</span></p>
						</div>
						<div class="p-4 rounded-2xl bg-slate-50 border border-slate-100">
							<p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">Total
								Download</p>
							<p class="text-lg font-black text-purple-600" id="totalDownload">0 B</p>
						</div>
						<div class="p-4 rounded-2xl bg-slate-50 border border-slate-100">
							<p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">Total Upload
							</p>
							<p class="text-lg font-black text-orange-600" id="totalUpload">0 B</p>
						</div>
					</div>
					<div class="relative h-[250px] w-full">
						<canvas id="usageChart"></canvas>
						<div id="usageLoader"
							class="absolute inset-0 flex items-center justify-center bg-white/80 backdrop-blur-sm rounded-xl z-10 transition-opacity duration-300">
							<div class="flex flex-col items-center">
								<div
									class="w-8 h-8 border-4 border-blue-100 border-t-blue-600 rounded-full animate-spin mb-3">
								</div>
								<span class="text-xs font-bold text-slate-400 uppercase tracking-widest">Memuat
									Statistik...</span>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Connection & Specs -->
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				<!-- Specs -->
				<div
					class="rounded-3xl border border-slate-200 bg-white shadow-sm overflow-hidden transition-all duration-300 hover:shadow-md">
					<div class="px-6 py-4 bg-slate-50/50 border-b border-slate-100 flex items-center gap-3">
						<div class="w-8 h-8 rounded-xl bg-purple-100 text-purple-600 flex items-center justify-center">
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
									d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z">
								</path>
							</svg>
						</div>
						<h3 class="font-bold text-slate-800 text-sm">Spesifikasi Layanan</h3>
					</div>
					<div class="p-6 space-y-4">
						<div class="flex justify-between items-center pb-3 border-b border-slate-50">
							<span class="text-xs font-bold text-slate-400 uppercase tracking-widest">Type</span>
							<span
								class="px-3 py-1 rounded-full text-xs font-black uppercase tracking-wider <%= customer.connection_type === 'pppoe' ? 'bg-blue-100 text-blue-700' : 'bg-green-100 text-green-700' %>">
								<%= customer.connection_type==='pppoe' ? 'PPPoE' : 'Static IP' %>
							</span>
						</div>
						<% if (customer.connection_type==='pppoe' ) { %>
							<div class="flex justify-between items-center pb-3 border-b border-slate-50">
								<span class="text-xs font-bold text-slate-400 uppercase tracking-widest">Username</span>
								<span class="font-bold text-slate-700 font-mono">
									<%= customer.pppoe_username || '-' %>
								</span>
							</div>
							<div class="flex justify-between items-center pb-3 border-b border-slate-50">
								<span class="text-xs font-bold text-slate-400 uppercase tracking-widest">Password</span>
								<span class="font-bold text-slate-700 font-mono">
									<%= customer.pppoe_password || '12345' %>
								</span>
							</div>
							<div class="flex justify-between items-center pb-3 border-b border-slate-50">
								<span class="text-xs font-bold text-slate-400 uppercase tracking-widest">Profile</span>
								<span class="font-bold text-slate-700">
									<%= customer.pppoe_profile_id || '-' %>
								</span>
							</div>
							<% } else { %>
								<div class="flex justify-between items-center pb-3 border-b border-slate-50">
									<span class="text-xs font-bold text-slate-400 uppercase tracking-widest">IP
										Addr</span>
									<span class="font-bold text-slate-700 font-mono">
										<%= customer.static_ip_address || '-' %>
									</span>
								</div>
								<div class="flex justify-between items-center pb-3 border-b border-slate-50">
									<span
										class="text-xs font-bold text-slate-400 uppercase tracking-widest">Interface</span>
									<span class="font-bold text-slate-700 font-mono">
										<%= customer.static_ip_interface || '-' %>
									</span>
								</div>
								<% } %>
									<div class="flex justify-between items-center pt-2">
										<span
											class="text-xs font-bold text-slate-400 uppercase tracking-widest">Paket</span>
										<% let pkgName='-' ; let pkgPrice=0; if(customer.connection_type==='pppoe' &&
											customer.pppoe_package) { pkgName=customer.pppoe_package.name;
											pkgPrice=customer.pppoe_package.price; } else
											if(customer.connection_type==='static_ip' && customer.static_ip_package) {
											pkgName=customer.static_ip_package.package_name ||
											customer.static_ip_package.name; pkgPrice=customer.static_ip_package.price;
											} %>
											<div class="text-right">
												<div class="font-bold text-slate-800">
													<%= pkgName %>
												</div>
												<div class="text-[10px] text-slate-500 font-mono">Rp <%=
														parseFloat(pkgPrice || 0).toLocaleString('id-ID') %>
												</div>
											</div>
									</div>
					</div>
				</div>

				<!-- Device Status (GenieACS) -->
				<% if (typeof deviceDetails !=='undefined' && deviceDetails) { %>
					<div
						class="rounded-3xl border border-slate-200 bg-white shadow-sm overflow-hidden transition-all duration-300 hover:shadow-md">
						<div
							class="px-6 py-4 bg-slate-50/50 border-b border-slate-100 flex items-center justify-between">
							<div class="flex items-center gap-3">
								<div
									class="w-8 h-8 rounded-xl bg-cyan-100 text-cyan-600 flex items-center justify-center">
									<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
											d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z">
										</path>
									</svg>
								</div>
								<h3 class="font-bold text-slate-800 text-sm">ONT / Modem</h3>
							</div>
							<div
								class="flex items-center gap-1.5 px-2 py-1 rounded-lg text-[10px] font-black uppercase tracking-wider <%= deviceDetails.online ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
								<div
									class="w-2 h-2 rounded-full <%= deviceDetails.online ? 'bg-green-500' : 'bg-red-500' %> animate-pulse">
								</div>
								<%= deviceDetails.online ? 'Online' : 'Offline' %>
							</div>
						</div>
						<div class="p-6 space-y-4">
							<div class="grid grid-cols-2 gap-4">
								<!-- Signal -->
								<div class="p-3 bg-slate-50 rounded-xl border border-slate-100">
									<span
										class="block text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">Signal
										(RX)</span>
									<span
										class="font-bold <%= parseFloat(deviceDetails.signal.rxPower) < -27 ? 'text-red-500' : 'text-slate-800' %>">
										<%= deviceDetails.signal.rxPower %> dBm
									</span>
								</div>
								<!-- Temp -->
								<div class="p-3 bg-slate-50 rounded-xl border border-slate-100">
									<span
										class="block text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">Temp</span>
									<span class="font-bold text-slate-800">
										<%= deviceDetails.signal.temperature %> ¬∞C
									</span>
								</div>
							</div>

							<div
								class="p-3 bg-slate-50 rounded-xl border border-slate-100 flex items-center justify-between">
								<span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">WiFi
									Clients</span>
								<span class="font-black text-cyan-600">
									<%= deviceDetails.signal.wifiClients %> Connected
								</span>
							</div>

							<div class="flex gap-2 pt-2">
								<button onclick="refreshONT('<%= deviceDetails.id %>')"
									class="flex-1 py-2 text-xs font-bold text-cyan-700 bg-cyan-50 rounded-xl hover:bg-cyan-100 transition-colors">Refresh</button>
								<button onclick="rebootONT('<%= deviceDetails.id %>')"
									class="flex-1 py-2 text-xs font-bold text-red-700 bg-red-50 rounded-xl hover:bg-red-100 transition-colors">Reboot</button>
							</div>
						</div>
					</div>
					<% } %>
			</div>

			<!-- Invoices -->
			<% if (typeof invoices !=='undefined' && invoices && invoices.length> 0) { %>
				<div
					class="rounded-3xl border border-slate-200 bg-white shadow-sm overflow-hidden transition-all duration-300 hover:shadow-md">
					<div class="px-6 py-4 bg-slate-50/50 border-b border-slate-100 flex items-center gap-3">
						<div class="w-8 h-8 rounded-xl bg-amber-100 text-amber-600 flex items-center justify-center">
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
									d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01">
								</path>
							</svg>
						</div>
						<h3 class="font-bold text-slate-800 text-sm">Riwayat Tagihan</h3>
					</div>
					<div class="overflow-x-auto">
						<table class="w-full text-sm text-left">
							<thead class="bg-slate-50 text-slate-500 font-bold uppercase text-[10px] tracking-wider">
								<tr>
									<th class="px-6 py-3">Invoice</th>
									<th class="px-6 py-3">Periode</th>
									<th class="px-6 py-3">Total</th>
									<th class="px-6 py-3">Status</th>
									<th class="px-6 py-3">Tgl</th>
								</tr>
							</thead>
							<tbody class="divide-y divide-slate-100">
								<% invoices.forEach(invoice=> { %>
									<tr class="hover:bg-slate-50/50 transition-colors">
										<td class="px-6 py-4 font-mono font-medium text-slate-700">#<%=
												invoice.invoice_number %>
										</td>
										<td class="px-6 py-4 text-slate-600">
											<%= invoice.period %>
										</td>
										<td class="px-6 py-4 font-bold text-slate-800">Rp <%=
												parseFloat(invoice.total_amount).toLocaleString('id-ID') %>
										</td>
										<td class="px-6 py-4">
											<span
												class="inline-flex items-center px-2 py-0.5 rounded text-[10px] font-bold uppercase tracking-wide
                                        <%= invoice.status === 'paid' ? 'bg-green-100 text-green-700' : 
                                           invoice.status === 'overdue' ? 'bg-red-100 text-red-700' : 'bg-amber-100 text-amber-700' %>">
												<%= invoice.status %>
											</span>
										</td>
										<td class="px-6 py-4 text-slate-500 text-xs">
											<%= new Date(invoice.created_at).toLocaleDateString('id-ID') %>
										</td>
									</tr>
									<% }) %>
							</tbody>
						</table>
					</div>
				</div>
				<% } %>

					<!-- Technician Jobs (New) -->
					<% if (typeof technicianJobs !=='undefined' && technicianJobs && technicianJobs.length> 0) { %>
						<div
							class="rounded-3xl border border-slate-200 bg-white shadow-sm overflow-hidden transition-all duration-300 hover:shadow-md">
							<div class="px-6 py-4 bg-slate-50/50 border-b border-slate-100 flex items-center gap-3">
								<div
									class="w-8 h-8 rounded-xl bg-orange-100 text-orange-600 flex items-center justify-center">
									<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
											d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
											d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
									</svg>
								</div>
								<h3 class="font-bold text-slate-800 text-sm">Riwayat Pekerjaan Teknisi</h3>
							</div>
							<div class="overflow-x-auto">
								<table class="w-full text-sm text-left">
									<thead
										class="bg-slate-50 text-slate-500 font-bold uppercase text-[10px] tracking-wider">
										<tr>
											<th class="px-6 py-3">Pekerjaan</th>
											<th class="px-6 py-3">Teknisi</th>
											<th class="px-6 py-3">Status</th>
											<th class="px-6 py-3">Bukti</th>
											<th class="px-6 py-3">Tgl</th>
										</tr>
									</thead>
									<tbody class="divide-y divide-slate-100">
										<% technicianJobs.forEach(job=> { %>
											<tr class="hover:bg-slate-50/50 transition-colors">
												<td class="px-6 py-4 font-medium text-slate-700">
													<%= job.title %>
														<% if (job.job_type) { %>
															<span class="block text-[10px] text-slate-500 uppercase">
																<%= job.job_type %>
															</span>
															<% } %>
												</td>
												<td class="px-6 py-4 text-slate-600">
													<%= job.technician_name || '-' %>
												</td>
												<td class="px-6 py-4">
													<span
														class="inline-flex items-center px-2 py-0.5 rounded text-[10px] font-bold uppercase tracking-wide
                                                <%= job.status === 'completed' ? 'bg-green-100 text-green-700' : 
                                                   job.status === 'pending' ? 'bg-amber-100 text-amber-700' : 'bg-slate-100 text-slate-700' %>">
														<%= job.status==='completed' ? 'Selesai' : job.status %>
													</span>
												</td>
												<td class="px-6 py-4">
													<% if (job.completion_proof) { %>
														<a href="<%= job.completion_proof %>" target="_blank"
															class="text-blue-600 hover:text-blue-800 font-bold text-xs flex items-center gap-1">
															üì∏ Lihat Foto
														</a>
														<% } else { %>
															<span class="text-slate-400 text-xs">-</span>
															<% } %>
												</td>
												<td class="px-6 py-4 text-slate-500 text-xs">
													<%= new Date(job.created_at).toLocaleDateString('id-ID') %>
												</td>
											</tr>
											<% }) %>
									</tbody>
								</table>
							</div>
						</div>
						<% } %>

							<!-- Compensation History -->
							<% if (typeof compensations !=='undefined' && compensations && compensations.length> 0) { %>
								<div
									class="rounded-3xl border border-slate-200 bg-white shadow-sm overflow-hidden transition-all duration-300 hover:shadow-md mt-8">
									<div
										class="px-6 py-4 bg-slate-50/50 border-b border-slate-100 flex items-center gap-3">
										<div
											class="w-8 h-8 rounded-xl bg-indigo-100 text-indigo-600 flex items-center justify-center">
											<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
													d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
											</svg>
										</div>
										<h3 class="font-bold text-slate-800 text-sm">Riwayat Restitusi / Kompensasi</h3>
									</div>
									<div class="overflow-x-auto">
										<table class="w-full text-sm text-left">
											<thead
												class="bg-slate-50 text-slate-500 font-bold uppercase text-[10px] tracking-wider">
												<tr>
													<th class="px-6 py-3">Tanggal</th>
													<th class="px-6 py-3">Durasi</th>
													<th class="px-6 py-3">Kompensasi</th>
													<th class="px-6 py-3">Status</th>
													<th class="px-6 py-3">Keterangan</th>
												</tr>
											</thead>
											<tbody class="divide-y divide-slate-100">
												<% compensations.forEach(comp=> { %>
													<tr class="hover:bg-slate-50/50 transition-colors">
