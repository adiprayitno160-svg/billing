<%- contentFor('body') %>

    <!-- GenieACS Dashboard -->
    <div class="space-y-6">
        <!-- Header -->
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">GenieACS Dashboard</h1>
                <p class="text-gray-600 mt-1">Manajemen perangkat TR-069 (ONT, Router, CPE)</p>
            </div>
            <div class="flex gap-3">
                <button onclick="testConnection()"
                    class="px-4 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition font-semibold">
                    <i class="fas fa-plug mr-2"></i>Test Koneksi
                </button>
                <a href="/genieacs/devices"
                    class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-semibold">
                    <i class="fas fa-list mr-2"></i>Lihat Devices
                </a>
            </div>
        </div>

        <!-- Connection Status -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6">
            <div class="flex items-center gap-4">
                <% if (connectionStatus.success) { %>
                    <div class="w-16 h-16 bg-green-100 rounded-xl flex items-center justify-center">
                        <i class="fas fa-check-circle text-3xl text-green-600"></i>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-green-700">Terhubung ke GenieACS</h3>
                        <p class="text-gray-600">Server: <%= config.host %>:<%= config.port %>
                        </p>
                    </div>
                    <% } else { %>
                        <div class="w-16 h-16 bg-red-100 rounded-xl flex items-center justify-center">
                            <i class="fas fa-times-circle text-3xl text-red-600"></i>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold text-red-700">Tidak Terhubung</h3>
                            <p class="text-gray-600">
                                <%= connectionStatus.message %>
                            </p>
                        </div>
                        <% } %>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Total Devices -->
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 hover:shadow-xl transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wide">Total Devices</p>
                        <p class="text-3xl font-bold text-gray-900 mt-2">
                            <%= stats.totalDevices %>
                        </p>
                    </div>
                    <div
                        class="w-14 h-14 bg-gradient-to-br from-blue-400 to-blue-600 rounded-xl flex items-center justify-center shadow-lg">
                        <i class="fas fa-network-wired text-white text-xl"></i>
                    </div>
                </div>
            </div>

            <!-- Online Devices -->
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 hover:shadow-xl transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wide">Online</p>
                        <p class="text-3xl font-bold text-green-600 mt-2">
                            <%= stats.onlineDevices %>
                        </p>
                    </div>
                    <div
                        class="w-14 h-14 bg-gradient-to-br from-green-400 to-green-600 rounded-xl flex items-center justify-center shadow-lg">
                        <i class="fas fa-signal text-white text-xl"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                        <div class="h-full bg-green-500 rounded-full"
                            style="width: <%= stats.totalDevices > 0 ? (stats.onlineDevices / stats.totalDevices * 100) : 0 %>%">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Offline Devices -->
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 hover:shadow-xl transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wide">Offline</p>
                        <p class="text-3xl font-bold text-red-600 mt-2">
                            <%= stats.offlineDevices %>
                        </p>
                    </div>
                    <div
                        class="w-14 h-14 bg-gradient-to-br from-red-400 to-red-600 rounded-xl flex items-center justify-center shadow-lg">
                        <i class="fas fa-exclamation-triangle text-white text-xl"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                        <div class="h-full bg-red-500 rounded-full"
                            style="width: <%= stats.totalDevices > 0 ? (stats.offlineDevices / stats.totalDevices * 100) : 0 %>%">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Faults -->
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 hover:shadow-xl transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wide">Recent Faults</p>
                        <p class="text-3xl font-bold text-orange-600 mt-2">
                            <%= stats.recentFaults %>
                        </p>
                    </div>
                    <div
                        class="w-14 h-14 bg-gradient-to-br from-orange-400 to-orange-600 rounded-xl flex items-center justify-center shadow-lg">
                        <i class="fas fa-bug text-white text-xl"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-bolt text-blue-600 mr-2"></i>Aksi Cepat
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <a href="/genieacs/devices"
                    class="flex items-center p-4 bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl hover:from-blue-100 hover:to-blue-200 transition group">
                    <div
                        class="w-12 h-12 bg-blue-600 rounded-xl flex items-center justify-center mr-4 group-hover:scale-110 transition-transform">
                        <i class="fas fa-list text-white"></i>
                    </div>
                    <div>
                        <p class="font-semibold text-gray-900">Daftar Devices</p>
                        <p class="text-sm text-gray-600">Lihat semua perangkat</p>
                    </div>
                </a>
                <a href="http://<%= config.host %>:3000" target="_blank"
                    class="flex items-center p-4 bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl hover:from-purple-100 hover:to-purple-200 transition group">
                    <div
                        class="w-12 h-12 bg-purple-600 rounded-xl flex items-center justify-center mr-4 group-hover:scale-110 transition-transform">
                        <i class="fas fa-external-link-alt text-white"></i>
                    </div>
                    <div>
                        <p class="font-semibold text-gray-900">GenieACS UI</p>
                        <p class="text-sm text-gray-600">Buka tampilan asli</p>
                    </div>
                </a>
                <a href="#" onclick="refreshAllDevices()"
                    class="flex items-center p-4 bg-gradient-to-br from-green-50 to-green-100 rounded-xl hover:from-green-100 hover:to-green-200 transition group cursor-pointer">
                    <div
                        class="w-12 h-12 bg-green-600 rounded-xl flex items-center justify-center mr-4 group-hover:scale-110 transition-transform">
                        <i class="fas fa-sync-alt text-white"></i>
                    </div>
                    <div>
                        <p class="font-semibold text-gray-900">Refresh Data</p>
                        <p class="text-sm text-gray-600">Perbarui status devices</p>
                    </div>
                </a>
            </div>
        </div>

        <!-- Info Section -->
        <div class="bg-gradient-to-br from-blue-600 to-indigo-700 rounded-xl shadow-lg p-6 text-white">
            <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center flex-shrink-0">
                    <i class="fas fa-info-circle text-2xl"></i>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-2">Tentang GenieACS</h3>
                    <p class="text-blue-100 text-sm leading-relaxed">
                        GenieACS adalah Auto Configuration Server (ACS) open-source untuk protokol TR-069.
                        Digunakan untuk mengelola perangkat CPE seperti ONT, router, dan modem secara remote.
                        Anda dapat melakukan provisioning, monitoring, dan troubleshooting perangkat dari dashboard ini.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        async function testConnection() {
            try {
                const response = await fetch('/genieacs/api/test-connection');
                const data = await response.json();

                if (data.success) {
                    alert('✅ Koneksi ke GenieACS berhasil!');
                    location.reload();
                } else {
                    alert('❌ Koneksi gagal: ' + data.message);
                }
            } catch (error) {
                alert('❌ Error: ' + error.message);
            }
        }

        function refreshAllDevices() {
            alert('Fitur refresh semua devices akan segera tersedia');
        }
    </script>