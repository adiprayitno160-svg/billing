<%- contentFor('body') %>

    <div class="space-y-6">
        <!-- Header -->
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div>
                <div class="flex items-center gap-2 text-sm text-gray-500 mb-1">
                    <a href="/genieacs/devices" class="hover:text-blue-600">Devices</a>
                    <i class="fas fa-chevron-right text-xs"></i>
                    <span class="text-gray-900 font-medium">Detail Device</span>
                </div>
                <h1 class="text-2xl font-bold text-gray-900 flex items-center gap-2">
                    <%= deviceInfo.serialNumber %>
                        <% if (deviceInfo.online) { %>
                            <span
                                class="px-2 py-0.5 rounded-full bg-green-100 text-green-700 text-xs font-medium border border-green-200">Online</span>
                            <% } else { %>
                                <span
                                    class="px-2 py-0.5 rounded-full bg-red-100 text-red-700 text-xs font-medium border border-red-200">Offline</span>
                                <% } %>
                </h1>
            </div>
            <div class="flex gap-2">
                <form action="/genieacs/devices/<%= encodeURIComponent(device._id) %>/refresh" method="POST"
                    class="inline">
                    <button type="submit"
                        class="px-4 py-2 bg-white border border-gray-300 shadow-sm text-gray-700 rounded-lg hover:bg-gray-50 font-medium transition">
                        <i class="fas fa-sync-alt mr-2 text-blue-500"></i>Refresh
                    </button>
                </form>
                <form action="/genieacs/devices/<%= encodeURIComponent(device._id) %>/reboot" method="POST"
                    class="inline" onsubmit="return confirm('Reboot device ini?');">
                    <button type="submit"
                        class="px-4 py-2 bg-red-50 border border-red-200 text-red-700 rounded-lg hover:bg-red-100 font-medium transition">
                        <i class="fas fa-power-off mr-2"></i>Reboot
                    </button>
                </form>
            </div>
        </div>

        <!-- Navigation Tabs -->
        <div class="border-b border-gray-200">
            <nav class="-mb-px flex space-x-8" aria-label="Tabs">
                <button onclick="switchTab('overview')" id="tab-overview"
                    class="tab-btn w-1/3 py-4 px-1 text-center border-b-2 font-medium text-sm border-blue-500 text-blue-600">
                    <i class="fas fa-chart-pie mr-2"></i>Overview
                </button>
                <button onclick="switchTab('config')" id="tab-config"
                    class="tab-btn w-1/3 py-4 px-1 text-center border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300">
                    <i class="fas fa-sliders-h mr-2"></i>Configuration
                </button>
                <button onclick="switchTab('system')" id="tab-system"
                    class="tab-btn w-1/3 py-4 px-1 text-center border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300">
                    <i class="fas fa-hdd mr-2"></i>System & Logs
                </button>
            </nav>
        </div>

        <!-- Tab Contents -->

        <!-- 1. OVERVIEW TAB -->
        <div id="content-overview" class="tab-content space-y-6">
            <!-- Key Metrics Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <!-- Signal RX -->
                <div class="bg-white p-4 rounded-xl border border-gray-100 shadow-sm">
                    <div class="text-sm text-gray-500 mb-1">Optical RX Power</div>
                    <div
                        class="text-xl font-bold <%= (parseFloat(signalInfo.rxPower) > -27 && parseFloat(signalInfo.rxPower) < -10) ? 'text-green-600' : 'text-red-600' %>">
                        <%= signalInfo.rxPower %> <span class="text-sm font-normal text-gray-400">dBm</span>
                    </div>
                </div>
                <!-- Signal TX -->
                <div class="bg-white p-4 rounded-xl border border-gray-100 shadow-sm">
                    <div class="text-sm text-gray-500 mb-1">Optical TX Power</div>
                    <div class="text-xl font-bold text-gray-800">
                        <%= signalInfo.txPower %> <span class="text-sm font-normal text-gray-400">dBm</span>
                    </div>
                </div>
                <!-- Temperature -->
                <div class="bg-white p-4 rounded-xl border border-gray-100 shadow-sm">
                    <div class="text-sm text-gray-500 mb-1">Temperature</div>
                    <div class="text-xl font-bold text-gray-800">
                        <%= signalInfo.temperature %> <span class="text-sm font-normal text-gray-400">Â°C</span>
                    </div>
                </div>
                <!-- WiFi Clients -->
                <div class="bg-white p-4 rounded-xl border border-gray-100 shadow-sm">
                    <div class="text-sm text-gray-500 mb-1">Active WiFi Clients</div>
                    <div class="text-xl font-bold text-blue-600">
                        <%= signalInfo.wifiClients %>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Device Info Card -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4 border-b pb-2">Information</h3>
                    <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
                        <div class="sm:col-span-1">
                            <dt class="text-sm font-medium text-gray-500">Manufacturer</dt>
                            <dd class="mt-1 text-sm text-gray-900">
                                <%= deviceInfo.manufacturer %>
                            </dd>
                        </div>
                        <div class="sm:col-span-1">
                            <dt class="text-sm font-medium text-gray-500">Product Class</dt>
                            <dd class="mt-1 text-sm text-gray-900">
                                <%= deviceInfo.productClass %>
                            </dd>
                        </div>
                        <div class="sm:col-span-1">
                            <dt class="text-sm font-medium text-gray-500">Hardware Version</dt>
                            <dd class="mt-1 text-sm text-gray-900">
                                <%= deviceInfo.hardwareVersion %>
                            </dd>
                        </div>
                        <div class="sm:col-span-1">
                            <dt class="text-sm font-medium text-gray-500">Software Version</dt>
                            <dd class="mt-1 text-sm text-gray-900">
                                <%= deviceInfo.softwareVersion %>
                            </dd>
                        </div>
                        <div class="sm:col-span-2">
                            <dt class="text-sm font-medium text-gray-500">Uptime</dt>
                            <dd class="mt-1 text-sm text-gray-900">
                                <%= Math.floor(deviceInfo.uptime / 3600) %> jam <%= Math.floor((deviceInfo.uptime %
                                        3600) / 60) %> menit
                            </dd>
                        </div>
                    </dl>
                </div>

                <!-- Customer Assignment Card -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4 border-b pb-2">
                        <i class="fas fa-user-tag mr-2 text-blue-500"></i>Customer Assignment
                    </h3>
                    <div class="space-y-4">
                        <!-- Connection Info -->
                        <div class="flex justify-between items-center">
                            <span class="text-gray-500">WAN Status</span>
                            <span class="font-medium text-green-600">
                                <%= wanStatus.status %>
                            </span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-gray-500">Mode</span>
                            <span class="font-medium">
                                <%= wanStatus.mode %> (VLAN <%= wanStatus.vlan %>)
                            </span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-gray-500">IP Address</span>
                            <span class="font-medium font-mono">
                                <%= wanStatus.ip %>
                            </span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-gray-500">SSID</span>
                            <span class="font-medium text-blue-600">
                                <i class="fas fa-wifi mr-1 text-xs"></i>
                                <%= wifiSettings.ssid %>
                            </span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-gray-500">WiFi Password</span>
                            <span class="font-medium font-mono text-green-600">
                                <i class="fas fa-key mr-1 text-xs"></i>
                                <%= wifiSettings.password %>
                            </span>
                        </div>

                        <!-- Customer Selector -->
                        <div class="mt-4 pt-4 border-t border-gray-100">
                            <% if (customer) { %>
                                <!-- Customer Already Linked -->
                                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                                    <div class="flex items-center justify-between mb-2">
                                        <div class="flex items-center gap-3">
                                            <div
                                                class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600">
                                                <i class="fas fa-user"></i>
                                            </div>
                                            <div>
                                                <p class="text-sm font-bold text-gray-900">
                                                    <%= customer.name %>
                                                </p>
                                                <p class="text-xs text-gray-500">
                                                    <%= customer.phone || '-' %> | <%= customer.address || '-' %>
                                                </p>
                                            </div>
                                        </div>
                                        <button type="button" onclick="unlinkCustomer()"
                                            class="px-3 py-1 text-xs bg-red-100 text-red-700 rounded hover:bg-red-200 transition">
                                            <i class="fas fa-unlink mr-1"></i>Unlink
                                        </button>
                                    </div>
                                    <a href="/customers/<%= customer.id %>"
                                        class="text-xs text-blue-600 hover:underline">
                                        <i class="fas fa-arrow-right mr-1"></i>Lihat Detail Customer
                                    </a>
                                </div>
                                <% } else { %>
                                    <!-- No Customer Linked -->
                                    <form method="POST"
                                        action="/genieacs/devices/<%= encodeURIComponent(device._id) %>/assign-customer"
                                        id="assignCustomerForm">
                                        <div class="space-y-3">
                                            <label class="block text-sm font-medium text-gray-700">
                                                <i class="fas fa-user-plus mr-1 text-blue-500"></i>Link to Customer
                                            </label>
                                            <select name="customer_id" required
                                                class="w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500">
                                                <option value="">-- Pilih Customer --</option>
                                                <% if (typeof allCustomers !=='undefined' && allCustomers) { %>
                                                    <% allCustomers.forEach(function(cust) { %>
                                                        <option value="<%= cust.id %>">
                                                            <%= cust.name %>
                                                                <% if (cust.customer_code) { %>(<%= cust.customer_code
                                                                        %>)<% } %>
                                                        </option>
                                                        <% }); %>
                                                            <% } %>
                                            </select>
                                            <p class="text-xs text-gray-500">
                                                <i class="fas fa-info-circle mr-1"></i>Serial Number: <span
                                                    class="font-mono font-bold text-blue-600">
                                                    <%= deviceInfo.serialNumber %>
                                                </span>
                                            </p>
                                            <button type="submit"
                                                class="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow transition">
                                                <i class="fas fa-link mr-2"></i>Linkkan ke Customer
                                            </button>
                                        </div>
                                    </form>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 2. CONFIGURATION TAB -->
        <div id="content-config" class="tab-content space-y-6 hidden">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

                <!-- WAN Configuration Form -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                    <div class="flex items-center justify-between mb-4 border-b pb-2">
                        <h3 class="text-lg font-bold text-gray-900"><i
                                class="fas fa-network-wired mr-2 text-blue-500"></i>WAN Configuration</h3>
                        <span class="text-xs font-mono bg-gray-100 px-2 py-1 rounded">Current: <%= wanStatus.mode %>
                        </span>
                    </div>

                    <form action="/genieacs/devices/<%= encodeURIComponent(device._id) %>/configure-wan" method="POST">
                        <div class="space-y-4">
                            <!-- Mode Selection -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Connection Mode</label>
                                <select name="wanMode" id="wanMode" onchange="toggleWanFields()"
                                    class="w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500">
                                    <option value="pppoe" <%=wanStatus.mode==='PPPoE' ? 'selected' : '' %>>PPPoE (Route)
                                    </option>
                                    <option value="bridge" <%=wanStatus.mode==='Bridge' ? 'selected' : '' %>>Bridge
                                    </option>
                                    <option value="static" <%=wanStatus.mode==='Static IP' ? 'selected' : '' %>>Static
                                        IP</option>
                                    <option value="dhcp" <%=wanStatus.mode==='DHCP' ? 'selected' : '' %>>DHCP (Dynamic
                                        IP)</option>
                                </select>
                            </div>

                            <!-- Common: VLAN -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">VLAN ID</label>
                                <input type="number" name="vlanId" required min="1" max="4094"
                                    value="<%= wanStatus.vlan !== '-' ? wanStatus.vlan : '' %>"
                                    class="w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500"
                                    placeholder="e.g. 100">
                            </div>

                            <!-- PPPoE Fields -->
                            <div id="field-pppoe" class="bg-gray-50 p-3 rounded-lg border border-gray-200 space-y-3">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">PPP Username</label>
                                    <input type="text" name="pppUsername"
                                        value="<%= wanStatus.username !== '-' ? wanStatus.username : '' %>"
                                        class="w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">PPP Password</label>
                                    <input type="password" name="pppPassword"
                                        class="w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500">
                                </div>
                            </div>

                            <!-- Static IP Fields -->
                            <div id="field-static"
                                class="bg-gray-50 p-3 rounded-lg border border-gray-200 space-y-3 hidden">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">IP Address</label>
                                    <input type="text" name="ipAddress" placeholder="192.168.1.200"
                                        class="w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Subnet Mask</label>
                                    <input type="text" name="subnetMask" placeholder="255.255.255.0"
                                        class="w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Gateway</label>
                                    <input type="text" name="gateway" placeholder="192.168.1.1"
                                        class="w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">DNS Servers</label>
                                    <input type="text" name="dnsServers" placeholder="8.8.8.8, 8.8.4.4"
                                        class="w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500">
                                </div>
                            </div>

                            <!-- Enable Checkbox -->
                            <div class="flex items-center">
                                <input type="checkbox" name="enableConnection" id="enableConnection" checked
                                    class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                <label for="enableConnection" class="ml-2 block text-sm text-gray-900">
                                    Enable This Connection
                                </label>
                            </div>

                            <button type="submit"
                                class="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow transition">
                                Apply Configuration
                            </button>
                        </div>
                    </form>
                </div>

                <!-- WiFi Configuration -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 h-fit">
                    <h3 class="text-lg font-bold text-gray-900 mb-4 border-b pb-2"><i
                            class="fas fa-wifi mr-2 text-blue-500"></i>WiFi Settings</h3>

                    <!-- Current WiFi Info Display -->
                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
                        <h4 class="text-sm font-semibold text-blue-800 mb-2"><i
                                class="fas fa-info-circle mr-1"></i>Current WiFi Credentials:</h4>
                        <div class="grid grid-cols-2 gap-2 text-sm">
                            <div>
                                <span class="text-gray-500">SSID:</span>
                                <span class="font-bold text-blue-700 ml-1">
                                    <%= wifiSettings.ssid || '-' %>
                                </span>
                            </div>
                            <div>
                                <span class="text-gray-500">Password:</span>
                                <span class="font-bold text-blue-700 font-mono ml-1">
                                    <%= wifiSettings.password || '-' %>
                                </span>
                            </div>
                        </div>
                    </div>

                    <form action="/genieacs/devices/<%= encodeURIComponent(device._id) %>/change-wifi" method="POST">
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">SSID (Name)</label>
                                <input type="text" name="ssid" value="<%= wifiSettings.ssid %>" required
                                    class="w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                                <input type="text" name="password" value="<%= wifiSettings.password %>" required
                                    minlength="8"
                                    class="w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500"
                                    placeholder="<%= wifiSettings.password !== '-' ? wifiSettings.password : 'Masukkan password baru' %>">
                            </div>
                            <div class="bg-yellow-50 text-yellow-800 p-3 rounded-lg text-sm">
                                <i class="fas fa-info-circle mr-1"></i> Changing WiFi settings may disconnect devices
                                temporarily.
                            </div>
                            <button type="submit"
                                class="w-full py-2 px-4 bg-gray-800 hover:bg-gray-900 text-white font-semibold rounded-lg shadow transition">
                                Update WiFi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- 3. SYSTEM TAB -->
        <div id="content-system" class="tab-content space-y-6 hidden">
            <!-- Tasks List -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-bold text-gray-900">Recent Tasks</h3>
                </div>
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left">
                        <thead class="bg-gray-50 text-gray-500 font-medium">
                            <tr>
                                <th class="px-6 py-3">Task Name</th>
                                <th class="px-6 py-3">Status</th>
                                <th class="px-6 py-3">Timestamp</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
                            <% if (tasks.length===0) { %>
                                <tr>
                                    <td colspan="3" class="px-6 py-4 text-center text-gray-500">No active tasks</td>
                                </tr>
                                <% } else { %>
                                    <% tasks.forEach(task=> { %>
                                        <tr>
                                            <td class="px-6 py-3 text-gray-900 font-medium">
                                                <%= task.name %>
                                            </td>
                                            <td class="px-6 py-3">
                                                <span
                                                    class="px-2 py-1 rounded-full text-xs font-semibold 
                                            <%= task.status === 'fault' ? 'bg-red-100 text-red-700' : 'bg-gray-100 text-gray-600' %>">
                                                    <%= task.status %>
                                                </span>
                                            </td>
                                            <td class="px-6 py-3 text-gray-500">
                                                <%= new Date(task.timestamp).toLocaleString() %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Raw Params Preview (Optional, helpful for debug) -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <h3 class="text-lg font-bold text-gray-900 mb-2">Debug Info</h3>
                <pre
                    class="bg-gray-900 text-green-400 p-4 rounded-lg text-xs overflow-x-auto"><%= JSON.stringify(wanStatus, null, 2) %></pre>
            </div>
        </div>

    </div>

    <script>
        function switchTab(tabId) {
            // Buttons
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('border-blue-500', 'text-blue-600');
                btn.classList.add('border-transparent', 'text-gray-500');
            });
            document.getElementById('tab-' + tabId).classList.add('border-blue-500', 'text-blue-600');
            document.getElementById('tab-' + tabId).classList.remove('border-transparent', 'text-gray-500');

            // Content
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.add('hidden');
            });
            document.getElementById('content-' + tabId).classList.remove('hidden');
        }

        function toggleWanFields() {
            const mode = document.getElementById('wanMode').value;
            const pppoe = document.getElementById('field-pppoe');
            const staticIp = document.getElementById('field-static');

            if (mode === 'pppoe') {
                pppoe.classList.remove('hidden');
                staticIp.classList.add('hidden');
            } else if (mode === 'static') {
                pppoe.classList.add('hidden');
                staticIp.classList.remove('hidden');
            } else {
                pppoe.classList.add('hidden');
                staticIp.classList.add('hidden');
            }
        }

        // Initialize fields
        toggleWanFields();

        // Unlink customer function
        function unlinkCustomer() {
            if (!confirm('Yakin ingin memutus link customer dari ONT ini?')) {
                return;
            }

            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/genieacs/devices/<%= encodeURIComponent(device._id) %>/unlink-customer';
            document.body.appendChild(form);
            form.submit();
        }
    </script>