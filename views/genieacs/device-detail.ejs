<%- contentFor('body') %>

    <!-- Device Detail -->
    <div class="space-y-6">
        <!-- Header -->
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Detail Device</h1>
                <p class="text-gray-600 mt-1">Serial: <%= deviceInfo.serialNumber %>
                </p>
            </div>
            <div class="flex gap-3">
                <a href="/genieacs/devices"
                    class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition font-semibold">
                    <i class="fas fa-arrow-left mr-2"></i>Kembali
                </a>
                <form action="/genieacs/devices/<%= encodeURIComponent(device._id) %>/refresh" method="POST"
                    style="display:inline;">
                    <button type="submit"
                        class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition font-semibold">
                        <i class="fas fa-sync-alt mr-2"></i>Refresh
                    </button>
                </form>
                <form action="/genieacs/devices/<%= encodeURIComponent(device._id) %>/reboot" method="POST"
                    style="display:inline;" onsubmit="return confirm('Yakin ingin mereboot device ini?')">
                    <button type="submit"
                        class="px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition font-semibold">
                        <i class="fas fa-power-off mr-2"></i>Reboot
                    </button>
                </form>
            </div>
        </div>

        <!-- Status Card -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6">
            <div class="flex items-center gap-4">
                <% if (deviceInfo.isOnline) { %>
                    <div class="w-16 h-16 bg-green-100 rounded-xl flex items-center justify-center">
                        <i class="fas fa-check-circle text-3xl text-green-600"></i>
                    </div>
                    <div>
                        <span
                            class="inline-flex items-center gap-2 px-4 py-2 bg-green-100 text-green-700 rounded-full text-lg font-semibold">
                            <span class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></span>
                            Online
                        </span>
                        <p class="text-gray-600 mt-1">Device sedang aktif dan terhubung</p>
                    </div>
                    <% } else { %>
                        <div class="w-16 h-16 bg-red-100 rounded-xl flex items-center justify-center">
                            <i class="fas fa-times-circle text-3xl text-red-600"></i>
                        </div>
                        <div>
                            <span
                                class="inline-flex items-center gap-2 px-4 py-2 bg-red-100 text-red-700 rounded-full text-lg font-semibold">
                                <span class="w-3 h-3 bg-red-500 rounded-full"></span>
                                Offline
                            </span>
                            <p class="text-gray-600 mt-1">Device tidak aktif atau tidak dapat dihubungi</p>
                        </div>
                        <% } %>
            </div>
        </div>

        <!-- 2 Column Layout: Customer+WiFi (Left) | Signal (Right) -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- LEFT COLUMN: Customer Info + WiFi Settings -->
            <div class="lg:col-span-1 space-y-6">
                <!-- Customer Info (if exists) -->
                <% if (customer) { %>
                    <div
                        class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl shadow-lg border border-blue-100 p-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                            <i class="fas fa-user-circle text-blue-600"></i>
                            Info Pelanggan
                        </h3>
                        <div class="space-y-4">
                            <div class="flex items-center gap-3">
                                <div
                                    class="w-12 h-12 bg-blue-600 rounded-xl flex items-center justify-center flex-shrink-0">
                                    <i class="fas fa-user text-white"></i>
                                </div>
                                <div class="min-w-0 flex-1">
                                    <p class="text-xs text-gray-500">Nama</p>
                                    <p class="font-semibold text-gray-900 truncate">
                                        <%= customer.name %>
                                    </p>
                                </div>
                            </div>
                            <div class="flex items-center gap-3">
                                <div
                                    class="w-12 h-12 bg-green-600 rounded-xl flex items-center justify-center flex-shrink-0">
                                    <i class="fas fa-phone text-white"></i>
                                </div>
                                <div class="min-w-0 flex-1">
                                    <p class="text-xs text-gray-500">Telepon</p>
                                    <p class="font-semibold text-gray-900">
                                        <%= customer.phone %>
                                    </p>
                                </div>
                            </div>
                            <div class="flex items-center gap-3">
                                <div
                                    class="w-12 h-12 bg-purple-600 rounded-xl flex items-center justify-center flex-shrink-0">
                                    <i class="fas fa-map-marker-alt text-white"></i>
                                </div>
                                <div class="min-w-0 flex-1">
                                    <p class="text-xs text-gray-500">Alamat</p>
                                    <p class="font-semibold text-gray-900 text-sm line-clamp-2">
                                        <%= customer.address || '-' %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>

                        <!-- WiFi Settings -->
                        <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                                <i class="fas fa-wifi text-indigo-600"></i>
                                WiFi Settings
                            </h3>

                            <!-- Current WiFi Info -->
                            <% if (typeof wifiSettings !=='undefined' && (wifiSettings.ssid !=='-' ||
                                wifiSettings.password !=='-' )) { %>
                                <div class="mb-6 p-4 bg-indigo-50 rounded-lg border border-indigo-100">
                                    <h4 class="text-xs font-bold text-indigo-500 uppercase tracking-wider mb-2">Saat Ini
                                    </h4>
                                    <div class="space-y-2 text-sm">
                                        <div class="flex justify-between items-center border-b border-indigo-100 pb-2">
                                            <span class="text-gray-600 flex items-center gap-2"><i
                                                    class="fas fa-broadcast-tower text-indigo-400"></i> SSID</span>
                                            <span
                                                class="font-mono font-bold text-gray-900 bg-white px-2 py-1 rounded border border-indigo-100">
                                                <%= wifiSettings.ssid %>
                                            </span>
                                        </div>
                                        <div class="flex justify-between items-center pt-1">
                                            <span class="text-gray-600 flex items-center gap-2"><i
                                                    class="fas fa-key text-indigo-400"></i> Password</span>
                                            <div class="flex items-center gap-2">
                                                <span
                                                    class="font-mono font-bold text-gray-900 bg-white px-2 py-1 rounded border border-indigo-100">
                                                    <%= wifiSettings.password %>
                                                </span>
                                                <button type="button"
                                                    onclick="navigator.clipboard.writeText('<%= wifiSettings.password %>')"
                                                    class="text-indigo-400 hover:text-indigo-600" title="Copy">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                    <form action="/genieacs/devices/<%= encodeURIComponent(device._id) %>/change-wifi"
                                        method="POST"
                                        onsubmit="return confirm('Yakin ingin mengubah kredensial WiFi?')">

                                        <div class="border-t border-gray-100 my-4"></div>
                                        <h4 class="text-sm font-bold text-gray-700 mb-3 flex items-center gap-2">
                                            <i class="fas fa-edit text-indigo-500"></i> Ganti Password Baru
                                        </h4>

                                        <div class="space-y-4">
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                                    <i class="fas fa-network-wired mr-1"></i> SSID Baru
                                                </label>
                                                <input type="text" name="ssid" required
                                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                                                    placeholder="Nama WiFi">
                                            </div>
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                                    <i class="fas fa-key mr-1"></i> Password Baru
                                                </label>
                                                <input type="text" name="password" required minlength="8"
                                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                                                    placeholder="Min 8 karakter">
                                            </div>
                                        </div>
                                        <div class="mt-4">
                                            <button type="submit"
                                                style="background-color: #4f46e5 !important; color: white !important;"
                                                class="w-full px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition font-bold shadow-md cursor-pointer flex items-center justify-center">
                                                <i class="fas fa-save mr-2"></i>SIMPAN PERUBAHAN
                                            </button>
                                            <p class="text-xs text-gray-500 mt-2 text-center">
                                                <i class="fas fa-info-circle mr-1"></i>
                                                Perubahan diterapkan dalam 1-5 menit
                                            </p>
                                        </div>
                                    </form>
                        </div>
            </div>

            <!-- RIGHT COLUMN: Signal Info -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center justify-between">
                        <div class="flex items-center gap-2">
                            <i class="fas fa-signal text-orange-600"></i>
                            Informasi Sinyal & Redaman
                        </div>
                        <button type="button"
                            onclick="document.getElementById('debug-modal').classList.remove('hidden')"
                            class="text-xs text-gray-500 hover:text-gray-700 bg-gray-100 px-2 py-1 rounded flex items-center gap-1">
                            <i class="fas fa-bug"></i> Debug
                        </button>
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- RX Power -->
                        <div
                            class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-lg p-6 border border-green-200">
                            <div class="flex items-center justify-between mb-3">
                                <span class="text-sm font-medium text-gray-600">RX Power (Terima)</span>
                                <div class="w-10 h-10 bg-green-600 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-arrow-down text-white"></i>
                                </div>
                            </div>
                            <p class="text-3xl font-bold text-green-700 mb-1">
                                <%= signalInfo.rxPower && signalInfo.rxPower !=='N/A' ? signalInfo.rxPower : 'N/A' %>
                                    <span class="text-base font-normal text-green-600">dBm</span>
                            </p>
                            <p class="text-xs text-gray-500">Standar: -18 s.d -27 dBm</p>
                        </div>

                        <!-- TX Power -->
                        <div class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-lg p-6 border border-blue-200">
                            <div class="flex items-center justify-between mb-3">
                                <span class="text-sm font-medium text-gray-600">TX Power (Kirim)</span>
                                <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-arrow-up text-white"></i>
                                </div>
                            </div>
                            <p class="text-3xl font-bold text-blue-700 mb-1">
                                <%= signalInfo.txPower && signalInfo.txPower !=='N/A' ? signalInfo.txPower : 'N/A' %>
                                    <span class="text-base font-normal text-blue-600">dBm</span>
                            </p>
                            <p class="text-xs text-gray-500">Standar: +2 s.d +7 dBm</p>
                        </div>

                        <!-- Temperature -->
                        <div class="bg-gradient-to-br from-orange-50 to-red-50 rounded-lg p-6 border border-orange-200">
                            <div class="flex items-center justify-between mb-3">
                                <span class="text-sm font-medium text-gray-600">Suhu (Temp)</span>
                                <div class="w-10 h-10 bg-orange-600 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-thermometer-half text-white"></i>
                                </div>
                            </div>
                            <p class="text-3xl font-bold text-orange-700 mb-1">
                                <%= signalInfo.temperature && signalInfo.temperature !=='N/A' ? signalInfo.temperature
                                    : 'N/A' %>
                                    <span class="text-base font-normal text-orange-600">°C</span>
                            </p>
                            <p class="text-xs text-gray-500">Batas Aman: < 60°C</p>
                        </div>

                        <!-- WiFi Clients -->
                        <div
                            class="bg-gradient-to-br from-indigo-50 to-purple-50 rounded-lg p-6 border border-indigo-200">
                            <div class="flex items-center justify-between mb-3">
                                <span class="text-sm font-medium text-gray-600">WiFi Clients</span>
                                <div class="w-10 h-10 bg-indigo-600 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-users text-white"></i>
                                </div>
                            </div>
                            <p class="text-3xl font-bold text-indigo-700 mb-1">
                                <%= signalInfo.wifiClients %>
                                    <span class="text-base font-normal text-indigo-600">user</span>
                            </p>
                            <p class="text-xs text-gray-500">Perangkat Terhubung</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Device Info -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Basic Info -->
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                    <i class="fas fa-info-circle text-blue-600"></i>
                    Informasi Device
                </h3>
                <div class="space-y-4">
                    <div class="flex justify-between items-center py-3 border-b border-gray-100">
                        <span class="text-gray-600 font-medium">Serial Number</span>
                        <span class="text-gray-900 font-semibold">
                            <%= deviceInfo.serialNumber %>
                        </span>
                    </div>
                    <div class="flex justify-between items-center py-3 border-b border-gray-100">
                        <span class="text-gray-600 font-medium">Manufacturer</span>
                        <span class="text-gray-900">
                            <%= deviceInfo.manufacturer %>
                        </span>
                    </div>
                    <div class="flex justify-between items-center py-3 border-b border-gray-100">
                        <span class="text-gray-600 font-medium">Model</span>
                        <span class="text-gray-900">
                            <%= deviceInfo.model %>
                        </span>
                    </div>
                    <div class="flex justify-between items-center py-3 border-b border-gray-100">
                        <span class="text-gray-600 font-medium">Product Class</span>
                        <span class="text-gray-900">
                            <%= deviceInfo.productClass %>
                        </span>
                    </div>
                    <div class="flex justify-between items-center py-3 border-b border-gray-100">
                        <span class="text-gray-600 font-medium">Software Version</span>
                        <span class="text-gray-900 font-mono text-sm bg-gray-100 px-2 py-1 rounded">
                            <%= deviceInfo.softwareVersion %>
                        </span>
                    </div>
                    <div class="flex justify-between items-center py-3">
                        <span class="text-gray-600 font-medium">Last Inform</span>
                        <span class="text-gray-900">
                            <% if (deviceInfo.lastInform) { %>
                                <%= new Date(deviceInfo.lastInform).toLocaleString('id-ID') %>
                                    <% } else { %>
                                        -
                                        <% } %>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Device ID -->
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                    <i class="fas fa-fingerprint text-purple-600"></i>
                    Identitas TR-069
                </h3>
                <div class="space-y-4">
                    <div class="py-3 border-b border-gray-100">
                        <span class="text-gray-600 font-medium block mb-1">Device ID</span>
                        <code class="text-sm bg-gray-100 px-3 py-2 rounded-lg block break-all"><%= device._id %></code>
                    </div>
                    <% if (device._deviceId) { %>
                        <div class="py-3 border-b border-gray-100">
                            <span class="text-gray-600 font-medium block mb-1">OUI</span>
                            <span class="text-gray-900">
                                <%= device._deviceId._OUI || '-' %>
                            </span>
                        </div>
                        <% } %>
                            <div class="py-3 border-b border-gray-100">
                                <span class="text-gray-600 font-medium block mb-1">Registered</span>
                                <span class="text-gray-900">
                                    <% if (device._registered) { %>
                                        <%= new Date(device._registered).toLocaleString('id-ID') %>
                                            <% } else { %>
                                                -
                                                <% } %>
                                </span>
                            </div>
                            <% if (device._tags && device._tags.length> 0) { %>
                                <div class="py-3">
                                    <span class="text-gray-600 font-medium block mb-2">Tags</span>
                                    <div class="flex flex-wrap gap-2">
                                        <% device._tags.forEach(tag=> { %>
                                            <span
                                                class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-medium">
                                                <%= tag %>
                                            </span>
                                            <% }); %>
                                    </div>
                                </div>
                                <% } %>
                </div>
            </div>
        </div>

        <!-- Tasks -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                <i class="fas fa-tasks text-orange-600"></i>
                Recent Tasks
            </h3>
            <% if (tasks.length===0) { %>
                <div class="text-center py-8 text-gray-500">
                    <i class="fas fa-inbox text-3xl mb-2 opacity-50"></i>
                    <p>Tidak ada task untuk device ini</p>
                </div>
                <% } else { %>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50 border-b border-gray-200">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">
                                        Task
                                        Name</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">
                                        Status
                                    </th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">
                                        Timestamp</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                                <% tasks.forEach(task=> { %>
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-4 py-3 font-medium text-gray-900">
                                            <%= task.name %>
                                        </td>
                                        <td class="px-4 py-3">
                                            <% if (task.status==='done' || task.status==='completed' ) { %>
                                                <span
                                                    class="px-2 py-1 bg-green-100 text-green-700 rounded text-sm">Completed</span>
                                                <% } else if (task.fault) { %>
                                                    <span
                                                        class="px-2 py-1 bg-red-100 text-red-700 rounded text-sm">Failed</span>
                                                    <% } else { %>
                                                        <span
                                                            class="px-2 py-1 bg-yellow-100 text-yellow-700 rounded text-sm">Pending</span>
                                                        <% } %>
                                        </td>
                                        <td class="px-4 py-3 text-gray-600 text-sm">
                                            <%= task.timestamp ? new Date(task.timestamp).toLocaleString('id-ID') : '-'
                                                %>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } %>
        </div>
    </div>

    <!-- Debug Modal -->
    <div id="debug-modal"
        class="hidden fixed inset-0 bg-black bg-opacity-50 z-[9999] flex items-center justify-center p-4">
        <div class="bg-white rounded-xl w-full max-w-4xl h-[80vh] flex flex-col shadow-2xl animate-fade-in-up">
            <div class="p-4 border-b flex justify-between items-center bg-gray-50 rounded-t-xl">
                <div>
                    <h3 class="font-bold text-gray-900">Device Raw Data</h3>
                    <p class="text-xs text-gray-500">Gunakan data ini untuk mencari path parameter yang tepat</p>
                </div>
                <button onclick="document.getElementById('debug-modal').classList.add('hidden')"
                    class="w-8 h-8 flex items-center justify-center rounded-full hover:bg-gray-200 transition">
                    <i class="fas fa-times text-gray-500"></i>
                </button>
            </div>
            <div
                class="p-4 flex-1 overflow-auto bg-gray-900 text-green-400 font-mono text-xs rounded-b-xl custom-scrollbar">
                <pre><%= JSON.stringify(device, null, 2) %></pre>
            </div>
        </div>
    </div>