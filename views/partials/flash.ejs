<% if (typeof flash !=='undefined' && flash) { %>
  <% /* Helper to get message string whether it's string, array, or object */ const getMsg=(val)=> {
    if (!val) return '';
    if (typeof val === 'string') return val;
    if (Array.isArray(val) && val.length > 0) return val[0];
    return '';
    };

    const successMsg = getMsg(flash.success);
    const errorMsg = getMsg(flash.error);
    %>

    <% if (successMsg && successMsg.trim().length> 0) { %>
      <div
        class="mb-4 rounded-xl border-l-4 border-green-500 bg-green-50/80 backdrop-blur-sm px-4 py-3 text-green-800 shadow-md flex items-center gap-3 animate-fade-in-down">
        <div class="w-8 h-8 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <span class="font-medium">
          <%= successMsg %>
        </span>
        <button onclick="this.parentElement.remove()" class="ml-auto text-green-600 hover:text-green-800">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <% } %>

        <% if (errorMsg && errorMsg.trim().length> 0) { %>
          <div
            class="mb-4 rounded-xl border-l-4 border-red-500 bg-red-50/80 backdrop-blur-sm px-4 py-3 text-red-800 shadow-md flex items-center gap-3 animate-fade-in-down">
            <div class="w-8 h-8 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </div>
            <span class="font-medium">
              <%= errorMsg %>
            </span>
            <button onclick="this.parentElement.remove()" class="ml-auto text-red-600 hover:text-red-800">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <% } %>
            <% } %>