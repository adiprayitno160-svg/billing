<% if (typeof flash !== 'undefined' && flash && (flash.success || flash.error)) { %>
  <% if (flash.success) { %>
  <div class="mb-4 rounded-lg border border-gray-200 bg-gray-50 px-4 py-3 text-gray-700 shadow-sm">
    <%= flash.success %>
  </div>
  <% } %>
  <% if (flash.error) { %>
  <div class="mb-4 rounded-lg border border-gray-200 bg-gray-50 px-4 py-3 text-gray-700 shadow-sm">
    <%= flash.error %>
  </div>
  <% } %>
<% } %>


