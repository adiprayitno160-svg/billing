<% if (typeof flash !=='undefined' && flash) { %>
  <% const getMsg=(val)=> {
    if (!val) return '';
    if (typeof val === 'string') return val;
    if (Array.isArray(val) && val.length > 0) return val[0];
    return '';
    };

    const successMsg = getMsg(flash.success);
    const errorMsg = getMsg(flash.error);
    %>

    <% if ((successMsg && successMsg.trim().length> 0) || (errorMsg && errorMsg.trim().length > 0)) { %>
      <div id="flash-container"
        class="fixed top-6 left-1/2 -translate-x-1/2 z-[9999] w-full max-w-md px-4 pointer-events-none">
        <div class="flex flex-col gap-3 items-center">
          <% if (successMsg && successMsg.trim().length> 0) { %>
            <div
              class="pointer-events-auto rounded-2xl border border-emerald-100 bg-white/95 backdrop-blur-xl px-5 py-4 text-emerald-900 shadow-[0_20px_50px_-12px_rgba(0,0,0,0.15)] flex items-center gap-4 animate-fade-in-down w-full transform hover:scale-[1.02] transition-all duration-300">
              <div
                class="w-11 h-11 rounded-xl bg-gradient-to-br from-emerald-400 to-emerald-600 flex items-center justify-center flex-shrink-0 shadow-lg shadow-emerald-200">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div class="flex-1">
                <p class="font-extrabold text-sm tracking-tight text-emerald-950">Success</p>
                <p class="text-xs text-emerald-700 font-medium leading-relaxed">
                  <%= successMsg %>
                </p>
              </div>
              <button onclick="this.closest('.animate-fade-in-down').remove()"
                class="p-2 hover:bg-emerald-50 rounded-xl transition-colors text-emerald-400 hover:text-emerald-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>
            <% } %>

              <% if (errorMsg && errorMsg.trim().length> 0) { %>
                <div
                  class="pointer-events-auto rounded-2xl border border-rose-100 bg-white/95 backdrop-blur-xl px-5 py-4 text-rose-900 shadow-[0_20px_50px_-12px_rgba(0,0,0,0.15)] flex items-center gap-4 animate-fade-in-down w-full transform hover:scale-[1.02] transition-all duration-300">
                  <div
                    class="w-11 h-11 rounded-xl bg-gradient-to-br from-rose-400 to-rose-600 flex items-center justify-center flex-shrink-0 shadow-lg shadow-rose-200">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3"
                        d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <p class="font-extrabold text-sm tracking-tight text-rose-950">System Error</p>
                    <p class="text-xs text-rose-700 font-medium leading-relaxed">
                      <%= errorMsg %>
                    </p>
                  </div>
                  <button onclick="this.closest('.animate-fade-in-down').remove()"
                    class="p-2 hover:bg-rose-50 rounded-xl transition-colors text-rose-400 hover:text-rose-600">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                      </path>
                    </svg>
                  </button>
                </div>
                <% } %>
        </div>
      </div>

      <script>
        // Auto-remove flash messages after 6 seconds with smooth animation
        document.addEventListener('DOMContentLoaded', function () {
          const flashContainer = document.getElementById('flash-container');
          if (flashContainer) {
            setTimeout(() => {
              const messages = flashContainer.querySelectorAll('.animate-fade-in-down');
              messages.forEach(msg => {
                msg.style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
                msg.style.opacity = '0';
                msg.style.transform = 'translateY(-20px) scale(0.95)';
                setTimeout(() => msg.remove(), 600);
              });
            }, 6000);
          }
        });
      </script>
      <% } %>
        <% } %>