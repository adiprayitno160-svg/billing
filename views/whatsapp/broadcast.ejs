<div class="space-y-6 animate-fadeIn">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-3xl font-black text-slate-800 tracking-tight">Kirim Broadcast Massal ðŸ“¢</h1>
            <p class="text-slate-500 text-sm">Kirim pesan ke semua pelanggan atau grup tertentu secara cepat.</p>
        </div>
        <div class="flex items-center gap-3">
            <a href="/settings/whatsapp"
                class="px-4 py-2 bg-white border border-slate-200 rounded-xl text-slate-600 hover:text-blue-600 transition-all shadow-sm flex items-center gap-2">
                <i class="fas fa-arrow-left"></i>
                <span>Kembali</span>
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Left: Form -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-3xl shadow-xl shadow-slate-200/50 border border-slate-100 overflow-hidden">
                <div class="p-8 space-y-6">
                    <!-- Targeted Audience -->
                    <div class="space-y-3">
                        <label class="block text-sm font-bold text-slate-700">Pilih Penerima</label>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <label
                                class="relative flex items-center p-4 bg-slate-50 rounded-2xl border-2 border-transparent cursor-pointer hover:bg-blue-50 transition-all has-[:checked]:border-blue-500 has-[:checked]:bg-blue-50/50 group">
                                <input type="radio" name="target" value="all" checked class="hidden"
                                    onchange="toggleCustomerSelection(false)">
                                <div
                                    class="w-10 h-10 rounded-xl bg-blue-100 text-blue-600 flex items-center justify-center mr-4 group-hover:scale-110 transition-transform">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div>
                                    <p class="font-bold text-slate-800">Semua Pelanggan</p>
                                    <p class="text-xs text-slate-500">Kirim ke nomor terdaftar</p>
                                </div>
                            </label>
                            <label
                                class="relative flex items-center p-4 bg-slate-50 rounded-2xl border-2 border-transparent cursor-pointer hover:bg-indigo-50 transition-all has-[:checked]:border-indigo-500 has-[:checked]:bg-indigo-50/50 group">
                                <input type="radio" name="target" value="selected" class="hidden"
                                    onchange="toggleCustomerSelection(true)">
                                <div
                                    class="w-10 h-10 rounded-xl bg-indigo-100 text-indigo-600 flex items-center justify-center mr-4 group-hover:scale-110 transition-transform">
                                    <i class="fas fa-user-check"></i>
                                </div>
                                <div>
                                    <p class="font-bold text-slate-800">Pilih Manual</p>
                                    <p class="text-xs text-slate-500">Pilih pelanggan tertentu</p>
                                </div>
                            </label>
                        </div>
                    </div>

                    <!-- Customer Selector (Hidden by default) -->
                    <div id="customer-selector" class="hidden space-y-3 animate-slideIn">
                        <label class="block text-sm font-bold text-slate-700">Pilih Pelanggan</label>
                        <div class="relative">
                            <input type="text" id="cust-search" placeholder="Cari nama atau kode..."
                                class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl text-sm focus:ring-2 focus:ring-blue-500 outline-none mb-2">
                            <div id="customer-list"
                                class="max-h-60 overflow-y-auto border border-slate-100 rounded-2xl p-2 space-y-1 bg-slate-50/30">
                                <!-- Loaded via JS -->
                                <div class="py-10 text-center text-slate-400 italic">Memuat pelanggan...</div>
                            </div>
                        </div>
                        <div class="flex justify-between text-[10px] font-bold text-slate-400 px-2">
                            <span id="selected-count">0 pelanggan terpilih</span>
                            <button onclick="clearSelection()" class="text-red-500 hover:underline">Hapus Semua</button>
                        </div>
                    </div>

                    <!-- Message Area -->
                    <div class="space-y-3">
                        <div class="flex justify-between items-center">
                            <label class="block text-sm font-bold text-slate-700">Isi Pesan</label>
                            <div class="flex gap-2">
                                <button onclick="insertTag('{customer_name}')"
                                    class="px-2 py-1 text-[10px] bg-slate-100 hover:bg-slate-200 text-slate-600 rounded-lg transition-colors font-bold">Nama
                                    Pelanggan</button>
                                <button onclick="insertTag('{customer_code}')"
                                    class="px-2 py-1 text-[10px] bg-slate-100 hover:bg-slate-200 text-slate-600 rounded-lg transition-colors font-bold">Kode
                                    Pelanggan</button>
                            </div>
                        </div>
                        <div class="relative">
                            <textarea id="broadcast-message" rows="8"
                                placeholder="Tulis pengumuman di sini... Contoh: Halo {customer_name}, layanan kami sedang maintenance..."
                                class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl text-slate-700 focus:ring-2 focus:ring-blue-500 outline-none transition-all resize-none"></textarea>
                        </div>
                        <p class="text-[10px] text-slate-400 leading-relaxed">
                            <i class="fas fa-info-circle mr-1"></i> Gunakan tag di atas untuk personalisasi pesan
                            otomatis. Pesan akan masuk ke antrian notifikasi.
                        </p>
                    </div>
                </div>

                <!-- Footer Action -->
                <div class="px-8 py-6 bg-slate-50 border-t border-slate-100 flex items-center justify-between">
                    <div id="status-display"
                        class="hidden animate-pulse flex items-center gap-2 text-blue-600 font-bold text-sm">
                        <i class="fas fa-spinner fa-spin"></i>
                        <span>Sedang memproses...</span>
                    </div>
                    <button id="send-btn" onclick="sendBroadcast()"
                        class="ml-auto bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-8 py-3.5 rounded-2xl font-black shadow-lg shadow-blue-500/30 hover:shadow-blue-500/50 hover:-translate-y-0.5 transition-all flex items-center gap-3">
                        <i class="fas fa-paper-plane"></i>
                        <span>Mulai Broadcast</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Right: Tips & Preview -->
        <div class="space-y-6">
            <div
                class="bg-gradient-to-br from-indigo-600 to-blue-700 rounded-3xl p-6 text-white shadow-xl shadow-blue-500/20">
                <h3 class="font-black text-lg mb-4 flex items-center gap-2 text-white">
                    <i class="fas fa-lightbulb text-yellow-300"></i>
                    Tips Broadcast
                </h3>
                <ul class="space-y-4 text-xs font-medium text-blue-50">
                    <li class="flex gap-3">
                        <span
                            class="w-5 h-5 rounded-full bg-white/20 flex items-center justify-center shrink-0">1</span>
                        <span>Berikan jarak waktu antar pesan untuk menghindari spam.</span>
                    </li>
                    <li class="flex gap-3">
                        <span
                            class="w-5 h-5 rounded-full bg-white/20 flex items-center justify-center shrink-0">2</span>
                        <span>Gunakan sapaan personal {customer_name} agar lebih ramah.</span>
                    </li>
                    <li class="flex gap-3">
                        <span
                            class="w-5 h-5 rounded-full bg-white/20 flex items-center justify-center shrink-0">3</span>
                        <span>Hindari mengirim link mencurigakan.</span>
                    </li>
                </ul>
            </div>

            <!-- Preview Card -->
            <div class="bg-white rounded-3xl border border-slate-200 shadow-sm overflow-hidden p-6 space-y-4">
                <h3 class="font-bold text-slate-800 text-sm border-b border-slate-50 pb-3">Preview Pesan</h3>
                <div class="bg-slate-50 rounded-2xl p-4 border border-slate-100 min-h-[150px] relative">
                    <div id="msg-preview" class="text-xs text-slate-600 whitespace-pre-wrap italic">Belum ada pesan...
                    </div>
                    <div class="absolute bottom-3 right-4 text-[10px] text-slate-400 font-bold">WhatsApp Preview</div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let customers = [];
    let selectedIds = new Set();

    document.addEventListener('DOMContentLoaded', () => {
        loadCustomers();

        const messageInput = document.getElementById('broadcast-message');
        const preview = document.getElementById('msg-preview');

        messageInput.addEventListener('input', () => {
            let val = messageInput.value;
            if (!val) {
                preview.innerHTML = '<span class="italic text-slate-300">Belum ada pesan...</span>';
                return;
            }
            // Simple preview replacement
            val = val.replace(/{customer_name}/g, '<span class="text-blue-600 font-bold">[Nama Pelanggan]</span>');
            val = val.replace(/{customer_code}/g, '<span class="text-indigo-600 font-bold">[Kode]</span>');
            preview.innerHTML = val;
        });

        // Search listener
        document.getElementById('cust-search').addEventListener('input', (e) => {
            renderCustomers(e.target.value);
        });
    });

    async function loadCustomers() {
        try {
            const res = await fetch('/whatsapp/api/broadcast/customers');
            const result = await res.json();
            if (result.success) {
                customers = result.data;
                renderCustomers();
            }
        } catch (e) {
            console.error('Fail load customers', e);
        }
    }

    function renderCustomers(search = '') {
        const list = document.getElementById('customer-list');
        const filtered = customers.filter(c =>
            c.name.toLowerCase().includes(search.toLowerCase()) ||
            c.customer_code.toLowerCase().includes(search.toLowerCase())
        );

        if (filtered.length === 0) {
            list.innerHTML = `<div class="p-4 text-center text-slate-400 text-xs italic">Pelanggan tidak ditemukan...</div>`;
            return;
        }

        list.innerHTML = filtered.map(c => `
            <div onclick="toggleSelect(${c.id})" class="flex items-center justify-between p-3 rounded-xl cursor-pointer transition-all ${selectedIds.has(c.id) ? 'bg-blue-50 border border-blue-100' : 'hover:bg-slate-100 border border-transparent'}">
                <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-lg ${selectedIds.has(c.id) ? 'bg-blue-600 text-white' : 'bg-slate-200 text-slate-500'} flex items-center justify-center text-[10px] font-bold">
                        ${selectedIds.has(c.id) ? '<i class="fas fa-check"></i>' : c.name.charAt(0)}
                    </div>
                    <div>
                        <p class="text-xs font-bold text-slate-800">${c.name}</p>
                        <p class="text-[10px] text-slate-400">${c.customer_code} â€¢ ${c.phone}</p>
                    </div>
                </div>
            </div>
        `).join('');
    }

    function toggleSelect(id) {
        if (selectedIds.has(id)) selectedIds.delete(id);
        else selectedIds.add(id);

        renderCustomers(document.getElementById('cust-search').value);
        updateUI();
    }

    function toggleCustomerSelection(show) {
        const selector = document.getElementById('customer-selector');
        if (show) selector.classList.remove('hidden');
        else {
            selector.classList.add('hidden');
            selectedIds.clear();
            updateUI();
        }
    }

    function updateUI() {
        document.getElementById('selected-count').textContent = `${selectedIds.size} pelanggan terpilih`;
    }

    function clearSelection() {
        selectedIds.clear();
        renderCustomers();
        updateUI();
    }

    function insertTag(tag) {
        const input = document.getElementById('broadcast-message');
        const start = input.selectionStart;
        const end = input.selectionEnd;
        const text = input.value;
        input.value = text.substring(0, start) + tag + text.substring(end);
        input.dispatchEvent(new Event('input'));
        input.focus();
    }

    async function sendBroadcast() {
        const message = document.getElementById('broadcast-message').value.trim();
        const target = document.querySelector('input[name="target"]:checked').value;

        if (!message) {
            Swal.fire('Error', 'Silakan isi pesan terlebih dahulu', 'error');
            return;
        }

        if (target === 'selected' && selectedIds.size === 0) {
            Swal.fire('Error', 'Pilih minimal satu pelanggan', 'error');
            return;
        }

        const confirmText = target === 'all'
            ? 'Anda akan mengirim pesan ke SEMUA pelanggan. Lanjutkan?'
            : `Kirim ke ${selectedIds.size} pelanggan terpilih?`;

        const result = await Swal.fire({
            title: 'Konfirmasi Broadcast',
            text: confirmText,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Ya, Kirim Sekarang!',
            cancelButtonText: 'Batal',
            confirmButtonColor: '#2563eb'
        });

        if (!result.isConfirmed) return;

        const btn = document.getElementById('send-btn');
        const status = document.getElementById('status-display');

        btn.disabled = true;
        btn.classList.add('opacity-50');
        status.classList.remove('hidden');

        try {
            const res = await fetch('/whatsapp/api/broadcast/send', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    message,
                    customerIds: target === 'selected' ? Array.from(selectedIds) : null
                })
            });

            const data = await res.json();
            if (data.success) {
                await Swal.fire('Berhasil!', data.message, 'success');
                window.location.href = '/notification/history';
            } else {
                Swal.fire('Gagal', data.error, 'error');
            }
        } catch (e) {
            Swal.fire('Error', 'Gagal menghubungi server', 'error');
        } finally {
            btn.disabled = false;
            btn.classList.remove('opacity-50');
            status.classList.add('hidden');
        }
    }
</script>