        let currentCategory = 'all';
        
        // Filter templates by search keyword
        function filterTemplates() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const templates = document.querySelectorAll('.template-card');
            let visibleCount = 0;
            
            templates.forEach(card => {
                const name = card.getAttribute('data-name');
                const content = card.getAttribute('data-content');
                const category = card.getAttribute('data-category');
                
                // Check both search term and current category
                const matchesSearch = name.includes(searchTerm) || content.includes(searchTerm);
                const matchesCategory = currentCategory === 'all' || category === currentCategory;
                
                if (matchesSearch && matchesCategory) {
                    card.style.display = 'block';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });
            
            // Update count and show/hide no results message
            document.getElementById('templateCount').textContent = visibleCount;
            document.getElementById('noResults').classList.toggle('hidden', visibleCount > 0);
        }
        
        // Filter templates by category
        function filterByCategory(category) {
            currentCategory = category;
            
