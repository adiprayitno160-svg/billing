            const templateCard = event.target.closest('.template-card');
            const content = templateCard.querySelector('.template-content p').textContent;
            
            navigator.clipboard.writeText(content).then(() => {
                const btn = event.target.closest('button');
                const originalHTML = btn.innerHTML;
                
                // Show success feedback
                btn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>';
                btn.classList.remove('bg-blue-50', 'text-blue-700');
                btn.classList.add('bg-green-500', 'text-white');
                
                // Reset after 2 seconds
                setTimeout(() => {
                    btn.innerHTML = originalHTML;
                    btn.classList.remove('bg-green-500', 'text-white');
                    btn.classList.add('bg-blue-50', 'text-blue-700');
                }, 2000);
                
                // Show toast notification (optional)
                showToast('✓ Template berhasil dicopy!', 'success');
            }).catch(err => {
                showToast('❌ Gagal copy template', 'error');
                console.error('Copy failed:', err);
            });
        }
        
