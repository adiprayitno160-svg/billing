<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'WhatsApp Bot Dashboard' %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <div class="min-h-screen">
        <!-- Header -->
        <div class="bg-white shadow-sm border-b border-gray-200">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center py-6">
                    <div class="flex items-center">
                        <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center">
                            <i class="fab fa-whatsapp text-white text-2xl"></i>
                        </div>
                        <div class="ml-4">
                            <h1 class="text-2xl font-bold text-gray-900">WhatsApp Bot Dashboard</h1>
                            <p class="text-sm text-gray-500">Auto-response & Notification System</p>
                        </div>
                    </div>
                    <div class="flex items-center space-x-4">
                        <div id="bot-status" class="flex items-center space-x-2">
                            <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
                            <span class="text-sm text-gray-600">Bot Aktif</span>
                        </div>
                        <button onclick="testBot()" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                            <i class="fas fa-play mr-2"></i>Test Bot
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Statistics Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                            <i class="fas fa-comments text-blue-600 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-500">Pesan Hari Ini</p>
                            <p id="messages-today" class="text-2xl font-bold text-gray-900">0</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                            <i class="fas fa-check-circle text-green-600 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-500">Respon Otomatis</p>
                            <p id="auto-responses" class="text-2xl font-bold text-gray-900">0</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                            <i class="fas fa-bell text-purple-600 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-500">Notifikasi Terkirim</p>
                            <p id="notifications-sent" class="text-2xl font-bold text-gray-900">0</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                            <i class="fas fa-percentage text-yellow-600 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-500">Success Rate</p>
                            <p id="success-rate" class="text-2xl font-bold text-gray-900">100%</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Conversations & Bot Features -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Recent Conversations -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                        <h3 class="text-lg font-semibold text-gray-900">Percakapan Terbaru</h3>
                        <button onclick="refreshConversations()" class="text-blue-600 hover:text-blue-700">
                            <i class="fas fa-sync-alt"></i>
                        </button>
                    </div>
                    <div id="conversations-list" class="p-6 max-h-96 overflow-y-auto">
                        <div class="text-center text-gray-500 py-8">
                            <i class="fas fa-inbox text-4xl mb-2"></i>
                            <p>Belum ada percakapan</p>
                        </div>
                    </div>
                </div>

                <!-- Bot Features -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h3 class="text-lg font-semibold text-gray-900">Fitur Auto-Response Bot</h3>
                    </div>
                    <div class="p-6">
                        <div class="space-y-3">
                            <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
                                <div class="flex items-center">
                                    <i class="fas fa-comment-dots text-green-600 mr-3"></i>
                                    <span class="text-sm font-medium text-gray-700">Greeting (Salam)</span>
                                </div>
                                <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">Aktif</span>
                            </div>
                            <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
                                <div class="flex items-center">
                                    <i class="fas fa-file-invoice text-green-600 mr-3"></i>
                                    <span class="text-sm font-medium text-gray-700">Cek Tagihan</span>
                                </div>
                                <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">Aktif</span>
                            </div>
                            <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
                                <div class="flex items-center">
                                    <i class="fas fa-history text-green-600 mr-3"></i>
                                    <span class="text-sm font-medium text-gray-700">Riwayat Pembayaran</span>
                                </div>
                                <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">Aktif</span>
                            </div>
                            <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
                                <div class="flex items-center">
                                    <i class="fas fa-signal text-green-600 mr-3"></i>
                                    <span class="text-sm font-medium text-gray-700">Status Layanan</span>
                                </div>
                                <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">Aktif</span>
                            </div>
                            <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
                                <div class="flex items-center">
                                    <i class="fas fa-check-circle text-green-600 mr-3"></i>
                                    <span class="text-sm font-medium text-gray-700">Konfirmasi Pembayaran</span>
                                </div>
                                <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">Aktif</span>
                            </div>
                            <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
                                <div class="flex items-center">
                                    <i class="fas fa-question-circle text-green-600 mr-3"></i>
                                    <span class="text-sm font-medium text-gray-700">Menu Bantuan</span>
                                </div>
                                <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">Aktif</span>
                            </div>
                            <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
                                <div class="flex items-center">
                                    <i class="fas fa-exclamation-triangle text-green-600 mr-3"></i>
                                    <span class="text-sm font-medium text-gray-700">Laporan Gangguan</span>
                                </div>
                                <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">Aktif</span>
                            </div>
                            <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
                                <div class="flex items-center">
                                    <i class="fas fa-robot text-green-600 mr-3"></i>
                                    <span class="text-sm font-medium text-gray-700">Default Response</span>
                                </div>
                                <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">Aktif</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notification Templates -->
            <div class="mt-8 bg-white rounded-xl shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900">Template Notifikasi</h3>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        <div class="p-4 border border-gray-200 rounded-lg">
                            <div class="flex items-center mb-2">
                                <i class="fas fa-file-invoice text-blue-600 mr-2"></i>
                                <h4 class="font-medium text-gray-900">Tagihan Baru</h4>
                            </div>
                            <p class="text-sm text-gray-600">Notifikasi tagihan bulanan baru</p>
                        </div>
                        <div class="p-4 border border-gray-200 rounded-lg">
                            <div class="flex items-center mb-2">
                                <i class="fas fa-bell text-yellow-600 mr-2"></i>
                                <h4 class="font-medium text-gray-900">Reminder Pembayaran</h4>
                            </div>
                            <p class="text-sm text-gray-600">Pengingat sebelum jatuh tempo</p>
                        </div>
                        <div class="p-4 border border-gray-200 rounded-lg">
                            <div class="flex items-center mb-2">
                                <i class="fas fa-exclamation-triangle text-red-600 mr-2"></i>
                                <h4 class="font-medium text-gray-900">Tagihan Lewat Tempo</h4>
                            </div>
                            <p class="text-sm text-gray-600">Notifikasi tagihan overdue</p>
                        </div>
                        <div class="p-4 border border-gray-200 rounded-lg">
                            <div class="flex items-center mb-2">
                                <i class="fas fa-check-circle text-green-600 mr-2"></i>
                                <h4 class="font-medium text-gray-900">Konfirmasi Pembayaran</h4>
                            </div>
                            <p class="text-sm text-gray-600">Pembayaran berhasil diterima</p>
                        </div>
                        <div class="p-4 border border-gray-200 rounded-lg">
                            <div class="flex items-center mb-2">
                                <i class="fas fa-ban text-orange-600 mr-2"></i>
                                <h4 class="font-medium text-gray-900">Pemberitahuan Isolir</h4>
                            </div>
                            <p class="text-sm text-gray-600">Layanan akan diisolir</p>
                        </div>
                        <div class="p-4 border border-gray-200 rounded-lg">
                            <div class="flex items-center mb-2">
                                <i class="fas fa-power-off text-green-600 mr-2"></i>
                                <h4 class="font-medium text-gray-900">Pemberitahuan Aktif</h4>
                            </div>
                            <p class="text-sm text-gray-600">Layanan telah diaktifkan kembali</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Load statistics
        async function loadStatistics() {
            try {
                const response = await fetch('/api/whatsapp/bot-statistics');
                const data = await response.json();
                
                document.getElementById('messages-today').textContent = data.messagesToday || 0;
                document.getElementById('auto-responses').textContent = data.autoResponses || 0;
                document.getElementById('notifications-sent').textContent = data.notificationsSent || 0;
                document.getElementById('success-rate').textContent = (data.successRate || 100) + '%';
            } catch (error) {
                console.error('Error loading statistics:', error);
            }
        }

        // Load recent conversations
        async function loadConversations() {
            try {
                const response = await fetch('/api/whatsapp/recent-conversations');
                const conversations = await response.json();
                
                const container = document.getElementById('conversations-list');
                
                if (conversations.length === 0) {
                    container.innerHTML = `
                        <div class="text-center text-gray-500 py-8">
                            <i class="fas fa-inbox text-4xl mb-2"></i>
                            <p>Belum ada percakapan</p>
                        </div>
                    `;
                    return;
                }
                
                container.innerHTML = conversations.map(conv => `
                    <div class="mb-4 p-4 bg-gray-50 rounded-lg">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <div class="flex items-center mb-2">
                                    <i class="fas fa-user-circle text-gray-400 mr-2"></i>
                                    <span class="font-medium text-gray-900">${conv.phone_number}</span>
                                </div>
                                <p class="text-sm text-gray-600 mb-1"><strong>In:</strong> ${conv.incoming_message}</p>
                                <p class="text-sm text-green-600"><strong>Bot:</strong> ${conv.outgoing_message}</p>
                            </div>
                            <span class="text-xs text-gray-500">${formatTime(conv.created_at)}</span>
                        </div>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Error loading conversations:', error);
            }
        }

        function formatTime(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const diff = (now - date) / 1000; // seconds
            
            if (diff < 60) return 'Baru saja';
            if (diff < 3600) return Math.floor(diff / 60) + ' menit lalu';
            if (diff < 86400) return Math.floor(diff / 3600) + ' jam lalu';
            return Math.floor(diff / 86400) + ' hari lalu';
        }

        function refreshConversations() {
            loadConversations();
        }

        async function testBot() {
            try {
                const testMessage = prompt('Masukkan pesan test (atau kosongkan untuk test default):');
                const message = testMessage || 'halo';
                
                const response = await fetch('/api/whatsapp/test-bot', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        from: '6281234567890',
                        message: message
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Bot Response: ' + result.response);
                    loadConversations();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error testing bot:', error);
                alert('Gagal mengirim test message');
            }
        }

        // Initialize
        loadStatistics();
        loadConversations();
        
        // Refresh every 30 seconds
        setInterval(() => {
            loadStatistics();
            loadConversations();
        }, 30000);
    </script>
</body>
</html>
