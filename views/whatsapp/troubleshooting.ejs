<%- include('../layouts/main', { title: title, currentPath: currentPath }) %>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header -->
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
                <i class="fab fa-whatsapp text-green-500"></i>
                Troubleshooting WhatsApp
            </h1>
            <p class="text-gray-600 mt-2">Diagnostik dan perbaikan masalah WhatsApp Business</p>
        </div>

        <!-- Status Overview -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
            <!-- Connection Status -->
            <div class="bg-white rounded-lg shadow-sm p-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold text-gray-900">Status Koneksi</h3>
                    <% if (status.ready) { %>
                        <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">
                            <i class="fas fa-check-circle"></i> Online
                        </span>
                        <% } else { %>
                            <span class="px-3 py-1 bg-red-100 text-red-800 rounded-full text-sm font-medium">
                                <i class="fas fa-times-circle"></i> Offline
                            </span>
                            <% } %>
                </div>
                <div class="space-y-2 text-sm">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Initialized:</span>
                        <span class="font-medium <%= status.initialized ? 'text-green-600' : 'text-red-600' %>">
                            <%= status.initialized ? 'Yes' : 'No' %>
                        </span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Authenticated:</span>
                        <span class="font-medium <%= status.authenticated ? 'text-green-600' : 'text-red-600' %>">
                            <%= status.authenticated ? 'Yes' : 'No' %>
                        </span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">QR Code:</span>
                        <span class="font-medium <%= status.hasQRCode ? 'text-yellow-600' : 'text-gray-600' %>">
                            <%= status.hasQRCode ? 'Available' : 'Not Available' %>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Statistics -->
            <div class="bg-white rounded-lg shadow-sm p-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold text-gray-900">Statistik (30 hari)</h3>
                </div>
                <div class="space-y-2 text-sm">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Total:</span>
                        <span class="font-medium text-gray-900">
                            <%= stats.total || 0 %>
                        </span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Berhasil:</span>
                        <span class="font-medium text-green-600">
                            <%= stats.sent || 0 %>
                        </span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Gagal:</span>
                        <span class="font-medium text-red-600">
                            <%= stats.failed || 0 %>
                        </span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Success Rate:</span>
                        <span class="font-medium text-blue-600">
                            <%= stats.successRate?.toFixed(2) || '0.00' %>%
                        </span>
                    </div>
                </div>
            </div>

            <!-- System Info -->
            <div class="bg-white rounded-lg shadow-sm p-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold text-gray-900">System Info</h3>
                </div>
                <div class="space-y-2 text-sm">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Node.js:</span>
                        <span class="font-medium text-gray-900">
                            <%= systemInfo.nodeVersion %>
                        </span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Platform:</span>
                        <span class="font-medium text-gray-900">
                            <%= systemInfo.platform %>
                        </span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Uptime:</span>
                        <span class="font-medium text-gray-900">
                            <%= systemInfo.uptime %> min
                        </span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Session:</span>
                        <span class="font-medium <%= systemInfo.sessionExists ? 'text-green-600' : 'text-gray-600' %>">
                            <%= systemInfo.sessionExists ? systemInfo.sessionSize : 'Not Found' %>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Failed Notifications -->
        <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-semibold text-gray-900">Notifikasi Gagal Terakhir</h2>
                <div class="flex gap-2">
                    <button onclick="retryFailed()"
                        class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition">
                        <i class="fas fa-redo"></i> Retry All
                    </button>
                    <button onclick="clearFailed()"
                        class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition">
                        <i class="fas fa-trash"></i> Clear
                    </button>
                </div>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Customer</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Recipient</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Template</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Error</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% if (failedNotifications.length===0) { %>
                            <tr>
                                <td colspan="6" class="px-4 py-4 text-center text-gray-500">
                                    Tidak ada notifikasi gagal
                                </td>
                            </tr>
                            <% } else { %>
                                <% failedNotifications.forEach(notif=> { %>
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-4 py-3 text-sm text-gray-900">#<%= notif.id %>
                                        </td>
                                        <td class="px-4 py-3 text-sm text-gray-900">
                                            <%= notif.customer_id ? `Customer #${notif.customer_id}` : '-' %>
                                        </td>
                                        <td class="px-4 py-3 text-sm text-gray-900">
                                            <%= notif.recipient %>
                                        </td>
                                        <td class="px-4 py-3 text-sm text-gray-600">
                                            <%= notif.template || '-' %>
                                        </td>
                                        <td class="px-4 py-3 text-sm text-red-600">
                                            <span class="truncate max-w-xs block"
                                                title="<%= notif.error_message || 'Unknown error' %>">
                                                <%= notif.error_message || 'Unknown error' %>
                                            </span>
                                        </td>
                                        <td class="px-4 py-3 text-sm text-gray-500">
                                            <%= new Date(notif.created_at).toLocaleString('id-ID') %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pending Notifications -->
        <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-semibold text-gray-900">Notifikasi Pending</h2>
                <button onclick="refreshData()"
                    class="px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition">
                    <i class="fas fa-sync"></i> Refresh
                </button>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Customer</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Priority</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Scheduled</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% if (pendingNotifications.length===0) { %>
                            <tr>
                                <td colspan="6" class="px-4 py-4 text-center text-gray-500">
                                    Tidak ada notifikasi pending
                                </td>
                            </tr>
                            <% } else { %>
                                <% pendingNotifications.forEach(notif=> { %>
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-4 py-3 text-sm text-gray-900">#<%= notif.id %>
                                        </td>
                                        <td class="px-4 py-3 text-sm text-gray-900">
                                            <%= notif.notification_type %>
                                        </td>
                                        <td class="px-4 py-3 text-sm text-gray-900">
                                            <%= notif.customer_id ? `Customer #${notif.customer_id}` : '-' %>
                                        </td>
                                        <td class="px-4 py-3 text-sm">
                                            <span class="px-2 py-1 rounded text-xs font-medium
                                        <%= notif.priority === 'high' ? 'bg-red-100 text-red-800' : 
                                            notif.priority === 'normal' ? 'bg-blue-100 text-blue-800' : 
                                            'bg-gray-100 text-gray-800' %>">
                                                <%= notif.priority || 'normal' %>
                                            </span>
                                        </td>
                                        <td class="px-4 py-3 text-sm text-gray-500">
                                            <%= notif.scheduled_for ? new
                                                Date(notif.scheduled_for).toLocaleString('id-ID') : 'Immediate' %>
                                        </td>
                                        <td class="px-4 py-3 text-sm text-gray-500">
                                            <%= new Date(notif.created_at).toLocaleString('id-ID') %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Actions & Testing -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Repair Actions -->
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Tindakan Perbaikan</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <button onclick="testConnection()"
                        class="px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition flex items-center justify-center gap-2">
                        <i class="fas fa-network-wired"></i> Test Koneksi
                    </button>
                    <button onclick="getDiagnostics()"
                        class="px-6 py-3 bg-green-500 text-white rounded-lg hover:bg-green-600 transition flex items-center justify-center gap-2">
                        <i class="fas fa-stethoscope"></i> Run Diagnostics
                    </button>
                    <a href="/settings/whatsapp"
                        class="px-6 py-3 bg-purple-500 text-white rounded-lg hover:bg-purple-600 transition flex items-center justify-center gap-2">
                        <i class="fas fa-cog"></i> Pengaturan
                    </a>
                    <button onclick="cleanupLogs()"
                        class="px-6 py-3 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition flex items-center justify-center gap-2">
                        <i class="fas fa-broom"></i> Cleanup Logs
                    </button>
                    <button onclick="repairService()"
                        class="px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition flex items-center justify-center gap-2 sm:col-span-2">
                        <i class="fas fa-wrench"></i> Jalankan Script Perbaikan Total
                    </button>
                </div>
            </div>

            <!-- Direct Testing -->
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
                    <i class="fas fa-paper-plane text-green-600"></i> Kirim Pesan Test
                </h2>
                <form id="troubleTestForm" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Nomor WhatsApp</label>
                        <input type="text" id="testPhone" placeholder="081xxx atau 6281xxx"
                            class="w-full px-4 py-2 border rounded-lg focus:ring-green-500 focus:border-green-500"
                            required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Isi Pesan</label>
                        <textarea id="testMessage" rows="3"
                            class="w-full px-4 py-2 border rounded-lg focus:ring-green-500 focus:border-green-500"
                            required>Test koneksi WhatsApp dari Dashboard Billing...</textarea>
                    </div>
                    <button type="submit" id="testSendBtn"
                        class="w-full px-6 py-3 bg-green-600 text-white font-bold rounded-lg hover:bg-green-700 transition flex items-center justify-center gap-2">
                        <i class="fas fa-paper-plane"></i> Kirim Sekarang
                    </button>
                </form>
                <div id="testResult" class="mt-4 p-3 rounded-lg hidden"></div>
            </div>
        </div>
    </div>

    <script>
        async function refreshData() {
            try {
                const response = await fetch('/whatsapp/troubleshooting/diagnostics');
                const data = await response.json();
                if (data.success) {
                    location.reload();
                }
            } catch (error) {
                alert('Error refreshing data: ' + error.message);
            }
        }

        async function testConnection() {
            try {
                const response = await fetch('/whatsapp/troubleshooting/test-connection', {
                    method: 'POST'
                });
                const data = await response.json();
                if (data.success) {
                    alert('✅ ' + data.message);
                } else {
                    alert('❌ ' + data.error);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        async function getDiagnostics() {
            try {
                const response = await fetch('/whatsapp/troubleshooting/diagnostics');
                const data = await response.json();
                if (data.success) {
                    console.log('Diagnostics:', data.data);
                    alert('Diagnostics berhasil. Lihat console untuk detail.');
                } else {
                    alert('❌ ' + data.error);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        async function retryFailed() {
            if (!confirm('Retry semua notifikasi gagal?')) return;

            try {
                const response = await fetch('/whatsapp/troubleshooting/retry-failed', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ limit: 50 })
                });
                const data = await response.json();
                if (data.success) {
                    alert('✅ ' + data.message);
                    location.reload();
                } else {
                    alert('❌ ' + data.error);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        async function clearFailed() {
            if (!confirm('Hapus semua notifikasi gagal?')) return;

            try {
                const response = await fetch('/whatsapp/troubleshooting/clear-failed', {
                    method: 'POST'
                });
                const data = await response.json();
                if (data.success) {
                    alert('✅ ' + data.message);
                    location.reload();
                } else {
                    alert('❌ ' + data.error);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        async function cleanupLogs() {
            const days = prompt('Hapus log lebih dari berapa hari? (default: 30)', '30');
            if (!days) return;

            if (!confirm(`Hapus log lebih dari ${days} hari?`)) return;

            try {
                const response = await fetch('/whatsapp/troubleshooting/cleanup-logs', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ days: parseInt(days) })
                });
                const data = await response.json();
                if (data.success) {
                    alert('✅ ' + data.message);
                } else {
                    alert('❌ ' + data.error);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        // Handler for Troubleshooting Test Form
        document.getElementById('troubleTestForm')?.addEventListener('submit', async function (e) {
            e.preventDefault();
            const phone = document.getElementById('testPhone').value;
            const message = document.getElementById('testMessage').value;
            const btn = document.getElementById('testSendBtn');
            const resultDiv = document.getElementById('testResult');

            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Mengirim...';
            resultDiv.classList.add('hidden');

            try {
                const response = await fetch('/settings/whatsapp/test-send', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ phone, message })
                });

                const data = await response.json();

                resultDiv.classList.remove('hidden');
                if (data.success) {
                    resultDiv.className = 'mt-4 p-3 rounded-lg bg-green-100 text-green-800 border border-green-200';
                    resultDiv.innerHTML = `<i class="fas fa-check-circle"></i> ${data.message}`;
                } else {
                    resultDiv.className = 'mt-4 p-3 rounded-lg bg-red-100 text-red-800 border border-red-200';
                    resultDiv.innerHTML = `<i class="fas fa-exclamation-triangle"></i> ${data.error}`;
                }
            } catch (error) {
                resultDiv.classList.remove('hidden');
                resultDiv.className = 'mt-4 p-3 rounded-lg bg-red-100 text-red-800 border border-red-200';
                resultDiv.innerHTML = `<i class="fas fa-times-circle"></i> Error: ${error.message}`;
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<i class="fas fa-paper-plane"></i> Kirim Sekarang';
            }
        });

        async function repairService() {
            if (!confirm('Peringatan: Ini akan menghapus sesi WhatsApp di server dan men-generate QR Code baru. Anda harus scan ulang. Lanjutkan?')) return;

            try {
                const response = await fetch('/settings/whatsapp/regenerate-qr', {
                    method: 'POST'
                });
                const data = await response.json();
                if (data.success) {
                    alert('✅ Perbaikan dimulai. Silakan pergi ke halaman Pengaturan untuk scan QR Code baru.');
                    window.location.href = '/settings/whatsapp';
                } else {
                    alert('❌ Gagal: ' + data.error);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }
    </script>