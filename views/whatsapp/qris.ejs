<div class="space-y-6 animate-fadeIn">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-3xl font-black text-slate-800 tracking-tight">Kirim QRIS via WhatsApp ðŸ’³</h1>
            <p class="text-slate-500 text-sm">Kirim gambar QRIS (Static/Dynamic) langsung ke pelanggan.</p>
        </div>
        <div class="flex items-center gap-3">
            <a href="/settings/whatsapp"
                class="px-4 py-2 bg-white border border-slate-200 rounded-xl text-slate-600 hover:text-blue-600 transition-all shadow-sm flex items-center gap-2">
                <i class="fas fa-arrow-left"></i>
                <span>Kembali</span>
            </a>
        </div>
    </div>

    <!-- Main Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Input Form -->
        <div class="bg-white rounded-3xl shadow-xl shadow-slate-200/50 border border-slate-100 p-8 space-y-6">
            <h3 class="font-black text-slate-800 flex items-center gap-2">
                <i class="fas fa-paper-plane text-blue-600"></i>
                Kirim Pembayaran
            </h3>

            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Nomor WhatsApp Pelanggan</label>
                    <div class="relative">
                        <div
                            class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400">
                            <i class="fas fa-phone"></i>
                        </div>
                        <input type="text" id="phone" placeholder="628123456789"
                            class="w-full pl-11 pr-4 py-3.5 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-blue-500 outline-none transition-all font-mono">
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Pilih Tipe QRIS</label>
                    <div class="grid grid-cols-2 gap-4">
                        <label
                            class="relative flex flex-col items-center p-4 bg-slate-50 rounded-2xl border-2 border-transparent cursor-pointer hover:bg-blue-50 transition-all has-[:checked]:border-blue-500 has-[:checked]:bg-blue-50/50 group text-center">
                            <input type="radio" name="qrisType" value="static" checked class="hidden">
                            <i class="fas fa-qrcode text-2xl text-slate-400 group-hover:text-blue-600 mb-2"></i>
                            <span class="font-bold text-slate-800 text-xs">QRIS Static</span>
                            <span class="text-[10px] text-slate-500">Normal</span>
                        </label>
                        <label
                            class="relative flex flex-col items-center p-4 bg-slate-50 rounded-2xl border-2 border-transparent cursor-pointer hover:bg-indigo-50 transition-all has-[:checked]:border-indigo-500 has-[:checked]:bg-indigo-50/50 group text-center">
                            <input type="radio" name="qrisType" value="dynamic" class="hidden">
                            <i class="fas fa-sync text-2xl text-slate-400 group-hover:text-indigo-600 mb-2"></i>
                            <span class="font-bold text-slate-800 text-xs">QRIS Dynamic</span>
                            <span class="text-[10px] text-slate-500">Per Transaksi</span>
                        </label>
                    </div>
                </div>

                <div class="pt-4">
                    <button onclick="sendQRIS()"
                        class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 text-white py-4 rounded-2xl font-black shadow-lg shadow-blue-500/30 hover:shadow-blue-500/50 hover:-translate-y-0.5 transition-all flex items-center justify-center gap-3">
                        <i class="fas fa-share-alt"></i>
                        <span>Kirim Sekarang</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Preview & Status -->
        <div class="space-y-6">
            <div
                class="bg-slate-900 rounded-3xl p-8 text-white relative overflow-hidden flex flex-col items-center justify-center min-h-[400px]">
                <div class="absolute inset-0 opacity-10">
                    <div class="grid grid-cols-4 gap-4 rotate-12 scale-150">
                        <i class="fas fa-qrcode text-6xl"></i>
                        <i class="fas fa-wallet text-6xl"></i>
                        <i class="fab fa-whatsapp text-6xl"></i>
                        <i class="fas fa-credit-card text-6xl"></i>
                    </div>
                </div>

                <h3 class="font-black text-xl mb-6 relative z-10">Live Preview</h3>
                <div class="bg-white p-4 rounded-3xl shadow-2xl relative z-10 group">
                    <img id="qris-preview" src="/assets/qris_static.png" alt="QRIS Preview"
                        class="w-48 h-48 rounded-2xl object-contain"
                        onerror="this.src='https://placehold.co/400?text=QRIS+STATIC'">
                    <div
                        class="absolute -top-4 -right-4 bg-green-500 text-white w-10 h-10 rounded-full flex items-center justify-center shadow-lg">
                        <i class="fas fa-check"></i>
                    </div>
                </div>
                <p class="mt-8 text-slate-400 text-xs font-medium relative z-10 text-center px-8">
                    Gambar di atas adalah ilustrasi QRIS yang akan dikirimkan ke nomor WhatsApp tujuan.
                </p>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('input[name="qrisType"]').forEach(radio => {
        radio.addEventListener('change', (e) => {
            const preview = document.getElementById('qris-preview');
            const type = e.target.value;
            preview.src = type === 'dynamic' ? '/assets/qris_dynamic.png' : '/assets/qris_static.png';
        });
    });

    async function sendQRIS() {
        const phone = document.getElementById('phone').value.trim();
        const qrisType = document.querySelector('input[name="qrisType"]:checked').value;

        if (!phone) {
            Swal.fire('Error', 'Silakan masukkan nomor WhatsApp', 'error');
            return;
        }

        const result = await Swal.fire({
            title: 'Kirim QRIS?',
            text: `Kirim QRIS (${qrisType}) ke ${phone}?`,
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'Ya, Kirim!',
            confirmButtonColor: '#2563eb'
        });

        if (!result.isConfirmed) return;

        Swal.fire({
            title: 'Sedang Mengirim...',
            didOpen: () => { Swal.showLoading(); },
            allowOutsideClick: false
        });

        try {
            const res = await fetch('/whatsapp/send-qris', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ phone, qrisType })
            });

            const data = await res.json();
            if (data.success) {
                Swal.fire('Berhasil!', 'QRIS telah berhasil dikirim ke antrian.', 'success');
            } else {
                Swal.fire('Gagal', data.error || 'Terjadi kesalahan saat mengirim.', 'error');
            }
        } catch (e) {
            Swal.fire('Error', 'Gagal menghubungi server.', 'error');
        }
    }
</script>