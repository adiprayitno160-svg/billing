<!DOCTYPE html>
<html>
<head>
    <title>Cetak Pembayaran</title>
    <style>
        @media print {
            @page { margin: 1cm; }
            .no-print { display: none; }
        }
        body { font-family: Arial, sans-serif; margin: 20px; }
        .header { text-align: center; margin-bottom: 20px; }
        .summary { margin: 20px 0; padding: 15px; background: #f5f5f5; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background: #4CAF50; color: white; }
        .text-right { text-align: right; }
        .footer { margin-top: 30px; text-align: center; }
    </style>
</head>
<body>
    <div class="no-print" style="margin-bottom: 20px;">
        <button onclick="window.print()" style="padding: 10px 20px; background: #4CAF50; color: white; border: none; cursor: pointer;">
            üñ®Ô∏è Cetak
        </button>
        <button onclick="window.close()" style="padding: 10px 20px; background: #f44336; color: white; border: none; cursor: pointer; margin-left: 10px;">
            ‚úñÔ∏è Tutup
        </button>
    </div>

    <div class="header">
        <h1>LAPORAN PEMBAYARAN</h1>
        <% if (startDate || endDate) { %>
            <p>Periode: <%= startDate || 'Awal' %> - <%= endDate || 'Akhir' %></p>
        <% } %>
        <p>Tanggal Cetak: <%= new Date().toLocaleDateString('id-ID') %></p>
    </div>

    <div class="summary">
        <h3>Ringkasan</h3>
        <p>Total Tagihan: Rp <%= totalAmount.toLocaleString('id-ID') %></p>
        <p>Total Dibayar: Rp <%= totalPaid.toLocaleString('id-ID') %></p>
        <p>Jumlah Invoice: <%= invoices.length %></p>
    </div>

    <table>
        <thead>
            <tr>
                <th>No</th>
                <th>Invoice</th>
                <th>Pelanggan</th>
                <th>Tanggal Bayar</th>
                <th class="text-right">Tagihan</th>
                <th class="text-right">Dibayar</th>
            </tr>
        </thead>
        <tbody>
            <% invoices.forEach((invoice, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= invoice.invoice_number %></td>
                    <td><%= invoice.customer_name %></td>
                    <td><%= (invoice.paid_at || invoice.last_payment || invoice.last_payment_date) ? new Date(invoice.paid_at || invoice.last_payment || invoice.last_payment_date).toLocaleDateString('id-ID') : '-' %></td>
                    <td class="text-right">Rp <%= parseFloat(invoice.total_amount || 0).toLocaleString('id-ID') %></td>
                    <td class="text-right">Rp <%= parseFloat(invoice.paid_amount || 0).toLocaleString('id-ID') %></td>
                </tr>
            <% }); %>
        </tbody>
        <tfoot>
            <tr style="font-weight: bold;">
                <td colspan="4">TOTAL</td>
                <td class="text-right">Rp <%= totalAmount.toLocaleString('id-ID') %></td>
                <td class="text-right">Rp <%= totalPaid.toLocaleString('id-ID') %></td>
            </tr>
        </tfoot>
    </table>

    <div class="footer">
        <p>Dicetak pada: <%= new Date().toLocaleString('id-ID') %></p>
    </div>
</body>
</html>

