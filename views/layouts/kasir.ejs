<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Billing Kasir</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/assets/styles.css" rel="stylesheet">
    <style>
        .sidebar {
            background: linear-gradient(180deg, #1e3a8a 0%, #1e40af 100%);
        }
        .sidebar-item:hover {
            background: rgba(255, 255, 255, 0.1);
        }
        .sidebar-item.active {
            background: rgba(255, 255, 255, 0.2);
        }
    </style>
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="sidebar w-64 text-white shadow-lg">
            <!-- Header -->
            <div class="p-6 border-b border-blue-600">
                <div class="flex items-center">
                    <div class="w-10 h-10 bg-white bg-opacity-20 rounded-lg flex items-center justify-center mr-3">
                        <i class="fas fa-cash-register text-white"></i>
                    </div>
                    <div>
                        <h1 class="text-lg font-bold">Billing Kasir</h1>
                        <p class="text-xs text-blue-200">Portal Kasir</p>
                    </div>
                </div>
            </div>

            <!-- User Info -->
            <div class="p-4 border-b border-blue-600">
                <div class="flex items-center">
                    <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center mr-3">
                        <i class="fas fa-user text-white"></i>
                    </div>
                    <div>
                        <p class="font-semibold"><%= (typeof user !== 'undefined' && user) ? user.full_name : 'Kasir' %></p>
                        <p class="text-xs text-blue-200">Kasir</p>
                    </div>
                </div>
            </div>

            <!-- Navigation -->
            <nav class="mt-4">
                <a href="/kasir/dashboard" class="sidebar-item flex items-center px-6 py-3 text-white hover:bg-blue-600 transition duration-200 <%= currentPath === '/kasir/dashboard' ? 'active' : '' %>">
                    <i class="fas fa-tachometer-alt mr-3"></i>
                    Dashboard
                </a>
                <a href="/kasir/payments" class="sidebar-item flex items-center px-6 py-3 text-white hover:bg-blue-600 transition duration-200 <%= currentPath === '/kasir/payments' ? 'active' : '' %>">
                    <i class="fas fa-credit-card mr-3"></i>
                    Proses Pembayaran
                </a>
                <a href="/kasir/transactions" class="sidebar-item flex items-center px-6 py-3 text-white hover:bg-blue-600 transition duration-200 <%= currentPath === '/kasir/transactions' ? 'active' : '' %>">
                    <i class="fas fa-history mr-3"></i>
                    Riwayat Transaksi
                </a>
                
                <!-- Print Menu -->
                <div class="px-6 py-2 text-xs text-blue-200 uppercase font-semibold mt-4">
                    Print Tagihan
                </div>
                <a href="/kasir/print-group" class="sidebar-item flex items-center px-6 py-3 text-white hover:bg-blue-600 transition duration-200 <%= currentPath === '/kasir/print-group' ? 'active' : '' %>">
                    <i class="fas fa-print mr-3"></i>
                    Print Kelompok
                </a>
                
                <!-- Reports -->
                <div class="px-6 py-2 text-xs text-blue-200 uppercase font-semibold mt-4">
                    Laporan
                </div>
                <a href="/kasir/reports" class="sidebar-item flex items-center px-6 py-3 text-white hover:bg-blue-600 transition duration-200 <%= currentPath === '/kasir/reports' ? 'active' : '' %>">
                    <i class="fas fa-chart-bar mr-3"></i>
                    Laporan Kasir
                </a>
            </nav>

            <!-- Logout -->
            <div class="absolute bottom-0 w-64">
                <a href="/kasir/logout" class="sidebar-item flex items-center px-6 py-3 text-white hover:bg-red-600 transition duration-200">
                    <i class="fas fa-sign-out-alt mr-3"></i>
                    Logout
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Top Bar -->
            <header class="bg-white shadow-sm border-b border-gray-200">
                <div class="flex items-center justify-between px-6 py-4">
                    <div>
                        <h2 class="text-xl font-semibold text-gray-800"><%= title %></h2>
                        <p class="text-sm text-gray-600">Portal Kasir - <%= new Date().toLocaleDateString('id-ID') %></p>
                    </div>
                    <div class="flex items-center space-x-4">
                        <div class="text-sm text-gray-600">
                            <i class="fas fa-clock mr-1"></i>
                            <span id="currentTime"></span>
                        </div>
                        <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                            <i class="fas fa-user text-white text-sm"></i>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Flash Messages -->
            <% if (typeof flash !== 'undefined' && flash.error && flash.error.length > 0) { %>
                <div class="mx-6 mt-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
                    <div class="flex items-center">
                        <i class="fas fa-exclamation-circle mr-2"></i>
                        <%= flash.error[0] %>
                    </div>
                </div>
            <% } %>

            <% if (typeof flash !== 'undefined' && flash.success && flash.success.length > 0) { %>
                <div class="mx-6 mt-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
                    <div class="flex items-center">
                        <i class="fas fa-check-circle mr-2"></i>
                        <%= flash.success[0] %>
                    </div>
                </div>
            <% } %>

            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto bg-gray-50">
                <div class="p-6">
                    <%- body %>
                </div>
            </main>
        </div>
    </div>

    <script>
        // Update current time
        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('id-ID', {
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });
            document.getElementById('currentTime').textContent = timeString;
        }

        // Update time every second
        setInterval(updateTime, 1000);
        updateTime();

        // Auto-hide flash messages
        setTimeout(function() {
            const flashMessages = document.querySelectorAll('.bg-red-100, .bg-green-100');
            flashMessages.forEach(function(message) {
                message.style.transition = 'opacity 0.5s';
                message.style.opacity = '0';
                setTimeout(function() {
                    message.remove();
                }, 500);
            });
        }, 5000);
    </script>
</body>
</html>