                    <span class="text-[10px] text-slate-400 italic bg-slate-100 px-2 py-0.5 rounded-full">Klik peta
                        untuk pin lokasi</span>
                </div>
                <div id="jobMapContainer"
                    class="h-56 rounded-xl border-2 border-slate-100 overflow-hidden relative z-0 shadow-inner group-hover:border-blue-200 transition-colors">
                    <!-- Map will be initialized here -->
                </div>
                <input type="hidden" name="coordinates" id="jobCoordinates">
            </div>

            <!-- Submit Button -->
            <button type="submit"
                class="w-full py-4 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white rounded-xl font-bold uppercase tracking-widest shadow-xl shadow-blue-500/20 active:scale-[0.98] transition-all flex items-center justify-center gap-2 group">
                <span>Simpan Pekerjaan</span>
                <i class="fas fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
            </button>
        </form>
    </div>
</div>

<!-- Scripts for the dashboard -->
<script>
    let map, jobMap, jobMarkers = [], jobMarker;

    document.addEventListener('DOMContentLoaded', () => {
        initMap();
        refreshJobs();
        setupSearch();
        setupManualCoords();
        // Auto refresh every 15 seconds for realtime feel
        setInterval(refreshJobs, 15000);
    });

    function setupManualCoords() {
        const latInput = document.getElementById('manualLat');
        const lngInput = document.getElementById('manualLng');

        function updateFromInputs() {
            const lat = parseFloat(latInput.value);
            const lng = parseFloat(lngInput.value);
            if (!isNaN(lat) && !isNaN(lng) && jobMap) {
                if (jobMarker) jobMap.removeLayer(jobMarker);
                jobMarker = L.marker([lat, lng]).addTo(jobMap);
                jobMap.setView([lat, lng], 15);
                document.getElementById('jobCoordinates').value = `${lat},${lng}`;
            }
        }

        latInput.addEventListener('input', updateFromInputs);
        lngInput.addEventListener('input', updateFromInputs);
    }

    function initMap() {
        if (!document.getElementById('quick-map')) return;

        map = L.map('quick-map').setView([-7.0, 110.0], 13);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap'
        }).addTo(map);
    }

    async function refreshJobs() {
        const container = document.getElementById('jobs-container');
        const icon = document.getElementById('refresh-icon');

        icon.classList.add('fa-spin');

        try {
            const res = await fetch('/technician/jobs?limit=20');
            const result = await res.json();

            if (result.success) {
                renderJobs(result.data);
                updateMapMarkers(result.data);
                document.getElementById('jobs-count').textContent = `Menampilkan ${result.data.length} pekerjaan`;
            }
        } catch (error) {
            console.error('Error fetching jobs:', error);
        } finally {
            icon.classList.remove('fa-spin');
            const loading = document.getElementById('jobs-loading');
            if (loading) loading.style.display = 'none';
        }
    }

    function renderJobs(jobs) {
        const container = document.getElementById('jobs-container');

        if (jobs.length === 0) {
            container.innerHTML = `
                <div class="p-12 text-center">
                    <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-clipboard-list text-3xl text-slate-300"></i>
                    </div>
                    <p class="text-slate-500 font-bold">Belum ada pekerjaan yang tersedia</p>
                    <p class="text-slate-400 text-sm">Pekerjaan akan muncul jika ada tiket baru</p>
                </div>
            `;
            return;
        }

        container.innerHTML = jobs.map(job => {
            const statusColors = {
                'pending': 'bg-orange-100 text-orange-700 ring-orange-500/20',
                'accepted': 'bg-blue-100 text-blue-700 ring-blue-500/20',
                'in_progress': 'bg-indigo-100 text-indigo-700 ring-indigo-500/20',
                'completed': 'bg-green-100 text-green-700 ring-green-500/20',
                'cancelled': 'bg-red-100 text-red-700 ring-red-500/20'
            };

            const priorityBorder = {
                'low': 'border-l-slate-400',
                'medium': 'border-l-blue-500',
                'high': 'border-l-orange-500',
                'critical': 'border-l-red-500'
            };

            const priorityText = {
                'low': 'text-slate-500',
                'medium': 'text-blue-600',
                'high': 'text-orange-600',
                'critical': 'text-red-600'
            };

            return `
                <div class="relative bg-white rounded-xl border border-slate-200 shadow-sm hover:shadow-lg transition-all duration-300 group overflow-hidden border-l-4 ${priorityBorder[job.priority] || 'border-l-blue-500'}">
                    
                    <div class="p-5">
                        <div class="flex justify-between items-start mb-3">
                            <div>
                               <div class="flex items-center gap-2 mb-2">
                                   <span class="px-2.5 py-1 rounded-lg bg-slate-100 text-slate-600 text-[10px] font-bold tracking-wider uppercase border border-slate-200">${job.ticket_number}</span>
                                   <span class="px-2.5 py-1 rounded-lg ${statusColors[job.status]} text-[10px] font-bold tracking-wider uppercase ring-1 ring-inset">${job.status}</span>
                                   ${job.priority === 'critical' || job.priority === 'high' ?
                    `<span class="px-2 py-0.5 rounded-md bg-red-50 text-red-600 text-[10px] font-bold flex items-center gap-1"><i class="fas fa-exclamation-circle"></i> ${job.priority}</span>` : ''
                }
                                </div>
                                <h4 class="font-bold text-slate-800 text-lg leading-snug md:truncate md:max-w-lg group-hover:text-blue-600 transition-colors">${job.title}</h4>
                            </div>
                            <div class="text-right flex flex-col items-end">
                                 <span class="text-xs font-bold text-slate-500 block">${new Date(job.created_at).toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' })}</span>
                                 <span class="text-[10px] text-slate-400 font-medium whitespace-nowrap">${new Date(job.created_at).toLocaleDateString('id-ID', { day: 'numeric', month: 'short' })}</span>
                            </div>
                        </div>
                        
                        <div class="space-y-2 mb-4">
                            <div class="flex items-center gap-2.5 text-sm text-slate-700">
                                 <div class="w-6 h-6 rounded-full bg-slate-50 flex items-center justify-center flex-shrink-0">
                                     <i class="fas fa-user text-xs text-slate-400"></i>
                                 </div>
                                 <span class="font-semibold">${job.customer_name || 'Umum / Internal'}</span>
                            </div>
                             <div class="flex items-center gap-2.5 text-xs text-slate-500">
                                 <div class="w-6 h-6 rounded-full bg-slate-50 flex items-center justify-center flex-shrink-0">
                                     <i class="fas fa-map-marker-alt text-xs text-slate-400"></i>
                                 </div>
                                 <span class="truncate max-w-sm font-medium">${job.address || 'Lokasi tidak tersedia'}</span>
                            </div>
                        </div>

                        <div class="flex items-center justify-between pt-4 border-t border-slate-50">
                            <div class="flex items-center gap-2">
                                ${job.technician_name ?
                    `<div class="flex items-center gap-2">
                                        <div class="w-5 h-5 rounded-full bg-blue-100 flex items-center justify-center text-[10px] font-bold text-blue-600">
                                            ${job.technician_name.charAt(0)}
                                        </div>
                                        <span class="text-xs text-slate-600 font-medium">${job.technician_name}</span>
                                    </div>`
                    : `<span class="text-xs text-slate-400 italic font-medium flex items-center gap-1"><i class="far fa-clock"></i> Menunggu Teknisi</span>`
                }
                            </div>
                            <div class="flex gap-2 opacity-90 group-hover:opacity-100 transition-opacity">
                                 ${job.status === 'pending' ? `
                                     <button onclick="updateJobStatus(${job.id}, 'accepted')" class="px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white text-xs font-bold rounded-lg shadow-md hover:shadow-lg hover:-translate-y-0.5 transition-all flex items-center gap-2">
                                        <i class="fas fa-hand-paper"></i> Ambil
                                     </button>` : ''
                }
                                 ${job.status === 'accepted' || job.status === 'in_progress' ? `
                                     <button onclick="showCompleteModal(${job.id})" class="px-4 py-2 bg-gradient-to-r from-green-500 to-emerald-600 text-white text-xs font-bold rounded-lg shadow-md hover:shadow-lg hover:-translate-y-0.5 transition-all flex items-center gap-2">
                                        <i class="fas fa-check-circle"></i> Selesai
                                     </button>` : ''
                }
                                 <button onclick="viewJobDetail(${job.id})" class="w-9 h-9 flex items-center justify-center rounded-lg border border-slate-200 text-slate-400 hover:bg-slate-50 hover:text-blue-600 transition-colors">
                                    <i class="fas fa-chevron-right"></i>
                                 </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }).join('');
    }

    function updateMapMarkers(jobs) {
        jobMarkers.forEach(m => map.removeLayer(m));
        jobMarkers = [];

        const points = [];
        jobs.forEach(job => {
            if (job.coordinates) {
                const parts = job.coordinates.split(',');
                if (parts.length === 2) {
                    const lat = parseFloat(parts[0]);
                    const lng = parseFloat(parts[1]);
                    if (!isNaN(lat) && !isNaN(lng)) {
                        const m = L.marker([lat, lng]).addTo(map)
                            .bindPopup(`<b>${job.ticket_number}</b><br>${job.customer_name || 'Job Location'}<br>${job.title}`);
                        jobMarkers.push(m);
                        points.push([lat, lng]);
                    }
                }
            }
        });

        if (points.length > 0) {
            map.fitBounds(L.latLngBounds(points), { padding: [30, 30] });
        }
    }

    // Modal Helpers
    function showAddJobModal() {
        document.getElementById('addJobModal').classList.remove('hidden');
        document.body.style.overflow = 'hidden';
        setTimeout(initJobMap, 300); // Init map after modal animation
    }

    function initJobMap() {
        if (!document.getElementById('jobMapContainer')) return;
        if (jobMap) {
            jobMap.invalidateSize();
            return;
        }

        jobMap = L.map('jobMapContainer').setView([-7.0, 110.0], 13);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap'
        }).addTo(jobMap);

        jobMap.on('click', function (e) {
            const { lat, lng } = e.latlng;
            if (jobMarker) jobMap.removeLayer(jobMarker);
            jobMarker = L.marker([lat, lng]).addTo(jobMap);
            document.getElementById('jobCoordinates').value = `${lat.toFixed(6)},${lng.toFixed(6)}`;
            // Sync manual inputs
            document.getElementById('manualLat').value = lat.toFixed(6);
            document.getElementById('manualLng').value = lng.toFixed(6);
        });

        // Try to get user location
        if (navigator.geolocation) {
            // Add a custom control for "My Location"
            const LocationControl = L.Control.extend({
                options: { position: 'topright' },
                onAdd: function () {
                    const btn = L.DomUtil.create('button', 'bg-white p-2 rounded-lg shadow-md hover:bg-slate-50 border border-slate-200 flex items-center justify-center transition-all');
                    btn.innerHTML = '<i class="fas fa-location-arrow text-blue-600"></i>';
                    btn.title = 'Lokasi Saya';
                    btn.onclick = function (e) {
                        e.preventDefault();
                        e.stopPropagation();
                        // 1. Try Accurate GPS
                        navigator.geolocation.getCurrentPosition(pos => {
                            const { latitude, longitude } = pos.coords;
                            updateMapLocation(latitude, longitude, 'GPS');
                        }, err => {
                            console.warn('GPS fail, trying IP:', err);
                            // 2. Try Client-Side IP (For HTTP access)
                            fetch('http://ip-api.com/json')
                                .then(r => r.json())
                                .then(data => {
                                    if (data.status === 'success') {
                                        updateMapLocation(data.lat, data.lon, 'IP');
                                        alert(`Lokasi dari IP Internet (${data.city}). Akurasi rendah.`);
                                    } else throw new Error('IP API Fail');
                                })
                                .catch(() => {
                                    // 3. Fallback: Server Proxy
                                    fetch('/api/proxy/ip-location').then(r => r.json()).then(d => {
                                        if (d.lat) {
                                            updateMapLocation(d.lat, d.lon, 'Server IP');
                                            alert(`Lokasi dari Server IP (${d.city || 'Unknown'}).`);
                                        } else alert('Gagal total mengambil lokasi. Gunakan Manual Input.');
                                    });
                                });
                        });
                        return false;
                    };

                    function updateMapLocation(lat, lng, source) {
                        jobMap.setView([lat, lng], 17);
                        if (jobMarker) jobMap.removeLayer(jobMarker);
                        jobMarker = L.marker([lat, lng]).addTo(jobMap);
                        document.getElementById('jobCoordinates').value = `${lat.toFixed(6)},${lng.toFixed(6)}`;
                        document.getElementById('manualLat').value = lat.toFixed(6);
                        document.getElementById('manualLng').value = lng.toFixed(6);
                    }
                    return btn;
                }
            });
            jobMap.addControl(new LocationControl());

            // Initial attempt
            navigator.geolocation.getCurrentPosition(pos => {
                const { latitude, longitude } = pos.coords;
                jobMap.setView([latitude, longitude], 15);
            }, (err) => {
                console.warn('Auto-locate failed:', err.message);
            });
        }
    }

    function closeAddJobModal() {
        document.getElementById('addJobModal').classList.add('hidden');
        document.body.style.overflow = '';
    }



    // Search Autocomplete
    function setupSearch() {
        const input = document.getElementById('customerSearch');
        const results = document.getElementById('customerResults');
        let timeout;

        input.addEventListener('input', () => {
            clearTimeout(timeout);
            const query = input.value;
            if (query.length < 2) {
                results.classList.add('hidden');
                return;
            }

            timeout = setTimeout(async () => {
                try {
                    const res = await fetch(`/technician/customers/search?q=${encodeURIComponent(query)}`);
                    const data = await res.json();

                    if (data.success && data.data.length > 0) {
                        results.innerHTML = data.data.map(c => `
                            <div onclick="selectCustomer(${c.id}, '${c.name.replace(/'/g, "\\'")}', '${c.coordinates || ''}')" 
                                class="px-5 py-4 hover:bg-blue-50 cursor-pointer border-b border-slate-50 last:border-0 transition-colors">
                                <div class="font-bold text-slate-800">${c.name}</div>
                                <div class="text-xs text-slate-500 font-medium">${c.pppoe_username || c.static_ip || 'No connection ID'} • ${c.address || ''}</div>
                            </div>
                        `).join('');
                        results.classList.remove('hidden');
                    } else {
                        results.innerHTML = '<div class="p-5 text-center text-slate-500 text-sm italic font-medium">Pelanggan tidak ditemukan</div>';
                        results.classList.remove('hidden');
                    }
                } catch (e) {
                    console.error(e);
                }
            }, 300);
        });

        // Close search results when clicking outside
        document.addEventListener('click', (e) => {
            if (!input.contains(e.target) && !results.contains(e.target)) {
                results.classList.add('hidden');
            }
        });
    }

    function selectCustomer(id, name, coordinates) {
        document.getElementById('selectedCustomerId').value = id;
        document.getElementById('customerSearch').value = name;
        document.getElementById('customerResults').classList.add('hidden');

        // Auto-set coordinates if available
        if (coordinates && coordinates.includes(',')) {
            const [lat, lng] = coordinates.split(',').map(Number);
            if (!isNaN(lat) && !isNaN(lng)) {
                // Set hidden value
                document.getElementById('jobCoordinates').value = coordinates;
                // Set manual inputs
                document.getElementById('manualLat').value = lat;
                document.getElementById('manualLng').value = lng;

                // Initialize map if needed and set marker
                if (jobMap) {
                    if (jobMarker) jobMap.removeLayer(jobMarker);
                    jobMarker = L.marker([lat, lng]).addTo(jobMap);
                    jobMap.setView([lat, lng], 15);
                } else {
                    // Slight delay to ensure modal is ready
                    setTimeout(() => {
                        if (jobMap) {
                            if (jobMarker) jobMap.removeLayer(jobMarker);
                            jobMarker = L.marker([lat, lng]).addTo(jobMap);
                            jobMap.setView([lat, lng], 15);
                        }
                    }, 500);
                }
            }
        }
    }

    // Form Handling
    document.getElementById('addJobForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(e.target);
        const data = Object.fromEntries(formData.entries());

        try {
            const res = await fetch('/technician/jobs/save', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            const result = await res.json();

            if (result.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Tersimpan!',
                    text: 'Pekerjaan berhasil ditambahkan ke daftar.',
                    timer: 2000
                });
                closeAddJobModal();
                e.target.reset();
                refreshJobs();
            } else {
                Swal.fire({ icon: 'error', title: 'Gagal', text: result.error });
            }
        } catch (err) {
            console.error(err);
        }
    });

    async function updateJobStatus(id, status) {
        try {
            const res = await fetch('/technician/jobs/accept', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id, status })
            });
            const result = await res.json();
            if (result.success) {
                refreshJobs();
                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });
                Toast.fire({ icon: 'success', title: 'Status diperbarui' });
            }
        } catch (e) { console.error(e); }
    }

    function viewJobDetail(id) {
        window.location.href = `/technician/jobs/${id}`;
    }

    function showCompleteModal(id) {
        // Implementation for completion modal (upload proof, etc.)
        window.location.href = `/technician/jobs/${id}`;
    }
</script>

