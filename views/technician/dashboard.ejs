<div class="space-y-8 animate-fadeIn">
    <!-- Premium Header Section -->
    <div
        class="relative overflow-hidden bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 rounded-3xl p-8 text-white shadow-2xl border border-white/10">
        <!-- Decorative background elements -->
        <div class="absolute top-0 right-0 -mt-20 -mr-20 w-64 h-64 bg-blue-500/20 blur-[100px] rounded-full"></div>
        <div class="absolute bottom-0 left-0 -mb-20 -ml-20 w-64 h-64 bg-indigo-500/20 blur-[100px] rounded-full"></div>

        <div class="relative flex flex-col md:flex-row md:items-center justify-between gap-6">
            <div class="space-y-2">
                <div class="flex items-center gap-3">
                    <div
                        class="w-12 h-12 bg-blue-500/30 backdrop-blur-md rounded-2xl flex items-center justify-center border border-white/20 shadow-inner">
                        <i class="fas fa-user-gear text-2xl text-blue-400"></i>
                    </div>
                    <div>
                        <h2 class="text-3xl font-extrabold tracking-tight">Halo, <%= user?.full_name || user?.username
                                || 'Teknisi' %>!</h2>
                        <p class="text-blue-200/80 font-medium">Dashboard Management Pekerjaan Lapangan</p>
                    </div>
                </div>
            </div>

            <div class="flex items-center gap-4">
                <button type="button" onclick="showAddJobModal()"
                    class="group relative px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white rounded-2xl transition-all duration-300 shadow-lg shadow-blue-900/40 hover:shadow-blue-500/40 flex items-center gap-3 font-bold active:scale-95">
                    <div
                        class="w-7 h-7 bg-white/20 rounded-lg flex items-center justify-center group-hover:rotate-90 transition-transform">
                        <i class="fas fa-plus"></i>
                    </div>
                    <span>Tambah Pekerjaan</span>
                </button>
                <div
                    class="px-4 py-2 bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl flex items-center gap-2">
                    <span
                        class="w-2.5 h-2.5 bg-green-400 rounded-full animate-pulse shadow-[0_0_10px_rgba(74,222,128,0.5)]"></span>
                    <span class="text-sm font-bold uppercase tracking-wider">Online</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Smart Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Stat Card: Pending -->
        <div
            class="group bg-white rounded-3xl p-6 border border-slate-100 shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-orange-50 rounded-2xl flex items-center justify-center text-orange-600">
                    <i class="fas fa-clock text-xl"></i>
                </div>
                <span
                    class="text-xs font-bold text-orange-600 bg-orange-50 px-3 py-1 rounded-full border border-orange-100 uppercase tracking-tighter">Waiting</span>
            </div>
            <div class="text-4xl font-black text-slate-800 tracking-tighter">
                <%= stats.pending || 0 %>
            </div>
            <div class="text-slate-500 text-sm font-semibold mt-1">Pekerjaan Tertunda</div>
            <div class="mt-4 h-1.5 w-full bg-slate-100 rounded-full overflow-hidden">
                <div class="h-full bg-orange-500 w-1/3 rounded-full"></div>
            </div>
        </div>

        <!-- Stat Card: In Progress -->
        <div
            class="group bg-white rounded-3xl p-6 border border-slate-100 shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-blue-50 rounded-2xl flex items-center justify-center text-blue-600">
                    <i class="fas fa-spinner fa-spin text-xl"></i>
                </div>
                <span
                    class="text-xs font-bold text-blue-600 bg-blue-50 px-3 py-1 rounded-full border border-blue-100 uppercase tracking-tighter">Active</span>
            </div>
            <div class="text-4xl font-black text-slate-800 tracking-tighter">
                <%= stats.in_progress || 0 %>
            </div>
            <div class="text-slate-500 text-sm font-semibold mt-1">Sedang Dikerjakan</div>
            <div class="mt-4 h-1.5 w-full bg-slate-100 rounded-full overflow-hidden">
                <div class="h-full bg-blue-500 w-1/2 rounded-full"></div>
            </div>
        </div>

        <!-- Stat Card: Completed -->
        <div
            class="group bg-white rounded-3xl p-6 border border-slate-100 shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-green-50 rounded-2xl flex items-center justify-center text-green-600">
                    <i class="fas fa-check-double text-xl"></i>
                </div>
                <span
                    class="text-xs font-bold text-green-600 bg-green-50 px-3 py-1 rounded-full border border-green-100 uppercase tracking-tighter">Done</span>
            </div>
            <div class="text-4xl font-black text-slate-800 tracking-tighter">
                <%= stats.completed_today || 0 %>
            </div>
            <div class="text-slate-500 text-sm font-semibold mt-1">Selesai Hari Ini</div>
            <div class="mt-4 h-1.5 w-full bg-slate-100 rounded-full overflow-hidden">
                <div class="h-full bg-green-500 w-full rounded-full"></div>
            </div>
        </div>

        <!-- Stat Card: Wallet/Balance -->
        <div
            class="group bg-gradient-to-br from-indigo-600 to-violet-700 rounded-3xl p-6 shadow-lg shadow-indigo-200 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 text-white">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-white/20 backdrop-blur-md rounded-2xl flex items-center justify-center">
                    <i class="fas fa-wallet text-xl"></i>
                </div>
                <span
                    class="text-xs font-bold text-white bg-white/20 px-3 py-1 rounded-full border border-white/30 uppercase tracking-tighter">Balance</span>
            </div>
            <div class="text-2xl font-black tracking-tighter mb-1">Rp <%= Number(stats.wallet_balance ||
                    0).toLocaleString('id-ID') %>
            </div>
            <div class="text-indigo-100/80 text-sm font-medium">Titipan Tunai (Belum Setor)</div>
            <div class="mt-4 flex items-center gap-2 text-xs font-bold text-indigo-100">
                <i class="fas fa-circle-info"></i>
                <span>Harap hubungi kasir untuk penyetoran</span>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Jobs Feed -->
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white rounded-3xl shadow-sm border border-slate-100 overflow-hidden">
                <div class="px-6 py-5 border-b border-slate-100 flex items-center justify-between bg-slate-50/50">
                    <h3 class="font-bold text-slate-800 flex items-center gap-2">
                        <i class="fas fa-list-ul text-blue-600"></i>
                        Daftar Pekerjaan Lapangan
                    </h3>
                    <div class="flex gap-2">
                        <button onclick="refreshJobs()"
                            class="p-2 border border-slate-200 rounded-xl hover:bg-slate-200 transition-colors text-slate-600">
                            <i class="fas fa-rotate" id="refresh-icon"></i>
                        </button>
                    </div>
                </div>

                <div id="jobs-container" class="divide-y divide-slate-100 min-h-[400px]">
                    <!-- Skeleton Loader -->
                    <div class="p-8 text-center" id="jobs-loading">
                        <div
                            class="inline-block animate-spin w-10 h-10 border-4 border-blue-600 border-t-transparent rounded-full mb-4">
                        </div>
                        <p class="text-slate-500 font-medium tracking-tight">Memuat data pekerjaan...</p>
                    </div>
                </div>

                <div class="px-6 py-4 bg-slate-50/50 border-t border-slate-100 flex items-center justify-between">
                    <span class="text-sm text-slate-500 font-medium" id="jobs-count">Menampilkan 0 pekerjaan</span>
                    <a href="/technician/history"
                        class="text-sm font-bold text-blue-600 hover:text-blue-700 transition-colors flex items-center gap-1">
                        Lihat Semua Riwayat
                        <i class="fas fa-arrow-right text-[10px]"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Sidebar / Tools -->
        <div class="space-y-6">
            <!-- Job Map Section (Quick View) -->
            <div class="bg-white rounded-3xl shadow-sm border border-slate-100 p-6">
                <h3 class="font-bold text-slate-800 mb-4 flex items-center gap-2">
                    <i class="fas fa-location-dot text-red-500"></i>
                    Lokasi Pekerjaan
                </h3>
                <div id="quick-map"
                    class="h-64 rounded-2xl bg-slate-100 border border-slate-200 mb-4 overflow-hidden z-10"></div>
                <p class="text-xs text-slate-500 italic text-center font-medium">Klik marker untuk melihat detail lokasi
                    pelanggan</p>
            </div>

            <!-- Attendance Card -->
            <div
                class="bg-gradient-to-br from-emerald-500 to-teal-600 rounded-3xl p-6 shadow-lg shadow-emerald-200 text-white">
                <div class="flex items-center gap-4 mb-6">
                    <div class="w-14 h-14 bg-white/20 rounded-2xl flex items-center justify-center shadow-inner">
                        <i class="fas fa-id-badge text-3xl"></i>
                    </div>
                    <div>
                        <h4 class="font-bold text-lg leading-tight text-white">Kehadiran Harian</h4>
                        <p class="text-emerald-100/80 text-xs font-medium uppercase tracking-widest mt-0.5">Attendance
                            System</p>
                    </div>
                </div>

                <button onclick="handleCheckIn()" id="btn-checkin"
                    class="w-full py-4 bg-white text-emerald-600 rounded-2xl font-black text-sm uppercase tracking-widest shadow-xl hover:shadow-white/20 hover:scale-[1.02] active:scale-95 transition-all duration-300">
                    <i class="fas fa-sign-in-alt mr-2"></i>
                    Check-In Sekarang
                </button>

                <p class="mt-4 text-xs text-center text-emerald-100/70 font-medium">Jangan lupa check-in sebelum memulai
                    pekerjaan!</p>
            </div>
        </div>
    </div>
</div>

<!-- JOB MODALS & HIDDEN ELEMENTS -->
<div id="addJobModal"
    class="hidden fixed inset-0 bg-slate-900/60 backdrop-blur-sm z-[1000] flex items-center justify-center p-4">
    <div
        class="bg-white rounded-[2rem] shadow-2xl w-full max-w-xl overflow-hidden border border-slate-200 animate-zoomIn transform transition-all">
        <div class="px-8 py-6 bg-slate-50 border-b border-slate-200 flex items-center justify-between">
            <div>
                <h3 class="text-xl font-bold text-slate-800 tracking-tight">Tambah Pekerjaan Baru</h3>
                <p class="text-sm text-slate-500 font-medium">Input data pekerjaan teknisi di lapangan</p>
            </div>
            <button onclick="closeAddJobModal()"
                class="w-10 h-10 rounded-xl hover:bg-slate-200 flex items-center justify-center text-slate-500 transition-colors">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <form id="addJobForm" class="p-8 space-y-5">
            <div class="space-y-1.5">
                <label class="text-xs font-bold text-slate-500 uppercase tracking-wider ml-1">Nama / ID
                    Pelanggan</label>
                <div class="relative">
                    <input type="text" id="customerSearch" placeholder="Cari pelanggan..."
                        class="w-full pl-11 pr-4 py-3.5 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500/50 transition-all font-medium">
                    <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                    <div id="customerResults"
                        class="absolute z-[1001] left-0 right-0 mt-2 bg-white border border-slate-200 rounded-2xl shadow-2xl max-h-60 overflow-y-auto hidden">
                    </div>
                </div>
                <input type="hidden" id="selectedCustomerId" name="customer_id">
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div class="space-y-1.5">
                    <label class="text-xs font-bold text-slate-500 uppercase tracking-wider ml-1">Jenis
                        Pekerjaan</label>
                    <select name="job_type_id"
                        class="w-full px-4 py-3.5 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500/50 transition-all font-medium appearance-none">
                        <% jobTypes.forEach(type=> { %>
                            <option value="<%= type.id %>">
                                <%= type.name %>
                            </option>
                            <% }) %>
                    </select>
                </div>
