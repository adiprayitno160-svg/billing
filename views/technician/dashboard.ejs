<div id="addJobModal"
    class="hidden fixed inset-0 bg-slate-900/60 backdrop-blur-sm z-[2050] flex items-center justify-center p-4 transition-all duration-300">
    <div
        class="bg-white rounded-2xl shadow-2xl w-full max-w-2xl overflow-hidden border border-slate-200 animate-zoomIn transform transition-all relative">

        <!-- Gradient Header -->
        <div
            class="px-8 py-5 bg-gradient-to-r from-blue-600 to-indigo-700 flex items-center justify-between shadow-lg relative z-10">
            <div>
                <h3 class="text-xl font-bold text-white tracking-tight flex items-center gap-2">
                    <i class="fas fa-plus-circle text-blue-200"></i>
                    Tambah Pekerjaan Baru
                </h3>
                <p class="text-xs text-blue-100 font-medium mt-0.5">Input data pekerjaan teknisi di lapangan</p>
            </div>
            <button onclick="closeAddJobModal()"
                class="w-8 h-8 rounded-lg bg-white/10 hover:bg-white/20 flex items-center justify-center text-white transition-all backdrop-blur-md">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <form id="addJobForm" class="p-8 space-y-6">
            <!-- Customer Search -->
            <div class="space-y-1.5">
                <label
                    class="text-xs font-bold text-slate-500 uppercase tracking-wider ml-1 flex items-center justify-between">
                    <span>Nama / ID Pelanggan</span>
                    <span class="text-[10px] text-blue-500 font-normal normal-case italic">*Wajib Diisi</span>
                </label>
                <div class="relative group">
                    <input type="text" id="customerSearch" placeholder="Ketik nama atau ID pelanggan..."
                        class="w-full pl-11 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500 transition-all font-medium group-hover:bg-white text-sm">
                    <i
                        class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 group-hover:text-blue-500 transition-colors"></i>
                    <div id="customerResults"
                        class="absolute z-50 left-0 right-0 mt-2 bg-white border border-slate-200 rounded-xl shadow-2xl max-h-60 overflow-y-auto hidden ring-4 ring-slate-100/50">
                    </div>
                </div>
                <input type="hidden" id="selectedCustomerId" name="customer_id" required>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <!-- Job Type -->
                <div class="space-y-1.5">
                    <label class="text-xs font-bold text-slate-500 uppercase tracking-wider ml-1">Jenis
                        Pekerjaan</label>
                    <div class="relative">
                        <select name="job_type_id"
                            class="w-full pl-4 pr-10 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500 transition-all font-medium appearance-none text-sm cursor-pointer hover:bg-white">
                            <% jobTypes.forEach(type=> { %>
                                <option value="<%= type.id %>">
                                    <%= type.name %>
                                </option>
                                <% }) %>
                        </select>
                        <i
                            class="fas fa-chevron-down absolute right-4 top-1/2 -translate-y-1/2 text-slate-400 pointer-events-none text-xs"></i>
                    </div>
                </div>
                <!-- Priority -->
                <div class="space-y-1.5">
                    <label class="text-xs font-bold text-slate-500 uppercase tracking-wider ml-1">Prioritas</label>
                    <div class="relative">
                        <select name="priority"
                            class="w-full pl-4 pr-10 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500 transition-all font-medium appearance-none text-sm cursor-pointer hover:bg-white">
                            <option value="low">Low (Rendah)</option>
                            <option value="medium" selected>Medium (Normal)</option>
