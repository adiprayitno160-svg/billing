                    <label class="text-xs font-bold text-slate-500 uppercase tracking-wider ml-1">Prioritas</label>
                    <select name="priority"
                        class="w-full px-4 py-3.5 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500/50 transition-all font-medium appearance-none">
                        <option value="low">Low</option>
                        <option value="medium" selected>Medium</option>
                        <option value="high">High</option>
                        <option value="critical">Critical</option>
                    </select>
                </div>
            </div>

            <div class="space-y-1.5">
                <label class="text-xs font-bold text-slate-500 uppercase tracking-wider ml-1">Deskripsi / Judul</label>
                <textarea name="title" rows="2" placeholder="Masukan judul atau deskripsi singkat..."
                    class="w-full px-4 py-3.5 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500/50 transition-all font-medium resize-none"></textarea>
            </div>

            <button type="submit"
                class="w-full py-4 bg-blue-600 hover:bg-blue-700 text-white rounded-2xl font-black uppercase tracking-widest shadow-xl shadow-blue-900/20 active:scale-[0.98] transition-all">
                Simpan Pekerjaan
            </button>
        </form>
    </div>
</div>

<!-- Scripts for the dashboard -->
<script>
    let map, jobMarkers = [];

    document.addEventListener('DOMContentLoaded', () => {
        initMap();
        refreshJobs();
        setupSearch();
    });

    function initMap() {
        if (!document.getElementById('quick-map')) return;

        map = L.map('quick-map').setView([-7.0, 110.0], 13);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap'
        }).addTo(map);
    }

    async function refreshJobs() {
        const container = document.getElementById('jobs-container');
        const icon = document.getElementById('refresh-icon');

        icon.classList.add('fa-spin');

        try {
            const res = await fetch('/technician/jobs?limit=20');
            const result = await res.json();

            if (result.success) {
                renderJobs(result.data);
                updateMapMarkers(result.data);
                document.getElementById('jobs-count').textContent = `Menampilkan ${result.data.length} pekerjaan`;
            }
        } catch (error) {
            console.error('Error fetching jobs:', error);
        } finally {
            icon.classList.remove('fa-spin');
            const loading = document.getElementById('jobs-loading');
            if (loading) loading.style.display = 'none';
        }
    }

    function renderJobs(jobs) {
        const container = document.getElementById('jobs-container');

        if (jobs.length === 0) {
            container.innerHTML = `
                <div class="p-12 text-center">
                    <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-clipboard-list text-3xl text-slate-300"></i>
                    </div>
                    <p class="text-slate-500 font-bold">Belum ada pekerjaan yang tersedia</p>
                    <p class="text-slate-400 text-sm">Pekerjaan akan muncul jika ada tiket baru</p>
                </div>
            `;
            return;
        }

        container.innerHTML = jobs.map(job => {
            const statusColors = {
                'pending': 'bg-orange-100 text-orange-700 border-orange-200',
                'accepted': 'bg-blue-100 text-blue-700 border-blue-200',
                'in_progress': 'bg-indigo-100 text-indigo-700 border-indigo-200',
                'completed': 'bg-green-100 text-green-700 border-green-200',
                'cancelled': 'bg-red-100 text-red-700 border-red-200'
            };

            const priorityColors = {
                'low': 'text-gray-400',
                'medium': 'text-blue-400',
                'high': 'text-orange-400',
                'critical': 'text-red-500'
            };

            return `
                <div class="group p-6 hover:bg-slate-50 transition-colors flex items-start gap-4">
                    <div class="w-10 h-10 rounded-xl bg-slate-100 flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform">
                        <i class="fas fa-ticket text-slate-400"></i>
                    </div>
                    <div class="flex-1 min-w-0">
                        <div class="flex items-center justify-between mb-1">
                            <span class="text-xs font-black text-slate-400 uppercase tracking-widest">${job.ticket_number}</span>
                            <span class="text-[10px] px-2 py-0.5 rounded-full border font-black uppercase tracking-widest ${statusColors[job.status]}">${job.status}</span>
                        </div>
                        <h4 class="font-bold text-slate-800 truncate mb-1">${job.title}</h4>
                        <p class="text-sm text-slate-500 font-medium line-clamp-1">${job.customer_name || 'Generic Service'} • ${job.address || 'No location'}</p>
                        
                        <div class="flex items-center gap-4 mt-3">
                            <div class="flex items-center gap-1.5">
                                <i class="fas fa-circle text-[8px] ${priorityColors[job.priority]}"></i>
                                <span class="text-xs font-bold text-slate-400 capitalize">${job.priority} Priority</span>
                            </div>
                            <span class="text-[10px] text-slate-300">|</span>
                            <div class="flex items-center gap-1.5 text-slate-400">
                                <i class="far fa-calendar text-[10px]"></i>
                                <span class="text-xs font-semibold">${new Date(job.created_at).toLocaleString('id-ID', { day: 'numeric', month: 'short', hour: '2-digit', minute: '2-digit' })}</span>
                            </div>
                        </div>
                    </div>
                    <div class="flex-shrink-0 flex gap-2">
                        ${job.status === 'pending' ? `
                            <button onclick="updateJobStatus(${job.id}, 'accepted')" class="p-2.5 bg-blue-600 text-white rounded-xl hover:bg-blue-700 shadow-lg shadow-blue-200 transition-all active:scale-90">
                                <i class="fas fa-handshake"></i>
                            </button>
                        ` : ''}
                        ${job.status === 'accepted' || job.status === 'in_progress' ? `
                            <button onclick="showCompleteModal(${job.id})" class="p-2.5 bg-green-600 text-white rounded-xl hover:bg-green-700 shadow-lg shadow-green-200 transition-all active:scale-90">
                                <i class="fas fa-check"></i>
                            </button>
                        ` : ''}
                        <button onclick="viewJobDetail(${job.id})" class="p-2.5 bg-slate-100 text-slate-600 rounded-xl hover:bg-slate-200 transition-all active:scale-90">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            `;
        }).join('');
    }

    function updateMapMarkers(jobs) {
        jobMarkers.forEach(m => map.removeLayer(m));
        jobMarkers = [];

        const points = [];
        jobs.forEach(job => {
            if (job.coordinates) {
                const parts = job.coordinates.split(',');
                if (parts.length === 2) {
                    const lat = parseFloat(parts[0]);
                    const lng = parseFloat(parts[1]);
                    if (!isNaN(lat) && !isNaN(lng)) {
                        const m = L.marker([lat, lng]).addTo(map)
                            .bindPopup(`<b>${job.ticket_number}</b><br>${job.customer_name || 'Job Location'}<br>${job.title}`);
                        jobMarkers.push(m);
                        points.push([lat, lng]);
                    }
                }
            }
        });

        if (points.length > 0) {
            map.fitBounds(L.latLngBounds(points), { padding: [30, 30] });
        }
    }

    // Modal Helpers
    function showAddJobModal() {
        document.getElementById('addJobModal').classList.remove('hidden');
        document.body.style.overflow = 'hidden';
    }

    function closeAddJobModal() {
        document.getElementById('addJobModal').classList.add('hidden');
        document.body.style.overflow = '';
    }

    async function handleCheckIn() {
        const btn = document.getElementById('btn-checkin');
        const originalText = btn.innerHTML;

        btn.disabled = true;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Processing...';

        try {
            const res = await fetch('/technician/attendance/check-in', { method: 'POST' });
            const result = await res.json();

            if (result.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Berhasil!',
                    text: result.message,
                    background: '#ffffff',
                    confirmButtonColor: '#10b981'
                });
                btn.innerHTML = '<i class="fas fa-check mr-2"></i> Checked In Today';
                btn.className = btn.className.replace('from-emerald-500 to-teal-600', 'from-slate-400 to-slate-500').replace('bg-white', 'bg-emerald-100');
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: result.error || 'Gagal check-in',
                });
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        } catch (error) {
            console.error('Check-in error:', error);
            btn.innerHTML = originalText;
            btn.disabled = false;
        }
    }

    // Search Autocomplete
    function setupSearch() {
        const input = document.getElementById('customerSearch');
        const results = document.getElementById('customerResults');
        let timeout;

        input.addEventListener('input', () => {
            clearTimeout(timeout);
            const query = input.value;
            if (query.length < 2) {
                results.classList.add('hidden');
                return;
            }

            timeout = setTimeout(async () => {
                try {
                    const res = await fetch(`/technician/customers/search?q=${encodeURIComponent(query)}`);
                    const data = await res.json();

                    if (data.success && data.data.length > 0) {
                        results.innerHTML = data.data.map(c => `
                            <div onclick="selectCustomer(${c.id}, '${c.name.replace(/'/g, "\\'")}')" 
                                class="px-5 py-4 hover:bg-blue-50 cursor-pointer border-b border-slate-50 last:border-0 transition-colors">
                                <div class="font-bold text-slate-800">${c.name}</div>
                                <div class="text-xs text-slate-500 font-medium">${c.pppoe_username || c.static_ip || 'No connection ID'} • ${c.address || ''}</div>
                            </div>
                        `).join('');
                        results.classList.remove('hidden');
                    } else {
                        results.innerHTML = '<div class="p-5 text-center text-slate-500 text-sm italic font-medium">Pelanggan tidak ditemukan</div>';
                        results.classList.remove('hidden');
                    }
                } catch (e) {
                    console.error(e);
                }
            }, 300);
        });

        // Close search results when clicking outside
        document.addEventListener('click', (e) => {
            if (!input.contains(e.target) && !results.contains(e.target)) {
                results.classList.add('hidden');
            }
        });
    }

    function selectCustomer(id, name) {
        document.getElementById('selectedCustomerId').value = id;
        document.getElementById('customerSearch').value = name;
        document.getElementById('customerResults').classList.add('hidden');
    }

    // Form Handling
    document.getElementById('addJobForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(e.target);
        const data = Object.fromEntries(formData.entries());

        try {
            const res = await fetch('/technician/jobs/save', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            const result = await res.json();

            if (result.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Tersimpan!',
                    text: 'Pekerjaan berhasil ditambahkan ke daftar.',
                    timer: 2000
                });
                closeAddJobModal();
                e.target.reset();
                refreshJobs();
            } else {
                Swal.fire({ icon: 'error', title: 'Gagal', text: result.error });
            }
        } catch (err) {
            console.error(err);
        }
    });

    async function updateJobStatus(id, status) {
        try {
            const res = await fetch('/technician/jobs/accept', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id, status })
            });
            const result = await res.json();
            if (result.success) {
                refreshJobs();
                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });
                Toast.fire({ icon: 'success', title: 'Status diperbarui' });
            }
        } catch (e) { console.error(e); }
    }

