<div class="space-y-6 animate-fadeIn">
    <!-- Standard Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-slate-800 tracking-tight">Dashboard Teknisi</h1>
            <p class="text-slate-500 text-sm">Selamat datang kembali, <%= user.username %>! Semangat bekerja.</p>
        </div>
        <div class="flex items-center gap-3">
            <div
                class="px-3 py-1 bg-green-100 text-green-700 rounded-lg text-xs font-bold flex items-center gap-2 border border-green-200 shadow-sm">
                <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                System Online
            </div>
            <button onclick="showAddJobModal()"
                class="bg-blue-600 text-white px-4 py-2 rounded-xl text-sm font-bold shadow-lg hover:bg-blue-700 hover:shadow-blue-500/30 transition-all active:scale-95 flex items-center gap-2">
                <i class="fas fa-plus"></i>
                <span>Tambah Pekerjaan</span>
            </button>
        </div>
    </div>

    <!-- Stats Cards (Standardized Gradients) -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Pending (Waiting) -> Orange Gradient -->
        <div
            class="bg-gradient-to-br from-orange-400 via-amber-500 to-yellow-500 rounded-xl p-4 shadow-xl text-white text-center border border-white/70 relative overflow-hidden group hover:-translate-y-1 transition-transform duration-300">
            <div class="absolute top-0 right-0 p-3 opacity-10 group-hover:scale-110 transition-transform">
                <i class="fas fa-clock text-5xl text-white"></i>
            </div>
            <div class="flex items-center justify-center gap-2 mb-2 relative z-10">
                <i class="fas fa-clock opacity-90"></i>
            </div>
            <div class="text-3xl font-bold leading-none mb-1 relative z-10">
                <%= stats.pending || 0 %>
            </div>
            <div class="text-xs opacity-90 font-semibold uppercase tracking-wide relative z-10">Waiting</div>
        </div>

        <!-- In Progress (Active) -> Blue/Indigo Gradient -->
        <div
            class="bg-gradient-to-br from-blue-500 via-indigo-600 to-indigo-700 rounded-xl p-4 shadow-xl text-white text-center border border-white/70 relative overflow-hidden group hover:-translate-y-1 transition-transform duration-300">
            <div class="absolute top-0 right-0 p-3 opacity-10 group-hover:scale-110 transition-transform">
                <i class="fas fa-spinner text-5xl text-white"></i>
            </div>
            <div class="flex items-center justify-center gap-2 mb-2 relative z-10">
                <i class="fas fa-spinner fa-spin opacity-90"></i>
            </div>
            <div class="text-3xl font-bold leading-none mb-1 relative z-10">
                <%= stats.in_progress || 0 %>
            </div>
            <div class="text-xs opacity-90 font-semibold uppercase tracking-wide relative z-10">Pengerjaan</div>
        </div>

        <!-- Completed (Done) -> Green/Emerald Gradient -->
        <div
            class="bg-gradient-to-br from-teal-500 via-emerald-600 to-green-600 rounded-xl p-4 shadow-xl text-white text-center border border-white/70 relative overflow-hidden group hover:-translate-y-1 transition-transform duration-300">
            <div class="absolute top-0 right-0 p-3 opacity-10 group-hover:scale-110 transition-transform">
                <i class="fas fa-check-double text-5xl text-white"></i>
            </div>
            <div class="flex items-center justify-center gap-2 mb-2 relative z-10">
                <i class="fas fa-check-double opacity-90"></i>
            </div>
            <div class="text-3xl font-bold leading-none mb-1 relative z-10">
                <%= stats.completed_today || 0 %>
            </div>
            <div class="text-xs opacity-90 font-semibold uppercase tracking-wide relative z-10">Selesai Hari Ini</div>
        </div>

        <!-- Balance -> Violet/Purple Gradient -->
        <div
            class="bg-gradient-to-br from-violet-500 via-purple-600 to-fuchsia-600 rounded-xl p-4 shadow-xl text-white text-center border border-white/70 relative overflow-hidden group hover:-translate-y-1 transition-transform duration-300">
            <div class="absolute top-0 right-0 p-3 opacity-10 group-hover:scale-110 transition-transform">
                <i class="fas fa-wallet text-5xl text-white"></i>
            </div>
            <div class="flex items-center justify-center gap-2 mb-2 relative z-10">
                <i class="fas fa-wallet opacity-90"></i>
            </div>
            <div class="text-xl md:text-2xl font-bold leading-none mb-1 truncate relative z-10">
                Rp <%= Number(stats.wallet_balance || 0).toLocaleString('id-ID') %>
            </div>
            <div class="text-xs opacity-90 font-semibold uppercase tracking-wide relative z-10">Balance / Titipan</div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Jobs Feed -->
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-slate-100 flex items-center justify-between bg-slate-50/50">
                    <h3 class="font-bold text-slate-800 flex items-center gap-2">
                        <i class="fas fa-list-ul text-blue-600"></i>
                        Daftar Pekerjaan
                    </h3>
                    <button onclick="refreshJobs()"
                        class="p-2 border border-slate-200 rounded-lg hover:bg-white hover:text-blue-600 transition-colors text-slate-500 shadow-sm">
                        <i class="fas fa-rotate" id="refresh-icon"></i>
                    </button>
                </div>

                <div id="jobs-container" class="space-y-4 p-4 min-h-[400px] bg-slate-50/50">
                    <!-- Skeleton Loader -->
                    <div class="p-12 text-center" id="jobs-loading">
                        <div
                            class="inline-block animate-spin w-8 h-8 border-4 border-blue-600 border-t-transparent rounded-full mb-4">
                        </div>
                        <p class="text-slate-500 font-medium tracking-tight">Memuat data...</p>
                    </div>
                </div>

                <div class="px-6 py-3 bg-slate-50/50 border-t border-slate-100 flex items-center justify-between">
                    <span class="text-xs text-slate-500 font-medium" id="jobs-count">Menampilkan 0 pekerjaan</span>
                    <a href="/technician/history"
                        class="text-xs font-bold text-blue-600 hover:text-blue-700 transition-colors flex items-center gap-1">
                        Lihat Riwayat
                        <i class="fas fa-arrow-right text-[10px]"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Sidebar / Tools -->
        <div class="space-y-6">
            <!-- Job Map Section -->
            <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5">
                <h3 class="font-bold text-slate-800 mb-3 flex items-center gap-2 text-sm">
                    <i class="fas fa-map-marker-alt text-red-500"></i>
                    Peta Lokasi
                </h3>
                <div id="quick-map"
                    class="h-56 rounded-xl bg-slate-100 border border-slate-200 mb-2 overflow-hidden z-10 w-full relative">
                </div>
                <p class="text-[10px] text-slate-400 text-center">Klik marker untuk detail</p>
            </div>


        </div>
    </div>
</div>

