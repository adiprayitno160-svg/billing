<div class="space-y-6 animate-fadeIn">
    <!-- Header -->
    <div class="bg-white rounded-3xl shadow-sm border border-slate-100 p-6">
        <div class="flex items-center justify-between">
            <div>
                <h2 class="text-2xl font-bold text-slate-800">Riwayat Pekerjaan Teknisi</h2>
                <p class="text-slate-600 mt-1">Daftar semua pekerjaan yang telah diselesaikan</p>
            </div>
            <div class="flex items-center gap-3">
                <a href="/technician"
                    class="px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-2xl transition-colors font-medium">
                    <i class="fas fa-arrow-left mr-2"></i>Kembali
                </a>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white rounded-3xl p-6 border border-slate-100 shadow-sm">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-slate-500 text-sm font-medium">Total Pekerjaan</p>
                    <p class="text-3xl font-black text-slate-800 mt-1">
                        <%= jobs.length %>
                    </p>
                </div>
                <div class="w-12 h-12 bg-blue-50 rounded-2xl flex items-center justify-center">
                    <i class="fas fa-clipboard-list text-blue-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-3xl p-6 border border-slate-100 shadow-sm">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-slate-500 text-sm font-medium">Selesai</p>
                    <p class="text-3xl font-black text-green-600 mt-1">
                        <%= jobs.filter(job=> job.status === 'completed').length %>
                    </p>
                </div>
                <div class="w-12 h-12 bg-green-50 rounded-2xl flex items-center justify-center">
                    <i class="fas fa-check-circle text-green-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-3xl p-6 border border-slate-100 shadow-sm">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-slate-500 text-sm font-medium">Dibayar</p>
                    <p class="text-3xl font-black text-purple-600 mt-1">
                        <%= jobs.filter(job=> job.status === 'completed' && job.total_fee > 0).length %>
                    </p>
                </div>
                <div class="w-12 h-12 bg-purple-50 rounded-2xl flex items-center justify-center">
                    <i class="fas fa-money-bill-wave text-purple-600 text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Jobs Table -->
    <div class="bg-white rounded-3xl shadow-sm border border-slate-100 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50">
            <h3 class="font-bold text-slate-800 flex items-center gap-2">
                <i class="fas fa-list text-blue-600"></i>
                Daftar Pekerjaan
            </h3>
        </div>

        <% if (jobs.length===0) { %>
            <div class="p-12 text-center">
                <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-clipboard-list text-3xl text-slate-300"></i>
                </div>
                <p class="text-slate-500 font-bold">Belum ada riwayat pekerjaan</p>
                <p class="text-slate-400 text-sm">Pekerjaan yang telah selesai akan muncul di sini</p>
            </div>
            <% } else { %>
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-slate-50 border-b border-slate-100">
                            <tr>
                                <th
                                    class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">
                                    Ticket</th>
                                <th
                                    class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">
                                    Judul</th>
                                <th
                                    class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">
                                    Pelanggan</th>
                                <th
                                    class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">
                                    Status</th>
                                <th
                                    class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">
                                    Tanggal</th>
                                <th
                                    class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">
                                    Biaya</th>
                                <% if (['admin', 'superadmin' , 'operator' ].includes(user.role)) { %>
                                    <th
                                        class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">
                                        Aksi</th>
                                    <% } %>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100">
                            <% jobs.forEach(job=> { %>
                                <tr class="hover:bg-slate-50 transition-colors">
                                    <td class="px-6 py-4 font-bold text-slate-800">
                                        <span
                                            class="text-xs bg-slate-100 text-slate-600 px-2 py-1 rounded-full font-mono">
                                            <%= job.ticket_number %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="font-medium text-slate-800">
                                            <%= job.title %>
                                        </div>
                                        <div class="text-sm text-slate-500 capitalize">
                                            <%= job.priority %> priority
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="font-medium text-slate-700">
                                            <%= job.customer_name || '-' %>
                                        </div>
                                        <div class="text-sm text-slate-500">
                                            <%= job.address ? job.address.substring(0, 30) + (job.address.length> 30 ?
                                                '...' : '') : '-' %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <% const statusColors={ 'pending'
                                            : 'bg-orange-100 text-orange-700 border-orange-200' , 'accepted'
                                            : 'bg-blue-100 text-blue-700 border-blue-200' , 'in_progress'
                                            : 'bg-indigo-100 text-indigo-700 border-indigo-200' , 'completed'
                                            : 'bg-green-100 text-green-700 border-green-200' , 'cancelled'
                                            : 'bg-red-100 text-red-700 border-red-200' }; %>
                                            <span
                                                class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold uppercase tracking-tighter border <%= statusColors[job.status] %>">
                                                <%= job.status %>
                                            </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="text-sm text-slate-600">
                                            <%= new Date(job.created_at).toLocaleDateString('id-ID', { day: 'numeric' ,
                                                month: 'short' , year: 'numeric' }) %>
                                        </div>
                                        <% if (job.completed_at && job.status==='completed' ) { %>
                                            <div class="text-xs text-green-600">
                                                Selesai: <%= new Date(job.completed_at).toLocaleTimeString('id-ID', {
                                                    hour: '2-digit' , minute: '2-digit' }) %>
                                            </div>
                                            <% } %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <% if (job.total_fee> 0) { %>
                                            <div class="font-bold text-green-600">Rp <%=
                                                    Number(job.total_fee).toLocaleString('id-ID') %>
                                            </div>
                                            <% } else { %>
                                                <div class="text-slate-500">-</div>
                                                <% } %>
                                    </td>
                                    <% if (['admin', 'superadmin' , 'operator' ].includes(user.role)) { %>
                                        <td class="px-6 py-4">
                                            <button onclick="deleteJob('<%= job.id %>')"
                                                class="text-red-500 hover:text-red-700 transition-colors p-2 rounded-lg hover:bg-red-50"
                                                title="Hapus Permanen">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                        <% } %>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } %>
    </div>
</div>

<script>
    async function deleteJob(id) {
        const result = await Swal.fire({
            title: 'Hapus Riwayat?',
            text: "Data yang dihapus tidak bisa dikembalikan!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Ya, Hapus!',
            cancelButtonText: 'Batal'
        });

        if (result.isConfirmed) {
            try {
                const res = await fetch(`/technician/jobs/${id}`, { method: 'DELETE' });
                const data = await res.json();

                if (data.success) {
                    Swal.fire('Terhapus!', 'Data berhasil dihapus.', 'success').then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire('Gagal!', data.message || 'Gagal menghapus data.', 'error');
                }
            } catch (e) {
                console.error(e);
                Swal.fire('Error!', 'Terjadi kesalahan sistem.', 'error');
            }
        }
    }
</script>

<style>
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fadeIn {
        animation: fadeIn 0.5s ease-out forwards;
    }
</style>