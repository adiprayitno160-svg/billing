<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Riwayat Pembayaran Gaji</h1>
            <p class="text-sm text-gray-500">Daftar riwayat pembayaran gaji teknisi yang telah disetujui.</p>
        </div>
        <a href="/admin/technician/salary/approval"
            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow-sm flex items-center gap-2">
            <i class="fas fa-plus-circle"></i> Buat Persetujuan Baru
        </a>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg border border-gray-200">
        <% if (history.length===0) { %>
            <div class="text-center py-10 text-gray-500">
                <i class="fas fa-file-invoice-dollar text-4xl mb-3 text-gray-300"></i>
                <p>Belum ada riwayat pembayaran gaji.</p>
            </div>
            <% } else { %>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Tanggal Proses</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Periode</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Teknisi</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Total Gaji</th>
                                <th
                                    class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Aksi</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% history.forEach(p=> {
                                const date = new Date(p.created_at).toLocaleDateString('id-ID', { day: 'numeric', month:
                                'short', year: 'numeric' });
                                const months = ["Januari", "Februari", "Maret", "April", "Mei", "Juni", "Juli",
                                "Agustus", "September", "Oktober", "November", "Desember"];
                                const period = `${months[p.month-1]} ${p.year}`;
                                %>
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        <%= date %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">
                                        <%= period %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">
                                            <%= p.technician_name %>
                                        </div>
                                        <div class="text-xs text-gray-500">Absen: <%= p.total_attendance_days %> hari |
                                                Job: <%= p.total_jobs %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-green-600">
                                        Rp <%= Number(p.final_amount).toLocaleString('id-ID') %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <a href="/admin/technician/payments/slip/<%= p.id %>" target="_blank"
                                            class="text-indigo-600 hover:text-indigo-900 bg-indigo-50 px-3 py-1 rounded-md border border-indigo-200 hover:bg-indigo-100 transition-colors">
                                            <i class="fas fa-print mr-1"></i> Slip Gaji
                                        </a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
                <% } %>
    </div>
</div>
<%- include('../../partials/footer') %>