<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review Import Pelanggan - Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'modern-blue': {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            200: '#bfdbfe',
                            300: '#93c5fd',
                            400: '#60a5fa',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            800: '#1e40af',
                            900: '#1e3a8a',
                        },
                        'modern-purple': {
                            50: '#faf5ff',
                            100: '#f3e8ff',
                            200: '#e9d5ff',
                            300: '#d8b4fe',
                            400: '#c084fc',
                            500: '#a855f7',
                            600: '#9333ea',
                            700: '#7c3aed',
                            800: '#6b21a8',
                            900: '#581c87',
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50">
    <div class="min-h-screen">
        <!-- Header -->
        <div class="bg-white shadow-sm border-b border-gray-200">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center py-4">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">Review Import Pelanggan</h1>
                        <p class="text-sm text-gray-600">Periksa dan edit data sebelum disimpan</p>
                    </div>
                    <div class="flex space-x-3">
                        <button onclick="goBack()" class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                            Kembali
                        </button>
                        <button onclick="processImport()" class="px-4 py-2 bg-modern-blue-600 text-white rounded-lg hover:bg-modern-blue-700">
                            Proses Import
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
                <div class="bg-white p-4 rounded-lg shadow-sm border">
                    <div class="text-2xl font-bold text-modern-blue-600"><%= totalRows %></div>
                    <div class="text-sm text-gray-600">Total Baris</div>
                </div>
                <div class="bg-white p-4 rounded-lg shadow-sm border">
                    <div class="text-2xl font-bold text-green-600"><%= validRows %></div>
                    <div class="text-sm text-gray-600">Data Valid</div>
                </div>
                <div class="bg-white p-4 rounded-lg shadow-sm border">
                    <div class="text-2xl font-bold text-red-600"><%= errorRows %></div>
                    <div class="text-sm text-gray-600">Data Error</div>
                </div>
                <div class="bg-white p-4 rounded-lg shadow-sm border">
                    <div class="text-2xl font-bold text-modern-purple-600"><%= customers.length %></div>
                    <div class="text-sm text-gray-600">Siap Import</div>
                </div>
            </div>

            <!-- Errors -->
            <% if (errors && errors.length > 0) { %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
                <h3 class="text-lg font-semibold text-red-800 mb-2">Error yang Ditemukan:</h3>
                <ul class="space-y-1">
                    <% errors.forEach(error => { %>
                    <li class="text-sm text-red-700">• <%= error %></li>
                    <% }); %>
                </ul>
            </div>
            <% } %>

            <!-- Customer List -->
            <div class="bg-white rounded-lg shadow-sm border">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900">Data Pelanggan yang Akan Diimport</h3>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nama</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Telepon</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipe Koneksi</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Alamat</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Aksi</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% customers.forEach((customer, index) => { %>
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900"><%= customer.name %></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900"><%= customer.phone %></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900"><%= customer.email %></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= customer.connection_type === 'pppoe' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' %>">
                                        <%= customer.connection_type === 'pppoe' ? 'PPPOE' : 'IP Static' %>
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm text-gray-900"><%= customer.address %></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <button onclick="editCustomer(<%= index %>)" class="text-modern-blue-600 hover:text-modern-blue-900 mr-3">
                                        Edit
                                    </button>
                                    <button onclick="removeCustomer(<%= index %>)" class="text-red-600 hover:text-red-900">
                                        Hapus
                                    </button>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div id="editModal" class="fixed inset-0 bg-gray-600  overflow-y-auto h-full w-full hidden">
        <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-3/4 lg:w-1/2 shadow-lg rounded-md bg-white">
            <div class="mt-3">
                <div class="flex justify-between items-center mb-4">
                    <h3 class="text-lg font-medium text-gray-900">Edit Data Pelanggan</h3>
                    <button onclick="closeEditModal()" class="text-gray-400 hover:text-gray-600">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                
                <form id="editForm" class="space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Nama *</label>
                            <input type="text" id="editName" name="name" required
                                class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-modern-blue-500 focus:border-modern-blue-500">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Telepon *</label>
                            <input type="text" id="editPhone" name="phone" required
                                class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-modern-blue-500 focus:border-modern-blue-500">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Email</label>
                            <input type="email" id="editEmail" name="email"
                                class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-modern-blue-500 focus:border-modern-blue-500">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Kode Pelanggan</label>
                            <input type="text" id="editCustomerCode" name="customer_code"
                                class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-modern-blue-500 focus:border-modern-blue-500">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Tipe Koneksi *</label>
                            <select id="editConnectionType" name="connection_type" required
                                class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-modern-blue-500 focus:border-modern-blue-500">
                                <option value="pppoe">PPPOE</option>
                                <option value="static_ip">IP Static</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Alamat</label>
                            <textarea id="editAddress" name="address" rows="2"
                                class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-modern-blue-500 focus:border-modern-blue-500"></textarea>
                        </div>
                    </div>
                    
                    <!-- PPPOE Fields -->
                    <div id="pppoeFields" class="space-y-4">
                        <h4 class="text-md font-medium text-gray-900">Konfigurasi PPPOE</h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Username PPPOE</label>
                                <input type="text" id="editPppoeUsername" name="pppoe_username"
                                    class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-modern-blue-500 focus:border-modern-blue-500">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Password PPPOE</label>
                                <input type="password" id="editPppoePassword" name="pppoe_password"
                                    class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-modern-blue-500 focus:border-modern-blue-500">
                            </div>
                        </div>
                    </div>
                    
                    <!-- Static IP Fields -->
                    <div id="staticIpFields" class="space-y-4 hidden">
                        <h4 class="text-md font-medium text-gray-900">Konfigurasi IP Static</h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700">IP Address</label>
                                <input type="text" id="editIpAddress" name="ip_address"
                                    class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-modern-blue-500 focus:border-modern-blue-500">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Interface</label>
                                <input type="text" id="editInterface" name="interface"
                                    class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-modern-blue-500 focus:border-modern-blue-500">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Gateway</label>
                                <input type="text" id="editGateway" name="gateway"
                                    class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-modern-blue-500 focus:border-modern-blue-500">
                            </div>
                        </div>
                    </div>
                    
                    <div class="flex justify-end space-x-3 pt-4">
                        <button type="button" onclick="closeEditModal()" 
                            class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                            Batal
                        </button>
                        <button type="submit" 
                            class="px-4 py-2 bg-modern-blue-600 text-white rounded-md hover:bg-modern-blue-700">
                            Simpan
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        let customers = <%- JSON.stringify(customers) %>;
        let currentEditIndex = -1;

        function goBack() {
            window.history.back();
        }

        function editCustomer(index) {
            currentEditIndex = index;
            const customer = customers[index];
            
            document.getElementById('editName').value = customer.name || '';
            document.getElementById('editPhone').value = customer.phone || '';
            document.getElementById('editEmail').value = customer.email || '';
            document.getElementById('editCustomerCode').value = customer.customer_code || '';
            document.getElementById('editConnectionType').value = customer.connection_type || 'pppoe';
            document.getElementById('editAddress').value = customer.address || '';
            document.getElementById('editPppoeUsername').value = customer.pppoe_username || '';
            document.getElementById('editPppoePassword').value = customer.pppoe_password || '';
            document.getElementById('editIpAddress').value = customer.ip_address || '';
            document.getElementById('editInterface').value = customer.interface || '';
            document.getElementById('editGateway').value = customer.gateway || '';
            
            toggleConnectionFields();
            document.getElementById('editModal').classList.remove('hidden');
        }

        function removeCustomer(index) {
            if (confirm('Apakah Anda yakin ingin menghapus data ini?')) {
                customers.splice(index, 1);
                location.reload();
            }
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.add('hidden');
            currentEditIndex = -1;
        }

        function toggleConnectionFields() {
            const connectionType = document.getElementById('editConnectionType').value;
            const pppoeFields = document.getElementById('pppoeFields');
            const staticIpFields = document.getElementById('staticIpFields');
            
            if (connectionType === 'pppoe') {
                pppoeFields.classList.remove('hidden');
                staticIpFields.classList.add('hidden');
            } else {
                pppoeFields.classList.add('hidden');
                staticIpFields.classList.remove('hidden');
            }
        }

        function processImport() {
            if (customers.length === 0) {
                alert('Tidak ada data untuk diimport');
                return;
            }
            
            if (confirm(`Apakah Anda yakin ingin mengimport ${customers.length} data pelanggan?`)) {
                fetch('/admin/import/process', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ customers: customers })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(`Import berhasil! ${data.results.success} data berhasil, ${data.results.failed} gagal`);
                        window.location.href = '/customers/list';
                    } else {
                        alert('Import gagal: ' + data.error);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Terjadi kesalahan saat memproses import');
                });
            }
        }

        // Event listeners
        document.getElementById('editConnectionType').addEventListener('change', toggleConnectionFields);
        document.getElementById('editForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (currentEditIndex >= 0) {
                const formData = new FormData(this);
                customers[currentEditIndex] = {
                    name: formData.get('name'),
                    phone: formData.get('phone'),
                    email: formData.get('email'),
                    customer_code: formData.get('customer_code'),
                    connection_type: formData.get('connection_type'),
                    address: formData.get('address'),
                    pppoe_username: formData.get('pppoe_username'),
                    pppoe_password: formData.get('pppoe_password'),
                    ip_address: formData.get('ip_address'),
                    interface: formData.get('interface'),
                    gateway: formData.get('gateway')
                };
                
                closeEditModal();
                location.reload();
            }
        });
    </script>
</body>
</html>
