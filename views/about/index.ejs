<div class="rounded border border-slate-200 bg-white p-6">
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-slate-800">Tentang Aplikasi</h2>
        <div class="flex gap-2">
            <button onclick="checkForHotfix()" class="px-4 py-2 rounded bg-orange-600 text-white hover:bg-orange-700 flex items-center gap-2 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Cek Hotfix
            </button>
            <button onclick="checkForUpdates()" class="px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700 flex items-center gap-2 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                Cek Update
            </button>
        </div>
    </div>

    <% if (success && success.length > 0) { %>
    <div class="mb-4 p-3 bg-green-100 border border-green-300 text-green-700 rounded flex items-start gap-2">
        <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span><%= success[0] %></span>
    </div>
    <% } %>

    <% if (error && error.length > 0) { %>
    <div class="mb-4 p-3 bg-red-100 border border-red-300 text-red-700 rounded flex items-start gap-2">
        <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
        <span><%= error[0] %></span>
    </div>
    <% } %>

    <!-- Version Info -->
    <div class="mb-8 p-4 bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-lg">
        <h3 class="text-lg font-semibold text-slate-800 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            Informasi Versi
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-white p-3 rounded-lg shadow-sm">
                <label class="block text-sm font-medium text-slate-600 mb-1">Versi Saat Ini</label>
                <p class="text-2xl font-bold text-blue-600"><%= version.current %></p>
            </div>
            <div class="bg-white p-3 rounded-lg shadow-sm">
                <label class="block text-sm font-medium text-slate-600 mb-1">Versi Terbaru</label>
                <p class="text-2xl font-bold text-green-600"><%= version.latest %></p>
                <% if (version.current !== version.latest) { %>
                <span class="inline-block mt-1 px-2 py-1 text-xs bg-yellow-100 text-yellow-800 rounded">Update tersedia!</span>
                <% } else { %>
                <span class="inline-block mt-1 px-2 py-1 text-xs bg-green-100 text-green-800 rounded">Versi terbaru</span>
                <% } %>
            </div>
            <div class="bg-white p-3 rounded-lg shadow-sm">
                <label class="block text-sm font-medium text-slate-600 mb-1">Tanggal Release</label>
                <p class="text-sm text-slate-700 font-medium"><%= new Date(version.releaseDate).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' }) %></p>
            </div>
        </div>
    </div>

    <!-- Update Settings -->
    <div class="mb-8 p-4 bg-slate-50 border border-slate-200 rounded-lg">
        <h3 class="text-lg font-semibold text-slate-800 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Pengaturan Update
        </h3>
        <form method="post" action="/about/update-settings" class="space-y-4">
            <div class="flex flex-col sm:flex-row sm:items-center gap-4">
                <label class="flex items-center gap-2 cursor-pointer">
                    <input type="checkbox" name="autoUpdate" <%= updateSettings.autoUpdate ? 'checked' : '' %> class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                    <span class="text-sm font-medium text-slate-700">Auto Update</span>
                </label>
                <div class="flex items-center gap-2">
                    <label class="text-sm font-medium text-slate-700">Channel:</label>
                    <select name="updateChannel" class="px-3 py-1.5 border border-slate-300 rounded text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="stable" <%= updateSettings.updateChannel === 'stable' ? 'selected' : '' %>>Stable</option>
                        <option value="beta" <%= updateSettings.updateChannel === 'beta' ? 'selected' : '' %>>Beta</option>
                        <option value="dev" <%= updateSettings.updateChannel === 'dev' ? 'selected' : '' %>>Development</option>
                    </select>
                </div>
                <button type="submit" class="px-4 py-1.5 bg-blue-600 text-white rounded text-sm hover:bg-blue-700 font-medium">
                    Simpan Pengaturan
                </button>
            </div>
            <p class="text-xs text-slate-600">
                <strong>Stable:</strong> Update stabil yang sudah ditest. 
                <strong>Beta:</strong> Update pre-release dengan fitur baru. 
                <strong>Dev:</strong> Update development (tidak disarankan untuk production).
            </p>
        </form>
    </div>

    <!-- Features -->
    <div class="mb-8">
        <h3 class="text-lg font-semibold text-slate-800 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Fitur Aplikasi
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% features.forEach(function(feature) { %>
            <div class="p-4 border border-slate-200 rounded-lg hover:shadow-md transition-shadow bg-white">
                <div class="flex items-start justify-between mb-2">
                    <h4 class="font-semibold text-slate-800 flex-1"><%= feature.name %></h4>
                    <span class="px-2 py-1 text-xs rounded flex-shrink-0 ml-2 <%= feature.status === 'active' ? 'bg-green-100 text-green-700' : feature.status === 'beta' ? 'bg-yellow-100 text-yellow-700' : 'bg-red-100 text-red-700' %>">
                        <%= feature.status === 'active' ? 'Aktif' : feature.status === 'beta' ? 'Beta' : 'Deprecated' %>
                    </span>
                </div>
                <p class="text-sm text-slate-600 mb-3"><%= feature.description %></p>
                <div class="flex items-center justify-between">
                    <span class="text-xs text-slate-500">v<%= feature.version %></span>
                    <span class="text-xs px-2 py-1 rounded bg-slate-100 text-slate-600">
                        <%= feature.category === 'billing' ? '💰 Billing' : feature.category === 'network' ? '🌐 Network' : feature.category === 'monitoring' ? '📊 Monitoring' : '⚙️ System' %>
                    </span>
                </div>
            </div>
            <% }) %>
        </div>
    </div>

    <!-- Changelog -->
    <div class="mb-8">
        <h3 class="text-lg font-semibold text-slate-800 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Changelog
        </h3>
        <div class="bg-slate-50 border border-slate-200 rounded-lg p-4">
            <ul class="space-y-2">
                <% version.changelog.forEach(function(change) { %>
                <li class="text-sm text-slate-700 flex items-start gap-2">
                    <svg class="w-4 h-4 text-blue-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd" />
                    </svg>
                    <span><%= change %></span>
                </li>
                <% }) %>
            </ul>
        </div>
    </div>

    <!-- Update History -->
    <% if (updateHistory && updateHistory.length > 0) { %>
    <div class="mb-8">
        <h3 class="text-lg font-semibold text-slate-800 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Riwayat Update
        </h3>
        <div class="bg-slate-50 border border-slate-200 rounded-lg overflow-hidden">
            <table class="w-full">
                <thead class="bg-slate-100">
                    <tr>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-slate-600">Dari</th>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-slate-600">Ke</th>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-slate-600">Status</th>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-slate-600">Tanggal</th>
                    </tr>
                </thead>
                <tbody>
                    <% updateHistory.forEach(function(history, index) { %>
                    <tr class="<%= index % 2 === 0 ? 'bg-white' : 'bg-slate-50' %>">
                        <td class="px-4 py-2 text-sm text-slate-700"><%= history.version_from %></td>
                        <td class="px-4 py-2 text-sm text-slate-700 font-medium"><%= history.version_to %></td>
                        <td class="px-4 py-2">
                            <span class="px-2 py-1 text-xs rounded <%= history.status === 'success' ? 'bg-green-100 text-green-700' : history.status === 'failed' ? 'bg-red-100 text-red-700' : 'bg-yellow-100 text-yellow-700' %>">
                                <%= history.status === 'success' ? '✓ Berhasil' : history.status === 'failed' ? '✗ Gagal' : '⟳ ' + history.status %>
                            </span>
                        </td>
                        <td class="px-4 py-2 text-sm text-slate-600">
                            <%= new Date(history.completed_at || history.started_at).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <% } %>

    <!-- System Info -->
    <div class="text-xs text-slate-500 border-t border-slate-200 pt-4 mt-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div>
                <div class="font-semibold text-slate-600">Repository</div>
                <div>adiprayitno160-svg/billing</div>
            </div>
            <div>
                <div class="font-semibold text-slate-600">Platform</div>
                <div>Node.js + TypeScript</div>
            </div>
            <div>
                <div class="font-semibold text-slate-600">Database</div>
                <div>MySQL/MariaDB</div>
            </div>
            <div>
                <div class="font-semibold text-slate-600">Update Method</div>
                <div>Git Pull (GitHub)</div>
            </div>
        </div>
    </div>
</div>

<!-- Update Modal -->
<div id="updateModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
        <h3 class="text-lg font-bold text-slate-800 mb-4" id="updateModalTitle">Update Tersedia</h3>
        <div id="updateModalContent">
            <!-- Content will be populated by JavaScript -->
        </div>
        <div class="flex gap-2 mt-4">
            <button onclick="closeUpdateModal()" class="flex-1 px-4 py-2 border border-slate-300 rounded text-slate-700 hover:bg-slate-50">
                Tutup
            </button>
            <button id="updateNowBtn" onclick="applyUpdate()" class="flex-1 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 font-semibold transition-colors disabled:opacity-50 disabled:cursor-not-allowed" style="display:none;">
                Update Sekarang
            </button>
        </div>
    </div>
</div>

<script>
let latestVersion = null;

async function checkForUpdates() {
    try {
        const button = event.target.closest('button');
        const originalContent = button.innerHTML;
        button.disabled = true;
        button.innerHTML = '<svg class="animate-spin w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Mengecek...';

        const response = await fetch('/about/check-updates');
        const data = await response.json();
        
        console.log('📦 Update check response:', data);
        
        button.disabled = false;
        button.innerHTML = originalContent;
        
        if (data.available) {
            latestVersion = data.version;
            console.log('✅ Update available! Version:', latestVersion);
            showUpdateModal(data, true);
        } else {
            latestVersion = null;
            console.log('ℹ️ No update available. Current version:', data.version || 'Unknown');
            showUpdateModal(data, false);
        }
    } catch (error) {
        console.error('Error checking updates:', error);
        alert('Gagal mengecek update: ' + error.message);
        button.disabled = false;
        button.innerHTML = originalContent;
    }
}

function showUpdateModal(data, hasUpdate) {
    const modal = document.getElementById('updateModal');
    const content = document.getElementById('updateModalContent');
    const updateBtn = document.getElementById('updateNowBtn');
    const modalTitle = document.getElementById('updateModalTitle');
    
    if (hasUpdate) {
        // Ada update tersedia
        console.log('✅ Update available:', data);
        modalTitle.textContent = 'Update Tersedia';
        updateBtn.style.display = 'block';
        updateBtn.disabled = false; // Explicitly enable button
        
        const changelogHtml = data.changelog && data.changelog.length > 0
            ? data.changelog.map(line => `<li class="text-sm text-slate-600">• ${line}</li>`).join('')
            : '<li class="text-sm text-slate-600">Tidak ada changelog</li>';
        
        content.innerHTML = `
            <div class="mb-4">
                <p class="text-sm text-slate-700 mb-2">
                    Versi baru tersedia: <strong class="text-blue-600">${data.version}</strong>
                </p>
                <p class="text-xs text-slate-500">
                    Dirilis: ${new Date(data.releaseDate).toLocaleDateString('id-ID')}
                </p>
            </div>
            <div class="mb-4">
                <h4 class="font-semibold text-sm text-slate-800 mb-2">Perubahan:</h4>
                <ul class="max-h-40 overflow-y-auto space-y-1">
                    ${changelogHtml}
                </ul>
            </div>
            <div class="bg-yellow-50 border border-yellow-200 rounded p-3 text-xs text-yellow-800">
                <strong>⚠️ Peringatan:</strong> Aplikasi akan restart setelah update. Proses ini memakan waktu 1-2 menit.
            </div>
        `;
    } else {
        // Sudah versi terbaru
        modalTitle.textContent = 'Sistem Up-to-Date';
        updateBtn.style.display = 'none';
        
        content.innerHTML = `
            <div class="text-center py-6">
                <svg class="w-16 h-16 mx-auto mb-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h4 class="text-lg font-bold text-slate-800 mb-2">Aplikasi Sudah Terbaru!</h4>
                <p class="text-sm text-slate-600 mb-2">
                    Anda menggunakan versi terbaru: <strong class="text-blue-600">${data.version || 'Unknown'}</strong>
                </p>
                <p class="text-xs text-slate-500">
                    Tidak ada update yang tersedia saat ini.
                </p>
            </div>
        `;
    }
    
    modal.classList.remove('hidden');
    modal.classList.add('flex');
}

function closeUpdateModal() {
    const modal = document.getElementById('updateModal');
    modal.classList.add('hidden');
    modal.classList.remove('flex');
}

function applyUpdate() {
    console.log('🔧 applyUpdate() called');
    console.log('📦 latestVersion:', latestVersion);
    
    if (!latestVersion) {
        console.error('❌ No latestVersion set!');
        alert('Versi update tidak ditemukan. Silakan cek update terlebih dahulu.');
        return;
    }

    console.log('✅ Proceeding with update directly (no confirmation needed)');
    
    // Close update modal first
    closeUpdateModal();
    
    // Create and submit form
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = '/about/update';
    
    const versionInput = document.createElement('input');
    versionInput.type = 'hidden';
    versionInput.name = 'version';
    versionInput.value = latestVersion;
    
    form.appendChild(versionInput);
    document.body.appendChild(form);
    
    console.log('📝 Form created and appended to body');
    console.log('📤 Submitting form to:', form.action);
    
    // Show loading indicator
    const loadingDiv = document.createElement('div');
    loadingDiv.className = 'fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50';
    loadingDiv.innerHTML = `
        <div class="bg-white rounded-lg p-8 text-center max-w-md">
            <svg class="animate-spin w-16 h-16 mx-auto mb-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <h3 class="text-xl font-bold text-slate-800 mb-3">🚀 Updating...</h3>
            <p class="text-sm text-slate-600 mb-2">Mohon tunggu, aplikasi sedang diupdate ke versi <strong class="text-blue-600">${latestVersion}</strong></p>
            <div class="bg-yellow-50 border border-yellow-200 rounded p-3 mt-4 text-left">
                <p class="text-xs text-yellow-800 font-semibold mb-1">⚠️ Proses Update:</p>
                <ul class="text-xs text-yellow-700 space-y-1">
                    <li>• Pulling code dari GitHub</li>
                    <li>• Installing dependencies</li>
                    <li>• Building aplikasi</li>
                    <li>• Restarting PM2</li>
                </ul>
            </div>
            <p class="text-xs text-slate-500 mt-3">⏱️ Estimasi waktu: 1-2 menit</p>
            <p class="text-xs text-slate-400 mt-2">Halaman akan refresh otomatis setelah selesai</p>
        </div>
    `;
    document.body.appendChild(loadingDiv);
    
    console.log('🚀 Submitting form now...');
    
    // Small delay to ensure loading shows
    setTimeout(() => {
        form.submit();
        console.log('✅ Form submitted!');
    }, 300);
}

// Close modal on background click
document.getElementById('updateModal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeUpdateModal();
    }
});

// Ensure update button is clickable - Add explicit event listener
document.addEventListener('DOMContentLoaded', function() {
    console.log('🎯 Page loaded, setting up update button...');
    
    const updateBtn = document.getElementById('updateNowBtn');
    if (updateBtn) {
        console.log('✅ Update button found:', updateBtn);
        
        // Remove any existing onclick and add fresh one
        updateBtn.onclick = null;
        updateBtn.addEventListener('click', function(e) {
            console.log('🖱️ Update button clicked!');
            e.preventDefault();
            e.stopPropagation();
            applyUpdate();
        });
        
        console.log('✅ Update button event listener attached');
    } else {
        console.error('❌ Update button not found!');
    }
    
    // Test function - call this from console to test: testUpdate()
    window.testUpdate = function() {
        console.log('🧪 Testing update button...');
        console.log('latestVersion:', latestVersion);
        applyUpdate();
    };
});

// Hotfix Check Function
async function checkForHotfix() {
    try {
        const button = event.target.closest('button');
        const originalContent = button.innerHTML;
        button.disabled = true;
        button.innerHTML = '<svg class="animate-spin w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Mengecek...';

        const response = await fetch('/about/check-hotfix');
        const data = await response.json();
        
        console.log('🔧 Hotfix check response:', data);
        
        button.disabled = false;
        button.innerHTML = originalContent;
        
        if (data.available) {
            showHotfixModal(data, true);
        } else {
            showHotfixModal(data, false);
        }
    } catch (error) {
        console.error('Error checking hotfix:', error);
        alert('Gagal mengecek hotfix: ' + error.message);
        button.disabled = false;
        button.innerHTML = originalContent;
    }
}

function showHotfixModal(data, hasHotfix) {
    const modal = document.getElementById('updateModal');
    const content = document.getElementById('updateModalContent');
    const updateBtn = document.getElementById('updateNowBtn');
    const modalTitle = document.getElementById('updateModalTitle');
    
    if (hasHotfix) {
        // Ada hotfix tersedia
        console.log('🔧 Hotfix available:', data);
        modalTitle.textContent = '🔧 Hotfix Tersedia';
        updateBtn.style.display = 'block';
        updateBtn.disabled = false;
        updateBtn.textContent = 'Apply Hotfix';
        updateBtn.onclick = function() { applyHotfix(data.version); };
        
        const fixesHtml = data.fixes && data.fixes.length > 0
            ? data.fixes.map(line => `<li class="text-sm text-slate-600">• ${line}</li>`).join('')
            : '<li class="text-sm text-slate-600">Bug fixes and improvements</li>';
        
        content.innerHTML = `
            <div class="mb-4 bg-orange-50 border-2 border-orange-200 rounded-lg p-4">
                <div class="flex items-center gap-2 mb-2">
                    <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <h4 class="font-bold text-orange-800">Hotfix ${data.version}</h4>
                </div>
                <p class="text-sm text-orange-700">
                    Perbaikan bug kecil tersedia tanpa perlu update versi mayor.
                </p>
            </div>
            <div class="mb-4">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-sm text-slate-600">Versi Saat Ini:</span>
                    <span class="font-bold text-slate-800">${data.currentVersion}</span>
                </div>
                <div class="flex items-center justify-between mb-2">
                    <span class="text-sm text-slate-600">Hotfix Baru:</span>
                    <span class="font-bold text-orange-600">${data.version}</span>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-sm text-slate-600">Severity:</span>
                    <span class="px-2 py-1 text-xs rounded ${data.severity === 'critical' ? 'bg-red-100 text-red-700' : data.severity === 'high' ? 'bg-orange-100 text-orange-700' : 'bg-yellow-100 text-yellow-700'}">
                        ${data.severity === 'critical' ? '🔴 Critical' : data.severity === 'high' ? '🟠 High' : '🟡 Medium'}
                    </span>
                </div>
            </div>
            <div class="mb-4">
                <h4 class="font-semibold text-sm text-slate-800 mb-2">Perbaikan:</h4>
                <ul class="max-h-32 overflow-y-auto space-y-1 bg-slate-50 rounded p-3">
                    ${fixesHtml}
                </ul>
            </div>
            <div class="bg-blue-50 border border-blue-200 rounded p-3 text-xs text-blue-800">
                <strong>ℹ️ Info:</strong> Hotfix tidak mengubah versi major. Aplikasi akan restart sebentar (~30 detik).
            </div>
        `;
    } else {
        // Sudah versi terbaru
        modalTitle.textContent = '✅ No Hotfix Needed';
        updateBtn.style.display = 'none';
        
        content.innerHTML = `
            <div class="text-center py-6">
                <svg class="w-16 h-16 mx-auto mb-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h4 class="text-lg font-bold text-slate-800 mb-2">Tidak Ada Hotfix</h4>
                <p class="text-sm text-slate-600 mb-2">
                    Anda menggunakan versi terbaru: <strong class="text-blue-600">${data.currentVersion || data.version}</strong>
                </p>
                <p class="text-xs text-slate-500">
                    Sistem Anda sudah dalam kondisi optimal.
                </p>
            </div>
        `;
    }
    
    modal.classList.remove('hidden');
    modal.classList.add('flex');
}

function applyHotfix(version) {
    console.log('🔧 Applying hotfix:', version);
    
    if (!version) {
        alert('Versi hotfix tidak ditemukan. Silakan cek hotfix terlebih dahulu.');
        return;
    }
    
    // Close modal
    closeUpdateModal();
    
    // Create and submit form
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = '/about/apply-hotfix';
    
    const versionInput = document.createElement('input');
    versionInput.type = 'hidden';
    versionInput.name = 'version';
    versionInput.value = version;
    
    form.appendChild(versionInput);
    document.body.appendChild(form);
    
    // Show loading indicator
    const loadingDiv = document.createElement('div');
    loadingDiv.className = 'fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50';
    loadingDiv.innerHTML = `
        <div class="bg-white rounded-lg p-8 text-center max-w-md">
            <svg class="animate-spin w-16 h-16 mx-auto mb-4 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <h3 class="text-xl font-bold text-slate-800 mb-3">🔧 Applying Hotfix...</h3>
            <p class="text-sm text-slate-600 mb-2">Mohon tunggu, hotfix <strong class="text-orange-600">${version}</strong> sedang diterapkan</p>
            <div class="bg-orange-50 border border-orange-200 rounded p-3 mt-4 text-left">
                <p class="text-xs text-orange-800 font-semibold mb-1">🔧 Proses Hotfix:</p>
                <ul class="text-xs text-orange-700 space-y-1">
                    <li>• Pulling hotfix dari GitHub</li>
                    <li>• Applying database fixes (if any)</li>
                    <li>• Restarting PM2</li>
                </ul>
            </div>
            <p class="text-xs text-slate-500 mt-3">⏱️ Estimasi waktu: 30-60 detik</p>
            <p class="text-xs text-slate-400 mt-2">Halaman akan refresh otomatis setelah selesai</p>
        </div>
    `;
    document.body.appendChild(loadingDiv);
    
    // Submit form
    setTimeout(() => {
        form.submit();
    }, 300);
}
</script>
