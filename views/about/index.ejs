// Function to check if server is back online and redirect to About page
function checkServerAndRedirect() {
    let attempts = 0;
    const maxAttempts = 30; // Try for 30 times (30 seconds)
    
    // Update status message
    const statusEl = document.getElementById('updateStatus');
    if (statusEl) {
        statusEl.innerHTML = 'Menunggu server restart... <span class="text-blue-600">Jangan tutup halaman!</span>';
    }
    
    // Mark steps as complete
    const markStepComplete = (stepId) => {
        const step = document.getElementById(stepId);
        if (step) step.innerHTML = step.innerHTML.replace('⏳', '✅');
    };
    
    // Simulate step completion for visual feedback
    setTimeout(() => markStepComplete('step1'), 10000);  // 10s
    setTimeout(() => markStepComplete('step2'), 25000);  // 25s
    setTimeout(() => markStepComplete('step3'), 35000);  // 35s
    setTimeout(() => markStepComplete('step4'), 45000);  // 45s
    
    const checkInterval = setInterval(async () => {
        attempts++;
        console.log(`🔄 Checking server status... Attempt ${attempts}/${maxAttempts}`);
        
        try {
            const response = await fetch('/about', { 
                method: 'HEAD',
                cache: 'no-cache',
                headers: { 'Cache-Control': 'no-cache' }
            });
            
            if (response.ok) {
                console.log('✅ Server is back online!');
                clearInterval(checkInterval);
                
                // Mark all steps complete
                markStepComplete('step1');
                markStepComplete('step2');
                markStepComplete('step3');
                markStepComplete('step4');
                markStepComplete('step5');
                
                // Update status
                if (statusEl) {
                    statusEl.innerHTML = '✅ <strong class="text-green-600">Update berhasil!</strong> Redirect ke halaman About...';
                }
                
                // Short delay before redirect to show success message
                setTimeout(() => {
                    window.location.href = '/about?updated=success';
                }, 1500);
            }
        } catch (error) {
            console.log(`⏳ Server not ready yet... (${error.message})`);
            
            // Update status with attempt count
            if (statusEl && attempts > 5) {
                statusEl.innerHTML = `Menunggu server siap... <span class="text-blue-600">(${attempts}/${maxAttempts})</span>`;
            }
            
            if (attempts >= maxAttempts) {
                console.log('⚠️ Max attempts reached, redirecting anyway...');
                clearInterval(checkInterval);
                
                // Update status
                if (statusEl) {
                    statusEl.innerHTML = '⚠️ Server membutuhkan waktu lebih lama. Mencoba redirect...';
                }
                
                // Try redirect anyway
                setTimeout(() => {
                    window.location.href = '/about?updated=timeout';
                }, 2000);
            }
        }
    }, 1000); // Check every 1 second
}

