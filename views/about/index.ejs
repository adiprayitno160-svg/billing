<script>
let latestVersion = null;

async function checkForUpdates() {
    try {
        const button = event.target.closest('button');
        const originalContent = button.innerHTML;
        button.disabled = true;
        button.innerHTML = '<svg class="animate-spin w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Mengecek...';

        const response = await fetch('/about/check-updates');
        const data = await response.json();
        
        console.log('📦 Update check response:', data);
        
        button.disabled = false;
        button.innerHTML = originalContent;
        
        if (data.available) {
            latestVersion = data.version;
            console.log('✅ Update available! Version:', latestVersion);
            showUpdateModal(data, true);
        } else {
            latestVersion = null;
            console.log('ℹ️ No update available. Current version:', data.version || 'Unknown');
            showUpdateModal(data, false);
        }
    } catch (error) {
        console.error('Error checking updates:', error);
        alert('Gagal mengecek update: ' + error.message);
        button.disabled = false;
        button.innerHTML = originalContent;
    }
}

function showUpdateModal(data, hasUpdate) {
    const modal = document.getElementById('updateModal');
    const content = document.getElementById('updateModalContent');
    const updateBtn = document.getElementById('updateNowBtn');
    const modalTitle = document.getElementById('updateModalTitle');
    
    if (hasUpdate) {
        // Ada update tersedia
        console.log('✅ Update available:', data);
        modalTitle.textContent = 'Update Tersedia';
        updateBtn.style.display = 'block';
        updateBtn.disabled = false; // Explicitly enable button
        
        const changelogHtml = data.changelog && data.changelog.length > 0
            ? data.changelog.map(line => `<li class="text-sm text-slate-600">• ${line}</li>`).join('')
            : '<li class="text-sm text-slate-600">Tidak ada changelog</li>';
        
        content.innerHTML = `
            <div class="mb-4">
                <p class="text-sm text-slate-700 mb-2">
                    Versi baru tersedia: <strong class="text-blue-600">${data.version}</strong>
                </p>
                <p class="text-xs text-slate-500">
                    Dirilis: ${new Date(data.releaseDate).toLocaleDateString('id-ID')}
                </p>
            </div>
            <div class="mb-4">
                <h4 class="font-semibold text-sm text-slate-800 mb-2">Perubahan:</h4>
                <ul class="max-h-40 overflow-y-auto space-y-1">
                    ${changelogHtml}
                </ul>
            </div>
            <div class="bg-yellow-50 border border-yellow-200 rounded p-3 text-xs text-yellow-800">
                <strong>⚠️ Peringatan:</strong> Aplikasi akan restart setelah update. Proses ini memakan waktu 1-2 menit.
            </div>
        `;
    } else {
        // Sudah versi terbaru
        modalTitle.textContent = 'Sistem Up-to-Date';
        updateBtn.style.display = 'none';
        
        content.innerHTML = `
            <div class="text-center py-6">
                <svg class="w-16 h-16 mx-auto mb-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h4 class="text-lg font-bold text-slate-800 mb-2">Aplikasi Sudah Terbaru!</h4>
                <p class="text-sm text-slate-600 mb-2">
                    Anda menggunakan versi terbaru: <strong class="text-blue-600">${data.version || 'Unknown'}</strong>
                </p>
                <p class="text-xs text-slate-500">
                    Tidak ada update yang tersedia saat ini.
                </p>
            </div>
        `;
    }
    
    modal.classList.remove('hidden');
    modal.classList.add('flex');
}

// Show latest update details automatically after restart (once per version)
document.addEventListener('DOMContentLoaded', function(){
    try {
        // Get latest version from server-provided updateHistory
        <% if (Array.isArray(updateHistory) && updateHistory.length > 0) { %>
        latestVersion = '<%= (updateHistory[0].version_to || updateHistory[0].version || '') %>';
        <% } %>

        if (!latestVersion) return;

        function getCookie(name){
            const m = document.cookie.match('(^|;)\\s*' + name + '\\s*=\\s*([^;]+)');
            return m ? m.pop() : '';
        }
        function setCookie(name, value, days){
            const d = new Date();
            d.setTime(d.getTime() + (days*24*60*60*1000));
            document.cookie = name + '=' + value + ';expires=' + d.toUTCString() + ';path=/';
        }

        const seen = getCookie('sawUpdateVersion');
        if (seen !== latestVersion) {
            const modal = document.getElementById('updateModal');
            const modalTitle = document.getElementById('updateModalTitle');
            const modalContent = document.getElementById('updateModalContent');
            const updateBtn = document.getElementById('updateNowBtn');
