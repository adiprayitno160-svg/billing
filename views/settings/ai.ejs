<div class="container-fluid py-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="bg-white rounded-lg shadow-lg mb-6">
            <div class="bg-gradient-to-r from-purple-600 to-indigo-600 text-white px-6 py-4 rounded-t-lg">
                <h1 class="text-2xl font-bold flex items-center">
                    <i class="fas fa-robot mr-3"></i>
                    Pengaturan AI Pembayaran (Gemini)
                </h1>
                <p class="text-purple-100 mt-2 text-sm">
                    Konfigurasi Google Gemini AI untuk auto-approve pembayaran via bukti transfer
                </p>
            </div>
        </div>

        <!-- AI Status Card -->
        <div id="aiStatusCard" class="bg-white rounded-lg shadow-lg mb-6 p-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div id="statusIndicator" class="w-4 h-4 rounded-full bg-gray-300 animate-pulse"></div>
                    <div>
                        <h3 class="font-semibold text-gray-800">Status Koneksi AI</h3>
                        <p id="statusText" class="text-sm text-gray-500">Memeriksa koneksi...</p>
                    </div>
                </div>
                <div id="statusDetails" class="text-right">
                    <p id="modelInfo" class="text-xs text-gray-400">Model: -</p>
                    <p id="lastCheck" class="text-xs text-gray-400">Last check: -</p>
                </div>
            </div>
        </div>

        <!-- Flash Messages -->
        <% if (typeof success !=='undefined' && success) { %>
            <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6 rounded-lg shadow-sm">
                <div class="flex items-center">
                    <i class="fas fa-check-circle text-green-500 text-xl mr-3"></i>
                    <p class="text-green-800 font-medium">
                        <%= success %>
                    </p>
                </div>
            </div>
            <% } %>

                <% if (typeof error !=='undefined' && error) { %>
                    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded-lg shadow-sm">
                        <div class="flex items-center">
                            <i class="fas fa-exclamation-circle text-red-500 text-xl mr-3"></i>
                            <p class="text-red-800 font-medium">
                                <%= error %>
                            </p>
                        </div>
                    </div>
                    <% } %>

                        <!-- Settings Form -->
                        <form action="/settings/ai" method="POST" id="aiSettingsForm"
                            class="bg-white rounded-lg shadow-lg p-6">
                            <!-- API Key Section -->
                            <div class="mb-8">
                                <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                                    <i class="fas fa-key mr-2 text-purple-600"></i>
                                    API Configuration
                                </h2>

                                <div class="space-y-4">
                                    <div>
                                        <label for="api_key" class="block text-sm font-medium text-gray-700 mb-2">
                                            Gemini API Key <span class="text-red-500">*</span>
                                        </label>
                                        <div class="flex gap-2">
                                            <input type="password" id="api_key" name="api_key"
                                                value="<%= settings.api_key || '' %>"
                                                class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                                                placeholder="Masukkan Gemini API Key" required />
                                            <button type="button" id="toggleApiKey"
                                                class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg transition">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button type="button" id="testApiKey"
                                                class="px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg transition">
                                                <i class="fas fa-vial mr-2"></i>
                                                Test
                                            </button>
                                        </div>
                                        <p class="text-xs text-gray-500 mt-1">
                                            Dapatkan API Key di <a href="https://makersuite.google.com/app/apikey"
                                                target="_blank" class="text-blue-500 hover:underline">Google AI
                                                Studio</a>
                                        </p>
                                        <div id="testResult" class="mt-2 hidden"></div>
                                    </div>

                                    <div>
                                        <label for="model" class="block text-sm font-medium text-gray-700 mb-2">
                                            Model
                                        </label>
                                        <select id="model" name="model"
                                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                                            <option value="gemini-2.5-flash" <%=settings.model==='gemini-2.5-flash'
                                                ? 'selected' : '' %>>Gemini 2.5 Flash (Recommended)</option>
                                            <option value="gemini-2.0-flash" <%=settings.model==='gemini-2.0-flash'
                                                ? 'selected' : '' %>>Gemini 2.0 Flash</option>
                                            <option value="gemini-2.0-flash-lite"
                                                <%=settings.model==='gemini-2.0-flash-lite' ? 'selected' : '' %>>Gemini
                                                2.0 Flash Lite</option>
                                            <option value="gemini-1.5-flash" <%=settings.model==='gemini-1.5-flash'
                                                ? 'selected' : '' %>>Gemini 1.5 Flash</option>
                                            <option value="gemini-1.5-pro" <%=settings.model==='gemini-1.5-pro'
                                                ? 'selected' : '' %>>Gemini 1.5 Pro</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <!-- Enable/Disable Section -->
                            <div class="mb-8 border-t pt-6">
                                <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                                    <i class="fas fa-toggle-on mr-2 text-purple-600"></i>
                                    Status
                                </h2>

                                <div class="space-y-4">
                                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                                        <div>
                                            <label for="enabled"
                                                class="text-sm font-medium text-gray-700 cursor-pointer">
                                                Aktifkan AI Analysis
                                            </label>
                                            <p class="text-xs text-gray-500 mt-1">
                                                Aktifkan analisis bukti transfer menggunakan Gemini AI
                                            </p>
                                        </div>
                                        <label class="relative inline-flex items-center cursor-pointer">
                                            <input type="checkbox" id="enabled" name="enabled" value="1"
                                                <%=settings.enabled ? 'checked' : '' %>
                                            class="sr-only peer"
                                            />
                                            <div
                                                class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600">
                                            </div>
                                        </label>
                                    </div>

                                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                                        <div>
                                            <label for="auto_approve_enabled"
                                                class="text-sm font-medium text-gray-700 cursor-pointer">
                                                Aktifkan Auto-Approve
                                            </label>
                                            <p class="text-xs text-gray-500 mt-1">
                                                Otomatis approve pembayaran jika sesuai kriteria
                                            </p>
                                        </div>
                                        <label class="relative inline-flex items-center cursor-pointer">
                                            <input type="checkbox" id="auto_approve_enabled" name="auto_approve_enabled"
                                                value="1" <%=settings.auto_approve_enabled ? 'checked' : '' %>
                                            class="sr-only peer"
                                            />
                                            <div
                                                class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600">
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <!-- Auto-Approve Criteria -->
                            <div class="mb-8 border-t pt-6">
                                <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                                    <i class="fas fa-sliders-h mr-2 text-purple-600"></i>
                                    Kriteria Auto-Approve
                                </h2>

                                <div class="space-y-4">
                                    <div>
                                        <label for="min_confidence"
                                            class="block text-sm font-medium text-gray-700 mb-2">
                                            Minimum Confidence Score (%)
                                        </label>
                                        <input type="number" id="min_confidence" name="min_confidence"
                                            value="<%= settings.min_confidence || 70 %>" min="0" max="100"
                                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                                            required />
                                        <p class="text-xs text-gray-500 mt-1">
                                            Minimum confidence score untuk auto-approve (0-100)
                                        </p>
                                    </div>

                                    <div>
                                        <label for="risk_threshold"
                                            class="block text-sm font-medium text-gray-700 mb-2">
                                            Risk Threshold
                                        </label>
                                        <select id="risk_threshold" name="risk_threshold"
                                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                                            <option value="low" <%=settings.risk_threshold==='low' ? 'selected' : '' %>
                                                >Low (Hanya approve jika risiko rendah)</option>
                                            <option value="medium" <%=settings.risk_threshold==='medium' ? 'selected'
                                                : '' %>>Medium (Approve risiko rendah & sedang)
                                            </option>
                                            <option value="high" <%=settings.risk_threshold==='high' ? 'selected' : ''
                                                %>>High (Approve semua kecuali risiko sangat tinggi)</option>
                                        </select>
                                        <p class="text-xs text-gray-500 mt-1">
                                            Maksimum tingkat risiko yang dapat di-approve otomatis
                                        </p>
                                    </div>

                                    <div>
                                        <label for="max_age_days" class="block text-sm font-medium text-gray-700 mb-2">
                                            Maksimum Umur Bukti Transfer (Hari)
                                        </label>
                                        <input type="number" id="max_age_days" name="max_age_days"
                                            value="<%= settings.max_age_days || 7 %>" min="1" max="30"
                                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                                            required />
                                        <p class="text-xs text-gray-500 mt-1">
                                            Bukti transfer yang lebih lama dari ini akan ditolak
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Info Box -->
                            <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-lg mb-6">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-info-circle text-blue-500 text-xl"></i>
                                    </div>
                                    <div class="ml-3">
                                        <h3 class="text-sm font-medium text-blue-800">
                                            Informasi
                                        </h3>
                                        <div class="mt-2 text-sm text-blue-700">
                                            <ul class="list-disc list-inside space-y-1">
                                                <li>AI akan menganalisis bukti transfer untuk invoice</li>
                                                <li>Auto-approve hanya berlaku jika semua kriteria terpenuhi</li>
                                                <li>Pembayaran yang tidak memenuhi kriteria akan masuk manual review
                                                </li>
                                                <li>Mendukung Brimo, Bank Transfer, dan E-Wallet</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="flex justify-end gap-3">
                                <button type="button" onclick="window.location.reload()"
                                    class="px-6 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-lg transition">
                                    Batal
                                </button>
                                <button type="submit"
                                    class="px-6 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition">
                                    <i class="fas fa-save mr-2"></i>
                                    Simpan Pengaturan
                                </button>
                            </div>
                        </form>

                        <!-- AI Verification Statistics -->
                        <div class="bg-white rounded-lg shadow-lg mt-6 overflow-hidden">
                            <div class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-6 py-4">
                                <h2 class="text-xl font-bold flex items-center">
                                    <i class="fas fa-chart-bar mr-3"></i>
                                    Statistik Verifikasi AI
                                </h2>
                                <p class="text-indigo-100 mt-1 text-sm">Performa AI dalam memverifikasi pembayaran</p>
                            </div>

                            <div class="p-6">
                                <!-- Stats Grid -->
                                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                                    <div
                                        class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-4 border border-blue-200">
                                        <div class="flex items-center gap-3">
                                            <div class="p-3 bg-blue-500 rounded-lg">
                                                <i class="fas fa-file-invoice text-white"></i>
                                            </div>
                                            <div>
                                                <p class="text-xs font-semibold text-blue-600 uppercase">Total
                                                    Verifikasi</p>
                                                <p class="text-2xl font-bold text-blue-800" id="statTotalVerifications">
                                                    -</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div
                                        class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-4 border border-green-200">
                                        <div class="flex items-center gap-3">
                                            <div class="p-3 bg-green-500 rounded-lg">
                                                <i class="fas fa-check-circle text-white"></i>
                                            </div>
                                            <div>
                                                <p class="text-xs font-semibold text-green-600 uppercase">Auto-Approved
                                                </p>
                                                <p class="text-2xl font-bold text-green-800" id="statAutoApproved">-</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div
                                        class="bg-gradient-to-br from-amber-50 to-amber-100 rounded-xl p-4 border border-amber-200">
                                        <div class="flex items-center gap-3">
                                            <div class="p-3 bg-amber-500 rounded-lg">
                                                <i class="fas fa-user-check text-white"></i>
                                            </div>
                                            <div>
                                                <p class="text-xs font-semibold text-amber-600 uppercase">Manual Review
                                                </p>
                                                <p class="text-2xl font-bold text-amber-800" id="statManualReview">-</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div
                                        class="bg-gradient-to-br from-red-50 to-red-100 rounded-xl p-4 border border-red-200">
                                        <div class="flex items-center gap-3">
                                            <div class="p-3 bg-red-500 rounded-lg">
                                                <i class="fas fa-times-circle text-white"></i>
                                            </div>
                                            <div>
                                                <p class="text-xs font-semibold text-red-600 uppercase">Ditolak</p>
                                                <p class="text-2xl font-bold text-red-800" id="statRejected">-</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Performance Metrics -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div class="bg-gray-50 rounded-xl p-4 border border-gray-200">
                                        <h4 class="font-semibold text-gray-800 mb-3 flex items-center">
                                            <i class="fas fa-bullseye text-purple-500 mr-2"></i>
                                            Tingkat Keberhasilan Auto-Approve
                                        </h4>
                                        <div class="flex items-center gap-4">
                                            <div class="flex-1 bg-gray-200 rounded-full h-4 overflow-hidden">
                                                <div id="successRateBar"
                                                    class="bg-gradient-to-r from-green-400 to-green-600 h-full transition-all duration-500"
                                                    style="width: 0%"></div>
                                            </div>
                                            <span id="successRate" class="text-lg font-bold text-green-600">-</span>
                                        </div>
                                    </div>
                                    <div class="bg-gray-50 rounded-xl p-4 border border-gray-200">
                                        <h4 class="font-semibold text-gray-800 mb-3 flex items-center">
                                            <i class="fas fa-brain text-purple-500 mr-2"></i>
                                            Rata-rata Confidence AI
                                        </h4>
                                        <div class="flex items-center gap-4">
                                            <div class="flex-1 bg-gray-200 rounded-full h-4 overflow-hidden">
                                                <div id="confidenceBar"
                                                    class="bg-gradient-to-r from-purple-400 to-purple-600 h-full transition-all duration-500"
                                                    style="width: 0%"></div>
                                            </div>
                                            <span id="avgConfidence" class="text-lg font-bold text-purple-600">-</span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Feature Highlights -->
                                <div
                                    class="mt-6 bg-gradient-to-r from-purple-50 to-indigo-50 rounded-xl p-4 border border-purple-200">
                                    <h4 class="font-semibold text-purple-800 mb-3 flex items-center">
                                        <i class="fas fa-magic text-purple-600 mr-2"></i>
                                        Fitur AI yang Aktif
                                    </h4>
                                    <div class="grid grid-cols-2 md:grid-cols-4 gap-3 text-sm">
                                        <div class="flex items-center gap-2 text-purple-700">
                                            <i class="fas fa-check text-green-500"></i>
                                            <span>Multi-Stage Verification</span>
                                        </div>
                                        <div class="flex items-center gap-2 text-purple-700">
                                            <i class="fas fa-check text-green-500"></i>
                                            <span>Smart Amount Matching</span>
                                        </div>
                                        <div class="flex items-center gap-2 text-purple-700">
                                            <i class="fas fa-check text-green-500"></i>
                                            <span>Fraud Detection</span>
                                        </div>
                                        <div class="flex items-center gap-2 text-purple-700">
                                            <i class="fas fa-check text-green-500"></i>
                                            <span>Auto-Restore Isolation</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
    </div>
</div>

<script>
    // Toggle API key visibility
    document.getElementById('toggleApiKey')?.addEventListener('click', function () {
        const apiKeyInput = document.getElementById('api_key');
        const icon = this.querySelector('i');
        if (apiKeyInput.type === 'password') {
            apiKeyInput.type = 'text';
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');
        } else {
            apiKeyInput.type = 'password';
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
        }
    });

    // Test API key
    document.getElementById('testApiKey')?.addEventListener('click', async function () {
        const apiKey = document.getElementById('api_key').value;
        const testResult = document.getElementById('testResult');
        const button = this;

        if (!apiKey) {
            testResult.className = 'mt-2 p-3 bg-red-50 border border-red-200 rounded-lg';
            testResult.innerHTML = '<p class="text-red-700 text-sm"><i class="fas fa-exclamation-circle mr-2"></i>API Key tidak boleh kosong</p>';
            testResult.classList.remove('hidden');
            return;
        }

        // Disable button
        button.disabled = true;
        button.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Testing...';

        try {
            const response = await fetch('/settings/ai/test', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ api_key: apiKey })
            });

            const result = await response.json();

            if (result.success) {
                testResult.className = 'mt-2 p-3 bg-green-50 border border-green-200 rounded-lg';
                testResult.innerHTML = `<p class="text-green-700 text-sm"><i class="fas fa-check-circle mr-2"></i>${result.message}</p>`;
            } else {
                testResult.className = 'mt-2 p-3 bg-red-50 border border-red-200 rounded-lg';
                testResult.innerHTML = `<p class="text-red-700 text-sm"><i class="fas fa-times-circle mr-2"></i>${result.message}</p>`;
            }
            testResult.classList.remove('hidden');
        } catch (error) {
            testResult.className = 'mt-2 p-3 bg-red-50 border border-red-200 rounded-lg';
            testResult.innerHTML = '<p class="text-red-700 text-sm"><i class="fas fa-times-circle mr-2"></i>Gagal menguji API key</p>';
            testResult.classList.remove('hidden');
        } finally {
            button.disabled = false;
            button.innerHTML = '<i class="fas fa-vial mr-2"></i>Test';
        }
    });

    // Auto-check AI status on page load
    async function checkAIStatus() {
        const indicator = document.getElementById('statusIndicator');
        const statusText = document.getElementById('statusText');
        const modelInfo = document.getElementById('modelInfo');
        const lastCheck = document.getElementById('lastCheck');
        const statusCard = document.getElementById('aiStatusCard');

        try {
            const apiKey = document.getElementById('api_key')?.value;

            if (!apiKey || apiKey.trim() === '') {
                indicator.className = 'w-4 h-4 rounded-full bg-yellow-400';
                statusText.textContent = 'API Key belum dikonfigurasi';
                statusText.className = 'text-sm text-yellow-600';
                modelInfo.textContent = 'Model: <%= settings.model || "gemini-2.5-flash" %>';
                lastCheck.textContent = 'Last check: ' + new Date().toLocaleTimeString('id-ID');
                return;
            }

            const response = await fetch('/settings/ai/test', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ api_key: apiKey })
            });

            const result = await response.json();

            if (result.success) {
                indicator.className = 'w-4 h-4 rounded-full bg-green-500';
                statusText.textContent = 'Terhubung & Siap Digunakan';
                statusText.className = 'text-sm text-green-600 font-medium';
                statusCard.className = 'bg-green-50 border border-green-200 rounded-lg shadow-lg mb-6 p-4';
            } else {
                indicator.className = 'w-4 h-4 rounded-full bg-red-500';
                statusText.textContent = 'Koneksi Gagal: ' + (result.message || 'Unknown error').substring(0, 50);
                statusText.className = 'text-sm text-red-600';
                statusCard.className = 'bg-red-50 border border-red-200 rounded-lg shadow-lg mb-6 p-4';
            }
        } catch (error) {
            indicator.className = 'w-4 h-4 rounded-full bg-red-500';
            statusText.textContent = 'Error memeriksa status';
            statusText.className = 'text-sm text-red-600';
        }

        modelInfo.textContent = 'Model: <%= settings.model || "gemini-2.5-flash" %>';
        lastCheck.textContent = 'Last check: ' + new Date().toLocaleTimeString('id-ID');
    }

    // Load AI verification statistics
    async function loadAIStats() {
        try {
            const response = await fetch('/settings/ai/stats');
            const result = await response.json();

            if (result.success) {
                const data = result.data;

                // Update stat cards
                document.getElementById('statTotalVerifications').textContent = data.total || 0;
                document.getElementById('statAutoApproved').textContent = data.autoApproved || 0;
                document.getElementById('statManualReview').textContent = data.manualReview || 0;
                document.getElementById('statRejected').textContent = data.rejected || 0;

                // Calculate and update success rate
                const successRate = data.total > 0
                    ? Math.round((data.autoApproved / data.total) * 100)
                    : 0;
                document.getElementById('successRate').textContent = successRate + '%';
                document.getElementById('successRateBar').style.width = successRate + '%';

                // Update confidence
                const avgConfidence = Math.round(data.avgConfidence || 0);
                document.getElementById('avgConfidence').textContent = avgConfidence + '%';
                document.getElementById('confidenceBar').style.width = avgConfidence + '%';
            }
        } catch (error) {
            console.error('Error loading AI stats:', error);
            // Set defaults on error
            document.getElementById('statTotalVerifications').textContent = '0';
            document.getElementById('statAutoApproved').textContent = '0';
            document.getElementById('statManualReview').textContent = '0';
            document.getElementById('statRejected').textContent = '0';
            document.getElementById('successRate').textContent = '0%';
            document.getElementById('avgConfidence').textContent = '0%';
        }
    }

    // Check status when page loads
    document.addEventListener('DOMContentLoaded', function () {
        setTimeout(checkAIStatus, 500); // Small delay to ensure page is ready
        loadAIStats(); // Load AI statistics
    });
</script>