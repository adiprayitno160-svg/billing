<script>
    let currentPage = 1;
    let currentVerificationId = null;
    let currentCustomerId = null;
    let debounceTimer = null;

    // Tab Switching
    function switchTab(tab) {
        const tabMessages = document.getElementById('tabMessages');
        const tabVerifications = document.getElementById('tabVerifications');
        const messagesContent = document.getElementById('messagesContent');
        const verificationsContent = document.getElementById('verificationsContent');

        if (tab === 'messages') {
            tabMessages.className = 'flex-1 py-4 px-6 text-sm font-semibold text-green-600 border-b-2 border-green-500 transition-all';
            tabVerifications.className = 'flex-1 py-4 px-6 text-sm font-semibold text-gray-500 hover:text-gray-700 border-b-2 border-transparent transition-all';
            messagesContent.classList.remove('hidden');
            verificationsContent.classList.add('hidden');
        } else {
            tabVerifications.className = 'flex-1 py-4 px-6 text-sm font-semibold text-green-600 border-b-2 border-green-500 transition-all';
            tabMessages.className = 'flex-1 py-4 px-6 text-sm font-semibold text-gray-500 hover:text-gray-700 border-b-2 border-transparent transition-all';
            verificationsContent.classList.remove('hidden');
            messagesContent.classList.add('hidden');
            loadVerifications();
        }
    }

    // Load Messages
    async function loadMessages() {
        const tbody = document.getElementById('messagesTableBody');
        tbody.innerHTML = `<tr><td colspan="6" class="px-6 py-12 text-center text-gray-500">
        <i class="fas fa-spinner fa-spin text-2xl mb-2"></i><p>Memuat pesan...</p></td></tr>`;

        try {
            const search = document.getElementById('searchQuery').value;
            const direction = document.getElementById('directionFilter').value;
            const type = document.getElementById('typeFilter').value;

            const params = new URLSearchParams({ page: currentPage, limit: 20 });
            if (search) params.set('search', search);
            if (direction) params.set('direction', direction);
            if (type) params.set('type', type);

            const response = await fetch(`/settings/whatsapp/messages?${params}`);
            const result = await response.json();

            if (result.success && result.data && result.data.length > 0) {
                tbody.innerHTML = result.data.map(msg => `
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 text-sm text-gray-600">${new Date(msg.created_at).toLocaleString('id-ID')}</td>
                    <td class="px-6 py-4">
                        <div class="font-medium text-gray-900">${msg.phone_number}</div>
                    </td>
                    <td class="px-6 py-4">
                        ${msg.direction === 'inbound'
                        ? '<span class="px-2 py-1 bg-blue-100 text-blue-700 text-xs font-medium rounded-lg">Masuk</span>'
                        : '<span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-lg">Keluar</span>'}
                    </td>
                    <td class="px-6 py-4">
                        ${msg.message_type === 'image'
                        ? '<span class="px-2 py-1 bg-purple-100 text-purple-700 text-xs font-medium rounded-lg"><i class="fas fa-image mr-1"></i>Gambar</span>'
                        : '<span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs font-medium rounded-lg"><i class="fas fa-comment mr-1"></i>Teks</span>'}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600 max-w-xs truncate">${escapeHtml(msg.message_content?.substring(0, 100) || '-')}</td>
                    <td class="px-6 py-4 text-center">
                        ${msg.status === 'sent' || msg.status === 'delivered'
                        ? '<span class="text-green-500"><i class="fas fa-check-circle"></i></span>'
                        : msg.status === 'failed'
                            ? '<span class="text-red-500"><i class="fas fa-times-circle"></i></span>'
                            : '<span class="text-gray-400"><i class="fas fa-clock"></i></span>'}
                    </td>
                </tr>
            `).join('');

                document.getElementById('showingCount').textContent = result.data.length;
                document.getElementById('prevPage').disabled = currentPage <= 1;
                document.getElementById('nextPage').disabled = result.data.length < 20;
            } else {
                tbody.innerHTML = `<tr><td colspan="6" class="px-6 py-12 text-center text-gray-500">
                <i class="fas fa-inbox text-4xl mb-2"></i><p>Tidak ada pesan</p></td></tr>`;
            }
        } catch (error) {
            console.error('Error loading messages:', error);
            tbody.innerHTML = `<tr><td colspan="6" class="px-6 py-12 text-center text-red-500">
            <i class="fas fa-exclamation-circle text-4xl mb-2"></i><p>Gagal memuat pesan</p></td></tr>`;
        }
    }

    function debounceLoadMessages() {
        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(loadMessages, 500);
    }

    function changePage(delta) {
        currentPage = Math.max(1, currentPage + delta);
        loadMessages();
    }

    // Load Verifications
    async function loadVerifications() {
        const tbody = document.getElementById('verificationsTableBody');
        tbody.innerHTML = `<tr><td colspan="6" class="px-6 py-12 text-center text-gray-500">
        <i class="fas fa-spinner fa-spin text-2xl mb-2"></i><p>Memuat data...</p></td></tr>`;

        try {
            const response = await fetch('/settings/whatsapp/pending-verifications');
            const result = await response.json();

            // Update stats
            if (result.stats) {
                document.getElementById('statPending').textContent = result.stats.pending || 0;
                document.getElementById('statApproved').textContent = result.stats.approved || 0;
                document.getElementById('statRejected').textContent = result.stats.rejected || 0;
                document.getElementById('statToday').textContent = result.stats.today || 0;

                // Update badge
                const badge = document.getElementById('pendingBadge');
                if (result.stats.pending > 0) {
                    badge.textContent = result.stats.pending;
                    badge.classList.remove('hidden');
                } else {
                    badge.classList.add('hidden');
                }
            }

            if (result.success && result.data && result.data.length > 0) {
                tbody.innerHTML = result.data.map(v => `
                <tr class="hover:bg-amber-50/30 transition-colors">
                    <td class="px-6 py-4">
                        <div class="font-medium text-gray-900">${escapeHtml(v.customer_name || 'Unknown')}</div>
                        <div class="text-xs text-gray-500">${escapeHtml(v.customer_phone || '-')}</div>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">${new Date(v.created_at).toLocaleString('id-ID')}</td>
                    <td class="px-6 py-4 text-center">
                        ${v.image_data
                        ? `<button onclick="viewImage('${v.id}')" class="px-3 py-1 bg-purple-100 text-purple-700 text-xs font-medium rounded-lg hover:bg-purple-200 transition">
                                <i class="fas fa-image mr-1"></i>Lihat</button>`
                        : '<span class="text-gray-400">-</span>'}
                    </td>
                    <td class="px-6 py-4">
                        <div class="text-sm text-green-600 font-medium">Rp ${Number(v.extracted_amount || 0).toLocaleString('id-ID')}</div>
                        <div class="text-xs text-gray-500">Tagihan: Rp ${Number(v.expected_amount || 0).toLocaleString('id-ID')}</div>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600 max-w-xs">${escapeHtml(v.reason?.substring(0, 80) || '-')}</td>
                    <td class="px-6 py-4 text-center">
                        <button onclick="openVerificationModal(${v.id}, ${v.customer_id})" 
                            class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-lg transition">
                            <i class="fas fa-check-circle mr-1"></i>Verifikasi
                        </button>
                    </td>
                </tr>
            `).join('');
            } else {
                tbody.innerHTML = `<tr><td colspan="6" class="px-6 py-12 text-center text-gray-500">
                <i class="fas fa-check-circle text-4xl text-green-300 mb-2"></i>
                <p>Tidak ada pembayaran yang menunggu verifikasi</p></td></tr>`;
            }
        } catch (error) {
            console.error('Error loading verifications:', error);
            tbody.innerHTML = `<tr><td colspan="6" class="px-6 py-12 text-center text-red-500">
            <i class="fas fa-exclamation-circle text-4xl mb-2"></i><p>Gagal memuat data</p></td></tr>`;
        }
    }

    // Modal functions
    async function openVerificationModal(id, customerId) {
        currentVerificationId = id;
        currentCustomerId = customerId;

        try {
            // Get verification details
            const response = await fetch(`/settings/whatsapp/verification/${id}`);
            const result = await response.json();

            if (result.success) {
                const v = result.data;

                document.getElementById('modalCustomerName').textContent = v.customer_name || '-';
                document.getElementById('modalCustomerPhone').textContent = v.customer_phone || '-';
                document.getElementById('modalExtractedAmount').textContent = `Rp ${Number(v.extracted_amount || 0).toLocaleString('id-ID')}`;
                document.getElementById('modalExpectedAmount').textContent = `Rp ${Number(v.expected_amount || 0).toLocaleString('id-ID')}`;
                document.getElementById('modalReason').textContent = v.reason || '-';
                document.getElementById('modalApprovedAmount').value = v.extracted_amount || '';

                // Load image
                if (v.image_data) {
                    document.getElementById('modalImage').src = `data:${v.image_mimetype || 'image/jpeg'};base64,${v.image_data}`;
                }

                // Load invoices
                const invoiceSelect = document.getElementById('modalInvoiceSelect');
                invoiceSelect.innerHTML = '<option value="">Memuat invoice...</option>';

                const invoicesRes = await fetch(`/settings/whatsapp/customer-invoices/${customerId}`);
                const invoicesData = await invoicesRes.json();

                if (invoicesData.success && invoicesData.data) {
                    invoiceSelect.innerHTML = invoicesData.data.map(inv =>
                        `<option value="${inv.id}">${inv.invoice_number} - Rp ${Number(inv.remaining_amount).toLocaleString('id-ID')}</option>`
                    ).join('');
                    if (invoicesData.data.length === 0) {
                        invoiceSelect.innerHTML = '<option value="">Tidak ada tagihan</option>';
                    }
                }
            }

            document.getElementById('verificationModal').classList.remove('hidden');
        } catch (error) {
            console.error('Error opening modal:', error);
            alert('Gagal memuat detail verifikasi');
        }
    }

    function closeModal() {
        document.getElementById('verificationModal').classList.add('hidden');
        currentVerificationId = null;
        currentCustomerId = null;
    }

    async function approveVerification() {
        if (!currentVerificationId) return;

        const invoiceId = document.getElementById('modalInvoiceSelect').value;
        const amount = document.getElementById('modalApprovedAmount').value;
        const notes = document.getElementById('modalNotes').value;

        if (!invoiceId) {
            alert('Pilih invoice yang akan dibayar');
            return;
        }

        if (!amount || amount <= 0) {
            alert('Masukkan nominal yang valid');
            return;
        }

        try {
            const response = await fetch(`/settings/whatsapp/verify-payment`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    verificationId: currentVerificationId,
                    invoiceId: invoiceId,
                    amount: amount,
                    notes: notes,
                    action: 'approve'
                })
            });

            const result = await response.json();

            if (result.success) {
                alert('✅ Pembayaran berhasil diverifikasi dan diproses!');
                closeModal();
                loadVerifications();
            } else {
                alert('❌ Gagal: ' + (result.message || 'Unknown error'));
            }
        } catch (error) {
            console.error('Error approving:', error);
            alert('❌ Error: Gagal memproses verifikasi');
        }
    }

    async function rejectVerification() {
        if (!currentVerificationId) return;

        const notes = document.getElementById('modalNotes').value;
        if (!notes) {
            alert('Masukkan alasan penolakan');
            return;
        }

        if (!confirm('Yakin ingin menolak verifikasi ini?')) return;

        try {
            const response = await fetch(`/settings/whatsapp/verify-payment`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    verificationId: currentVerificationId,
                    notes: notes,
                    action: 'reject'
                })
            });

            const result = await response.json();

            if (result.success) {
                alert('Verifikasi ditolak');
                closeModal();
                loadVerifications();
            } else {
                alert('Gagal: ' + (result.message || 'Unknown error'));
            }
        } catch (error) {
            console.error('Error rejecting:', error);
            alert('Error: Gagal memproses');
        }
    }

    function escapeHtml(text) {
        if (!text) return '';
        return text.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/"/g, '&quot;');
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', function () {
        loadMessages();
        // Check for pending verifications count
        fetch('/settings/whatsapp/pending-verifications').then(r => r.json()).then(result => {
            if (result.stats && result.stats.pending > 0) {
                const badge = document.getElementById('pendingBadge');
                badge.textContent = result.stats.pending;
                badge.classList.remove('hidden');
            }
        }).catch(() => { });
    });
</script>