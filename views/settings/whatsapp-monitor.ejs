        </div>

        <!-- Pending Verifications List -->
        <div class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden">
            <div class="p-6 border-b border-gray-50 flex items-center justify-between">
                <h3 class="text-sm font-bold text-gray-900 uppercase tracking-wide">
                    <i class="fas fa-user-check text-amber-500 mr-2"></i>
                    Pembayaran Menunggu Verifikasi
                </h3>
                <button onclick="loadVerifications()" class="text-sm text-green-600 hover:text-green-700 font-medium">
                    <i class="fas fa-sync-alt mr-1"></i> Refresh
                </button>
            </div>
            <div id="verificationsTableContainer" class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">Pelanggan</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">Tanggal</th>
                            <th class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase">Bukti</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">Nominal</th>
