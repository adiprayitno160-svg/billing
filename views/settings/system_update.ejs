        <div class="flex items-center gap-5">
            <div
                class="p-4 bg-gradient-to-br from-indigo-600 to-blue-700 shadow-xl shadow-indigo-200 rounded-3xl text-white">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                    </path>
                </svg>
            </div>
            <div>
                <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">Software Center</h1>
                <p class="text-slate-500 font-medium flex items-center gap-2">
                    <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                    Sistem Pembaruan Otomatis ISP Billing
                </p>
            </div>
        </div>

        <div class="flex items-center gap-3">
            <button onclick="checkUpdate()"
                class="px-5 py-2.5 bg-white border border-slate-200 text-slate-700 rounded-xl font-bold hover:bg-slate-50 transition-all flex items-center gap-2 shadow-sm text-sm">
                <i class="fas fa-sync-alt"></i> Segarkan Status
            </button>
        </div>
    </div>

    <!-- Main Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <!-- Left: Status Card -->
        <div class="lg:col-span-2 space-y-8">
            <!-- Update Status Card -->
            <div
                class="group rounded-[2.5rem] border border-slate-200 bg-white shadow-2xl shadow-slate-100 overflow-hidden relative transition-all hover:shadow-indigo-100/50">
                <div
                    class="absolute top-0 left-0 w-full h-1.5 bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-600">
                </div>

                <div class="px-8 py-6 bg-slate-50/50 border-b border-slate-100 flex items-center justify-between">
                    <div class="flex items-center gap-4">
                        <div class="w-1.5 h-8 bg-indigo-600 rounded-full"></div>
                        <h3 class="font-bold text-slate-800 text-xl tracking-tight">Status Pembaruan</h3>
                    </div>
                    <span id="version-badge"
                        class="px-4 py-1.5 bg-indigo-100 text-indigo-700 rounded-full text-xs font-black uppercase tracking-widest">
                        Checking...
                    </span>
                </div>

                <div class="p-12 text-center" id="update-status-container">
                    <div class="mb-8">
                        <div class="relative w-24 h-24 mx-auto mb-8">
                            <div class="absolute inset-0 border-4 border-indigo-50 rounded-full"></div>
                            <div
                                class="absolute inset-0 border-4 border-indigo-600 border-t-transparent rounded-full animate-spin">
                            </div>
                            <div
                                class="absolute inset-0 m-auto w-12 h-12 bg-indigo-600 rounded-2xl flex items-center justify-center shadow-lg shadow-indigo-200 transition-transform group-hover:rotate-12">
                                <i class="fas fa-cloud-download-alt text-white text-xl"></i>
                            </div>
                        </div>
                        <h4 class="text-2xl font-black text-slate-800 mb-3">Menghubungkan ke Cloud...</h4>
                        <p class="text-slate-500 text-lg font-medium max-w-sm mx-auto">Sistem sedang memverifikasi
                            integritas repositori dan mencari versi terbaru.</p>
                    </div>
                </div>
            </div>

            <!-- Detail System Card (Consistency Form) -->
            <div class="rounded-[2rem] border border-slate-200 bg-white p-8 shadow-xl">
                <h4 class="text-lg font-bold text-slate-800 mb-6 flex items-center gap-3">
                    <i class="fas fa-info-circle text-indigo-600"></i>
                    Informasi Environment
                </h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="p-4 bg-slate-50 rounded-2xl border border-slate-100 flex items-center gap-4">
                        <div
                            class="w-12 h-12 bg-white rounded-xl shadow-sm flex items-center justify-center text-slate-400">
                            <i class="fab fa-git-alt text-2xl"></i>
                        </div>
                        <div>
                            <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Git Branch</p>
                            <p class="font-bold text-slate-800">main / master</p>
                        </div>
                    </div>
                    <div class="p-4 bg-slate-50 rounded-2xl border border-slate-100 flex items-center gap-4">
                        <div
                            class="w-12 h-12 bg-white rounded-xl shadow-sm flex items-center justify-center text-slate-400">
                            <i class="fas fa-server text-xl"></i>
                        </div>
                        <div>
                            <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Production Mode</p>
                            <p class="font-bold text-slate-800">Enabled</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right: Version Info -->
        <div class="space-y-6">
            <div class="rounded-[2rem] bg-indigo-900 p-8 text-white shadow-2xl relative overflow-hidden">
                <div class="absolute -right-10 -top-10 w-40 h-40 bg-white/10 rounded-full blur-3xl"></div>
                <div class="relative z-10">
                    <h4 class="font-bold text-indigo-200 mb-4 uppercase tracking-widest text-xs">Versi Saat Ini</h4>
                    <div class="flex items-baseline gap-2 mb-6">
                        <span class="text-5xl font-black tracking-tighter" id="current-ver-text">v1.0.0</span>
                        <span class="text-indigo-300 font-bold">Stable</span>
                    </div>

                    <div class="space-y-4 pt-6 border-t border-white/10">
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-indigo-300">Terakhir Update</span>
                            <span class="font-bold tracking-tight">Hari Ini</span>
                        </div>
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-indigo-300">Status Database</span>
                            <span
                                class="px-2 py-0.5 bg-green-500 text-[10px] rounded font-black uppercase">Synced</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Auto Update Settings (Mock for consistency) -->
            <div class="rounded-[2rem] border border-slate-200 bg-white p-6 shadow-lg">
                <h4 class="font-bold text-slate-800 mb-4 text-sm flex items-center gap-2">
                    <i class="fas fa-cog text-slate-400"></i>
                    Konfigurasi Update
                </h4>
                <div class="space-y-4">
                    <label
                        class="flex items-center justify-between p-3 bg-slate-50 rounded-xl cursor-pointer hover:bg-slate-100 transition-colors">
                        <div class="flex items-center gap-3">
                            <i class="fas fa-bell text-indigo-500"></i>
                            <span class="text-sm font-bold text-slate-700">Notifikasi WA</span>
                        </div>
                        <div class="w-10 h-6 bg-indigo-600 rounded-full relative">
                            <div class="absolute right-1 top-1 w-4 h-4 bg-white rounded-full"></div>
                        </div>
                    </label>
                    <label
                        class="flex items-center justify-between p-3 bg-slate-50 rounded-xl cursor-pointer hover:bg-slate-100 transition-colors">
                        <div class="flex items-center gap-3">
                            <i class="fas fa-history text-indigo-500"></i>
                            <span class="text-sm font-bold text-slate-700">Auto Backup</span>
                        </div>
                        <div class="w-10 h-6 bg-indigo-600 rounded-full relative">
                            <div class="absolute right-1 top-1 w-4 h-4 bg-white rounded-full"></div>
                        </div>
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        checkUpdate();
    });

    function checkUpdate() {
        const container = document.getElementById('update-status-container');
        const badge = document.getElementById('version-badge');

        badge.innerHTML = '<i class="fas fa-spinner fa-spin mr-1"></i> Syncing...';

        fetch('/api/system/check-update')
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    if (data.hasUpdate) {
                        badge.className = 'px-4 py-1.5 bg-amber-100 text-amber-700 rounded-full text-xs font-black uppercase tracking-widest';
                        badge.innerHTML = 'UPDATE TERSEDIA';

                        let commitsHtml = '';
                        if (data.commits && data.commits.length > 0) {
                            commitsHtml = `
                                <div class="mt-8 text-left bg-slate-50 p-6 rounded-[1.5rem] border border-slate-200">
                                    <div class="flex items-center justify-between mb-4">
                                        <h4 class="font-black text-xs text-slate-400 uppercase tracking-widest">Riwayat Perubahan (${data.behind} commit):</h4>
                                        <span class="px-2 py-0.5 bg-indigo-600 text-[10px] text-white rounded-md font-bold italic">Latest</span>
                                    </div>
                                    <ul class="space-y-4 max-h-80 overflow-y-auto pr-2 custom-scrollbar">
                                        ${data.commits.map(c => `
                                            <li class="group flex gap-4">
                                                <div class="flex flex-col items-center">
                                                    <div class="w-2 h-2 rounded-full bg-indigo-600 ring-4 ring-indigo-50 mt-2"></div>
                                                    <div class="flex-grow w-px bg-slate-200 my-1"></div>
                                                </div>
                                                <div class="pb-2">
                                                    <div class="flex items-center gap-2 mb-1">
                                                        <span class="font-mono text-[10px] font-bold text-indigo-600 bg-indigo-50 px-2 py-0.5 rounded-lg border border-indigo-100">${c.hash}</span>
                                                        <span class="text-xs font-bold text-slate-800">${c.author}</span>
                                                        <span class="text-[10px] text-slate-400 font-medium">${new Date(c.date).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', hour: '2-digit', minute: '2-digit' })}</span>
                                                    </div>
                                                    <p class="text-sm font-bold text-slate-600 leading-relaxed">${c.message}</p>
                                                </div>
                                            </li>
                                        `).join('')}
                                    </ul>
                                </div>
                                <style>
                                    .custom-scrollbar::-webkit-scrollbar { width: 4px; }
                                    .custom-scrollbar::-webkit-scrollbar-track { background: transparent; }
                                    .custom-scrollbar::-webkit-scrollbar-thumb { background: #e2e8f0; border-radius: 10px; }
                                </style>
                            `;
                        }

                        container.innerHTML = `
                            <div class="flex flex-col items-center">
                                <div class="relative w-20 h-20 mb-8">
                                    <div class="absolute inset-0 bg-green-100 rounded-[2rem] animate-pulse"></div>
                                    <div class="absolute inset-0 flex items-center justify-center text-green-600">
                                        <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path></svg>
                                    </div>
                                </div>
                                <h2 class="text-3xl font-black text-slate-900 mb-3 tracking-tighter">Versi Baru Siap Diunduh!</h2>
                                <p class="text-slate-500 mb-10 max-w-sm mx-auto font-medium text-lg">Sistem mendeteksi adanya pembaruan di repository utama. Pembaruan ini mencakup perbaikan dan fitur baru.</p>
                                
                                <button onclick="performUpdate()" id="btn-update" class="group relative px-10 py-5 bg-gradient-to-br from-indigo-600 to-blue-700 text-white rounded-3xl font-black text-lg hover:shadow-2xl hover:shadow-indigo-200 transition-all active:scale-95 flex items-center gap-3">
                                    <span>ðŸš€</span> Jalankan Pembaruan Sekarang
                                    <i class="fas fa-chevron-right text-sm opacity-50 group-hover:translate-x-1 transition-transform"></i>
                                </button>

                                ${commitsHtml}
                            </div>
                        `;
                    } else {
                        badge.className = 'px-4 py-1.5 bg-green-100 text-green-700 rounded-full text-xs font-black uppercase tracking-widest';
                        badge.innerHTML = 'UP TO DATE';

                        container.innerHTML = `
                            <div class="flex flex-col items-center">
                                <div class="w-20 h-20 bg-indigo-50 text-indigo-600 rounded-[2rem] flex items-center justify-center mb-8 shadow-inner">
                                    <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                </div>
                                <h2 class="text-3xl font-black text-slate-900 mb-3 tracking-tighter">Sistem Sudah Mutakhir</h2>
                                <p class="text-slate-500 mb-10 text-lg font-medium">Anda sedang menjalankan versi terbaik dari aplikasi ini.</p>
                                <button onclick="checkUpdate()" class="px-8 py-3 bg-white border-2 border-slate-100 text-slate-600 rounded-2xl font-bold hover:bg-slate-50 hover:border-slate-200 transition-all flex items-center gap-2">
                                    <i class="fas fa-sync-alt"></i> Cek Pembaruan Lagi
                                </button>
                            </div>
                        `;
                    }
                } else {
                    throw new Error(data.error || 'Unknown error');
                }
            })
            .catch(err => {
                badge.className = 'px-4 py-1.5 bg-red-100 text-red-700 rounded-full text-xs font-black uppercase tracking-widest';
                badge.innerHTML = 'ERROR SYNC';

                container.innerHTML = `
                    <div class="text-red-500 p-8 bg-red-50/50 rounded-[2rem] border border-red-100 max-w-lg mx-auto">
                        <div class="w-16 h-16 bg-red-100 rounded-2xl flex items-center justify-center mx-auto mb-4 text-red-600 text-2xl">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <h4 class="font-black text-xl mb-2 tracking-tight">Gagal Menghubungkan ke Repositori</h4>
                        <p class="text-sm font-bold opacity-80 mb-6">${err.message}</p>
                        <div class="flex gap-2 justify-center">
                            <button onclick="checkUpdate()" class="px-6 py-2.5 bg-red-600 text-white rounded-xl text-sm font-black shadow-lg shadow-red-100 hover:bg-red-700 transition-all">Coba Lagi</button>
                            <a href="/settings/system" class="px-6 py-2.5 bg-white border border-red-200 text-red-600 rounded-xl text-sm font-black hover:bg-red-50 transition-all">Pengaturan Git</a>
                        </div>
                    </div>
                `;
            });
    }

    function performUpdate() {
        if (!confirm('ðŸ›‘ PERHATIAN: Sistem akan melakukan pull, install, rebuild, dan restart.\\n\\nWebsite akan offline selama kurang lebih 1-2 menit.\\n\\nLanjutkan proses pembaruan?')) return;

        const btn = document.getElementById('btn-update');
        const container = document.getElementById('update-status-container');

        if (btn) {
            btn.disabled = true;
            btn.innerHTML = '<span class="animate-spin w-5 h-5 border-4 border-white/40 border-t-white rounded-full mr-3"></span> Memproses Pembaruan...';
            btn.classList.replace('from-indigo-600', 'from-slate-600');
            btn.classList.replace('to-blue-700', 'to-slate-700');
        }

        fetch('/api/system/update', { method: 'POST' })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    container.innerHTML = `
                        <div class="text-green-600 p-12 text-center animate-in fade-in duration-500">
                            <div class="w-24 h-24 bg-green-100 rounded-[2.5rem] flex items-center justify-center mx-auto mb-8 shadow-inner">
                                <i class="fas fa-rocket text-4xl animate-bounce"></i>
                            </div>
                            <h2 class="text-4xl font-black mb-4 tracking-tighter">Pembaruan Berhasil!</h2>
                            <p class="text-xl font-medium text-slate-600 mb-10 max-w-sm mx-auto">${data.message}</p>
                            <div class="bg-slate-50 p-6 rounded-[2rem] border border-slate-100 max-w-md mx-auto">
                                <p class="text-xs font-black text-slate-400 uppercase tracking-widest mb-4">Restart Otomatis dalam 15 Detik</p>
                                <div class="w-full bg-slate-200 rounded-full h-3 overflow-hidden shadow-inner">
                                    <div class="bg-gradient-to-r from-green-400 to-green-600 h-full rounded-full animate-progress-bar"></div>
                                </div>
                            </div>
                        </div>
                    `;
                    setTimeout(() => window.location.reload(), 18000);
                } else {
                    throw new Error(data.error);
                }
            })
            .catch(err => {
                alert('CRITICAL ERROR: ' + err.message);
                if (btn) {
                    btn.disabled = false;
                    btn.innerHTML = '<span>ðŸš€</span> Jalankan Pembaruan Sekarang';
                    btn.classList.replace('from-slate-600', 'from-indigo-600');
                    btn.classList.replace('to-slate-700', 'to-blue-700');
                }
            });
    }
</script>

<style>
    @keyframes progress-bar {
        from {
            width: 0%;
        }

        to {
            width: 100%;
        }
    }

    .animate-progress-bar {
        animation: progress-bar 15s linear forwards;
    }

    .tracking-tighter {
        letter-spacing: -0.05em;
    }

    .tracking-tight {
        letter-spacing: -0.025em;
    }
</style>