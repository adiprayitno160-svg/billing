<div class="space-y-8">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div class="flex items-center gap-3">
            <div class="p-3 bg-indigo-500 shadow-lg shadow-indigo-200 rounded-2xl text-white">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                    </path>
                </svg>
            </div>
            <div>
                <h1 class="text-2xl font-bold text-slate-800">System Update</h1>
                <p class="text-sm text-slate-500 font-medium">Perbarui aplikasi ke versi terbaru</p>
            </div>
        </div>
    </div>

    <!-- Status Card -->
    <div class="rounded-3xl border border-slate-200 bg-white shadow-xl overflow-hidden relative">
        <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-500 via-indigo-500 to-purple-500"></div>

        <div class="px-8 py-5 bg-slate-50/50 border-b border-slate-100 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="w-2 h-8 bg-blue-500 rounded-full"></div>
                <h3 class="font-bold text-slate-800 text-lg">Status Pembaruan</h3>
            </div>
            <span id="version-badge"
                class="px-3 py-1 bg-slate-200 text-slate-600 rounded-lg text-xs font-bold uppercase tracking-wider">Checking
                v...</span>
        </div>

        <div class="p-10 text-center" id="update-status-container">
            <div class="mb-6">
                <div class="relative w-20 h-20 mx-auto mb-6">
                    <div class="absolute inset-0 border-4 border-blue-100 rounded-full"></div>
                    <div
                        class="absolute inset-0 border-4 border-blue-500 border-t-transparent rounded-full animate-spin">
                    </div>
                    <i
                        class="fas fa-sync-alt absolute inset-0 m-auto text-blue-500 text-xl flex items-center justify-center animate-pulse"></i>
                </div>
                <h4 class="text-xl font-bold text-slate-800 mb-2">Memeriksa Repositori...</h4>
                <p class="text-slate-500">Sistem sedang terhubung ke GitHub untuk mencari pembaruan.</p>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        checkUpdate();
    });

    function checkUpdate() {
        const container = document.getElementById('update-status-container');

        fetch('/api/system/check-update')
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    if (data.hasUpdate) {
                        // Found updates
                        let commitsHtml = '';
                        if (data.commits && data.commits.length > 0) {
                            commitsHtml = `
                                <div class="mt-6 text-left bg-slate-50 p-4 rounded-xl border border-slate-200 max-h-60 overflow-y-auto">
                                    <h4 class="font-bold text-sm text-slate-700 mb-2">Riwayat Perubahan (${data.behind} commit baru):</h4>
                                    <ul class="space-y-2">
                                        ${data.commits.map(c => `
                                            <li class="text-xs text-slate-600 pb-2 border-b border-slate-100 last:border-0 last:pb-0">
                                                <span class="font-mono text-blue-600 bg-blue-50 px-1 py-0.5 rounded mr-1">${c.hash}</span>
                                                <span class="font-bold text-slate-700">${c.author}</span>: 
                                                ${c.message}
                                                <span class="text-[10px] text-slate-400 block mt-0.5">${new Date(c.date).toLocaleString('id-ID')}</span>
                                            </li>
                                        `).join('')}
                                    </ul>
                                </div>
                            `;
                        }

                        container.innerHTML = `
                            <div class="flex flex-col items-center">
                                <div class="w-16 h-16 bg-green-100 text-green-600 rounded-full flex items-center justify-center mb-4">
                                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path></svg>
                                </div>
                                <h2 class="text-xl font-bold text-slate-800 mb-2">Pembaruan Tersedia!</h2>
                                <p class="text-slate-500 mb-6 max-w-md mx-auto">Versi baru tersedia di repository. Sistem akan melakukan pull, build, dan restart otomatis.</p>
                                
                                <button onclick="performUpdate()" id="btn-update" class="px-8 py-3 bg-blue-600 text-white rounded-xl font-bold hover:bg-blue-700 shadow-lg shadow-blue-200 transition-all flex items-center gap-2">
                                    <span>ðŸš€</span> Lakukan Update Sekarang
                                </button>

                                ${commitsHtml}
                            </div>
                        `;
                    } else {
                        // Already latest
                        container.innerHTML = `
                            <div class="flex flex-col items-center">
                                <div class="w-16 h-16 bg-blue-50 text-blue-600 rounded-full flex items-center justify-center mb-4">
                                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                </div>
                                <h2 class="text-xl font-bold text-slate-800 mb-2">Sistem Sudah Paling Baru</h2>
                                <p class="text-slate-500 mb-6">Anda sedang menggunakan versi terbaru.</p>
                                <button onclick="checkUpdate()" class="px-6 py-2.5 bg-slate-100 text-slate-600 rounded-xl font-bold hover:bg-slate-200 transition-all">
                                    Cek Lagi
                                </button>
                            </div>
                        `;
                    }
                } else {
                    throw new Error(data.error || 'Unknown error');
                }
            })
            .catch(err => {
                container.innerHTML = `
                    <div class="text-red-500 p-4 bg-red-50 rounded-xl border border-red-100">
                        <p class="font-bold">Gagal memeriksa update</p>
                        <p class="text-sm mt-1">${err.message}</p>
                        <button onclick="checkUpdate()" class="mt-4 px-4 py-2 bg-white border border-red-200 text-red-600 rounded-lg text-sm font-bold">Coba Lagi</button>
                    </div>
                `;
            });
    }

    function performUpdate() {
        if (!confirm('Sistem akan di-update dan di-restart. Website mungkin tidak bisa diakses selama 1-2 menit. Lanjutkan?')) return;

        const btn = document.getElementById('btn-update');
        const container = document.getElementById('update-status-container');
        if (btn) {
            btn.disabled = true;
            btn.innerHTML = '<span class="animate-spin w-4 h-4 border-2 border-white/50 border-t-white rounded-full mr-2"></span> Updating...';
        }

        fetch('/api/system/update', { method: 'POST' })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    container.innerHTML = `
                        <div class="text-green-600 p-8">
                            <h2 class="text-2xl font-bold mb-4">Update Berhasil!</h2>
                            <p class="mb-4">${data.message}</p>
                            <p class="text-sm text-slate-500">Halaman akan reload otomatis dalam 10 detik...</p>
                            <div class="w-full bg-slate-200 rounded-full h-2 mt-4 max-w-sm mx-auto overflow-hidden">
                                <div class="bg-green-500 h-2 rounded-full animate-[width_10s_linear_forwards]" style="width: 0%"></div>
                            </div>
                        </div>
                    `;
                    setTimeout(() => window.location.reload(), 15000);
                } else {
                    throw new Error(data.error);
                }
            })
            .catch(err => {
                alert('Update Gagal: ' + err.message);
                if (btn) {
                    btn.disabled = false;
                    btn.innerHTML = 'ðŸš€ Lakukan Update Sekarang';
                }
            });
    }
</script>
<style>
    @keyframes width {
        from {
            width: 0%;
        }

        to {
            width: 100%;
        }
    }
</style>