<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-6">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">Edit User</h1>
                    <p class="text-sm text-gray-600 mt-1">Ubah informasi user: <strong>
                            <%= user.full_name %>
                        </strong></p>
                </div>
                <a href="/settings/users"
                    class="inline-flex items-center px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Kembali
                </a>
            </div>
        </div>
    </div>

    <!-- Flash Messages -->
    <% if (typeof flash !=='undefined' && flash.error) { %>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
                <%= flash.error %>
            </div>
        </div>
        <% } %>

            <!-- Main Content -->
            <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
                <div class="bg-white shadow rounded-lg">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h3 class="text-lg font-medium text-gray-900">Informasi User</h3>
                        <p class="text-sm text-gray-600 mt-1">Ubah informasi user di bawah ini</p>
                    </div>

                    <form method="POST" action="/settings/users/<%= user.id %>" class="p-6 space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Username -->
                            <div>
                                <label for="username" class="block text-sm font-medium text-gray-700 mb-2">
                                    Username <span class="text-red-500">*</span>
                                </label>
                                <input type="text" id="username" name="username" value="<%= user.username %>" required
                                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                    placeholder="Masukkan username">
                            </div>

                            <!-- Email -->
                            <div>
                                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                                    Email <span class="text-red-500">*</span>
                                </label>
                                <input type="email" id="email" name="email" value="<%= user.email %>" required
                                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                    placeholder="Masukkan email">
                            </div>

                            <!-- Phone -->
                            <div>
                                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                                    No. WhatsApp (62xxx)
                                </label>
                                <input type="text" id="phone" name="phone" value="<%= user.phone || '' %>"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                    placeholder="628123456789">
                                <p class="text-sm text-gray-500 mt-1">Nomor ini akan digunakan sebagai Admin Bot
                                    WhatsApp</p>
                            </div>
                        </div>

                        <!-- Full Name -->
                        <div>
                            <label for="full_name" class="block text-sm font-medium text-gray-700 mb-2">
                                Nama Lengkap <span class="text-red-500">*</span>
                            </label>
                            <input type="text" id="full_name" name="full_name" value="<%= user.full_name %>" required
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                placeholder="Masukkan nama lengkap">
                        </div>

                        <!-- Role -->
                        <div>
                            <label for="role" class="block text-sm font-medium text-gray-700 mb-2">
                                Role <span class="text-red-500">*</span>
                            </label>
                            <select id="role" name="role" required
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                <option value="">Pilih role</option>
                                <option value="superadmin" <%=user.role==='superadmin' ? 'selected' : '' %>>Superadmin -
                                    Akses penuh ke semua fitur</option>
                                <option value="operator" <%=user.role==='operator' ? 'selected' : '' %>>Operator -
                                    Mengelola pelanggan dan billing</option>
                                <option value="teknisi" <%=user.role==='teknisi' ? 'selected' : '' %>>Teknisi -
                                    Mengelola perangkat dan monitoring</option>
                                <option value="kasir" <%=user.role==='kasir' ? 'selected' : '' %>>Kasir - Mengelola
                                    pembayaran dan laporan</option>
                            </select>
                        </div>

                        <!-- Password -->
                        <div>
                            <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                                Password Baru
                            </label>
                            <input type="password" id="password" name="password"
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                placeholder="Kosongkan jika tidak ingin mengubah password">
                            <p class="text-sm text-gray-500 mt-1">Kosongkan field ini jika tidak ingin mengubah password
                            </p>
                        </div>

                        <!-- Current Status -->
                        <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
                            <h4 class="text-sm font-medium text-gray-900 mb-2">Status Saat Ini:</h4>
                            <div class="flex items-center space-x-4">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                            <%= user.is_active ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                    <%= user.is_active ? 'Aktif' : 'Nonaktif' %>
                                </span>
                                <span class="text-sm text-gray-600">
                                    Dibuat: <%= new Date(user.created_at).toLocaleDateString('id-ID') %>
                                </span>
                                <span class="text-sm text-gray-600">
                                    Diperbarui: <%= new Date(user.updated_at).toLocaleDateString('id-ID') %>
                                </span>
                            </div>
                        </div>

                        <!-- Role Information -->
                        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                            <h4 class="text-sm font-medium text-blue-900 mb-2">Informasi Level Akses:</h4>
                            <div class="space-y-2 text-sm text-blue-800">
                                <div class="flex items-center">
                                    <span
                                        class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800 mr-2">Superadmin</span>
                                    <span>Akses penuh ke semua fitur sistem</span>
                                </div>
                                <div class="flex items-center">
                                    <span
                                        class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mr-2">Operator</span>
                                    <span>Mengelola pelanggan, paket, dan billing</span>
                                </div>
                                <div class="flex items-center">
                                    <span
                                        class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 mr-2">Teknisi</span>
                                    <span>Mengelola perangkat, monitoring, dan instalasi</span>
                                </div>
                                <div class="flex items-center">
                                    <span
                                        class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 mr-2">Kasir</span>
                                    <span>Mengelola pembayaran dan laporan keuangan</span>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
                            <a href="/settings/users"
                                class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                                Batal
                            </a>
                            <button type="submit"
                                class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                                Perbarui User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
</div>