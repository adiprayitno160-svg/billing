<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <div class="lg:col-span-2">
    <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Pengaturan WhatsApp Business</h2>
      <form method="post" action="/settings/whatsapp" class="space-y-4">
        <div>
          <label class="block text-sm mb-1 text-slate-700">Access Token</label>
          <input type="password" name="access_token" class="w-full border border-slate-300 focus:border-indigo-400 focus:ring-2 focus:ring-indigo-200/60 rounded px-3 py-2 outline-none transition bg-white" placeholder="EAAxxxxxxxxxxxxxxxxxxxx" />
        </div>
        <div>
          <label class="block text-sm mb-1 text-slate-700">Phone Number ID</label>
          <input type="text" name="phone_number_id" class="w-full border border-slate-300 focus:border-indigo-400 focus:ring-2 focus:ring-indigo-200/60 rounded px-3 py-2 outline-none transition bg-white" placeholder="123456789012345" />
        </div>
        <div>
          <label class="block text-sm mb-1 text-slate-700">Webhook Verify Token</label>
          <input type="text" name="webhook_token" class="w-full border border-slate-300 focus:border-indigo-400 focus:ring-2 focus:ring-indigo-200/60 rounded px-3 py-2 outline-none transition bg-white" placeholder="your_webhook_verify_token" />
        </div>
        <div>
          <label class="block text-sm mb-1 text-slate-700">Template Message</label>
          <textarea name="template_message" rows="3" class="w-full border border-slate-300 focus:border-indigo-400 focus:ring-2 focus:ring-indigo-200/60 rounded px-3 py-2 outline-none transition bg-white" placeholder="Halo {{name}}, tagihan Anda sebesar {{amount}} sudah jatuh tempo. Silakan lakukan pembayaran."></textarea>
        </div>
        <div class="flex items-center gap-2">
          <input type="checkbox" name="enable_reminder" class="accent-indigo-600" />
          <label class="text-sm text-slate-700">Aktifkan Pengingat Otomatis</label>
        </div>
        <div class="flex items-center gap-3">
          <button type="submit" class="px-4 py-2 bg-indigo-700 hover:bg-indigo-800 text-white rounded shadow-sm transition">Simpan Pengaturan</button>
          <button type="button" class="px-4 py-2 border border-indigo-200 text-indigo-700 hover:bg-indigo-50 rounded transition">Test WhatsApp</button>
        </div>
      </form>
    </div>
  </div>
</div>
