<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary mb-0">
        <i class="fas fa-shopping-cart me-2"></i>
        Pilih Paket Internet
    </h2>
    <div>
        <a href="/portal/profile" class="btn btn-outline-primary me-2">
            <i class="fas fa-user me-1"></i>Profil
        </a>
        <form method="POST" action="/portal/logout" class="d-inline">
            <button type="submit" class="btn btn-outline-danger">
                <i class="fas fa-sign-out-alt me-1"></i>Logout
            </button>
        </form>
    </div>
</div>

<% if (typeof packages !== 'undefined' && packages && packages.length > 0) { %>
    <div class="row">
        <% packages.forEach(function(package) { %>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card package-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="package-price mb-3">
                            Rp <%= package.price.toLocaleString() %>
                        </div>
                        <h5 class="card-title fw-bold mb-3">
                            <i class="fas fa-wifi me-2"></i>
                            <%= package.name %>
                        </h5>
                        <p class="text-muted mb-3">
                            <%= package.description || 'Paket internet berkualitas tinggi' %>
                        </p>
                        
                        <div class="row text-center mb-3">
                            <div class="col-6">
                                <small class="text-muted">Upload</small><br>
                                <strong><%= package.max_limit_upload %></strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Download</small><br>
                                <strong><%= package.max_limit_download %></strong>
                            </div>
                        </div>

                        <div class="mb-3">
                            <span class="badge bg-primary">
                                <i class="fas fa-clock me-1"></i>
                                <%= package.duration_days %> hari
                            </span>
                        </div>

                        <form method="POST" action="/portal/packages" class="d-inline">
                            <input type="hidden" name="package_id" value="<%= package.id %>">
                            <button type="submit" class="btn btn-primary w-100" 
                                    onclick="return confirm('Yakin ingin membeli paket <%= package.name %> seharga Rp <%= package.price.toLocaleString() %>?')">
                                <i class="fas fa-shopping-cart me-2"></i>
                                Beli Sekarang
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <div class="text-center py-5">
        <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
        <h4 class="text-muted">Tidak ada paket tersedia</h4>
        <p class="text-muted">Silakan hubungi administrator untuk informasi lebih lanjut.</p>
    </div>
<% } %>

<!-- Customer Info -->
<% if (typeof customer !== 'undefined' && customer) { %>
    <div class="row mt-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="fas fa-info-circle me-2"></i>
                        Informasi Akun
                    </h6>
                    <div class="row">
                        <div class="col-md-3">
                            <small class="text-muted">Username:</small><br>
                            <strong><%= customer.username %></strong>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted">Nama:</small><br>
                            <strong><%= customer.name %></strong>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted">Saldo:</small><br>
                            <strong class="text-success">Rp <%= customer.balance.toLocaleString() %></strong>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted">Status:</small><br>
                            <span class="badge bg-<%= customer.status === 'active' ? 'success' : 'danger' %>">
                                <%= customer.status === 'active' ? 'Aktif' : 'Tidak Aktif' %>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } %>
