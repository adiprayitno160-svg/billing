<!-- Trouble Report Page - Report Customer Issues to Admins/Operators -->
<%- contentFor('body') %>
    <div class="space-y-6">
        <!-- Header Section -->
        <div class="rounded-2xl border border-red-200 bg-gradient-to-br from-red-50 to-orange-50 p-6 shadow-lg">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-2xl font-bold text-red-900">ğŸš¨ Laporan Gangguan</h1>
                    <p class="text-red-600 mt-1">Laporkan masalah pelanggan ke Admin/Operator</p>
                </div>
                <a href="/customers/list"
                    class="px-4 py-2 border border-red-300 text-red-700 rounded-lg hover:bg-red-50 transition-all duration-300 font-medium">
                    â† Kembali
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Form Section -->
            <div class="lg:col-span-2">
                <div class="rounded-2xl border border-orange-200 bg-white p-6 shadow-lg">
                    <h3 class="text-lg font-bold text-orange-900 mb-4">ğŸ“ Form Laporan</h3>

                    <form id="troubleForm" class="space-y-6">
                        <!-- Customer Selection -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Pelanggan *
                            </label>
                            <select id="customer_id" name="customer_id" required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
                                <option value="">-- Pilih Pelanggan --</option>
                            </select>
                            <p class="text-xs text-gray-500 mt-1">Pilih pelanggan yang mengalami masalah</p>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- Trouble Type -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    Jenis Gangguan *
                                </label>
                                <select id="trouble_type" name="trouble_type" required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
                                    <option value="">-- Pilih Jenis --</option>
                                    <option value="connection_down">ğŸ”Œ Koneksi Terputus</option>
                                    <option value="equipment_failure">ğŸ”§ Kerusakan Perangkat</option>
                                    <option value="complaint">ğŸ“ Komplain Pelanggan</option>
                                    <option value="payment_issue">ğŸ’³ Masalah Pembayaran</option>
                                    <option value="other">â“ Lainnya</option>
                                </select>
                            </div>

                            <!-- Priority -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    Prioritas *
                                </label>
                                <select id="priority" name="priority" required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
                                    <option value="medium">ğŸŸ¡ Medium</option>
                                    <option value="low">ğŸŸ¢ Low</option>
                                    <option value="high">ğŸŸ  High</option>
                                    <option value="critical">ğŸ”´ Critical</option>
                                </select>
                            </div>
                        </div>

                        <!-- Description -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Deskripsi Masalah *
                            </label>
                            <textarea id="description" name="description" rows="4" required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-orange-500 focus:ring-2 focus:ring-orange-200"
                                placeholder="Jelaskan masalah yang terjadi..."></textarea>
                        </div>

                        <!-- Additional Info -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Info Tambahan (opsional)
                            </label>
                            <textarea id="additional_info" name="additional_info" rows="2"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-orange-500 focus:ring-2 focus:ring-orange-200"
                                placeholder="Informasi tambahan jika ada..."></textarea>
                        </div>

                        <!-- Submit Button -->
                        <div class="flex items-center gap-4">
                            <button type="submit" id="submitBtn"
                                class="flex-1 px-6 py-3 bg-gradient-to-r from-red-500 to-orange-500 text-white rounded-lg hover:from-red-600 hover:to-orange-600 transition-all duration-300 font-bold shadow-lg">
                                ğŸš€ Kirim Laporan ke Admin/Operator
                            </button>
                        </div>
                    </form>

                    <!-- Result -->
                    <div id="resultContainer" class="mt-6 hidden">
                        <div id="resultSuccess" class="hidden p-4 bg-green-100 border border-green-300 rounded-lg">
                            <p class="font-bold text-green-800">âœ… Laporan Berhasil Dikirim!</p>
                            <p id="resultMessage" class="text-green-700 mt-1"></p>
                            <div id="sentToList" class="mt-2 text-sm text-green-600"></div>
                        </div>
                        <div id="resultError" class="hidden p-4 bg-red-100 border border-red-300 rounded-lg">
                            <p class="font-bold text-red-800">âŒ Gagal Mengirim Laporan</p>
                            <p id="errorMessage" class="text-red-700 mt-1"></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Info Section -->
            <div class="lg:col-span-1 space-y-6">
                <!-- Recipients -->
                <div class="rounded-2xl border border-blue-200 bg-white p-6 shadow-lg">
                    <h3 class="text-lg font-bold text-blue-900 mb-4">ğŸ“ Penerima Notifikasi</h3>
                    <div id="recipientsList" class="space-y-2">
                        <div class="text-sm text-gray-500">Memuat daftar penerima...</div>
                    </div>
                </div>

                <!-- Info Box -->
                <div class="rounded-2xl border border-purple-200 bg-purple-50 p-6 shadow-lg">
                    <h3 class="text-lg font-bold text-purple-900 mb-3">â„¹ï¸ Cara Kerja</h3>
                    <ul class="text-sm text-purple-800 space-y-2">
                        <li>ğŸ“± Notifikasi akan dikirim via WhatsApp</li>
                        <li>ğŸ‘¥ Semua Admin & Operator dengan nomor telepon akan menerima</li>
                        <li>ğŸ“‹ Laporan dicatat di database untuk history</li>
                        <li>âš¡ Prioritas tinggi akan mendapat perhatian lebih cepat</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', async function () {
            // Load customers
            try {
                const response = await fetch('/api/customers?limit=500');
                const data = await response.json();
                const select = document.getElementById('customer_id');

                if (data.success && data.data && data.data.length > 0) {
                    data.data.forEach(customer => {
                        const option = document.createElement('option');
                        option.value = customer.id;
                        option.textContent = `${customer.name} - ${customer.customer_code || 'N/A'} (${customer.phone || 'No Phone'})`;
                        option.dataset.name = customer.name;
                        option.dataset.phone = customer.phone || '';
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Error loading customers:', error);
            }

            // Load recipients (admin/operators)
            try {
                const response = await fetch('/api/notification/admin-operators');
                const data = await response.json();
                const container = document.getElementById('recipientsList');

                if (data.success && data.data && data.data.length > 0) {
                    container.innerHTML = data.data.map(user => `
                <div class="flex items-center gap-2 p-2 bg-blue-50 rounded-lg">
                    <span class="w-8 h-8 flex items-center justify-center bg-blue-200 text-blue-800 rounded-full text-xs font-bold">
                        ${user.full_name.charAt(0).toUpperCase()}
                    </span>
                    <div class="flex-1">
                        <p class="text-sm font-medium text-blue-900">${user.full_name}</p>
                        <p class="text-xs text-blue-600">${user.role}</p>
                    </div>
                </div>
            `).join('');
                    container.innerHTML += `<p class="text-xs text-blue-500 mt-2">Total: ${data.total} penerima</p>`;
                } else {
                    container.innerHTML = `
                <div class="p-3 bg-yellow-100 border border-yellow-300 rounded-lg text-sm text-yellow-800">
                    âš ï¸ Tidak ada admin/operator dengan nomor telepon
                </div>
            `;
                }
            } catch (error) {
                console.error('Error loading recipients:', error);
            }

            // Form submit handler
            document.getElementById('troubleForm').addEventListener('submit', async function (e) {
                e.preventDefault();

                const submitBtn = document.getElementById('submitBtn');
                const resultContainer = document.getElementById('resultContainer');
                const resultSuccess = document.getElementById('resultSuccess');
                const resultError = document.getElementById('resultError');

                // Get customer data
                const customerSelect = document.getElementById('customer_id');
                const selectedOption = customerSelect.options[customerSelect.selectedIndex];

                const formData = {
                    customer_id: customerSelect.value,
                    customer_name: selectedOption.dataset.name,
                    customer_phone: selectedOption.dataset.phone,
                    trouble_type: document.getElementById('trouble_type').value,
                    priority: document.getElementById('priority').value,
                    description: document.getElementById('description').value,
                    additional_info: document.getElementById('additional_info').value,
                    reported_by: 'system'
                };

                // Disable button
                submitBtn.disabled = true;
                submitBtn.innerHTML = 'â³ Mengirim...';

                try {
                    const response = await fetch('/api/notification/trouble', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(formData)
                    });

                    const result = await response.json();

                    resultContainer.classList.remove('hidden');

                    if (result.success) {
                        resultSuccess.classList.remove('hidden');
                        resultError.classList.add('hidden');
                        document.getElementById('resultMessage').textContent = result.message;
                        document.getElementById('sentToList').innerHTML =
                            `Terkirim ke: ${result.sent_to.join(', ')}` +
                            (result.failed.length > 0 ? `<br>Gagal: ${result.failed.join(', ')}` : '');

                        // Reset form
                        document.getElementById('troubleForm').reset();
                    } else {
                        resultSuccess.classList.add('hidden');
                        resultError.classList.remove('hidden');
                        document.getElementById('errorMessage').textContent = result.error || result.message;
                    }
                } catch (error) {
                    resultContainer.classList.remove('hidden');
                    resultSuccess.classList.add('hidden');
                    resultError.classList.remove('hidden');
                    document.getElementById('errorMessage').textContent = error.message;
                } finally {
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = 'ğŸš€ Kirim Laporan ke Admin/Operator';
                }
            });
        });
    </script>