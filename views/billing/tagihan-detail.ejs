    // Change invoice status
    function changeStatus(newStatus) {
        const statusNames = {
            'sent': 'Terkirim',
            'cancelled': 'Dibatalkan'
        };

        if (confirm(`Ubah status tagihan menjadi ${statusNames[newStatus]}?`)) {
            fetch('/billing/tagihan/<%= invoice.id %>/status', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ status: newStatus })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('✅ Status berhasil diubah');
                        location.reload();
                    } else {
                        alert('❌ ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('❌ Terjadi kesalahan');
                });
        }
    }

    // Delete invoice
    function deleteInvoice() {
        if (confirm('⚠️ PERHATIAN!\n\nApakah Anda yakin ingin menghapus tagihan <%= invoice.invoice_number %>?\n\n• Data pembayaran terkait juga akan dihapus\n• Tindakan ini tidak dapat dibatalkan')) {
            fetch('/billing/tagihan/<%= invoice.id %>', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' }
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('✅ Tagihan berhasil dihapus');
                        window.location.href = '/billing/tagihan';
                    } else {
                        alert('❌ ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('❌ Terjadi kesalahan saat menghapus tagihan');
                });
        }
    }
    // Invoice Notes
    function toggleNoteEdit() {
        const display = document.getElementById('note-display');
        const edit = document.getElementById('note-edit');
        if (display && edit) {
            if (display.classList.contains('hidden')) {
                display.classList.remove('hidden');
                edit.classList.add('hidden');
            } else {
                display.classList.add('hidden');
                edit.classList.remove('hidden');
            }
        }
    }

    function saveNotes() {
        const notes = document.getElementById('invoice-notes-input').value;
        const saveBtn = document.querySelector('#note-edit button.bg-blue-600');
        const originalText = saveBtn.innerHTML;

        saveBtn.disabled = true;
        saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-1"></i> Menyimpan...';

        fetch('/billing/tagihan/<%= invoice.id %>/notes', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ notes: notes })
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const display = document.getElementById('note-display');
                    if (display) {
                        display.innerText = notes || 'Tidak ada catatan';
                        if (!notes) {
                            display.classList.remove('text-gray-700');
                            display.classList.add('text-gray-400', 'italic');
                        } else {
                            display.classList.remove('text-gray-400', 'italic');
                            display.classList.add('text-gray-700');
                        }
                    }
                    toggleNoteEdit();
                    alert('✅ Catatan berhasil disimpan');
                } else {
                    alert('❌ ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('❌ Gagal menyimpan catatan');
            })
            .finally(() => {
                saveBtn.disabled = false;
                saveBtn.disabled = false;
                saveBtn.innerHTML = originalText;
            });
    }

    async function resendNotification(paymentId, btn) {
        if (!confirm('Kirim ulang notifikasi pembayaran via WhatsApp?')) return;

        const originalHtml = btn.innerHTML;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
        btn.disabled = true;

        try {
            const response = await fetch(`/billing/payments/${paymentId}/resend-notification`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });

            const result = await response.json();

            if (result.success) {
                alert(result.message);
            } else {
                alert('Gagal: ' + result.message);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Terjadi kesalahan saat mengirim notifikasi');
        } finally {
            btn.innerHTML = originalHtml;
            btn.disabled = false;
        }
    }
</script>