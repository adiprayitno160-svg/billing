<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Billing System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <%- include('../partials/navbar') %>
    
    <div class="flex">
        <main class="flex-1 p-8 max-w-7xl mx-auto w-full">
            <!-- Page Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    <i class="fas fa-file-alt mr-3 text-blue-600"></i>
                    <%= title %>
                </h1>
                <p class="text-gray-600">Comprehensive logging system with AI-powered anomaly detection</p>
            </div>

            <!-- Statistics Cards -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6" id="statsCards">
                <div class="bg-white rounded-lg shadow p-4">
                    <div class="text-sm text-gray-500">Total Logs (7d)</div>
                    <div class="text-2xl font-bold" id="totalLogs">-</div>
                </div>
                <div class="bg-white rounded-lg shadow p-4">
                    <div class="text-sm text-gray-500">Errors</div>
                    <div class="text-2xl font-bold text-red-600" id="errorLogs">-</div>
                </div>
                <div class="bg-white rounded-lg shadow p-4">
                    <div class="text-sm text-gray-500">Anomalies Detected</div>
                    <div class="text-2xl font-bold text-orange-600" id="anomalies">-</div>
                </div>
                <div class="bg-white rounded-lg shadow p-4">
                    <div class="text-sm text-gray-500">Unresolved</div>
                    <div class="text-2xl font-bold text-yellow-600" id="unresolved">-</div>
                </div>
            </div>

            <!-- Filters -->
            <div class="bg-white rounded-lg shadow p-4 mb-6">
                <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
                <div>
                    <label class="block text-sm font-medium mb-1">Level</label>
                    <select id="filterLevel" class="w-full border rounded px-3 py-2">
                    <option value="">All</option>
                    <option value="debug">Debug</option>
                    <option value="info">Info</option>
                    <option value="warning">Warning</option>
                    <option value="error">Error</option>
                    <option value="critical">Critical</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium mb-1">Type</label>
                <select id="filterType" class="w-full border rounded px-3 py-2">
                    <option value="">All</option>
                    <option value="billing">Billing</option>
                    <option value="payment">Payment</option>
                    <option value="invoice">Invoice</option>
                    <option value="system">System</option>
                    <option value="api">API</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium mb-1">Service</label>
                <input type="text" id="filterService" class="w-full border rounded px-3 py-2" placeholder="Service name">
            </div>
            <div>
                <label class="block text-sm font-medium mb-1">Search</label>
                <input type="text" id="filterSearch" class="w-full border rounded px-3 py-2" placeholder="Search message">
            </div>
            <div class="flex items-end">
                <button id="filterBtn" class="w-full bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Filter</button>
            </div>
        </div>
        <div class="mt-4">
            <label class="flex items-center">
                <input type="checkbox" id="filterAnomaly" class="mr-2">
                <span>Show anomalies only</span>
            </label>
                </div>
            </div>

            <!-- Logs Table -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Time</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Level</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Service</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Message</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Anomaly</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody id="logsTable" class="bg-white divide-y divide-gray-200">
                    <tr>
                        <td colspan="7" class="px-4 py-8 text-center text-gray-500">Loading logs...</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="bg-gray-50 px-4 py-3 flex items-center justify-between">
            <div class="text-sm text-gray-700" id="paginationInfo">Showing 0 logs</div>
            <div class="flex gap-2">
                <button id="prevBtn" class="px-3 py-1 border rounded disabled:opacity-50" disabled>Previous</button>
                <button id="nextBtn" class="px-3 py-1 border rounded disabled:opacity-50" disabled>Next</button>
            </div>
        </div>
            </div>

<script>
let currentOffset = 0;
const limit = 50;

function getLevelColor(level) {
    const colors = {
        'debug': 'text-gray-600',
        'info': 'text-blue-600',
        'warning': 'text-yellow-600',
        'error': 'text-red-600',
        'critical': 'text-red-800 font-bold'
    };
    return colors[level] || 'text-gray-600';
}

function getLevelBadge(level) {
    return `<span class="px-2 py-1 rounded text-xs font-medium ${getLevelColor(level)}">${level.toUpperCase()}</span>`;
}

async function loadLogs() {
    const params = new URLSearchParams({
        limit: limit,
        offset: currentOffset,
        ...(document.getElementById('filterLevel').value && { level: document.getElementById('filterLevel').value }),
        ...(document.getElementById('filterType').value && { type: document.getElementById('filterType').value }),
        ...(document.getElementById('filterService').value && { service: document.getElementById('filterService').value }),
        ...(document.getElementById('filterSearch').value && { search: document.getElementById('filterSearch').value }),
        ...(document.getElementById('filterAnomaly').checked && { anomalyOnly: 'true' })
    });

    try {
        const response = await fetch(`/billing/logs/api?${params}`);
        const data = await response.json();

        if (data.success) {
            renderLogs(data.data);
            document.getElementById('paginationInfo').textContent = `Showing ${data.data.length} logs`;
            document.getElementById('prevBtn').disabled = currentOffset === 0;
            document.getElementById('nextBtn').disabled = data.data.length < limit;
        }
    } catch (error) {
        console.error('Error loading logs:', error);
    }
}

async function loadStatistics() {
    try {
        const response = await fetch('/billing/logs/api/statistics?days=7');
        const data = await response.json();

        if (data.success) {
            const stats = data.data;
            let totalLogs = 0;
            let errorLogs = 0;

            if (stats.levelStats) {
                stats.levelStats.forEach(stat => {
                    totalLogs += parseInt(stat.count || 0);
                    if (stat.log_level === 'error' || stat.log_level === 'critical') {
                        errorLogs += parseInt(stat.count || 0);
                    }
                });
            }

            document.getElementById('totalLogs').textContent = totalLogs.toLocaleString();
            document.getElementById('errorLogs').textContent = errorLogs.toLocaleString();
            document.getElementById('anomalies').textContent = (stats.anomalyStats?.length || 0).toLocaleString();
            document.getElementById('unresolved').textContent = (stats.unresolvedAnomalies || 0).toLocaleString();
        }
    } catch (error) {
        console.error('Error loading statistics:', error);
    }
}

function renderLogs(logs) {
    const tbody = document.getElementById('logsTable');
    
    if (logs.length === 0) {
        tbody.innerHTML = '<tr><td colspan="7" class="px-4 py-8 text-center text-gray-500">No logs found</td></tr>';
        return;
    }

    tbody.innerHTML = logs.map(log => {
        const date = new Date(log.created_at);
        const anomalyBadge = log.anomaly_detected 
            ? `<span class="px-2 py-1 rounded text-xs bg-orange-100 text-orange-800">${log.anomaly_type || 'Anomaly'}</span>`
            : '<span class="text-gray-400">-</span>';

        return `
            <tr class="hover:bg-gray-50">
                <td class="px-4 py-3 text-sm">${date.toLocaleString()}</td>
                <td class="px-4 py-3">${getLevelBadge(log.log_level)}</td>
                <td class="px-4 py-3 text-sm">${log.log_type}</td>
                <td class="px-4 py-3 text-sm">${log.service_name}</td>
                <td class="px-4 py-3 text-sm">${log.message.substring(0, 80)}${log.message.length > 80 ? '...' : ''}</td>
                <td class="px-4 py-3">${anomalyBadge}</td>
                <td class="px-4 py-3 text-sm">
                    <button onclick="viewLog(${log.id})" class="text-blue-600 hover:underline">View</button>
                    ${log.anomaly_detected && !log.resolved ? `<button onclick="resolveAnomaly(${log.id})" class="ml-2 text-green-600 hover:underline">Resolve</button>` : ''}
                </td>
            </tr>
        `;
    }).join('');
}

function viewLog(logId) {
    window.location.href = `/billing/logs/api/${logId}`;
}

async function resolveAnomaly(logId) {
    if (!confirm('Mark this anomaly as resolved?')) return;

    try {
        const response = await fetch(`/billing/logs/api/anomalies/${logId}/resolve`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ resolution: 'Resolved manually' })
        });

        const data = await response.json();
        if (data.success) {
            alert('Anomaly resolved');
            loadLogs();
            loadStatistics();
        }
    } catch (error) {
        console.error('Error resolving anomaly:', error);
        alert('Error resolving anomaly');
    }
}

// Event listeners
document.getElementById('filterBtn').addEventListener('click', () => {
    currentOffset = 0;
    loadLogs();
});

document.getElementById('prevBtn').addEventListener('click', () => {
    if (currentOffset >= limit) {
        currentOffset -= limit;
        loadLogs();
    }
});

document.getElementById('nextBtn').addEventListener('click', () => {
    currentOffset += limit;
    loadLogs();
});

// Initialize
loadLogs();
loadStatistics();
setInterval(loadStatistics, 60000); // Refresh stats every minute
</script>
        </main>
    </div>
</body>
</html>

