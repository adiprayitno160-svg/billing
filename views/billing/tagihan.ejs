<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.07);
    }

    .glass-header {
        background: rgba(255, 255, 255, 0.6);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.4);
    }

    .glass-panel {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
    }

    .btn-premium {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .btn-premium:hover {
        transform: translateY(-2px);
    }

    .btn-premium:active {
        transform: scale(0.95);
    }

    .badge-status {
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 10px;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        display: inline-block;
        white-space: nowrap;
    }

    /* Custom Scrollbar for list */
    .custom-scrollbar::-webkit-scrollbar {
        width: 4px;
        height: 4px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.03);
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    @keyframes pulse-soft {

        0%,
        100% {
            opacity: 1;
        }

        50% {
            opacity: 0.7;
        }
    }

    .animate-pulse-soft {
        animation: pulse-soft 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(8px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fadeIn {
        animation: fadeIn 0.4s ease-out;
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px) scale(0.97);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .animate-slideUp {
        animation: slideUp 0.35s ease-out;
    }

    /* Consistent table layout */
    .tagihan-table th,
    .tagihan-table td {
        vertical-align: middle;
    }

    .tagihan-table .action-cell {
        min-width: 180px;
    }
</style>

<div class="space-y-6 animate-fadeIn pb-20">
    <!-- Header Block -->
    <div
        class="flex flex-col md:flex-row md:items-center justify-between gap-4 bg-white/50 backdrop-blur-md p-6 rounded-[2rem] border border-white/20 shadow-sm">
        <div>
            <nav class="flex mb-2" aria-label="Breadcrumb">
                <ol
                    class="inline-flex items-center space-x-1 md:space-x-3 text-[10px] font-bold uppercase tracking-widest text-slate-400">
                    <li class="inline-flex items-center">
                        <a href="/dashboard" class="hover:text-blue-600 transition-colors">DASHBOARD</a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <i class="fas fa-chevron-right text-[8px] mx-1"></i>
                            <span class="text-slate-600">BILLING</span>
                        </div>
                    </li>
                </ol>
            </nav>
            <h1 class="text-3xl font-black text-slate-800 tracking-tight flex items-center gap-3">
                <div
                    class="w-10 h-10 bg-blue-600 text-white rounded-2xl flex items-center justify-center shadow-lg shadow-blue-200">
                    <i class="fas fa-file-invoice text-lg"></i>
                </div>
                TAGIHAN BULANAN
            </h1>
            <p class="text-xs font-bold text-slate-400 mt-1 uppercase tracking-tighter">Kelola invoice dan penagihan
                pelanggan bulanan</p>
        </div>

        <div class="flex flex-wrap items-center gap-2">
            <button type="button" id="btnGenerateTagihan" data-action="generate-invoice"
                class="btn-premium inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white px-5 py-3 rounded-2xl font-black text-[11px] uppercase tracking-widest shadow-xl shadow-blue-200">
                <i class="fas fa-magic mr-2"></i>Generate
            </button>
            <button type="button" id="btnPrintODC" onclick="showOdcPrintModal()"
                class="btn-premium inline-flex items-center bg-slate-800 hover:bg-slate-900 text-white px-5 py-3 rounded-2xl font-black text-[11px] uppercase tracking-widest shadow-xl shadow-slate-200">
                <i class="fas fa-print mr-2"></i>Print Area
            </button>
            <a href="/billing/verification"
                class="btn-premium inline-flex items-center bg-white border border-slate-200 text-slate-700 px-5 py-3 rounded-2xl font-black text-[11px] uppercase tracking-widest shadow-sm hover:bg-slate-50 relative">
                <i class="fas fa-check-double mr-2 text-blue-600"></i>Verifikasi
                <% if (typeof stats !=='undefined' && stats.pendingPaymentVerifications> 0) { %>
                    <span
                        class="absolute -top-2 -right-2 bg-red-500 text-white text-[9px] font-black w-5 h-5 flex items-center justify-center rounded-full animate-bounce">
                        <%= stats.pendingPaymentVerifications %>
                    </span>
                    <% } %>
            </a>
        </div>
    </div>

    <!-- Bulk Action Float Bar (Visible only when selected) -->
    <div id="bulkActionFloat"
        class="fixed bottom-8 left-1/2 -translate-x-1/2 z-[100] scale-90 opacity-0 pointer-events-none transition-all duration-300">
        <div
            class="bg-slate-900/90 backdrop-blur-xl text-white px-6 py-4 rounded-3xl shadow-2xl border border-white/10 flex items-center gap-6">
            <div class="flex flex-col">
                <span class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Terpilih</span>
                <span class="text-xl font-black text-blue-400"><span id="selectedCountFloat">0</span> <span
                        class="text-xs text-slate-300 font-bold uppercase ml-1">Invoice</span></span>
            </div>
            <div class="h-10 w-px bg-white/10"></div>
            <div class="flex items-center gap-2">
                <button type="button" id="btnBulkSendWA" data-action="bulk-send-wa"
                    class="flex flex-col items-center gap-1 group">
                    <div
                        class="w-10 h-10 bg-emerald-500/20 text-emerald-400 rounded-xl flex items-center justify-center group-hover:bg-emerald-500 group-hover:text-white transition-all">
                        <i class="fab fa-whatsapp"></i>
                    </div>
                    <span class="text-[8px] font-bold uppercase">WA</span>
                </button>
                <button type="button" id="btnBulkReminder" data-action="bulk-reminder"
                    class="flex flex-col items-center gap-1 group">
                    <div
                        class="w-10 h-10 bg-amber-500/20 text-amber-400 rounded-xl flex items-center justify-center group-hover:bg-amber-500 group-hover:text-white transition-all">
                        <i class="fas fa-bell"></i>
                    </div>
                    <span class="text-[8px] font-bold uppercase">Remind</span>
                </button>
                <button type="button" id="btnPrintSelected" data-action="print-selected"
                    class="flex flex-col items-center gap-1 group">
                    <div
                        class="w-10 h-10 bg-blue-500/20 text-blue-400 rounded-xl flex items-center justify-center group-hover:bg-blue-500 group-hover:text-white transition-all">
                        <i class="fas fa-print"></i>
                    </div>
                    <span class="text-[8px] font-bold uppercase">Print</span>
                </button>
                <button type="button" id="bulkDeleteBtn" data-action="bulk-delete"
                    class="flex flex-col items-center gap-1 group">
                    <div
                        class="w-10 h-10 bg-red-500/20 text-red-400 rounded-xl flex items-center justify-center group-hover:bg-red-500 group-hover:text-white transition-all">
                        <i class="fas fa-trash-alt"></i>
                    </div>
                    <span class="text-[8px] font-bold uppercase">Hapus</span>
                </button>
            </div>
            <button type="button" onclick="deselectAllInvoices()"
                class="ml-4 text-slate-400 hover:text-white transition-colors">
                <i class="fas fa-times text-lg"></i>
            </button>
        </div>
    </div>

    <!-- Filters Block -->
    <div class="bg-white/40 backdrop-blur-md rounded-[2rem] p-6 border border-white/20 shadow-sm">
        <form method="GET" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4 items-end">
            <div>
                <label
                    class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 ml-1">Periode</label>
                <input type="month" name="period" value="<%= filters.period %>"
                    class="w-full px-4 py-3 bg-white/50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all font-bold text-slate-700">
            </div>
            <div>
                <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 ml-1">Status
                    Pembayaran</label>
                <select name="status"
                    class="w-full px-4 py-3 bg-white/50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all font-bold text-slate-700 appearance-none">
                    <option value="">AKTIF (BELUM LUNAS)</option>
                    <option value="all" <%=filters.status==='all' ? 'selected' : '' %>>SEMUA DATA</option>
                    <option value="draft" <%=filters.status==='draft' ? 'selected' : '' %>>DRAFT</option>
                    <option value="sent" <%=filters.status==='sent' ? 'selected' : '' %>>TERKIRIM</option>
                    <option value="partial" <%=filters.status==='partial' ? 'selected' : '' %>>PARTIAL</option>
                    <option value="paid" <%=filters.status==='paid' ? 'selected' : '' %>>LUNAS</option>
                    <option value="overdue" <%=filters.status==='overdue' ? 'selected' : '' %>>JATUH TEMPO</option>
                    <option value="cancelled" <%=filters.status==='cancelled' ? 'selected' : '' %>>DIBATALKAN</option>
                </select>
            </div>
            <div>
                <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 ml-1">Area
                    ODC</label>
                <select name="odc_id"
                    class="w-full px-4 py-3 bg-white/50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all font-bold text-slate-700 appearance-none">
                    <option value="">SEMUA AREA</option>
                    <% if (typeof odcList !=='undefined' && odcList && odcList.length> 0) { %>
                        <% odcList.forEach(function(odc) { %>
                            <option value="<%= odc.id %>" <%=filters.odc_id==odc.id ? 'selected' : '' %>><%= odc.name %>
                            </option>
                            <% }); %>
                                <% } %>
                </select>
            </div>
            <div>
                <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 ml-1">Filter
                    Lanjut</label>
                <select name="hide_isolated"
                    class="w-full px-4 py-3 bg-white/50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all font-bold text-slate-700 appearance-none">
                    <option value="">TAMPILKAN SEMUA</option>
                    <option value="1" <%=filters.hide_isolated==='1' || filters.hide_isolated===true ? 'selected' : ''
                        %>>SEMBUNYIKAN ISOLIR</option>
                    <option value="only" <%=filters.hide_isolated==='only' ? 'selected' : '' %>>HANYA ISOLIR</option>
                </select>
            </div>
            <div class="flex gap-2">
                <button type="submit"
                    class="flex-1 bg-slate-800 hover:bg-slate-900 text-white font-black text-[11px] uppercase tracking-widest py-3 px-6 rounded-2xl transition-all shadow-lg active:scale-95">
                    Terapkan
                </button>
                <a href="/billing/tagihan"
                    class="bg-white border border-slate-200 text-slate-500 hover:text-slate-700 font-black text-[11px] uppercase tracking-widest py-3 px-4 rounded-2xl transition-all shadow-sm active:scale-95 flex items-center justify-center">
                    <i class="fas fa-sync-alt"></i>
                </a>
            </div>
        </form>
    </div>

    <!-- Search & List Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div class="relative flex-1 max-w-md">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <i class="fas fa-search text-slate-300"></i>
            </div>
            <form action="/billing/tagihan" method="GET">
                <input type="text" name="search" value="<%= filters.search %>"
                    placeholder="Cari nama, invoice, atau telepon..."
                    class="w-full pl-11 pr-4 py-3 bg-white border border-slate-200 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all font-medium text-slate-700 shadow-sm">
            </form>
        </div>
        <div class="flex items-center gap-4 text-slate-500 font-bold text-xs uppercase tracking-tighter">
            <div class="flex items-center gap-1.5">
                <span class="w-2 h-2 rounded-full bg-blue-500 shadow-[0_0_8px_rgba(59,130,246,0.5)]"></span>
                <span>Total: <%= pagination.totalCount %></span>
            </div>
            <div class="flex items-center gap-1.5">
                <span class="w-2 h-2 rounded-full bg-emerald-500 shadow-[0_0_8px_rgba(16,185,129,0.5)]"></span>
                <span>Page: <%= pagination.currentPage %>/<%= pagination.totalPages %></span>
            </div>
        </div>
    </div>

    <!-- Data Display Section -->
    <div class="relative">
        <!-- Desktop Table View -->
        <div
            class="hidden md:block bg-white/50 backdrop-blur-md rounded-[2rem] border border-white/30 shadow-sm overflow-hidden">
            <div class="overflow-x-auto custom-scrollbar">
                <table class="w-full text-left tagihan-table">
                    <thead>
                        <tr
                            class="text-[10px] font-black text-slate-400 uppercase tracking-widest border-b border-slate-100">
                            <th class="px-6 py-5 w-12">
                                <input type="checkbox" id="selectAll"
                                    class="w-5 h-5 rounded-lg border-slate-300 text-blue-600 focus:ring-blue-500 transition-all cursor-pointer">
                            </th>
                            <th class="px-6 py-5">Tagihan & Area</th>
                            <th class="px-6 py-5">Pelanggan</th>
                            <th class="px-6 py-5">Jumlah</th>
                            <th class="px-6 py-5 text-center">Status</th>
                            <th class="px-6 py-5">Waktu</th>
                            <th class="px-6 py-5 text-right pr-8 action-cell">Aksi</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-50">
                        <% if (invoices && invoices.length> 0) { %>
                            <% invoices.forEach(function(invoice) { %>
                                <tr class="group hover:bg-white/80 transition-all duration-300">
                                    <td class="px-6 py-4">
                                        <input type="checkbox"
                                            class="invoice-checkbox w-5 h-5 rounded-lg border-slate-300 text-blue-600 focus:ring-blue-500 transition-all cursor-pointer"
                                            value="<%= invoice.id %>">
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="flex flex-col">
                                            <span
                                                class="font-black text-slate-700 text-sm tracking-tighter group-hover:text-blue-600 transition-colors">
                                                <%= invoice.invoice_number %>
                                            </span>
                                            <span class="text-[10px] font-black text-slate-400 flex items-center gap-1">
                                                <i class="fas fa-map-marker-alt text-[8px]"></i>
                                                <%= invoice.odc_name || 'NO AREA' %>
                                            </span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-3">
                                            <div
                                                class="w-10 h-10 rounded-xl bg-slate-100 flex items-center justify-center font-black text-slate-500 text-xs shadow-inner">
                                                <%= invoice.customer_name ? invoice.customer_name.charAt(0) : '?' %>
                                            </div>
                                            <div class="flex flex-col">
                                                <span class="font-bold text-slate-700">
                                                    <%= invoice.customer_name %>
                                                </span>
                                                <button data-action="send-wanew" data-invoice-id="<%= invoice.id %>"
                                                    class="text-[10px] font-black text-slate-400 hover:text-emerald-500 flex items-center gap-1 transition-colors uppercase">
                                                    <i class="fab fa-whatsapp"></i>
                                                    <%= invoice.customer_phone %>
                                                </button>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="font-black text-slate-900 tracking-tighter">
                                            Rp <%= new Intl.NumberFormat('id-ID').format(invoice.total_amount) %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        <% let sClass='bg-slate-100 text-slate-500' ; let sLabel=invoice.status; if
                                            (invoice.status==='paid' ) { sClass='bg-emerald-50 text-emerald-600' ;
                                            sLabel='LUNAS' ; } else if (invoice.status==='overdue' ) {
                                            sClass='bg-rose-50 text-rose-600' ; sLabel='JATUH TEMPO' ; } else if
                                            (invoice.status==='sent' ) { sClass='bg-blue-50 text-blue-600' ;
                                            sLabel='TERKIRIM' ; } else if (invoice.status==='partial' ) {
                                            sClass='bg-amber-50 text-amber-600' ; sLabel='PARTIAL' ; } else if
                                            (invoice.status==='draft' ) { sClass='bg-slate-100 text-slate-500' ;
                                            sLabel='DRAFT' ; } else if (invoice.status==='cancelled' ) {
                                            sClass='bg-slate-200 text-slate-400 line-through' ; sLabel='BATAL' ; } %>
                                            <span class="badge-status <%= sClass %>">
                                                <%= sLabel %>
                                            </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="flex flex-col">
                                            <span
                                                class="text-[10px] font-black text-slate-400 uppercase tracking-tighter">TAGIHAN:
                                                <%= new Date(invoice.created_at).toLocaleDateString('id-ID',
                                                    {day: '2-digit' , month: 'short' }) %></span>
                                            <span
                                                class="text-[10px] font-black <%= new Date(invoice.due_date) < new Date() && invoice.status !== 'paid' ? 'text-red-500' : 'text-slate-400' %> uppercase tracking-tighter">TEMPO:
                                                <%= new Date(invoice.due_date).toLocaleDateString('id-ID',
                                                    {day: '2-digit' , month: 'short' , year: 'numeric' }) %></span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-right pr-6">
                                        <div
                                            class="flex items-center justify-end gap-1 opacity-40 group-hover:opacity-100 transition-opacity">
                                            <button data-action="detail" data-invoice-id="<%= invoice.id %>"
                                                class="w-9 h-9 flex items-center justify-center rounded-xl bg-blue-50 text-blue-600 hover:bg-blue-600 hover:text-white transition-all shadow-sm"
                                                title="View"><i class="fas fa-eye text-xs"></i></button>
                                            <button data-action="print" data-invoice-id="<%= invoice.id %>"
                                                class="w-9 h-9 flex items-center justify-center rounded-xl bg-slate-100 text-slate-600 hover:bg-slate-800 hover:text-white transition-all shadow-sm"
                                                title="Print"><i class="fas fa-print text-xs"></i></button>
                                            <% if (invoice.status !=='paid' ) { %>
                                                <button data-action="pay" data-invoice-id="<%= invoice.id %>"
                                                    class="w-9 h-9 flex items-center justify-center rounded-xl bg-emerald-50 text-emerald-600 hover:bg-emerald-600 hover:text-white transition-all shadow-sm"
                                                    title="Pay"><i class="fas fa-wallet text-xs"></i></button>
                                                <% if (invoice.customer_is_isolated) { %>
                                                    <button data-action="restore"
                                                        data-customer-id="<%= invoice.customer_id %>"
                                                        data-customer-name="<%= invoice.customer_name %>"
                                                        class="w-9 h-9 flex items-center justify-center rounded-xl bg-amber-50 text-amber-600 hover:bg-amber-600 hover:text-white transition-all shadow-sm"
                                                        title="Unisolate"><i class="fas fa-unlock text-xs"></i></button>
                                                    <% } else { %>
                                                        <button data-action="isolate"
                                                            data-customer-id="<%= invoice.customer_id %>"
                                                            data-customer-name="<%= invoice.customer_name %>"
                                                            class="w-9 h-9 flex items-center justify-center rounded-xl bg-rose-50 text-rose-600 hover:bg-rose-600 hover:text-white transition-all shadow-sm"
                                                            title="Isolate"><i class="fas fa-lock text-xs"></i></button>
                                                        <% } %>
                                                            <% } %>
                                                                <button data-action="delete"
                                                                    data-invoice-id="<%= invoice.id %>"
                                                                    data-invoice-number="<%= invoice.invoice_number %>"
                                                                    class="w-9 h-9 flex items-center justify-center rounded-xl bg-red-50 text-red-600 hover:bg-red-600 hover:text-white transition-all shadow-sm"
                                                                    title="Delete"><i
                                                                        class="fas fa-trash-alt text-xs"></i></button>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" class="px-6 py-20 text-center">
                                                <div class="flex flex-col items-center gap-4">
                                                    <div
                                                        class="w-20 h-20 bg-slate-50 rounded-full flex items-center justify-center text-slate-200">
                                                        <i class="fas fa-file-invoice text-4xl"></i>
                                                    </div>
                                                    <div class="flex flex-col">
                                                        <span
                                                            class="font-black text-slate-400 uppercase tracking-widest">Data
                                                            Kosong</span>
                                                        <span class="text-xs text-slate-300 font-bold">Tidak ada tagihan
                                                            yang ditemukan</span>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Mobile Layout -->
        <div class="md:hidden space-y-3">
            <% if (invoices && invoices.length> 0) { %>
                <div
                    class="flex items-center justify-between bg-white p-4 rounded-3xl border border-slate-100 shadow-sm mb-2">
                    <span class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Pilih Semua</span>
                    <input type="checkbox" id="selectAllMobile"
                        class="w-6 h-6 rounded-lg border-slate-300 text-blue-600">
                </div>
                <% invoices.forEach(function(invoice) { %>
                    <div
                        class="bg-white rounded-2xl p-4 border border-slate-100 shadow-sm relative overflow-hidden mb-3">
                        <div class="absolute top-3 right-3 z-20">
                            <input type="checkbox"
                                class="invoice-checkbox w-5 h-5 rounded-lg border-slate-300 text-blue-600"
                                value="<%= invoice.id %>">
                        </div>

                        <div class="flex items-center gap-3 mb-3 pr-8">
                            <div
                                class="w-10 h-10 rounded-xl bg-slate-100 flex items-center justify-center font-black text-slate-400 text-sm flex-shrink-0">
                                <%= invoice.customer_name ? invoice.customer_name.charAt(0) : '?' %>
                            </div>
                            <div class="flex flex-col min-w-0">
                                <span class="text-sm font-black text-slate-800 leading-tight truncate">
                                    <%= invoice.customer_name %>
                                </span>
                                <span class="text-[10px] font-bold text-slate-400 truncate">
                                    <%= invoice.invoice_number %> &bull; <%= invoice.odc_name || 'NO AREA' %>
                                </span>
                            </div>
                        </div>

