    /*
     * BILLING - TAGIHAN PAGE LOGIC
     * Refined for Glassmorphism & Enhanced Performance
     */


    // --- Selectors ---
    const selectAllCheck = document.getElementById('selectAll');
    const selectAllMobile = document.getElementById('selectAllMobile');
    const getCheckboxes = () => document.querySelectorAll('.invoice-checkbox');
    const getChecked = () => document.querySelectorAll('.invoice-checkbox:checked');
    const modalOverlay = document.getElementById('modalOverlay');
    const floatBar = document.getElementById('bulkActionFloat');

    // --- Initialization ---
    document.addEventListener('DOMContentLoaded', () => {
        console.log('ðŸ’Ž Premium Billing Logic Initialized');

        // Auto-set current month if empty
        const periodInp = document.getElementById('invoicePeriod');
        if (periodInp && !periodInp.value) {
            const now = new Date();
            periodInp.value = `${now.getFullYear()}-${String(now.getMonth() + 1).padStart(2, '0')}`;
        }

        // Initialize Selection UI
        updateSelectionUI();
    });

    // --- Selection & Bulk Logic ---
    function updateSelectionUI() {
        const checked = getChecked();
        const count = checked.length;
        const total = getCheckboxes().length;

        // Update Count Display
        const countBadge = document.getElementById('selectedCountFloat');
        if (countBadge) countBadge.textContent = count;

        // Toggle Floating Bar
        if (floatBar) {
            if (count > 0) {
                floatBar.classList.remove('scale-90', 'opacity-0', 'pointer-events-none');
                floatBar.classList.add('scale-100', 'opacity-100', 'pointer-events-auto');
            } else {
                floatBar.classList.remove('scale-100', 'opacity-100', 'pointer-events-auto');
                floatBar.classList.add('scale-90', 'opacity-0', 'pointer-events-none');
            }
        }

        // Parent SelectAll Checkbox State
        if (selectAllCheck) {
            selectAllCheck.checked = count > 0 && count === total;
            selectAllCheck.indeterminate = count > 0 && count < total;
        }
        if (selectAllMobile) {
            selectAllMobile.checked = count > 0 && count === total;
            selectAllMobile.indeterminate = count > 0 && count < total;
        }
    }

    function deselectAllInvoices() {
        getCheckboxes().forEach(cb => cb.checked = false);
        if (selectAllCheck) selectAllCheck.checked = false;
        if (selectAllMobile) selectAllMobile.checked = false;
        updateSelectionUI();
    }

    // --- Modal Management ---
    function openModal(modalId) {
        if (!modalOverlay) return;

        // Hide all modals first
        modalOverlay.querySelectorAll('.glass-panel').forEach(m => m.classList.add('hidden'));

        // Show specific modal
        const target = document.getElementById(modalId);
        if (target) {
            target.classList.remove('hidden');
            modalOverlay.classList.remove('hidden');
            modalOverlay.classList.add('flex');
            document.body.style.overflow = 'hidden'; // Prevent scroll
        }
    }

    function closeModals() {
        if (!modalOverlay) return;
        modalOverlay.classList.add('hidden');
        modalOverlay.classList.remove('flex');
        document.body.style.overflow = '';
    }

    // Close on overlay click (if exactly overlay)
    modalOverlay?.addEventListener('click', (e) => {
        if (e.target === modalOverlay) closeModals();
    });

    // --- Action Functions ---

    // Generate Invoice Logic
    async function checkExistingInvoices() {
        const period = document.getElementById('invoicePeriod').value;
        if (!period) return;

        try {
            const res = await fetch(`/billing/tagihan/check-duplicates?period=${period}`);
            const data = await res.json();
            if (data.success) {
                const existingIds = new Set(data.customerIds);
                const items = document.querySelectorAll('.customer-item');
                let hiddenCount = 0;

                items.forEach(item => {
                    const cb = item.querySelector('input');
                    const cid = parseInt(cb.value);
                    if (existingIds.has(cid)) {
                        item.classList.add('hidden');
                        cb.checked = false;
                        hiddenCount++;
                    } else {
                        item.classList.remove('hidden');
                    }
                });
                updateSelectedCount();
            }
        } catch (e) { console.error('Duplicate check failed', e); }
    }

    window.toggleCustomerSelect = (type) => {
        const container = document.getElementById('customerSelectorContainer');
        if (type === 'selected') {
            container?.classList.remove('hidden');
            checkExistingInvoices(); // Refresh when opening
        } else {
            container?.classList.add('hidden');
        }
    };

    window.filterCustomers = () => {
        const q = document.getElementById('customerSearch').value.toLowerCase();
        document.querySelectorAll('.customer-item').forEach(item => {
            const name = item.dataset.name || "";
            if (item.classList.contains('hidden') && !q) return; // Keep hidden by duplicate check
            item.style.display = name.includes(q) ? 'flex' : 'none';
        });
    };

    window.updateSelectedCount = () => {
        const count = document.querySelectorAll('input[name="customer_ids"]:checked').length;
        const el = document.getElementById('selectedCustomerCount');
        if (el) el.textContent = count;
    };

    // Bulk Actions Implementation
    async function bulkAction(action) {
        const selected = Array.from(getChecked()).map(cb => cb.value);
        if (selected.length === 0) return;

        let config = {
            'bulk-delete': { title: 'Hapus Masal?', text: `Hapus permanent ${selected.length} tagihan?`, icon: 'warning', color: '#ef4444', url: '/billing/tagihan/bulk-delete', method: 'POST', bodyKey: 'invoiceIds' },
            'bulk-send-wa': { title: 'Kirim WA Masal?', text: `Antrean untuk ${selected.length} pelanggan terpilih?`, icon: 'question', color: '#10b981', url: '/billing/tagihan/bulk-send-whatsapp', method: 'POST', bodyKey: 'invoice_ids' },
            'bulk-reminder': { title: 'Kirim Pengingat?', text: `Kirim pengingat tempo ke ${selected.length} orang?`, icon: 'info', color: '#f59e0b', url: '/billing/tagihan/bulk-reminder', method: 'POST', bodyKey: 'invoiceIds' }
        }[action];

        if (!config) return;

        const confirm = await Swal.fire({
            title: config.title,
            text: config.text,
            icon: config.icon,
            showCancelButton: true,
            confirmButtonColor: config.color,
            confirmButtonText: 'Ya, Lanjutkan'
        });

        if (!confirm.isConfirmed) return;

        Swal.fire({ title: 'Memproses...', allowOutsideClick: false, didOpen: () => Swal.showLoading() });

        try {
            const res = await fetch(config.url, {
                method: config.method,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ [config.bodyKey]: selected })
            });
            const data = await res.json();
            if (data.success || data.deleted !== undefined) {
                Swal.fire('Berhasil', data.message || 'Proses selesai.', 'success').then(() => location.reload());
            } else {
                Swal.fire('Gagal', data.message || 'Terjadi kesalahan.', 'error');
            }
        } catch (e) { Swal.fire('Error', 'Sistem gagal merespon.', 'error'); }
    }

    // --- Event Listeners ---

    // Select All Checkbox (Desktop)
    selectAllCheck?.addEventListener('change', (e) => {
        getCheckboxes().forEach(cb => cb.checked = e.target.checked);
        if (selectAllMobile) selectAllMobile.checked = e.target.checked;
        updateSelectionUI();
    });

    // Select All Checkbox (Mobile)
    selectAllMobile?.addEventListener('change', (e) => {
        getCheckboxes().forEach(cb => cb.checked = e.target.checked);
        if (selectAllCheck) selectAllCheck.checked = e.target.checked;
        updateSelectionUI();
    });

    // Individual Checkboxes (Delegated)
    document.addEventListener('change', (e) => {
        if (e.target.classList.contains('invoice-checkbox')) {
            updateSelectionUI();
        }
    });

    // Global Action Clicks
    document.addEventListener('click', async (e) => {
        const btn = e.target.closest('[data-action]');
        if (!btn) return;

        const action = btn.dataset.action;
        const id = btn.dataset.invoiceId;
        const customerId = btn.dataset.customerId;
        const customerName = btn.dataset.customerName;

        switch (action) {
            case 'generate-invoice': openModal('generateInvoiceModal'); break;
            case 'open-odc-print': openModal('odcPrintModal'); break;
            case 'detail': location.href = `/billing/tagihan/${id}`; break;
            case 'pay': location.href = `/billing/tagihan/${id}/pay`; break;
            case 'print': window.open(`/billing/tagihan/${id}/print?format=thermal`, '_blank'); break;

            case 'promise':
                document.getElementById('janjiBayarInvoiceId').value = id;
                const dateVal = btn.dataset.invoiceDate ? new Date(btn.dataset.invoiceDate).toISOString().split('T')[0] : '';
                document.getElementById('janjiBayarDate').value = dateVal;
                openModal('janjiBayarModal');
                break;

            case 'send-wanew':
                const ok = await Swal.fire({ title: 'Kirim WhatsApp?', text: "Kirim rincian tagihan via WA?", icon: 'question', showCancelButton: true });
                if (ok.isConfirmed) {
                    btn.disabled = true;
                    const res = await fetch(`/billing/tagihan/${id}/send-whatsapp`, { method: 'POST' });
                    const data = await res.json();
                    Swal.fire(data.success ? 'Berhasil' : 'Gagal', data.message, data.success ? 'success' : 'error');
                    btn.disabled = false;
                }
                break;

            case 'isolate':
            case 'restore':
                const label = action === 'isolate' ? 'Isolir' : 'Pulihkan';
                const { value: reason } = await Swal.fire({
                    title: `${label} Pelanggan?`,
                    text: `Alasan untuk ${customerName}:`,
                    input: 'text',
                    inputValue: action === 'isolate' ? 'Tunggakan pembayaran' : 'Sudah bayar',
                    showCancelButton: true
                });
                if (reason) {
                    const res = await fetch(`/billing/customer/${action}`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ customerId, reason })
                    });
                    const d = await res.json();
                    if (d.success) location.reload();
                    else Swal.fire('Gagal', d.message, 'error');
                }
                break;

            case 'delete':
                const del = await Swal.fire({ title: 'Hapus Tagihan?', text: 'Data tidak bisa dikembalikan!', icon: 'warning', showCancelButton: true });
                if (del.isConfirmed) {
                    const res = await fetch(`/billing/tagihan/${id}`, { method: 'DELETE' });
                    const d = await res.json();
                    if (d.success) location.reload();
                }
                break;

            case 'bulk-delete':
            case 'bulk-send-wa':
            case 'bulk-reminder':
                bulkAction(action);
                break;

            case 'print-selected':
                const ids = Array.from(getChecked()).map(cb => cb.value);
                const params = new URLSearchParams();
                ids.forEach(id => params.append('ids[]', id));
                params.append('format', 'thermal');
                window.open('/billing/tagihan/print-all?' + params.toString(), '_blank');
                break;
        }
    });

    // Form Submissions
    document.getElementById('generateInvoiceForm')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const period = document.getElementById('invoicePeriod').value;
        const sendWA = document.getElementById('sendWhatsapp').checked;
        const targetType = document.querySelector('input[name="targetType"]:checked').value;
        const customerIds = targetType === 'selected' ? Array.from(document.querySelectorAll('input[name="customer_ids"]:checked')).map(cb => cb.value) : null;

        Swal.fire({ title: 'Generating...', allowOutsideClick: false, didOpen: () => Swal.showLoading() });
        const res = await fetch('/billing/tagihan/generate-bulk', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ period, customer_ids: customerIds, send_whatsapp: sendWA })
        });
        const d = await res.json();
        if (d.success) Swal.fire('Sukses', d.message, 'success').then(() => location.reload());
        else Swal.fire('Gagal', d.message, 'error');
    });

    // Janji Bayar Logic
    window.saveJanjiBayar = async () => {
        const id = document.getElementById('janjiBayarInvoiceId').value;
        const date = document.getElementById('janjiBayarDate').value;
        if (!date) return;

        const res = await fetch(`/billing/tagihan/${id}/due-date`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ due_date: date })
        });
        const d = await res.json();
        if (d.success) location.reload();
        else Swal.fire('Gagal', d.message, 'error');
    };

    // Show ODC Print Modal
    window.showOdcPrintModal = () => {
        openModal('odcPrintModal');
    };

    // Filter ODC Modal
    window.filterOdcList = () => {
        const q = document.getElementById('odcSearchInput').value.toLowerCase();
        document.querySelectorAll('.odc-item').forEach(item => {
            const name = (item.dataset.name || '').toLowerCase();
            const loc = (item.dataset.location || '').toLowerCase();
            item.style.display = (name.includes(q) || loc.includes(q)) ? 'flex' : 'none';
        });
    };

    window.closeModals = closeModals;
