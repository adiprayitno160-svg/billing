<!-- Resolve Debt Modal -->
<div id="resolve-modal" class="hidden fixed inset-0 bg-gray-600  overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Lunasi Hutang</h3>
            <form id="resolve-form">
                <input type="hidden" id="debt-id" name="debt_id">

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Metode Pembayaran</label>
                    <select name="payment_method" required class="w-full px-3 py-2 border border-gray-300 rounded-lg">
                        <option value="">Pilih Metode</option>
                        <option value="cash">Tunai</option>
                        <option value="transfer">Transfer</option>
                        <option value="e-wallet">E-Wallet</option>
                    </select>
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Catatan</label>
                    <textarea name="notes" rows="3"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg"></textarea>
                </div>

                <div class="flex space-x-3">
                    <button type="submit" class="flex-1 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                        Lunasi
                    </button>
                    <button type="button" onclick="closeModal()"
                        class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600">
                        Batal
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    async function loadDebts() {
        try {
            const response = await fetch('/billing/debts?format=json');
            const data = await response.json();

            // Update summary
            document.getElementById('total-debt').textContent = 'Rp ' + new Intl.NumberFormat('id-ID').format(data.summary?.total_debt || 0);
            document.getElementById('customers-count').textContent = data.summary?.customers_count || 0;
            document.getElementById('overdue-count').textContent = data.summary?.overdue_count || 0;
            document.getElementById('resolved-count').textContent = data.summary?.resolved_count || 0;

            const tbody = document.getElementById('debts-tbody');

            if (!data.debts || data.debts.length === 0) {
                tbody.innerHTML = `
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                                <i class="fas fa-inbox text-4xl mb-2"></i>
                                <p>Tidak ada hutang</p>
                            </td>
                        </tr>
                    `;
                return;
            }

            tbody.innerHTML = data.debts.map(debt => {
                const statusClass = debt.status === 'resolved' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800';
                const statusText = debt.status === 'resolved' ? 'Lunas' : 'Belum Lunas';
                const daysOld = Math.floor((new Date() - new Date(debt.created_at)) / (1000 * 60 * 60 * 24));

                return `
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">${debt.customer_name}</div>
                                <div class="text-sm text-gray-500">${debt.customer_phone || '-'}</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                ${debt.invoice_number}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-red-600">
                                Rp ${new Intl.NumberFormat('id-ID').format(debt.debt_amount)}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                ${new Date(debt.created_at).toLocaleDateString('id-ID')}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm ${daysOld > 30 ? 'text-red-600 font-semibold' : 'text-gray-600'}">
                                ${daysOld} hari
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full ${statusClass}">
                                    ${statusText}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                ${debt.status === 'unpaid' ? `
                                    <button onclick="showResolveModal(${debt.id})" class="text-green-600 hover:text-green-900 mr-2">
                                        <i class="fas fa-check"></i>
                                    </button>
                                ` : ''}
                                <a href="/billing/debts/${debt.id}" class="text-blue-600 hover:text-blue-900">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    `;
            }).join('');

        } catch (error) {
            console.error('Error loading debts:', error);
        }
    }

    function showResolveModal(debtId) {
        document.getElementById('debt-id').value = debtId;
        document.getElementById('resolve-modal').classList.remove('hidden');
    }

    function closeModal() {
        document.getElementById('resolve-modal').classList.add('hidden');
    }

    document.getElementById('resolve-form').addEventListener('submit', async function (e) {
        e.preventDefault();

        const debtId = document.getElementById('debt-id').value;
        const formData = new FormData(this);

        try {
            const response = await fetch(`/billing/debts/${debtId}/resolve`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    payment_method: formData.get('payment_method'),
                    notes: formData.get('notes')
                })
            });

            const result = await response.json();

            if (result.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Berhasil!',
                    text: 'Hutang berhasil dilunasi!',
                    timer: 2000,
                    showConfirmButton: false
                });
                closeModal();
                loadDebts();
            } else {
                Swal.fire('Error!', (result.message || 'Gagal melunasi hutang'), 'error');
            }
        } catch (error) {
            console.error('Error resolving debt:', error);
            Swal.fire('Error!', 'Terjadi kesalahan sistem', 'error');
        }
    });

    function exportDebts() {
        window.location.href = '/billing/debts/export';
    }

    // Load data on page load
    loadDebts();
</script>