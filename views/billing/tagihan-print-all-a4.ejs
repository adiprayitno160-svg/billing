<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Print Semua Tagihan - A4</title>
    <style>
        @page {
            size: A4;
            margin: 15mm;
        }
        
        @media print {
            body {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
            .no-print {
                display: none;
            }
            .page-break {
                page-break-after: always;
            }
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: Arial, sans-serif;
            font-size: 10pt;
            line-height: 1.4;
            color: #000;
        }
        
        .header {
            text-align: center;
            margin-bottom: 20px;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
        }
        
        .header h1 {
            font-size: 18pt;
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .header .info {
            font-size: 11pt;
            margin-top: 5px;
        }
        
        .summary {
            margin-bottom: 15px;
            padding: 10px;
            background: #f5f5f5;
            border-left: 4px solid #333;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }
        
        th, td {
            border: 1px solid #000;
            padding: 8px;
            text-align: left;
        }
        
        th {
            background: #333;
            color: #fff;
            font-weight: bold;
        }
        
        tr:nth-child(even) {
            background: #f9f9f9;
        }
        
        .text-right {
            text-align: right;
        }
        
        .text-center {
            text-align: center;
        }
        
        .total-row {
            font-weight: bold;
            background: #e0e0e0 !important;
        }
        
        .odc-section {
            margin-bottom: 30px;
        }
        
        .odc-header {
            background: #007bff;
            color: white;
            padding: 10px;
            margin-top: 20px;
            margin-bottom: 10px;
            font-weight: bold;
        }
        
        .footer {
            margin-top: 30px;
            text-align: center;
            font-size: 9pt;
            color: #666;
        }
        
        .print-info {
            margin-top: 20px;
            font-size: 9pt;
            color: #666;
        }
        
        .no-print {
            text-align: center;
            margin: 20px;
        }
        
        .no-print button {
            padding: 10px 30px;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14pt;
        }
        
        .no-print button:hover {
            background: #0056b3;
        }
    </style>
</head>
<body>
    <div class="no-print">
        <button id="btnPrintAllA4">üñ®Ô∏è Print</button>
    </div>

    <div class="header">
        <h1>DAFTAR SEMUA TAGIHAN</h1>
        <div class="info">Billing System</div>
    </div>

    <div class="summary">
        <p>Total Tagihan: <strong><%= invoices.length %></strong></p>
        <p>Tanggal Cetak: <strong><%= new Date().toLocaleString('id-ID') %></strong></p>
        <% if (filters.period) { %>
        <p>Periode: <strong><%= filters.period %></strong></p>
        <% } %>
    </div>

    <% if (invoices && invoices.length > 0) { %>
        <%
        // Group by ODC
        const groupedByODC = {};
        invoices.forEach(invoice => {
            const odcName = invoice.odc_name || 'Tanpa ODC';
            if (!groupedByODC[odcName]) {
                groupedByODC[odcName] = [];
            }
            groupedByODC[odcName].push(invoice);
        });
        
        let grandTotal = 0;
        Object.keys(groupedByODC).sort().forEach((odcName, odcIndex) => {
            const odcInvoices = groupedByODC[odcName];
            let odcTotal = 0;
        %>
        
        <div class="odc-section">
            <div class="odc-header">
                <%= odcName %> (<%= odcInvoices.length %> Tagihan)
            </div>
            
            <table>
                <thead>
                    <tr>
                        <th width="5%">No</th>
                        <th width="15%">Kode</th>
                        <th width="25%">Nama Pelanggan</th>
                        <th width="12%">Telepon</th>
                        <th width="12%">Periode</th>
                        <th width="15%" class="text-right">Jumlah</th>
                        <th width="8%" class="text-center">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% odcInvoices.forEach((invoice, index) => { 
                        const amount = invoice.total_amount - invoice.paid_amount;
                        odcTotal += amount;
                        grandTotal += amount;
                    %>
                    <tr>
                        <td class="text-center"><%= index + 1 %></td>
                        <td><%= invoice.customer_code %></td>
                        <td><%= invoice.customer_name %></td>
                        <td><%= invoice.customer_phone || '-' %></td>
                        <td><%= invoice.period %></td>
                        <td class="text-right">Rp <%= amount.toLocaleString('id-ID') %></td>
                        <td class="text-center">
                            <% if (invoice.status === 'overdue') { %>
                                OVERDUE
                            <% } else if (invoice.status === 'partial') { %>
                                PARTIAL
                            <% } else { %>
                                PENDING
                            <% } %>
                        </td>
                    </tr>
                    <% }); %>
                    <tr class="total-row">
                        <td colspan="5" class="text-right">SUBTOTAL <%= odcName %>:</td>
                        <td class="text-right">Rp <%= odcTotal.toLocaleString('id-ID') %></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
        
        <% }); %>
        
        <div style="margin-top: 30px; padding: 15px; background: #f0f0f0; border: 2px solid #333;">
            <table style="border: none;">
                <tr style="background: transparent;">
                    <td style="border: none; text-align: right; font-size: 14pt; font-weight: bold;">GRAND TOTAL:</td>
                    <td style="border: none; text-align: right; font-size: 14pt; font-weight: bold; width: 20%;">
                        Rp <%= grandTotal.toLocaleString('id-ID') %>
                    </td>
                </tr>
            </table>
        </div>
    <% } else { %>
        <div style="text-align: center; padding: 40px; color: #666;">
            <p style="font-size: 14pt;">Tidak ada tagihan</p>
        </div>
    <% } %>

    <div class="print-info">
        <p>Dicetak pada: <%= new Date().toLocaleString('id-ID', { 
            weekday: 'long', 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
        }) %></p>
    </div>

    <div class="footer">
        <p>Dokumen ini dicetak otomatis dari sistem billing</p>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const btnPrint = document.getElementById('btnPrintAllA4');
            if (btnPrint) {
                btnPrint.addEventListener('click', function() {
                    window.print();
                });
            }
        });
        
        // Auto print on load (optional)
        // window.addEventListener('load', function() { window.print(); });
    </script>
</body>
</html>

