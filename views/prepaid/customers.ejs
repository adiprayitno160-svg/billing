<div class="space-y-6">
    <!-- Header -->
    <div class="rounded-2xl border border-indigo-200 bg-gradient-to-br from-indigo-50 to-purple-50 p-6 shadow-lg">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-indigo-900">ðŸ‘¥ Pelanggan Prabayar</h1>
                <p class="text-indigo-600 mt-1">Monitor masa aktif & status pelanggan prepaid</p>
            </div>
            <div class="flex items-center gap-3">
                <a href="/prepaid/transactions"
                    class="px-4 py-2 bg-white border border-indigo-200 text-indigo-700 rounded-lg hover:bg-indigo-50 transition-all">
                    ðŸ“Š Transaksi
                </a>
                <a href="/prepaid/payment-requests"
                    class="px-4 py-2 bg-white border border-indigo-200 text-indigo-700 rounded-lg hover:bg-indigo-50 transition-all">
                    ðŸ’³ Payment Requests
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="bg-white rounded-xl border border-slate-200 p-4 shadow-sm">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-slate-600">Total Pelanggan</p>
                    <p class="text-2xl font-bold text-slate-900">
                        <%= stats.total_prepaid || 0 %>
                    </p>
                </div>
                <div class="p-3 bg-indigo-100 rounded-lg">
                    <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl border border-green-200 p-4 shadow-sm">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-green-600">Aktif</p>
                    <p class="text-2xl font-bold text-green-900">
                        <%= stats.active_count || 0 %>
                    </p>
                </div>
                <div class="p-3 bg-green-100 rounded-lg">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl border border-yellow-200 p-4 shadow-sm">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-yellow-600">Segera Habis</p>
                    <p class="text-2xl font-bold text-yellow-900">
                        <%= stats.expiring_soon_count || 0 %>
                    </p>
                </div>
                <div class="p-3 bg-yellow-100 rounded-lg">
                    <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl border border-red-200 p-4 shadow-sm">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-red-600">Expired</p>
                    <p class="text-2xl font-bold text-red-900">
                        <%= stats.expired_count || 0 %>
                    </p>
                </div>
                <div class="p-3 bg-red-100 rounded-lg">
                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Customer List Table -->
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
        <div class="p-4 border-b border-slate-200">
            <h3 class="text-lg font-semibold text-slate-900">Daftar Pelanggan</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-slate-50 border-b border-slate-200">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-slate-600 uppercase">Pelanggan</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-slate-600 uppercase">Paket</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-slate-600 uppercase">Masa Aktif</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-slate-600 uppercase">Status</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-slate-600 uppercase">Aksi</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-200">
                    <% if (customers && customers.length> 0) { %>
                        <% customers.forEach(customer=> { %>
                            <tr class="hover:bg-slate-50">
                                <td class="px-4 py-3">
                                    <div>
                                        <p class="font-medium text-slate-900">
                                            <%= customer.name %>
                                        </p>
                                        <p class="text-sm text-slate-500">
                                            <%= customer.customer_code || '-' %>
                                        </p>
                                        <% if (customer.phone) { %>
                                            <p class="text-xs text-slate-400">
                                                <%= customer.phone %>
                                            </p>
                                            <% } %>
                                    </div>
                                </td>
                                <td class="px-4 py-3">
                                    <div>
                                        <p class="text-sm font-medium text-slate-900">
                                            <%= customer.package_name || customer.profile_name || '-' %>
                                        </p>
                                        <p class="text-xs text-slate-500">
                                            <%= customer.pppoe_username || '-' %>
                                        </p>
                                    </div>
                                </td>
                                <td class="px-4 py-3">
                                    <% if (customer.expiry_date) { %>
                                        <p class="text-sm text-slate-900">
                                            <%= new Date(customer.expiry_date).toLocaleDateString('id-ID', {
                                                day: '2-digit' , month: 'short' , year: 'numeric' }) %>
                                        </p>
                                        <p class="text-xs text-slate-500">
                                            <%= new Date(customer.expiry_date).toLocaleTimeString('id-ID', {
                                                hour: '2-digit' , minute: '2-digit' }) %>
                                        </p>
                                        <% if (customer.days_remaining !==null) { %>
                                            <p
                                                class="text-xs <%= customer.days_remaining >= 0 ? 'text-green-600' : 'text-red-600' %>">
                                                <%= customer.days_remaining>= 0 ? `${customer.days_remaining} hari lagi`
                                                    : `Lewat ${Math.abs(customer.days_remaining)} hari` %>
                                            </p>
                                            <% } %>
                                                <% } else { %>
                                                    <p class="text-sm text-slate-400">Belum ada</p>
                                                    <% } %>
                                </td>
                                <td class="px-4 py-3">
                                    <% let statusClass='' ; let statusText='' ; let statusIcon='' ; if
                                        (customer.expiry_status==='active' ) { statusClass='bg-green-100 text-green-800'
                                        ; statusText='Aktif' ; statusIcon='âœ…' ; } else if
                                        (customer.expiry_status==='expiring_soon' ) {
                                        statusClass='bg-yellow-100 text-yellow-800' ; statusText='Segera Habis' ;
                                        statusIcon='â°' ; } else if (customer.expiry_status==='expired' ) {
                                        statusClass='bg-red-100 text-red-800' ; statusText='Expired' ; statusIcon='âš ï¸' ;
                                        } else { statusClass='bg-slate-100 text-slate-800' ;
                                        statusText='Tidak Ada Expiry' ; statusIcon='â“' ; } %>
                                        <span
                                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= statusClass %>">
                                            <%= statusIcon %>
                                                <%= statusText %>
                                        </span>
                                        <% if (customer.is_isolated) { %>
                                            <span
                                                class="block mt-1 inline-flex items-center px-2 py-0.5 rounded text-xs bg-red-100 text-red-700">
                                                ðŸ”’ Isolated
                                            </span>
                                            <% } %>
                                </td>
                                <td class="px-4 py-3">
                                    <a href="/customers/<%= customer.id %>/edit"
                                        class="text-indigo-600 hover:text-indigo-900 text-sm font-medium">
                                        Edit
                                    </a>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="px-4 py-8 text-center text-slate-500">
                                            Belum ada pelanggan prabayar
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>