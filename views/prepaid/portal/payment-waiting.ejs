<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Portal Prepaid</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
  <!-- Header -->
  <div class="bg-white shadow-sm">
    <div class="container mx-auto px-4 py-4">
      <h1 class="text-2xl font-bold text-indigo-600">
        <i class="fas fa-wifi mr-2"></i>Portal Prepaid
      </h1>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
      
      <% if (status === 'pending') { %>
        <!-- Pending Status -->
        <div class="bg-white rounded-xl shadow-xl p-8 text-center">
          <!-- Animated Icon -->
          <div class="mb-6">
            <div class="inline-block p-6 bg-yellow-100 rounded-full">
              <i class="fas fa-clock text-6xl text-yellow-600 animate-pulse"></i>
            </div>
          </div>

          <h2 class="text-3xl font-bold text-gray-800 mb-4">
            ⏳ Menunggu Verifikasi
          </h2>
          
          <p class="text-gray-600 text-lg mb-6">
            Pembayaran Anda sedang dalam proses verifikasi oleh admin.
          </p>

          <!-- Status Box -->
          <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mb-6 text-left">
            <div class="flex items-start">
              <i class="fas fa-info-circle text-yellow-600 mt-1 mr-3"></i>
              <div>
                <p class="text-sm text-yellow-800 font-semibold">Status: Pending Verification</p>
                <p class="text-sm text-yellow-700 mt-1">
                  Verifikasi biasanya memakan waktu 1-24 jam. Admin akan segera memverifikasi pembayaran Anda.
                </p>
              </div>
            </div>
          </div>

          <!-- Loading Spinner -->
          <div class="mb-6">
            <i class="fas fa-spinner fa-spin text-4xl text-indigo-600"></i>
            <p class="text-sm text-gray-600 mt-2">Memeriksa status pembayaran...</p>
          </div>

          <!-- Actions -->
          <div class="space-y-3">
            <button onclick="checkStatus()" id="checkStatusBtn"
                    class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-4 rounded-lg">
              <i class="fas fa-sync mr-2"></i>Refresh Status
            </button>
            <a href="/prepaid/portal/dashboard" 
               class="block w-full border border-gray-300 text-gray-700 font-semibold py-3 px-4 rounded-lg hover:bg-gray-50">
              <i class="fas fa-home mr-2"></i>Kembali ke Dashboard
            </a>
          </div>

          <!-- Auto Refresh Info -->
          <p class="text-xs text-gray-500 mt-6">
            <i class="fas fa-sync-alt mr-1"></i>
            Halaman ini akan otomatis refresh setiap 10 detik
          </p>
        </div>

      <% } else if (status === 'rejected') { %>
        <!-- Rejected Status -->
        <div class="bg-white rounded-xl shadow-xl p-8 text-center">
          <div class="mb-6">
            <div class="inline-block p-6 bg-red-100 rounded-full">
              <i class="fas fa-times-circle text-6xl text-red-600"></i>
            </div>
          </div>

          <h2 class="text-3xl font-bold text-gray-800 mb-4">
            ❌ Pembayaran Ditolak
          </h2>
          
          <p class="text-gray-600 text-lg mb-6">
            Mohon maaf, pembayaran Anda ditolak oleh admin.
          </p>

          <!-- Rejection Reason -->
          <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 text-left">
            <div class="flex items-start">
              <i class="fas fa-exclamation-triangle text-red-600 mt-1 mr-3"></i>
              <div>
                <p class="text-sm text-red-800 font-semibold">Alasan Penolakan:</p>
                <p class="text-sm text-red-700 mt-1">
                  <%= message %>
                </p>
              </div>
            </div>
          </div>

          <!-- Actions -->
          <div class="space-y-3">
            <a href="/prepaid/portal/packages" 
               class="block w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-4 rounded-lg">
              <i class="fas fa-redo mr-2"></i>Coba Lagi
            </a>
            <a href="/prepaid/portal/dashboard" 
               class="block w-full border border-gray-300 text-gray-700 font-semibold py-3 px-4 rounded-lg hover:bg-gray-50">
              <i class="fas fa-home mr-2"></i>Kembali ke Dashboard
            </a>
          </div>
        </div>
      <% } %>

    </div>
  </div>

  <script>
    const transactionId = <%= transaction.id %>;
    let autoRefreshInterval;

    // Auto-refresh every 10 seconds for pending status
    <% if (status === 'pending') { %>
      autoRefreshInterval = setInterval(checkStatus, 10000);
    <% } %>

    function checkStatus() {
      const btn = document.getElementById('checkStatusBtn');
      if (btn) {
        btn.disabled = true;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Checking...';
      }

      fetch(`/prepaid/portal/api/payment/status/${transactionId}`)
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            if (data.redirect) {
              // Payment verified! Redirect to success page
              window.location.href = data.redirect;
            } else {
              // Still pending
              if (btn) {
                btn.disabled = false;
                btn.innerHTML = '<i class="fas fa-sync mr-2"></i>Refresh Status';
              }
            }
          }
        })
        .catch(err => {
          console.error('Error checking status:', err);
          if (btn) {
            btn.disabled = false;
            btn.innerHTML = '<i class="fas fa-sync mr-2"></i>Refresh Status';
          }
        });
    }

    // Clear interval when leaving page
    window.addEventListener('beforeunload', function() {
      if (autoRefreshInterval) {
        clearInterval(autoRefreshInterval);
      }
    });
  </script>
</body>
</html>

