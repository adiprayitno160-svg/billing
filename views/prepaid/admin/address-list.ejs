<div class="container-fluid px-4 py-6">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">
            <i class="fas fa-network-wired text-orange-600 mr-3"></i>
            Portal Redirect Management
        </h1>
        <p class="text-gray-600">Kelola customer yang masuk ke address list portal redirect</p>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6">
        <% if (customers && customers.length > 0) { %>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-gray-200">
                        <th class="text-left py-3 px-4 text-sm font-semibold text-gray-600">Customer</th>
                        <th class="text-left py-3 px-4 text-sm font-semibold text-gray-600">IP Address</th>
                        <th class="text-left py-3 px-4 text-sm font-semibold text-gray-600">Reason</th>
                        <th class="text-left py-3 px-4 text-sm font-semibold text-gray-600">Added At</th>
                    </tr>
                </thead>
                <tbody>
                    <% customers.forEach(function(customer) { %>
                    <tr class="border-b border-gray-100 hover:bg-gray-50 transition">
                        <td class="py-3 px-4">
                            <div class="font-semibold text-gray-800"><%= customer.name %></div>
                            <div class="text-xs text-gray-500"><%= customer.customer_code %></div>
                        </td>
                        <td class="py-3 px-4 font-mono text-sm">
                            <%= customer.ip_address || '-' %>
                        </td>
                        <td class="py-3 px-4 text-sm">
                            <%= customer.reason || 'Package expired' %>
                        </td>
                        <td class="py-3 px-4 text-sm">
                            <%= customer.added_at ? new Date(customer.added_at).toLocaleDateString('id-ID') : '-' %>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <div class="text-center py-12 text-gray-500">
            <i class="fas fa-check-circle text-5xl mb-4 text-green-500"></i>
            <p class="text-lg">Tidak ada customer di portal redirect</p>
            <p class="text-sm mt-2">Customer dengan paket expired akan otomatis masuk address list</p>
        </div>
        <% } %>
    </div>
</div>

<%- include('../../partials/footer') %>

