<div class="container-fluid px-4 py-6">
    <div class="mb-6 flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2">
                <i class="fas fa-star text-yellow-600 mr-3"></i>
                Active Subscriptions
            </h1>
            <p class="text-gray-600">Daftar langganan prepaid yang aktif</p>
        </div>
        <button onclick="showActivateModal()" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-semibold">
            <i class="fas fa-plus mr-2"></i>Aktivasi Manual
        </button>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6">
        <% if (subscriptions && subscriptions.length > 0) { %>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-gray-200">
                        <th class="text-left py-3 px-4 text-sm font-semibold text-gray-600">Customer</th>
                        <th class="text-left py-3 px-4 text-sm font-semibold text-gray-600">Paket</th>
                        <th class="text-left py-3 px-4 text-sm font-semibold text-gray-600">Speed</th>
                        <th class="text-left py-3 px-4 text-sm font-semibold text-gray-600">Harga</th>
                        <th class="text-left py-3 px-4 text-sm font-semibold text-gray-600">Expired</th>
                        <th class="text-left py-3 px-4 text-sm font-semibold text-gray-600">Sisa Hari</th>
                        <th class="text-center py-3 px-4 text-sm font-semibold text-gray-600">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% subscriptions.forEach(function(sub) { %>
                    <tr class="border-b border-gray-100 hover:bg-gray-50 transition">
                        <td class="py-3 px-4">
                            <div class="font-semibold text-gray-800"><%= sub.customer_name %></div>
                            <div class="text-xs text-gray-500"><%= sub.customer_code %></div>
                        </td>
                        <td class="py-3 px-4 font-semibold">
                            <%= sub.package_name %>
                        </td>
                        <td class="py-3 px-4 text-sm">
                            <%= sub.download_mbps %>/<%= sub.upload_mbps %> Mbps
                        </td>
                        <td class="py-3 px-4 font-semibold">
                            Rp <%= sub.purchase_price.toLocaleString('id-ID') %>
                        </td>
                        <td class="py-3 px-4 text-sm">
                            <%= new Date(sub.expiry_date).toLocaleDateString('id-ID') %>
                        </td>
                        <td class="py-3 px-4">
                            <% if (sub.days_remaining <= 3) { %>
                            <span class="bg-red-100 text-red-700 px-3 py-1 rounded-full text-xs font-semibold">
                                <%= sub.days_remaining %> hari
                            </span>
                            <% } else if (sub.days_remaining <= 7) { %>
                            <span class="bg-yellow-100 text-yellow-700 px-3 py-1 rounded-full text-xs font-semibold">
                                <%= sub.days_remaining %> hari
                            </span>
                            <% } else { %>
                            <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-xs font-semibold">
                                <%= sub.days_remaining %> hari
                            </span>
                            <% } %>
                        </td>
                        <td class="py-3 px-4 text-center">
                            <form action="/prepaid/subscriptions/deactivate/<%= sub.id %>" method="POST" class="inline" 
                                  onsubmit="return confirm('Yakin ingin nonaktifkan subscription untuk <%= sub.customer_name %>?')">
                                <button type="submit" class="text-red-600 hover:text-red-800 px-3 py-1 rounded hover:bg-red-50">
                                    <i class="fas fa-times-circle"></i> Nonaktifkan
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <div class="text-center py-12 text-gray-500">
            <i class="fas fa-star text-5xl mb-4"></i>
            <p class="text-lg">Belum ada subscription aktif</p>
        </div>
        <% } %>
    </div>
</div>

<!-- Manual Activation Modal -->
<div id="activateModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-2xl max-w-md w-full mx-4">
        <div class="p-6 border-b border-gray-200">
            <h2 class="text-2xl font-bold text-gray-800">Aktivasi Manual</h2>
        </div>
        
        <form action="/prepaid/subscriptions/activate" method="POST" class="p-6">
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Customer ID</label>
                    <input type="number" name="customer_id" required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500"
                           placeholder="Masukkan Customer ID">
                    <p class="text-xs text-gray-500 mt-1">Lihat Customer ID di menu Customer Prepaid</p>
                </div>
                
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Paket ID</label>
                    <input type="number" name="package_id" required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500"
                           placeholder="Masukkan Paket ID">
                    <p class="text-xs text-gray-500 mt-1">Lihat Paket ID di menu Paket Prepaid</p>
                </div>
                
                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3 text-sm text-yellow-800">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    Aktivasi manual akan langsung mengaktifkan paket tanpa pembayaran. Subscription lama akan dinonaktifkan.
                </div>
            </div>
            
            <div class="flex justify-end gap-3 mt-6">
                <button type="button" onclick="closeActivateModal()" 
                        class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                    Batal
                </button>
                <button type="submit" 
                        class="px-6 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg font-semibold">
                    Aktivasi
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function showActivateModal() {
    document.getElementById('activateModal').classList.remove('hidden');
}

function closeActivateModal() {
    document.getElementById('activateModal').classList.add('hidden');
}

// Close modal when clicking outside
document.getElementById('activateModal')?.addEventListener('click', function(e) {
    if (e.target === this) {
        closeActivateModal();
    }
});
</script>

