<div class="container-fluid px-4 py-6">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800">üí∞ Verifikasi Pembayaran</h1>
        <p class="text-gray-600 mt-2">Review dan verifikasi pembayaran manual transfer</p>
      </div>

      <!-- Statistics -->
      <div class="grid grid-cols-4 gap-6 mb-8">
        <div class="bg-yellow-50 rounded-lg p-6 border border-yellow-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-yellow-700 font-medium">Pending</p>
              <p class="text-3xl font-bold text-yellow-900"><%= pendingPayments.length %></p>
            </div>
            <i class="fas fa-clock text-4xl text-yellow-400"></i>
          </div>
        </div>
        
        <div class="bg-green-50 rounded-lg p-6 border border-green-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-green-700 font-medium">Verified Today</p>
              <p class="text-3xl font-bold text-green-900"><%= statistics.verified_count || 0 %></p>
            </div>
            <i class="fas fa-check-circle text-4xl text-green-400"></i>
          </div>
        </div>
        
        <div class="bg-red-50 rounded-lg p-6 border border-red-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-red-700 font-medium">Rejected Today</p>
              <p class="text-3xl font-bold text-red-900"><%= statistics.rejected_count || 0 %></p>
            </div>
            <i class="fas fa-times-circle text-4xl text-red-400"></i>
          </div>
        </div>
        
        <div class="bg-blue-50 rounded-lg p-6 border border-blue-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-blue-700 font-medium">Revenue Today</p>
              <p class="text-xl font-bold text-blue-900">Rp <%= Number(statistics.total_revenue || 0).toLocaleString('id-ID') %></p>
            </div>
            <i class="fas fa-money-bill-wave text-4xl text-blue-400"></i>
          </div>
        </div>
      </div>

      <!-- Alerts -->
      <% if (success) { %>
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded">
          <p class="font-bold">Success!</p>
          <p><%= success %></p>
        </div>
      <% } %>
      <% if (error) { %>
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded">
          <p class="font-bold">Error!</p>
          <p><%= error %></p>
        </div>
      <% } %>

      <!-- Pending Payments Table -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h2 class="text-lg font-semibold text-gray-800">
            <i class="fas fa-list mr-2"></i>Pembayaran Menunggu Verifikasi
          </h2>
        </div>
        
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Paket</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Waktu</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bukti</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Aksi</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% if (pendingPayments.length === 0) { %>
                <tr>
                  <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                    <i class="fas fa-check-circle text-4xl text-green-400 mb-2"></i>
                    <p>Tidak ada pembayaran yang menunggu verifikasi</p>
                  </td>
                </tr>
              <% } else { %>
                <% pendingPayments.forEach(payment => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm font-medium text-gray-900"><%= payment.customer_name %></div>
                      <div class="text-sm text-gray-500"><%= payment.customer_phone %></div>
                    </td>
                    <td class="px-6 py-4">
                      <div class="text-sm font-medium text-gray-900"><%= payment.package_name %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm font-semibold text-gray-900">Rp <%= Number(payment.amount).toLocaleString('id-ID') %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-gray-900">
                        <%= new Date(payment.created_at).toLocaleDateString('id-ID') %>
                      </div>
                      <div class="text-xs text-gray-500">
                        <%= payment.hours_pending %> jam yang lalu
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% if (payment.payment_proof_url) { %>
                        <button onclick="viewProof('<%= payment.payment_proof_url %>')" class="text-blue-600 hover:text-blue-900">
                          <i class="fas fa-image mr-1"></i>Lihat Bukti
                        </button>
                      <% } else { %>
                        <span class="text-gray-400 text-sm">Tidak ada</span>
                      <% } %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <button onclick="approvePayment(<%= payment.id %>)" 
                              class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded mr-2">
                        <i class="fas fa-check mr-1"></i>Approve
                      </button>
                      <button onclick="rejectPayment(<%= payment.id %>)" 
                              class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded">
                        <i class="fas fa-times mr-1"></i>Reject
                      </button>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal: View Proof -->
  <div id="proofModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg max-w-4xl w-full m-4 max-h-screen overflow-auto">
      <div class="p-4 border-b flex justify-between items-center">
        <h3 class="text-lg font-semibold">Bukti Transfer</h3>
        <button onclick="closeProofModal()" class="text-gray-500 hover:text-gray-700">
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
      <div class="p-4">
        <img id="proofImage" src="" alt="Bukti Transfer" class="max-w-full h-auto mx-auto">
      </div>
    </div>
  </div>

  <!-- Modal: Reject Reason -->
  <div id="rejectModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg max-w-md w-full m-4">
      <div class="p-4 border-b">
        <h3 class="text-lg font-semibold">Alasan Penolakan</h3>
      </div>
      <div class="p-4">
        <textarea id="rejectReason" rows="4" 
                  placeholder="Masukkan alasan penolakan..."
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500"></textarea>
      </div>
      <div class="p-4 border-t flex justify-end space-x-2">
        <button onclick="closeRejectModal()" class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
          Batal
        </button>
        <button onclick="submitReject()" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
          Tolak Pembayaran
        </button>
      </div>
    </div>
  </div>
    </div>
</div>

<script>
let currentRejectId = null;

function viewProof(proofUrl) {
  document.getElementById('proofImage').src = proofUrl;
  document.getElementById('proofModal').classList.remove('hidden');
  document.getElementById('proofModal').classList.add('flex');
}

function closeProofModal() {
  document.getElementById('proofModal').classList.add('hidden');
  document.getElementById('proofModal').classList.remove('flex');
}

function approvePayment(transactionId) {
  if (!confirm('Yakin ingin menyetujui pembayaran ini? Paket akan langsung diaktifkan.')) return;
  
  const btn = event.target.closest('button');
  btn.disabled = true;
  btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-1"></i>Processing...';
  
  fetch(`/prepaid/payment-verification/verify/${transactionId}`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    }
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      alert('‚úÖ Pembayaran berhasil diverifikasi dan paket diaktifkan!');
      window.location.reload();
    } else {
      alert('‚ùå Error: ' + data.error);
      btn.disabled = false;
      btn.innerHTML = '<i class="fas fa-check mr-1"></i>Approve';
    }
  })
  .catch(err => {
    alert('‚ùå Error: ' + err.message);
    btn.disabled = false;
    btn.innerHTML = '<i class="fas fa-check mr-1"></i>Approve';
  });
}

function rejectPayment(transactionId) {
  currentRejectId = transactionId;
  document.getElementById('rejectModal').classList.remove('hidden');
  document.getElementById('rejectModal').classList.add('flex');
}

function closeRejectModal() {
  currentRejectId = null;
  document.getElementById('rejectReason').value = '';
  document.getElementById('rejectModal').classList.add('hidden');
  document.getElementById('rejectModal').classList.remove('flex');
}

function submitReject() {
  const reason = document.getElementById('rejectReason').value.trim();
  
  if (!reason) {
    alert('Mohon masukkan alasan penolakan');
    return;
  }
  
  fetch(`/prepaid/payment-verification/reject/${currentRejectId}`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify({ reason })
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      alert('‚úÖ Pembayaran ditolak');
      window.location.reload();
    } else {
      alert('‚ùå Error: ' + data.error);
    }
  })
  .catch(err => {
    alert('‚ùå Error: ' + err.message);
  });
  
  closeRejectModal();
}
</script>

