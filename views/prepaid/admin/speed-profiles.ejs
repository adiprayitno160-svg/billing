<div class="container-fluid px-4 py-6">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">
            <i class="fas fa-tachometer-alt text-purple-600 mr-3"></i>
            Speed Profiles
        </h1>
        <p class="text-gray-600">Kelola profile kecepatan internet</p>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6">
        <% if (profiles && profiles.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% profiles.forEach(function(profile) { %>
            <div class="border border-gray-200 rounded-lg p-6 hover:shadow-lg transition">
                <h3 class="text-lg font-bold text-gray-800 mb-4"><%= profile.name %></h3>
                <div class="space-y-3">
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">Download:</span>
                        <span class="text-lg font-bold text-blue-600"><%= profile.download_mbps %> Mbps</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">Upload:</span>
                        <span class="text-lg font-bold text-green-600"><%= profile.upload_mbps %> Mbps</span>
                    </div>
                    <% if (profile.mikrotik_profile_name) { %>
                    <div class="pt-3 border-t border-gray-200">
                        <div class="text-xs text-gray-500">Mikrotik Profile:</div>
                        <div class="text-sm font-mono text-gray-700"><%= profile.mikrotik_profile_name %></div>
                    </div>
                    <% } %>
                </div>
            </div>
            <% }); %>
        </div>
        <% } else { %>
        <div class="text-center py-12 text-gray-500">
            <i class="fas fa-tachometer-alt text-5xl mb-4"></i>
            <p class="text-lg">Belum ada speed profile</p>
        </div>
        <% } %>
    </div>
</div>

<%- include('../../partials/footer') %>

