<div class="container-fluid px-4 py-6">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800"><%= title %></h1>
        <p class="text-gray-600 mt-2">Pilih connection type dan isi detail paket</p>
      </div>

      <!-- Form -->
      <form action="/prepaid/packages/<%= isEdit ? 'update/' + package.id : 'create' %>" method="POST" class="bg-white rounded-lg shadow p-8">
        
        <!-- Connection Type Selection -->
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700 mb-3">
            Connection Type <span class="text-red-500">*</span>
          </label>
          <div class="space-y-3">
            <label class="flex items-center p-4 border rounded-lg cursor-pointer hover:bg-gray-50 transition" onclick="selectConnectionType('pppoe')">
              <input type="radio" name="connection_type" value="pppoe" 
                     <%= (!package || package.connection_type === 'pppoe') ? 'checked' : '' %>
                     class="mr-3 text-blue-600">
              <div>
                <div class="font-semibold text-gray-900"><i class="fas fa-network-wired mr-2"></i>PPPoE</div>
                <div class="text-sm text-gray-600">Untuk customer dengan PPPoE username (menggunakan Mikrotik Profile)</div>
              </div>
            </label>
            
            <label class="flex items-center p-4 border rounded-lg cursor-pointer hover:bg-gray-50 transition" onclick="selectConnectionType('static')">
              <input type="radio" name="connection_type" value="static"
                     <%= (package && package.connection_type === 'static') ? 'checked' : '' %>
                     class="mr-3 text-blue-600">
              <div>
                <div class="font-semibold text-gray-900"><i class="fas fa-server mr-2"></i>Static IP</div>
                <div class="text-sm text-gray-600">Untuk customer dengan IP static (menggunakan Queue Tree)</div>
              </div>
            </label>
          </div>
        </div>

        <hr class="my-6">

        <!-- PPPoE Fields -->
        <div id="pppoe-fields" style="display: none;">
          <h3 class="text-lg font-semibold mb-4 text-blue-800"><i class="fas fa-network-wired mr-2"></i>PPPoE Configuration</h3>
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Mikrotik Profile Name <span class="text-red-500">*</span>
            </label>
            <input type="text" name="mikrotik_profile_name" 
                   id="mikrotik_profile_name"
                   value="<%= package ? package.mikrotik_profile_name : '' %>"
                   placeholder="prepaid-20mbps"
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            <p class="text-sm text-gray-500 mt-1">Nama profile yang sudah dibuat di Mikrotik PPPoE Server</p>
          </div>

          <!-- Rate Limiting Fields -->
          <h4 class="text-md font-semibold mb-3 text-gray-700">📊 Rate Limiting</h4>
          <div class="grid grid-cols-2 gap-6 mb-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                <i class="fas fa-download text-green-600"></i> Download Limit
              </label>
              <div class="relative">
                <input type="text" name="download_limit" 
                       id="download_limit"
                       value="<%= package && package.download_limit ? package.download_limit : '' %>"
                       placeholder="0 (unlimited)"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                <button type="button" 
                        id="btn-load-download-limit"
                        class="absolute right-2 top-1/2 transform -translate-y-1/2 px-3 py-1 text-xs bg-blue-500 text-white rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                  <i class="fas fa-sync-alt mr-1"></i>Load dari MikroTik
                </button>
              </div>
              <p class="text-sm text-gray-500 mt-1">
                <i class="fas fa-info-circle mr-1"></i>Otomatis terisi dari profil MikroTik. Jika kosong = unlimited (0)
              </p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                <i class="fas fa-upload text-blue-600"></i> Upload Limit
              </label>
              <input type="text" name="upload_limit" 
                     id="upload_limit"
                     value="<%= package && package.upload_limit ? package.upload_limit : '' %>"
                     placeholder="0 (unlimited)"
                     class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              <p class="text-sm text-gray-500 mt-1">
                <i class="fas fa-exclamation-triangle mr-1"></i>Tidak bisa ambil dari MikroTik (harus diisi manual)
              </p>
            </div>
          </div>
        </div>

        <!-- Static IP Fields -->
        <div id="static-fields" style="display: none;">
          <h3 class="text-lg font-semibold mb-4 text-purple-800"><i class="fas fa-server mr-2"></i>Static IP Configuration</h3>
          <div class="grid grid-cols-2 gap-6 mb-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Parent Download Queue <span class="text-red-500">*</span>
              </label>
              <select name="parent_download_queue" 
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                <% parentQueues.download.forEach(queue => { %>
                  <option value="<%= queue %>" <%= (package && package.parent_download_queue === queue) ? 'selected' : '' %>>
                    <%= queue %>
                  </option>
                <% }) %>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Parent Upload Queue <span class="text-red-500">*</span>
              </label>
              <select name="parent_upload_queue"
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                <% parentQueues.upload.forEach(queue => { %>
                  <option value="<%= queue %>" <%= (package && package.parent_upload_queue === queue) ? 'selected' : '' %>>
                    <%= queue %>
                  </option>
                <% }) %>
              </select>
            </div>
          </div>
          <p class="text-sm text-gray-500 mb-6"><i class="fas fa-info-circle mr-1"></i>System akan membuat child queue di bawah parent yang dipilih</p>
        </div>

        <hr class="my-6">

        <!-- Common Fields -->
        <h3 class="text-lg font-semibold mb-4 text-gray-800">Detail Paket</h3>
        
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Nama Paket <span class="text-red-500">*</span>
          </label>
          <input type="text" name="name" 
                 value="<%= package ? package.name : '' %>"
                 placeholder="Paket Hemat 20Mbps 30 Hari"
                 required
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
        </div>

        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Deskripsi
          </label>
          <textarea name="description" rows="3"
                    placeholder="Paket internet unlimited untuk browsing dan streaming"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"><%= package ? package.description : '' %></textarea>
        </div>

        <div class="grid grid-cols-2 gap-6 mb-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <i class="fas fa-download text-green-600"></i> Download Speed (Mbps) <span class="text-red-500">*</span>
            </label>
            <input type="number" name="download_mbps" 
                   value="<%= package ? package.download_mbps : '' %>"
                   min="1" step="0.1"
                   placeholder="20"
                   required
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <i class="fas fa-upload text-blue-600"></i> Upload Speed (Mbps) <span class="text-red-500">*</span>
            </label>
            <input type="number" name="upload_mbps"
                   value="<%= package ? package.upload_mbps : '' %>"
                   min="1" step="0.1"
                   placeholder="20"
                   required
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
          </div>
        </div>

        <div class="grid grid-cols-2 gap-6 mb-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Durasi (Hari) <span class="text-red-500">*</span>
            </label>
            <input type="number" name="duration_days"
                   value="<%= package ? package.duration_days : '30' %>"
                   min="1"
                   placeholder="30"
                   required
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Harga (Rp) <span class="text-red-500">*</span>
            </label>
            <input type="number" name="price"
                   value="<%= package ? package.price : '' %>"
                   min="0"
                   placeholder="250000"
                   required
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
          </div>
        </div>

        <div class="mb-6">
          <label class="flex items-center">
            <input type="checkbox" name="is_active" value="true"
                   <%= (!package || package.is_active) ? 'checked' : '' %>
                   class="mr-2 rounded text-blue-600 focus:ring-2 focus:ring-blue-500">
            <span class="text-sm font-medium text-gray-700">Paket Aktif (tampil di portal customer)</span>
          </label>
        </div>

        <!-- Buttons -->
        <div class="flex justify-end space-x-4">
          <a href="/prepaid/packages" class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
            Batal
          </a>
          <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
            <i class="fas fa-save mr-2"></i><%= isEdit ? 'Update Paket' : 'Simpan Paket' %>
          </button>
        </div>
      </form>
    </div>
</div>

<script>
// Initialize form based on current selection
document.addEventListener('DOMContentLoaded', function() {
  const pppoeRadio = document.querySelector('input[name="connection_type"][value="pppoe"]');
  const staticRadio = document.querySelector('input[name="connection_type"][value="static"]');
  
  if (pppoeRadio.checked) {
    selectConnectionType('pppoe');
  } else if (staticRadio.checked) {
    selectConnectionType('static');
  }

  // Setup auto-load download limit button
  const btnLoadDownloadLimit = document.getElementById('btn-load-download-limit');
  const profileNameInput = document.getElementById('mikrotik_profile_name');
  const downloadLimitInput = document.getElementById('download_limit');
  const downloadLimitContainer = downloadLimitInput ? downloadLimitInput.closest('div') : null;

  // Function to load download limit from MikroTik
  function loadDownloadLimit() {
    const profileName = profileNameInput ? profileNameInput.value.trim() : '';
    
    if (!profileName) {
      alert('Silakan isi Mikrotik Profile Name terlebih dahulu');
      if (profileNameInput) profileNameInput.focus();
      return;
    }

    // Show loading state
    if (btnLoadDownloadLimit) {
      btnLoadDownloadLimit.disabled = true;
      btnLoadDownloadLimit.innerHTML = '<i class="fas fa-spinner fa-spin mr-1"></i>Loading...';
    }

    // Fetch rate limit from API
    fetch(`/prepaid/packages/api/profile-rate-limit?profile_name=${encodeURIComponent(profileName)}`)
      .then(response => response.json())
      .then(data => {
        if (data.success && data.data) {
          const downloadLimit = data.data.download_limit || '0';
          if (downloadLimitInput) {
            downloadLimitInput.value = downloadLimit;
          }
          
          // Remove existing success/error messages
          if (downloadLimitContainer) {
            const existingMsg = downloadLimitContainer.querySelector('.rate-limit-message');
            if (existingMsg) existingMsg.remove();
            
            // Show success message
            const successMsg = document.createElement('div');
            successMsg.className = 'rate-limit-message mt-2 text-sm text-green-600';
            successMsg.innerHTML = '<i class="fas fa-check-circle mr-1"></i>Download limit berhasil diambil dari MikroTik';
            downloadLimitContainer.appendChild(successMsg);
            
            // Remove success message after 3 seconds
            setTimeout(() => {
              successMsg.remove();
            }, 3000);
          }
        } else {
          alert('Gagal mengambil download limit: ' + (data.error || 'Profile tidak ditemukan'));
        }
      })
      .catch(error => {
        console.error('Error loading download limit:', error);
        alert('Gagal mengambil download limit dari MikroTik. Pastikan MikroTik sudah dikonfigurasi.');
      })
      .finally(() => {
        // Reset button state
        if (btnLoadDownloadLimit) {
          btnLoadDownloadLimit.disabled = false;
          btnLoadDownloadLimit.innerHTML = '<i class="fas fa-sync-alt mr-1"></i>Load dari MikroTik';
        }
      });
  }

  // Setup button click handler
  if (btnLoadDownloadLimit) {
    btnLoadDownloadLimit.addEventListener('click', loadDownloadLimit);
  }

  // Auto-load when profile name is changed (debounced)
  if (profileNameInput && downloadLimitInput) {
    let loadTimeout;
    profileNameInput.addEventListener('blur', function() {
      // Only auto-load if download limit is empty
      if (!downloadLimitInput.value || downloadLimitInput.value.trim() === '') {
        clearTimeout(loadTimeout);
        loadTimeout = setTimeout(loadDownloadLimit, 500);
      }
    });
  }
});

function selectConnectionType(type) {
  const pppoeFields = document.getElementById('pppoe-fields');
  const staticFields = document.getElementById('static-fields');
  
  if (type === 'pppoe') {
    pppoeFields.style.display = 'block';
    staticFields.style.display = 'none';
    
    // Make PPPoE field required
    const profileNameInput = document.querySelector('input[name="mikrotik_profile_name"]');
    if (profileNameInput) profileNameInput.setAttribute('required', 'required');
    const downloadQueue = document.querySelector('select[name="parent_download_queue"]');
    if (downloadQueue) downloadQueue.removeAttribute('required');
    const uploadQueue = document.querySelector('select[name="parent_upload_queue"]');
    if (uploadQueue) uploadQueue.removeAttribute('required');
  } else if (type === 'static') {
    pppoeFields.style.display = 'none';
    staticFields.style.display = 'block';
    
    // Make Static IP fields required
    const profileNameInput = document.querySelector('input[name="mikrotik_profile_name"]');
    if (profileNameInput) profileNameInput.removeAttribute('required');
    const downloadQueue = document.querySelector('select[name="parent_download_queue"]');
    if (downloadQueue) downloadQueue.setAttribute('required', 'required');
    const uploadQueue = document.querySelector('select[name="parent_upload_queue"]');
    if (uploadQueue) uploadQueue.setAttribute('required', 'required');
  }
}
</script>

