<div class="container-fluid px-4 py-6">
    <div class="mb-6 flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2">
                <i class="fas fa-box text-green-600 mr-3"></i>
                Paket Prepaid
            </h1>
            <p class="text-gray-600">Kelola paket internet prepaid</p>
        </div>
        <button onclick="showCreateModal()" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold">
            <i class="fas fa-plus mr-2"></i>Buat Paket Baru
        </button>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6">
        <% if (packages && packages.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% packages.forEach(function(pkg) { %>
            <div class="border border-gray-200 rounded-lg p-6 hover:shadow-lg transition relative">
                <div class="absolute top-4 right-4 flex gap-2">
                    <button onclick='editPackage(<%= JSON.stringify(pkg) %>)' 
                            class="text-blue-600 hover:text-blue-800" title="Edit">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button onclick="deletePackage(<%= pkg.id %>, '<%= pkg.name %>')" 
                            class="text-red-600 hover:text-red-800" title="Delete">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
                
                <h3 class="text-xl font-bold text-gray-800 mb-2 pr-16"><%= pkg.name %></h3>
                <div class="text-3xl font-bold text-blue-600 mb-4">
                    Rp <%= pkg.price.toLocaleString('id-ID') %>
                </div>
                <div class="space-y-2 mb-4">
                    <div class="flex items-center text-sm text-gray-600">
                        <i class="fas fa-tachometer-alt w-5 mr-2 text-blue-500"></i>
                        <%= pkg.speed_profile_name || 'No speed profile' %>
                        <% if (pkg.download_mbps) { %>
                        (<%= pkg.download_mbps %>/<%= pkg.upload_mbps %> Mbps)
                        <% } %>
                    </div>
                    <div class="flex items-center text-sm text-gray-600">
                        <i class="fas fa-clock w-5 mr-2 text-green-500"></i>
                        <%= pkg.duration_days %> hari
                    </div>
                </div>
                <% if (pkg.description) { %>
                <p class="text-sm text-gray-600 mb-4"><%= pkg.description %></p>
                <% } %>
                <div class="text-xs text-gray-500">
                    Status: <span class="<%= pkg.is_active ? 'text-green-600' : 'text-red-600' %> font-semibold">
                        <%= pkg.is_active ? 'Aktif' : 'Nonaktif' %>
                    </span>
                </div>
            </div>
            <% }); %>
        </div>
        <% } else { %>
        <div class="text-center py-12 text-gray-500">
            <i class="fas fa-box text-5xl mb-4"></i>
            <p class="text-lg">Belum ada paket prepaid</p>
            <p class="text-sm mt-2">Buat paket prepaid di database prepaid_packages</p>
        </div>
        <% } %>
    </div>
</div>

<!-- Create/Edit Package Modal -->
<div id="packageModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-2xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
        <div class="p-6 border-b border-gray-200">
            <h2 id="modalTitle" class="text-2xl font-bold text-gray-800">Buat Paket Baru</h2>
        </div>
        
        <form id="packageForm" method="POST" class="p-6">
            <input type="hidden" id="packageId" name="id">
            
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Nama Paket</label>
                    <input type="text" name="name" id="packageName" required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                           placeholder="Contoh: Paket 20 Mbps - 30 Hari">
                </div>
                
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Deskripsi</label>
                    <textarea name="description" id="packageDescription" rows="3"
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                              placeholder="Deskripsi paket..."></textarea>
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Harga (Rp)</label>
                        <input type="number" name="price" id="packagePrice" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                               placeholder="150000">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Durasi (Hari)</label>
                        <input type="number" name="duration_days" id="packageDuration" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                               placeholder="30">
                    </div>
                </div>
                
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Speed Profile</label>
                    <select name="speed_profile_id" id="packageSpeedProfile" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        <option value="">Pilih Speed Profile</option>
                        <% if (typeof speedProfiles !== 'undefined' && speedProfiles) { %>
                        <% speedProfiles.forEach(function(sp) { %>
                        <option value="<%= sp.id %>"><%= sp.name %> (<%= sp.download_mbps %>/<%= sp.upload_mbps %> Mbps)</option>
                        <% }); %>
                        <% } %>
                    </select>
                </div>
                
                <div>
                    <label class="flex items-center">
                        <input type="checkbox" name="is_active" id="packageIsActive" value="1" checked
                               class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                        <span class="ml-2 text-sm font-semibold text-gray-700">Paket Aktif</span>
                    </label>
                </div>
            </div>
            
            <div class="flex justify-end gap-3 mt-6">
                <button type="button" onclick="closeModal()" 
                        class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                    Batal
                </button>
                <button type="submit" 
                        class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-semibold">
                    Simpan
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function showCreateModal() {
    document.getElementById('modalTitle').textContent = 'Buat Paket Baru';
    document.getElementById('packageForm').action = '/prepaid/packages/create';
    document.getElementById('packageForm').reset();
    document.getElementById('packageId').value = '';
    document.getElementById('packageIsActive').checked = true;
    document.getElementById('packageModal').classList.remove('hidden');
}

function editPackage(pkg) {
    document.getElementById('modalTitle').textContent = 'Edit Paket';
    document.getElementById('packageForm').action = `/prepaid/packages/update/${pkg.id}`;
    document.getElementById('packageId').value = pkg.id;
    document.getElementById('packageName').value = pkg.name;
    document.getElementById('packageDescription').value = pkg.description || '';
    document.getElementById('packagePrice').value = pkg.price;
    document.getElementById('packageDuration').value = pkg.duration_days;
    document.getElementById('packageSpeedProfile').value = pkg.speed_profile_id || '';
    document.getElementById('packageIsActive').checked = pkg.is_active == 1;
    document.getElementById('packageModal').classList.remove('hidden');
}

function closeModal() {
    document.getElementById('packageModal').classList.add('hidden');
}

function deletePackage(id, name) {
    if (confirm(`Yakin ingin menghapus paket "${name}"?\n\nPaket dengan langganan aktif tidak dapat dihapus.`)) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/prepaid/packages/delete/${id}`;
        document.body.appendChild(form);
        form.submit();
    }
}

// Close modal when clicking outside
document.getElementById('packageModal')?.addEventListener('click', function(e) {
    if (e.target === this) {
        closeModal();
    }
});
</script>

