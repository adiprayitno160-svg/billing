<div class="container-fluid px-4 py-6">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">
            <i class="fas fa-users text-blue-600 mr-3"></i>
            Customer Prepaid
        </h1>
        <p class="text-gray-600">Daftar semua customer dengan sistem prepaid</p>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6">
        <% if (customers && customers.length > 0) { %>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-gray-200">
                        <th class="text-left py-3 px-4 text-sm font-semibold text-gray-600">Customer</th>
                        <th class="text-left py-3 px-4 text-sm font-semibold text-gray-600">Portal ID</th>
                        <th class="text-left py-3 px-4 text-sm font-semibold text-gray-600">Paket Aktif</th>
                        <th class="text-left py-3 px-4 text-sm font-semibold text-gray-600">Status</th>
                        <th class="text-left py-3 px-4 text-sm font-semibold text-gray-600">Expired</th>
                    </tr>
                </thead>
                <tbody>
                    <% customers.forEach(function(customer) { %>
                    <tr class="border-b border-gray-100 hover:bg-gray-50 transition">
                        <td class="py-3 px-4">
                            <div class="font-semibold text-gray-800"><%= customer.name %></div>
                            <div class="text-xs text-gray-500"><%= customer.customer_code %></div>
                        </td>
                        <td class="py-3 px-4 text-sm">
                            <% if (customer.portal_id) { %>
                            <span class="font-mono text-blue-600"><%= customer.portal_id %></span>
                            <% } else { %>
                            <form action="/prepaid/customers/create-portal-access" method="POST" class="inline">
                                <input type="hidden" name="customer_id" value="<%= customer.id %>">
                                <button type="submit" class="text-blue-600 hover:text-blue-800 text-xs">
                                    <i class="fas fa-plus-circle"></i> Buat Akses
                                </button>
                            </form>
                            <% } %>
                        </td>
                        <td class="py-3 px-4 text-sm">
                            <%= customer.package_name || 'Tidak ada paket' %>
                        </td>
                        <td class="py-3 px-4">
                            <% if (customer.subscription_status === 'active') { %>
                            <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-xs font-semibold">Aktif</span>
                            <% } else { %>
                            <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-xs font-semibold">Tidak Aktif</span>
                            <% } %>
                        </td>
                        <td class="py-3 px-4 text-sm">
                            <% if (customer.expiry_date) { %>
                            <%= customer.days_remaining %> hari (<%= new Date(customer.expiry_date).toLocaleDateString('id-ID') %>)
                            <% } else { %>
                            -
                            <% } %>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <div class="text-center py-12 text-gray-500">
            <i class="fas fa-users text-5xl mb-4"></i>
            <p class="text-lg">Belum ada customer prepaid</p>
            <p class="text-sm mt-2">Customer dengan billing_mode='prepaid' akan muncul di sini</p>
        </div>
        <% } %>
    </div>
</div>

<%- include('../../partials/footer') %>

