<div class="container-fluid px-4 py-6">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="flex justify-between items-center mb-8">
        <div>
          <h1 class="text-3xl font-bold text-gray-800">ðŸ“¦ Manajemen Paket Prepaid</h1>
          <p class="text-gray-600 mt-2">Kelola paket internet untuk PPPoE & Static IP</p>
        </div>
        <a href="/prepaid/packages/create" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg shadow flex items-center">
          <i class="fas fa-plus mr-2"></i>
          Buat Paket Baru
        </a>
      </div>

      <!-- Alerts -->
      <% if (success) { %>
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded">
          <p class="font-bold">Success!</p>
          <p><%= success %></p>
        </div>
      <% } %>
      <% if (error) { %>
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded">
          <p class="font-bold">Error!</p>
          <p><%= error %></p>
        </div>
      <% } %>

      <!-- Packages Table -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nama Paket</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Connection Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kecepatan</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Durasi</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Harga</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Aksi</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (packages.length === 0) { %>
              <tr>
                <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                  <i class="fas fa-inbox text-4xl mb-2"></i>
                  <p>Belum ada paket. Silakan buat paket baru.</p>
                </td>
              </tr>
            <% } else { %>
              <% packages.forEach(pkg => { %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= pkg.name %></div>
                    <div class="text-sm text-gray-500"><%= pkg.description %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if (pkg.connection_type === 'pppoe') { %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                        <i class="fas fa-network-wired mr-1"></i> PPPoE
                      </span>
                      <div class="text-xs text-gray-500 mt-1">Profile: <%= pkg.mikrotik_profile_name %></div>
                    <% } else if (pkg.connection_type === 'static') { %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">
                        <i class="fas fa-server mr-1"></i> Static IP
                      </span>
                      <div class="text-xs text-gray-500 mt-1">
                        Parent: <%= pkg.parent_download_queue %>
                      </div>
                    <% } else { %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                        <i class="fas fa-check-double mr-1"></i> Both
                      </span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <i class="fas fa-download text-green-600"></i> <%= pkg.download_mbps %> Mbps<br>
                    <i class="fas fa-upload text-blue-600"></i> <%= pkg.upload_mbps %> Mbps
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= pkg.duration_days %> hari
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                    Rp <%= Number(pkg.price).toLocaleString('id-ID') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if (pkg.is_active) { %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                        Aktif
                      </span>
                    <% } else { %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                        Nonaktif
                      </span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <a href="/prepaid/packages/edit/<%= pkg.id %>" class="text-blue-600 hover:text-blue-900 mr-3">
                      <i class="fas fa-edit"></i> Edit
                    </a>
                    <button onclick="deletePackage(<%= pkg.id %>)" class="text-red-600 hover:text-red-900">
                      <i class="fas fa-trash"></i> Hapus
                    </button>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
</div>

<script>
function deletePackage(packageId) {
  if (!confirm('Yakin ingin menghapus paket ini?')) return;
  
  fetch(`/prepaid/packages/delete/${packageId}`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    }
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      alert('Paket berhasil dihapus!');
      window.location.reload();
    } else {
      alert('Gagal menghapus paket: ' + data.error);
    }
  })
  .catch(err => {
    alert('Error: ' + err.message);
  });
}
</script>

