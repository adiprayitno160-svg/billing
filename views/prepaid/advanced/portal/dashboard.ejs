<%- include('../../../layouts/portal-layout', { title: title }) %>

<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-800">My Dashboard</h1>
    <p class="text-gray-600 mt-2">Welcome back!</p>
  </div>

  <% if (subscription) { %>
    <!-- Active Subscription Card -->
    <div class="bg-gradient-to-r from-blue-500 to-blue-600 rounded-lg shadow-lg p-6 mb-8 text-white">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-2xl font-bold mb-2">Active Subscription</h2>
          <p class="text-blue-100 mb-4">
            Expires: <%= new Date(subscription.expiry_date).toLocaleDateString('id-ID', { 
              weekday: 'long', 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            }) %>
          </p>
          <div class="flex items-center space-x-4">
            <div class="bg-white  rounded-lg px-4 py-2">
              <p class="text-sm text-blue-100">Download</p>
              <p class="text-xl font-bold"><%= subscription.data_quota_gb ? `${subscription.data_used_gb || 0} / ${subscription.data_quota_gb} GB` : 'Unlimited' %></p>
            </div>
            <% if (usageStats && usageStats.days_remaining > 0) { %>
              <div class="bg-white  rounded-lg px-4 py-2">
                <p class="text-sm text-blue-100">Days Left</p>
                <p class="text-xl font-bold"><%= usageStats.days_remaining %> days</p>
              </div>
            <% } %>
          </div>
        </div>
        <div class="text-right">
          <div class="text-4xl font-bold mb-2"><%= subscription.subscription_code %></div>
          <span class="inline-block bg-green-400 text-green-900 px-3 py-1 rounded-full text-sm font-semibold">
            Active
          </span>
        </div>
      </div>
    </div>

    <!-- Usage Progress -->
    <% if (usageStats && subscription.data_quota_gb) { %>
      <div class="bg-white rounded-lg shadow p-6 mb-8">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Data Usage</h3>
        <div class="mb-2">
          <div class="flex justify-between text-sm text-gray-600 mb-1">
            <span>Used: <%= (usageStats.total_usage_gb || 0).toFixed(2) %> GB</span>
            <span>Remaining: <%= (usageStats.quota_remaining_gb || 0).toFixed(2) %> GB</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-4">
            <div 
              class="bg-blue-600 h-4 rounded-full transition-all duration-300" 
              style="width: <%= Math.min(100, usageStats.quota_percentage_used || 0) %>%"
            ></div>
          </div>
          <p class="text-xs text-gray-500 mt-1">
            <%= (usageStats.quota_percentage_used || 0).toFixed(1) %>% of quota used
          </p>
        </div>
      </div>
    <% } %>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <a href="/prepaid/advanced/portal/usage" class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center">
          <div class="bg-blue-100 p-3 rounded-full mr-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <div>
            <h3 class="font-semibold text-gray-800">Usage History</h3>
            <p class="text-sm text-gray-600">View detailed usage</p>
          </div>
        </div>
      </a>

      <a href="/prepaid/advanced/portal/packages" class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center">
          <div class="bg-green-100 p-3 rounded-full mr-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
          </div>
          <div>
            <h3 class="font-semibold text-gray-800">Buy Package</h3>
            <p class="text-sm text-gray-600">Purchase new package</p>
          </div>
        </div>
      </a>

      <a href="/prepaid/advanced/portal/referrals" class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center">
          <div class="bg-purple-100 p-3 rounded-full mr-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
          </div>
          <div>
            <h3 class="font-semibold text-gray-800">Referral Program</h3>
            <p class="text-sm text-gray-600">Earn rewards</p>
          </div>
        </div>
      </a>
    </div>
  <% } else { %>
    <!-- No Subscription -->
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-8 text-center mb-8">
      <div class="mb-4">
        <svg class="w-16 h-16 text-yellow-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-gray-800 mb-2">No Active Subscription</h2>
      <p class="text-gray-600 mb-6">You don't have an active package. Purchase one to start using internet!</p>
      <a href="/prepaid/advanced/portal/packages" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
        Browse Packages
      </a>
    </div>
  <% } %>

  <!-- Subscription History -->
  <% if (subscriptions && subscriptions.length > 0) { %>
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-800">Subscription History</h2>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Package</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Activated</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Expired</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% subscriptions.slice(0, 5).forEach((sub) => { %>
              <tr>
                <td class="px-6 py-4">
                  <div class="text-sm font-medium text-gray-900"><%= sub.subscription_code %></div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900"><%= new Date(sub.activation_date).toLocaleDateString('id-ID') %></div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900"><%= new Date(sub.expiry_date).toLocaleDateString('id-ID') %></div>
                </td>
                <td class="px-6 py-4">
                  <span class="px-2 py-1 text-xs rounded-full <%= 
                    sub.status === 'active' ? 'bg-green-100 text-green-800' :
                    sub.status === 'expired' ? 'bg-red-100 text-red-800' :
                    'bg-gray-100 text-gray-800'
                  %>">
                    <%= sub.status.charAt(0).toUpperCase() + sub.status.slice(1) %>
                  </span>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  <% } %>

  <!-- Referral Stats -->
  <% if (referralStats) { %>
    <div class="bg-white rounded-lg shadow p-6 mt-8">
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Referral Program</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <p class="text-sm text-gray-600">Total Referrals</p>
          <p class="text-2xl font-bold text-gray-800"><%= referralStats.total_referrals || 0 %></p>
        </div>
        <div>
          <p class="text-sm text-gray-600">Completed</p>
          <p class="text-2xl font-bold text-gray-800"><%= referralStats.completed_referrals || 0 %></p>
        </div>
        <div>
          <p class="text-sm text-gray-600">Total Rewards</p>
          <p class="text-2xl font-bold text-gray-800">Rp <%= (referralStats.total_rewards || 0).toLocaleString('id-ID') %></p>
        </div>
      </div>
      <div class="mt-4 p-4 bg-blue-50 rounded-lg">
        <p class="text-sm text-gray-600 mb-2">Your Referral Code:</p>
        <div class="flex items-center justify-between">
          <code class="text-lg font-mono font-bold text-blue-600"><%= referralStats.referral_code %></code>
          <button onclick="copyReferralCode('<%= referralStats.referral_code %>')" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm hover:bg-blue-700">
            Copy
          </button>
        </div>
      </div>
    </div>
  <% } %>
</div>

<script>
function copyReferralCode(code) {
  navigator.clipboard.writeText(code).then(() => {
    alert('Referral code copied to clipboard!');
  });
}
</script>

<%- include('../../../layouts/portal-layout-footer') %>




