<%- include('../../../layouts/portal-layout', { title: title }) %>

<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Choose Your Package</h1>
    <p class="text-gray-600 mt-2">Select the perfect internet package for your needs</p>
  </div>

  <!-- Featured Packages -->
  <% if (featured && featured.length > 0) { %>
    <div class="mb-8">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">⭐ Featured Packages</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <% featured.forEach((pkg) => { %>
          <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg shadow-lg p-6 text-white transform hover:scale-105 transition-transform">
            <div class="mb-4">
              <span class="bg-yellow-400 text-yellow-900 px-3 py-1 rounded-full text-xs font-semibold">FEATURED</span>
            </div>
            <h3 class="text-2xl font-bold mb-2"><%= pkg.name %></h3>
            <p class="text-blue-100 mb-4"><%= pkg.description || '' %></p>
            <div class="mb-4">
              <p class="text-3xl font-bold mb-1">
                Rp <%= (pkg.current_price || pkg.base_price).toLocaleString('id-ID') %>
              </p>
              <% if (pkg.is_on_sale) { %>
                <p class="text-sm text-blue-200 line-through">
                  Rp <%= pkg.base_price.toLocaleString('id-ID') %>
                </p>
                <p class="text-sm text-yellow-300">Save <%= pkg.discount_percentage %>%</p>
              <% } %>
            </div>
            <div class="mb-4 space-y-2">
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
                </svg>
                <span><%= pkg.download_mbps %> Mbps Download</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
                </svg>
                <span><%= pkg.upload_mbps %> Mbps Upload</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                </svg>
                <span><%= pkg.duration_days %> Days</span>
              </div>
              <% if (pkg.data_quota_gb) { %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"></path>
                  </svg>
                  <span><%= pkg.data_quota_gb %> GB Quota</span>
                </div>
              <% } %>
            </div>
            <a href="/prepaid/advanced/portal/packages/<%= pkg.id %>" class="block w-full bg-white text-blue-600 text-center py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors">
              Select Package
            </a>
          </div>
        <% }); %>
      </div>
    </div>
  <% } %>

  <!-- All Packages -->
  <div>
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold text-gray-800">All Packages</h2>
      <div class="flex space-x-2">
        <select id="filterType" class="border border-gray-300 rounded-lg px-4 py-2 text-sm">
          <option value="">All Types</option>
          <option value="basic">Basic</option>
          <option value="premium">Premium</option>
          <option value="vip">VIP</option>
          <option value="unlimited">Unlimited</option>
        </select>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% packages.forEach((pkg) => { %>
        <div class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow p-6">
          <div class="mb-4">
            <% if (pkg.is_featured) { %>
              <span class="bg-yellow-400 text-yellow-900 px-2 py-1 rounded text-xs font-semibold">FEATURED</span>
            <% } %>
            <% if (pkg.is_popular) { %>
              <span class="bg-green-400 text-green-900 px-2 py-1 rounded text-xs font-semibold ml-2">POPULAR</span>
            <% } %>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2"><%= pkg.name %></h3>
          <p class="text-gray-600 text-sm mb-4"><%= pkg.description || '' %></p>
          <div class="mb-4">
            <p class="text-2xl font-bold text-gray-800 mb-1">
              Rp <%= (pkg.current_price || pkg.base_price).toLocaleString('id-ID') %>
            </p>
            <% if (pkg.is_on_sale) { %>
              <p class="text-sm text-gray-500 line-through">
                Rp <%= pkg.base_price.toLocaleString('id-ID') %>
              </p>
              <p class="text-sm text-green-600 font-semibold">Save <%= pkg.discount_percentage %>%</p>
            <% } %>
          </div>
          <div class="mb-4 space-y-2 text-sm text-gray-600">
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"></path>
              </svg>
              <span><%= pkg.download_mbps %>/<%= pkg.upload_mbps %> Mbps</span>
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
              </svg>
              <span><%= pkg.duration_days %> Days</span>
            </div>
            <% if (pkg.data_quota_gb) { %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"></path>
                </svg>
                <span><%= pkg.data_quota_gb %> GB</span>
              </div>
            <% } else { %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span>Unlimited</span>
              </div>
            <% } %>
          </div>
          <a href="/prepaid/advanced/portal/packages/<%= pkg.id %>" class="block w-full bg-blue-600 text-white text-center py-2 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
            View Details
          </a>
        </div>
      <% }); %>
    </div>

    <% if (packages.length === 0) { %>
      <div class="text-center py-12">
        <p class="text-gray-500">No packages available</p>
      </div>
    <% } %>
  </div>
</div>

<script>
document.getElementById('filterType').addEventListener('change', function() {
  const type = this.value;
  if (type) {
    window.location.href = `/prepaid/advanced/portal/packages?type=${type}`;
  } else {
    window.location.href = '/prepaid/advanced/portal/packages';
  }
});
</script>

<%- include('../../../layouts/portal-layout-footer') %>




