<%- include('../../../layouts/portal-layout', { title: title }) %>

<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <!-- Package Header -->
    <div class="bg-gradient-to-r from-blue-500 to-blue-600 p-8 text-white">
      <div class="flex items-center justify-between">
        <div>
          <% if (package.is_featured) { %>
            <span class="bg-yellow-400 text-yellow-900 px-3 py-1 rounded-full text-sm font-semibold mb-2 inline-block">⭐ FEATURED</span>
          <% } %>
          <% if (package.is_popular) { %>
            <span class="bg-green-400 text-green-900 px-3 py-1 rounded-full text-sm font-semibold mb-2 ml-2 inline-block">🔥 POPULAR</span>
          <% } %>
          <h1 class="text-3xl font-bold mt-2"><%= package.name %></h1>
          <p class="text-blue-100 mt-2"><%= package.description || '' %></p>
        </div>
        <div class="text-right">
          <p class="text-sm text-blue-100">Starting from</p>
          <p class="text-4xl font-bold">
            Rp <%= pricing.finalPrice.toLocaleString('id-ID') %>
          </p>
          <% if (pricing.discount > 0) { %>
            <p class="text-lg text-blue-200 line-through mt-1">
              Rp <%= pricing.basePrice.toLocaleString('id-ID') %>
            </p>
            <p class="text-sm text-yellow-300 mt-1">Save Rp <%= pricing.savings.toLocaleString('id-ID') %></p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Package Details -->
    <div class="p-8">
      <!-- Speed & Duration -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
        <div class="text-center p-4 bg-blue-50 rounded-lg">
          <svg class="w-8 h-8 text-blue-600 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"></path>
          </svg>
          <p class="text-sm text-gray-600">Download</p>
          <p class="text-xl font-bold text-gray-800"><%= package.download_mbps %> Mbps</p>
        </div>
        <div class="text-center p-4 bg-green-50 rounded-lg">
          <svg class="w-8 h-8 text-green-600 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"></path>
          </svg>
          <p class="text-sm text-gray-600">Upload</p>
          <p class="text-xl font-bold text-gray-800"><%= package.upload_mbps %> Mbps</p>
        </div>
        <div class="text-center p-4 bg-purple-50 rounded-lg">
          <svg class="w-8 h-8 text-purple-600 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
          </svg>
          <p class="text-sm text-gray-600">Duration</p>
          <p class="text-xl font-bold text-gray-800"><%= package.duration_days %> Days</p>
        </div>
        <div class="text-center p-4 bg-orange-50 rounded-lg">
          <svg class="w-8 h-8 text-orange-600 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"></path>
          </svg>
          <p class="text-sm text-gray-600">Quota</p>
          <p class="text-xl font-bold text-gray-800">
            <%= package.data_quota_gb ? `${package.data_quota_gb} GB` : 'Unlimited' %>
          </p>
        </div>
      </div>

      <!-- Features -->
      <% if (package.features && package.features.length > 0) { %>
        <div class="mb-8">
          <h3 class="text-xl font-semibold text-gray-800 mb-4">Package Features</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
            <% package.features.forEach((feature) => { %>
              <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                <svg class="w-5 h-5 text-green-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700"><%= feature %></span>
              </div>
            <% }); %>
          </div>
        </div>
      <% } %>

      <!-- Voucher Section -->
      <div class="mb-8 p-4 bg-gray-50 rounded-lg">
        <h3 class="text-lg font-semibold text-gray-800 mb-3">Have a Voucher Code?</h3>
        <form method="GET" action="/prepaid/advanced/portal/packages/<%= package.id %>" class="flex gap-2">
          <input 
            type="text" 
            name="voucher" 
            placeholder="Enter voucher code" 
            class="flex-1 border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
            value="<%= voucherCode || '' %>"
          >
          <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700">
            Apply
          </button>
        </form>
        <% if (voucher) { %>
          <p class="text-green-600 mt-2 text-sm">✓ Voucher applied! Discount: Rp <%= voucherDiscount.toLocaleString('id-ID') %></p>
        <% } %>
      </div>

      <!-- Purchase Button -->
      <div class="border-t border-gray-200 pt-6">
        <form method="POST" action="/prepaid/advanced/portal/purchase">
          <input type="hidden" name="package_id" value="<%= package.id %>">
          <% if (voucher) { %>
            <input type="hidden" name="voucher_code" value="<%= voucherCode %>">
          <% } %>
          
          <div class="mb-4">
            <label class="flex items-center">
              <input type="checkbox" name="auto_renew" value="1" class="mr-2">
              <span class="text-gray-700">Enable auto-renewal (Get discount on renewal)</span>
            </label>
          </div>

          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600">Total Price</p>
              <p class="text-2xl font-bold text-gray-800">
                Rp <%= pricing.finalPrice.toLocaleString('id-ID') %>
              </p>
            </div>
            <button 
              type="submit" 
              class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold text-lg hover:bg-blue-700 transition-colors"
            >
              Purchase Now
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Back Button -->
  <div class="mt-6">
    <a href="/prepaid/advanced/portal/packages" class="text-blue-600 hover:text-blue-700 flex items-center">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Packages
    </a>
  </div>
</div>

<%- include('../../../layouts/portal-layout-footer') %>




