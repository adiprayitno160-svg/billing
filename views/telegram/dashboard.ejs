<!-- Modal: Create Invite Code -->
<div id="createInviteModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-lg bg-white">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Buat Kode Undangan</h3>
            <button onclick="closeCreateInviteModal()" class="text-gray-400 hover:text-gray-500">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        <form id="inviteForm" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Role</label>
                <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" id="inviteRole" required>
                    <option value="">-- Pilih Role --</option>
                    <option value="admin">Admin</option>
                    <option value="teknisi">Teknisi</option>
                    <option value="kasir">Kasir</option>
                    <option value="superadmin">Superadmin</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Area Coverage (untuk Teknisi)</label>
                <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" id="inviteArea" placeholder="Area A, Area B, Area C">
                <p class="text-xs text-gray-500 mt-1">Pisahkan dengan koma. Kosongkan untuk semua area.</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Berlaku Selama (Hari)</label>
                <input type="number" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" id="inviteExpiry" value="7" min="1" max="90">
            </div>
        </form>
        <div id="inviteResult" class="hidden mt-4 p-4 bg-green-50 border border-green-200 rounded-lg">
            <strong class="text-green-800">Kode Undangan:</strong>
            <div class="mt-2 flex items-center gap-2">
                <code id="inviteCodeDisplay" class="text-lg font-mono bg-white px-3 py-1 rounded border border-green-300"></code>
                <button class="px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-700" onclick="copyInviteCode()">
                    <i class="fas fa-copy"></i> Copy
                </button>
            </div>
            <small class="block mt-2 text-green-700">
                Kirim ke user: <code class="bg-white px-2 py-1 rounded border border-green-300">/register <span id="inviteCodeCmd"></span></code>
            </small>
        </div>
        <div class="flex justify-end gap-3 mt-6">
            <button onclick="closeCreateInviteModal()" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition-colors">
                Tutup
            </button>
            <button onclick="createInvite()" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors flex items-center gap-2">
                <i class="fas fa-plus"></i> Buat Kode
            </button>
        </div>
    </div>
</div>

<!-- Modal: Send Notification -->
<div id="sendNotificationModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-lg bg-white">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Kirim Notifikasi</h3>
            <button onclick="closeSendNotificationModal()" class="text-gray-400 hover:text-gray-500">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        <form id="notificationForm" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Tipe</label>
                <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" id="notifType" required>
                    <option value="system">System</option>
                    <option value="custom">Custom</option>
                    <option value="downtime">Downtime</option>
                    <option value="invoice">Invoice</option>
                    <option value="payment">Payment</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Prioritas</label>
                <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" id="notifPriority" required>
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                    <option value="critical">Critical</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Target</label>
                <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" id="notifTarget" required>
                    <option value="all">Semua User</option>
                    <option value="admin">Admin</option>
                    <option value="teknisi">Teknisi</option>
                    <option value="kasir">Kasir</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Target Area (opsional, untuk Teknisi)</label>
                <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" id="notifArea" placeholder="Area A">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Judul</label>
                <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" id="notifTitle" required placeholder="Notifikasi Penting">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Pesan</label>
                <textarea class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" id="notifMessage" rows="4" required placeholder="Masukkan pesan notifikasi..."></textarea>
            </div>
        </form>
        <div class="flex justify-end gap-3 mt-6">
            <button onclick="closeSendNotificationModal()" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition-colors">
                Batal
            </button>
            <button onclick="sendNotification()" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors flex items-center gap-2">
                <i class="fas fa-paper-plane"></i> Kirim
            </button>
        </div>
    </div>
</div>

<script>
    // Modal management
    function openCreateInviteModal() {
        document.getElementById('createInviteModal').classList.remove('hidden');
    }
    
    function closeCreateInviteModal() {
        document.getElementById('createInviteModal').classList.add('hidden');
        document.getElementById('inviteResult').classList.add('hidden');
    }
    
    function openSendNotificationModal() {
        document.getElementById('sendNotificationModal').classList.remove('hidden');
    }
    
    function closeSendNotificationModal() {
        document.getElementById('sendNotificationModal').classList.add('hidden');
    }

    // Create Invite Code
    async function createInvite() {
        const role = document.getElementById('inviteRole').value;
        const areaStr = document.getElementById('inviteArea').value;
        const expiryDays = document.getElementById('inviteExpiry').value;
        
        if (!role) {
            alert('Pilih role terlebih dahulu');
            return;
        }
        
        const areaCoverage = areaStr ? areaStr.split(',').map(a => a.trim()).filter(a => a) : [];
        
        try {
            const response = await fetch('/telegram/api/invite-code', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ role, areaCoverage, expiryDays: parseInt(expiryDays) })
            });
            
            const result = await response.json();
            
            if (result.success) {
                document.getElementById('inviteCodeDisplay').textContent = result.data.inviteCode;
                document.getElementById('inviteCodeCmd').textContent = result.data.inviteCode;
                document.getElementById('inviteResult').classList.remove('hidden');
            } else {
                alert('Gagal membuat kode undangan: ' + result.message);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Terjadi kesalahan');
        }
    }
    
    // Copy Invite Code
    function copyInviteCode() {
        const code = document.getElementById('inviteCodeDisplay').textContent;
        navigator.clipboard.writeText(code).then(() => {
            alert('Kode berhasil dicopy!');
        });
    }
    
    // Send Notification
    async function sendNotification() {
        const type = document.getElementById('notifType').value;
        const priority = document.getElementById('notifPriority').value;
        const targetRole = document.getElementById('notifTarget').value;
        const targetArea = document.getElementById('notifArea').value;
        const title = document.getElementById('notifTitle').value;
        const message = document.getElementById('notifMessage').value;
        
        if (!title || !message) {
            alert('Judul dan pesan harus diisi');
            return;
        }
        
        try {
            const response = await fetch('/telegram/api/notification', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    type,
                    priority,
                    title,
                    message,
                    targetRole,
                    targetArea: targetArea || null
                })
            });
            
            const result = await response.json();
            
            if (result.success) {
                alert(result.message);
                document.getElementById('notificationForm').reset();
                closeSendNotificationModal();
                location.reload();
            } else {
                alert('Gagal mengirim notifikasi: ' + result.message);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Terjadi kesalahan');
        }
    }
    
    // Refresh Stats
    function refreshStats() {
        location.reload();
    }
</script>
