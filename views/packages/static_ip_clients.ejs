<div class="space-y-6">
    <!-- Header Page -->
    <div
        class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 bg-white/50 backdrop-blur-md p-4 rounded-2xl border border-white/20 shadow-sm transition-all duration-300">
        <div class="flex items-center gap-4">
            <div class="p-3 bg-blue-600 rounded-xl shadow-lg shadow-blue-200">
                <i class="fas fa-users text-white text-xl"></i>
            </div>
            <div>
                <h2 class="text-xl font-bold text-slate-800">Client Paket: <span class="text-blue-600">
                        <%= package.name %>
                    </span></h2>
                <div class="flex items-center gap-2 mt-1">
                    <span class="flex items-center gap-1 text-xs font-medium text-slate-500">
                        <i class="fas fa-user-friends"></i>
                        <%= clients.length %> / <%= package.max_clients || 1 %> Terpakai
                    </span>
                    <div class="w-24 h-1.5 bg-slate-200 rounded-full overflow-hidden">
                        <div class="h-full bg-blue-500"
                            style="width: <%= Math.min(100, (clients.length / (package.max_clients || 1)) * 100) %>%">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="flex gap-2">
            <% if (!isFull) { %>
                <a href="/packages/static-ip/<%= package.id %>/clients/add"
                    class="flex-1 sm:flex-none flex items-center justify-center gap-2 px-4 py-2.5 rounded-xl bg-blue-600 text-white font-semibold text-sm hover:bg-blue-700 hover:shadow-lg hover:shadow-blue-200 transition-all duration-300 active:scale-95">
                    <i class="fas fa-plus"></i>
                    <span>Tambah Client</span>
                </a>
                <% } else { %>
                    <div
                        class="flex-1 sm:flex-none flex items-center justify-center gap-2 px-4 py-2.5 rounded-xl bg-red-100 text-red-700 font-semibold text-sm border border-red-200">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span>Paket Penuh</span>
                    </div>
                    <% } %>
                        <a href="/packages/static-ip"
                            class="flex items-center justify-center gap-2 px-4 py-2.5 rounded-xl border border-slate-300 bg-white text-slate-700 font-medium text-sm hover:bg-slate-50 transition-all duration-300">
                            <i class="fas fa-arrow-left"></i>
                            <span class="hidden sm:inline">Kembali</span>
                        </a>
        </div>
    </div>

    <!-- Informasi Paket Detail - Grid Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- BW Card -->
        <div
            class="bg-white p-4 rounded-2xl border border-slate-100 shadow-sm hover:shadow-md transition-all duration-300 group">
            <div class="flex items-center gap-3 mb-3">
                <div
                    class="w-10 h-10 rounded-xl bg-indigo-50 flex items-center justify-center text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition-all duration-300">
                    <i class="fas fa-tachometer-alt"></i>
                </div>
                <div>
                    <p class="text-[10px] font-bold text-slate-400 uppercase tracking-wider">Bandwidth Limit</p>
                    <p class="text-sm font-bold text-slate-700">
                        <%= package.max_limit_upload %> / <%= package.max_limit_download %>
                    </p>
                </div>
            </div>
            <div class="text-[11px] text-slate-500 font-medium bg-slate-50 p-2 rounded-lg">
                <span class="text-indigo-600">UP:</span>
                <%= package.max_limit_upload %> | <span class="text-blue-600">DOWN:</span>
                    <%= package.max_limit_download %>
            </div>
        </div>

        <!-- Shared BW Card -->
        <div
            class="bg-white p-4 rounded-2xl border border-slate-100 shadow-sm hover:shadow-md transition-all duration-300 group">
            <div class="flex items-center gap-3 mb-3">
                <div
                    class="w-10 h-10 rounded-xl bg-purple-50 flex items-center justify-center text-purple-600 group-hover:bg-purple-600 group-hover:text-white transition-all duration-300">
                    <i class="fas fa-share-alt"></i>
                </div>
                <div>
                    <p class="text-[10px] font-bold text-slate-400 uppercase tracking-wider">Shared per Client</p>
                    <p class="text-sm font-bold text-slate-700">
                        <%= package.max_clients> 1 ? Math.floor(parseInt(package.max_limit_download.replace(/[^0-9]/g,
                            '')) / package.max_clients) + 'M' : package.max_limit_download %>
                    </p>
                </div>
            </div>
            <div class="text-[11px] text-purple-600 font-medium bg-purple-50 p-2 rounded-lg">
                Alokasi bandwidth rata-rata per user
            </div>
        </div>

        <!-- Interface Card -->
        <div
            class="bg-white p-4 rounded-2xl border border-slate-100 shadow-sm hover:shadow-md transition-all duration-300 group">
            <div class="flex items-center gap-3 mb-3">
                <div
                    class="w-10 h-10 rounded-xl bg-blue-50 flex items-center justify-center text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-all duration-300">
                    <i class="fas fa-ethernet"></i>
                </div>
                <div>
                    <p class="text-[10px] font-bold text-slate-400 uppercase tracking-wider">Interface</p>
                    <p class="text-sm font-bold text-slate-700 truncate">
                        <%= package.interface || 'Semua' %>
                    </p>
                </div>
            </div>
            <div class="text-[11px] text-blue-600 font-medium bg-blue-50 p-2 rounded-lg truncate">
                Queue Parent: <%= package.parent_download_name || 'Global' %>
            </div>
        </div>

        <!-- Queue Type Card -->
        <div
            class="bg-white p-4 rounded-2xl border border-slate-100 shadow-sm hover:shadow-md transition-all duration-300 group">
            <div class="flex items-center gap-3 mb-3">
                <div
                    class="w-10 h-10 rounded-xl bg-amber-50 flex items-center justify-center text-amber-600 group-hover:bg-amber-600 group-hover:text-white transition-all duration-300">
                    <i class="fas fa-layer-group"></i>
                </div>
                <div>
                    <p class="text-[10px] font-bold text-slate-400 uppercase tracking-wider">Queue Type</p>
                    <p class="text-sm font-bold text-slate-700">
                        <%= package.child_queue_type_download || 'pcq' %>
                    </p>
                </div>
            </div>
            <div class="text-[11px] text-amber-600 font-medium bg-amber-50 p-2 rounded-lg">
                Priority: <span class="font-bold">
                    <%= package.child_priority_download || '8' %>
                </span>
            </div>
        </div>
    </div>

    <!-- Client List Layout -->
    <div class="bg-white rounded-3xl shadow-xl shadow-slate-200/50 border border-slate-100 overflow-hidden">
        <div class="p-6 border-b border-slate-100 flex items-center justify-between">
            <h3 class="font-bold text-slate-800 flex items-center gap-2">
                <i class="fas fa-list text-blue-500"></i>
                Daftar Client
            </h3>
            <span class="px-3 py-1 bg-slate-100 text-slate-600 rounded-full text-xs font-bold">
                Total: <%= clients.length %>
            </span>
        </div>

        <!-- Table for Desktop (Medium & Large screens) -->
        <div class="hidden md:block overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-100">
                <thead class="bg-slate-50/50 text-left">
                    <tr>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Nama Client</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">IP Address</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Terdaftar</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider text-right">Aksi
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-50">
                    <% (clients || []).forEach(function(client){ %>
                        <tr class="hover:bg-blue-50/30 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center gap-3">
                                    <div
                                        class="w-8 h-8 rounded-lg bg-blue-100 flex items-center justify-center text-blue-600 font-bold text-xs">
                                        <%= client.client_name.charAt(0).toUpperCase() %>
                                    </div>
                                    <span class="font-semibold text-slate-700">
                                        <%= client.client_name %>
                                    </span>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex flex-col">
                                    <span
                                        class="px-2.5 py-1 text-xs font-mono font-bold rounded-lg bg-blue-100 text-blue-700 w-fit">
                                        <%= client.ip_address_display || client.ip_address %>
                                    </span>
                                    <% if (client.ip_address && client.ip_address.includes('/')) { %>
                                        <span class="text-[10px] text-slate-400 mt-1 font-medium">GW: <%=
                                                client.ip_address %></span>
                                        <% } %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span
                                    class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-bold bg-green-100 text-green-700">
                                    <span class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></span>
                                    Aktif
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500 font-medium">
                                <i class="far fa-calendar-alt mr-1"></i>
                                <%= new Date(client.created_at).toLocaleDateString('id-ID', { day: '2-digit' ,
                                    month: 'short' , year: 'numeric' }) %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right">
                                <div class="flex justify-end gap-2">
                                    <a href="/packages/static-ip/<%= package.id %>/clients/<%= client.id %>/edit"
                                        class="p-2 rounded-lg border border-slate-200 text-slate-600 hover:bg-white hover:text-blue-600 hover:border-blue-300 hover:shadow-sm transition-all duration-300"
                                        title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post"
                                        action="/packages/static-ip/<%= package.id %>/clients/<%= client.id %>/delete"
                                        onsubmit="return confirm('Hapus client ini dari paket?');" class="inline">
                                        <button type="submit"
                                            class="p-2 rounded-lg border border-slate-200 text-slate-600 hover:bg-white hover:text-rose-600 hover:border-rose-300 hover:shadow-sm transition-all duration-300"
                                            title="Hapus">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Card Grid for Mobile/Tablet -->
        <div class="md:hidden p-4 space-y-4">
            <% (clients || []).forEach(function(client){ %>
                <div
                    class="p-4 rounded-2xl border border-slate-100 bg-slate-50/50 hover:bg-white hover:shadow-lg transition-all duration-300">
                    <div class="flex justify-between items-start mb-4">
                        <div class="flex items-center gap-3">
                            <div
                                class="w-10 h-10 rounded-xl bg-blue-600 flex items-center justify-center text-white font-bold">
                                <%= client.client_name.charAt(0).toUpperCase() %>
                            </div>
                            <div>
                                <h4 class="font-bold text-slate-800 leading-tight">
                                    <%= client.client_name %>
                                </h4>
                                <p class="text-[10px] text-slate-400 font-medium uppercase tracking-wider">Static IP
                                    Client</p>
                            </div>
                        </div>
                        <span
                            class="px-2.5 py-1 rounded-full text-[10px] font-black bg-green-100 text-green-700 uppercase tracking-tighter">
                            Aktif
                        </span>
                    </div>

                    <div class="grid grid-cols-2 gap-3 mb-4">
                        <div class="bg-white p-3 rounded-xl border border-slate-100 shadow-sm">
                            <p class="text-[9px] font-bold text-slate-400 uppercase mb-1">IP Alamat</p>
                            <p class="text-xs font-mono font-bold text-blue-600 leading-none">
                                <%= client.ip_address_display || client.ip_address %>
                            </p>
                        </div>
                        <div class="bg-white p-3 rounded-xl border border-slate-100 shadow-sm">
                            <p class="text-[9px] font-bold text-slate-400 uppercase mb-1">Terdaftar</p>
                            <p class="text-xs font-bold text-slate-700 leading-none">
                                <%= new Date(client.created_at).toLocaleDateString('id-ID', { day: '2-digit' ,
                                    month: 'short' }) %>
                            </p>
                        </div>
                    </div>

                    <div class="flex gap-2">
                        <a href="/packages/static-ip/<%= package.id %>/clients/<%= client.id %>/edit"
                            class="flex-1 flex items-center justify-center gap-2 py-2.5 rounded-xl border border-slate-200 bg-white text-slate-700 font-bold text-xs hover:bg-slate-50 active:scale-95 transition-all">
                            <i class="fas fa-edit text-blue-500"></i>
                            Edit
                        </a>
                        <form method="post"
                            action="/packages/static-ip/<%= package.id %>/clients/<%= client.id %>/delete"
                            onsubmit="return confirm('Hapus client ini dari paket?');" class="flex-1">
                            <button type="submit"
                                class="w-full flex items-center justify-center gap-2 py-2.5 rounded-xl border border-rose-100 bg-rose-50 text-rose-600 font-bold text-xs hover:bg-rose-100 active:scale-95 transition-all">
                                <i class="fas fa-trash-alt"></i>
                                Hapus
                            </button>
                        </form>
                    </div>
                </div>
                <% }) %>

                    <% if (!clients || clients.length===0) { %>
                        <div class="py-12 text-center">
                            <div
                                class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-users-slash text-slate-400 text-2xl"></i>
                            </div>
                            <p class="text-slate-500 font-medium">Belum ada client dalam paket ini.</p>
                            <p class="text-xs text-slate-400 mt-1">Klik tombol tambah untuk mulai.</p>
                        </div>
                        <% } %>
        </div>
    </div>
</div>