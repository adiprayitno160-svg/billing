<div class="rounded border border-slate-200 bg-white p-4 min-h-[60vh]">
    <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold">Daftar Paket PPPoE</h2>
        <a href="/packages/pppoe/packages/create"
            class="px-3 py-1.5 rounded bg-blue-600 text-white text-sm hover:bg-blue-700 inline-block">
            Tambah Paket
        </a>
    </div>

    <% if (success && success.length> 0) { %>
        <div class="mb-4 p-3 bg-green-100 border border-green-300 text-green-700 rounded">
            <%= success[0] %>
        </div>
        <% } %>

            <% if (error && error.length> 0) { %>
                <div class="mb-4 p-3 bg-red-100 border border-red-300 text-red-700 rounded">
                    <%= error[0] %>
                </div>
                <% } %>

                    <div class="overflow-x-auto">
                        <table class="min-w-full text-sm">
                            <thead class="text-left text-slate-600">
                                <tr>
                                    <th class="py-2 pr-4">Nama Paket</th>
                                    <th class="py-2 pr-4">Profil</th>
                                    <th class="py-2 pr-4">Harga</th>
                                    <th class="py-2 pr-4">Speed Limit</th>
                                    <th class="py-2 pr-4 text-center">Client</th>
                                    <th class="py-2 pr-4">Status</th>
                                    <th class="py-2 pr-4">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% (packages || []).forEach(function(pkg){ %>
                                    <tr class="border-t border-slate-100">
                                        <td class="py-2 pr-4">
                                            <div class="flex items-center gap-2">
                                                <span class="font-medium">
                                                    <%= pkg.name %>
                                                </span>
                                                <% if ((pkg.max_clients || 1)> 1) { %>
                                                    <span
                                                        class="px-1.5 py-0.5 text-[10px] rounded bg-purple-100 text-purple-700 border border-purple-200 font-bold"
                                                        title="Shared Bandwidth: <%= pkg.max_clients %> pelanggan share <%= pkg.rate_limit_rx || '?' %>">
                                                        SHARE
                                                    </span>
                                                    <% } %>
                                            </div>
                                        </td>
                                        <td class="py-2 pr-4">
                                            <%= pkg.profile_name || '-' %>
                                        </td>
                                        <td class="py-2 pr-4">Rp <%= Number(pkg.price).toLocaleString('id-ID') %>
                                        </td>
                                        <td class="py-2 pr-4">
                                            <% if (pkg.rate_limit_rx && pkg.rate_limit_tx) { %>
                                                <div class="flex flex-col">
                                                    <span>
                                                        <%= pkg.rate_limit_rx %>/<%= pkg.rate_limit_tx %>
                                                    </span>
                                                    <% if ((pkg.max_clients || 1)> 1) { %>
                                                        <span class="text-[10px] text-slate-500">
                                                            Min: <%- (pkg.limit_at_download ||
                                                                Math.floor(parseInt(pkg.rate_limit_rx) /
                                                                pkg.max_clients) + 'M' ) %>/<%- (pkg.limit_at_upload ||
                                                                    Math.floor(parseInt(pkg.rate_limit_tx) /
                                                                    pkg.max_clients) + 'M' ) %>
                                                        </span>
                                                        <% } %>
                                                </div>
                                                <% } else { %>
                                                    -
                                                    <% } %>
                                        </td>
                                        <td class="py-2 pr-4 text-center">
                                            <% if ((pkg.max_clients || 1)> 1) { %>
                                                <span
                                                    class="inline-flex items-center px-2 py-1 rounded text-xs font-semibold <%= pkg.current_clients >= pkg.max_clients ? 'bg-red-100 text-red-800 border border-red-200' : 'bg-purple-100 text-purple-800 border border-purple-200' %>"
                                                    title="<%= pkg.current_clients || 0 %> dari <%= pkg.max_clients %> slot terisi">
                                                    <%= pkg.current_clients || 0 %>/<%= pkg.max_clients %>
                                                </span>
                                                <% } else { %>
                                                    <span
                                                        class="inline-flex items-center px-2 py-1 rounded text-xs font-semibold bg-blue-100 text-blue-800 border border-blue-200">
                                                        <%= pkg.current_clients || 0 %>/∞
                                                    </span>
                                                    <% } %>
                                        </td>
                                        <td class="py-2 pr-4">
                                            <span
                                                class="px-2 py-1 text-xs rounded <%= pkg.status === 'active' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700' %>">
                                                <%= pkg.status==='active' ? 'Aktif' : 'Nonaktif' %>
                                            </span>
                                            <% if (!pkg.auto_activation) { %>
                                                <span
                                                    class="ml-1 px-1.5 py-0.5 text-[10px] rounded border border-amber-200 bg-amber-50 text-amber-700"
                                                    title="Aktivasi Manual">
                                                    Manual
                                                </span>
                                                <% } %>
                                        </td>
                                        <td class="py-2 pr-4 flex gap-2">
                                            <button type="button" data-package="<%= JSON.stringify(pkg) %>"
                                                onclick="copyPackage(JSON.parse(this.dataset.package))"
                                                class="px-2 py-1 text-xs rounded border border-blue-300 text-blue-700 hover:bg-blue-50 inline-block">
                                                Copy
                                            </button>
                                            <a href="/packages/pppoe/packages/<%= pkg.id %>/edit"
                                                class="px-2 py-1 text-xs rounded border border-slate-300 hover:bg-slate-50 inline-block">
                                                Edit
                                            </a>
                                            <button type="button"
                                                onclick="confirmDeletePackage(<%= pkg.id %>, '<%= pkg.name %>')"
                                                class="px-2 py-1 text-xs rounded border border-rose-300 text-rose-700 hover:bg-rose-50">
                                                Hapus
                                            </button>
                                            <form id="delete-form-<%= pkg.id %>" method="post"
                                                action="/packages/pppoe/packages/<%= pkg.id %>/delete" class="hidden">
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% if (!packages || packages.length===0) { %>
                                            <tr>
                                                <td colspan="7" class="py-6 text-center text-slate-500">Belum ada paket.
                                                    Klik "Tambah Paket" untuk membuat paket baru.</td>
                                            </tr>
                                            <% } %>
                            </tbody>
                        </table>
                    </div>
</div>

<div id="modalPackage" class="fixed inset-0 hidden items-center justify-center bg-black/40 p-4 z-50">
    <div class="w-full max-w-4xl rounded bg-white p-4 max-h-[90vh] overflow-y-auto shadow-lg">
        <div class="flex items-center justify-between mb-3 border-b pb-2">
            <h3 class="font-semibold" id="modalTitle">Tambah Paket PPPoE</h3>
            <button id="btnClosePackage" class="text-slate-500 hover:text-slate-700">✕</button>
        </div>
        <form id="formPackage" method="post" action="/packages/pppoe/packages"
            class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <div>
                <label class="block text-xs text-slate-600 mb-1">Nama Paket *</label>
                <input name="name" required
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:border-blue-500 focus:outline-none" />
            </div>
            <div>
                <div class="hidden">
                    <label class="block text-xs text-slate-600 mb-1">Profil PPPoE</label>
                    <select name="profile_id"
                        class="w-full rounded border border-slate-300 px-2 py-1.5 focus:border-blue-500 focus:outline-none">
                        <option value="">Auto-Create (Sesuai Nama Paket)</option>
                        <% (profiles || []).forEach(function(profile){ %>
                            <option value="<%= profile.id %>">
                                <%= profile.name %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <label class="block text-xs text-slate-600 mb-1">Status Aktivasi</label>
                <select name="auto_activation"
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:border-blue-500 focus:outline-none">
                    <option value="1">Otomatis (Saat Bayar)</option>
                    <option value="0">Manual (Konfirmasi Admin)</option>
                </select>
            </div>
            <div>
                <label class="block text-xs text-slate-600 mb-1">Harga (Rp) *</label>
                <input name="price" type="number" min="0" step="1" required
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:border-blue-500 focus:outline-none" />
            </div>
            <div>
                <label class="block text-xs text-slate-600 mb-1">Durasi (hari) *</label>
                <input name="duration_days" type="number" min="1" value="30" required
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:border-blue-500 focus:outline-none" />
            </div>
            <div>
                <label class="block text-xs text-slate-600 mb-1">Status</label>
                <select name="status"
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:border-blue-500 focus:outline-none">
                    <option value="active">Aktif</option>
                    <option value="inactive">Nonaktif</option>
                </select>
            </div>

            <!-- Rate Limits -->
            <div class="col-span-1 sm:col-span-2 mt-2">
                <h4 class="text-xs font-semibold text-slate-700 bg-slate-100 p-1 mb-2">Rate & Burst Limits</h4>
            </div>

            <div>
                <label class="block text-xs text-slate-600 mb-1">Rate Limit Download (Mbps)</label>
                <input name="rate_limit_rx" type="number" min="0" step="0.1"
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:border-blue-500 focus:outline-none" />
            </div>
            <div>
                <label class="block text-xs text-slate-600 mb-1">Rate Limit Upload (Mbps)</label>
                <input name="rate_limit_tx" type="number" min="0" step="0.1"
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:border-blue-500 focus:outline-none" />
            </div>
            <div>
                <label class="block text-xs text-slate-600 mb-1">Burst Limit Download (Mbps)</label>
                <input name="burst_limit_rx" type="number" min="0" step="0.1"
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:border-blue-500 focus:outline-none" />
            </div>
            <div>
                <label class="block text-xs text-slate-600 mb-1">Burst Limit Upload (Mbps)</label>
                <input name="burst_limit_tx" type="number" min="0" step="0.1"
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:border-blue-500 focus:outline-none" />
            </div>
            <div>
                <label class="block text-xs text-slate-600 mb-1">Burst Threshold Download (Mbps)</label>
                <input name="burst_threshold_rx" type="number" min="0" step="0.1"
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:border-blue-500 focus:outline-none" />
            </div>
            <div>
                <label class="block text-xs text-slate-600 mb-1">Burst Threshold Upload (Mbps)</label>
                <input name="burst_threshold_tx" type="number" min="0" step="0.1"
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:border-blue-500 focus:outline-none" />
            </div>
            <div>
                <label class="block text-xs text-slate-600 mb-1">Burst Time Download (detik)</label>
                <input name="burst_time_rx" type="number" min="0"
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:border-blue-500 focus:outline-none" />
            </div>
            <div>
                <label class="block text-xs text-slate-600 mb-1">Burst Time Upload (detik)</label>
                <input name="burst_time_tx" type="number" min="0"
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:border-blue-500 focus:outline-none" />
            </div>
            <div class="sm:col-span-2">
                <label class="block text-xs text-slate-600 mb-1">Deskripsi</label>
                <textarea name="description"
                    class="w-full rounded border border-slate-300 px-2 py-1.5 focus:border-blue-500 focus:outline-none"
                    rows="3"></textarea>
            </div>
            <div class="sm:col-span-2 flex justify-end gap-2 pt-2 border-t">
                <button type="button" id="btnCancelPackage"
                    class="px-3 py-1.5 rounded border border-slate-300 hover:bg-slate-50">Batal</button>
                <button type="submit" class="px-3 py-1.5 rounded bg-blue-600 text-white hover:bg-blue-700">Simpan
                    Paket</button>
            </div>
        </form>
    </div>
</div>

<script>
    (function () {
        const modal = document.getElementById('modalPackage');
        const openBtn = document.getElementById('btnAddPackage');
        const closeBtn = document.getElementById('btnClosePackage');
        const cancelBtn = document.getElementById('btnCancelPackage');
        const form = document.getElementById('formPackage');
        const modalTitle = document.getElementById('modalTitle');

        function hide() {
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            form.reset();
            form.action = '/packages/pppoe/packages'; // Reset to create URL
            modalTitle.innerText = 'Tambah Paket PPPoE'; // Reset title

            // Remove any hidden ID fields if they exist
            const existingIdInput = form.querySelector('input[name="id"]');
            if (existingIdInput) existingIdInput.remove();
        }

        function show() {
            modal.classList.remove('hidden');
            modal.classList.add('flex');
        }

        // Expose copyPackage globally
        window.copyPackage = function (pkg) {
            // Set form to create mode (no ID parameter in URL)
            form.action = '/packages/pppoe/packages';
            modalTitle.innerText = 'Copy Paket PPPoE: ' + pkg.name;

            // Fill form data
            const fields = [
                'profile_id', 'price', 'duration_days', 'status',
                'rate_limit_rx', 'rate_limit_tx',
                'burst_limit_rx', 'burst_limit_tx',
                'burst_threshold_rx', 'burst_threshold_tx',
                'burst_time_rx', 'burst_time_tx',
                'description'
            ];

            fields.forEach(field => {
                if (form.elements[field] && pkg[field] !== undefined && pkg[field] !== null) {
                    form.elements[field].value = pkg[field];
                }
            });

            // Set Name with suffix
            if (form.elements['name']) {
                form.elements['name'].value = pkg.name + ' (Copy)';
            }

            show();
        };

        if (openBtn) openBtn.addEventListener('click', show);
        if (closeBtn) closeBtn.addEventListener('click', hide);
        if (cancelBtn) cancelBtn.addEventListener('click', hide);

        window.confirmDeletePackage = function (id, name) {
            Swal.fire({
                title: 'Apakah Anda yakin?',
                text: "Paket '" + name + "' akan dihapus beserta profil MikroTik terkait jika tidak digunakan paket lain!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#e11d48',
                cancelButtonColor: '#64748b',
                confirmButtonText: 'Ya, Hapus!',
                cancelButtonText: 'Batal',
                reverseButtons: true,
                focusCancel: true,
                heightAuto: false, // Prevents body height glitches
                position: 'center', // Ensures modal is always in center
                scrollbarPadding: false
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('delete-form-' + id).submit();
                }
            });
        };
    })();
</script>