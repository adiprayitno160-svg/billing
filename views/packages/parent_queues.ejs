<div class="rounded border border-slate-200 bg-white p-4">
    <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold">Parent Queues</h2>
        <a href="/packages/parent-queues/add" class="px-3 py-1.5 rounded bg-blue-600 text-white text-sm hover:bg-blue-700 inline-block">Tambah Parent</a>
    </div>

    <% if (success && success.length > 0) { %>
    <div class="mb-4 p-3 bg-green-100 border border-green-300 text-green-700 rounded"><%= success[0] %></div>
    <% } %>
    <% if (error && error.length > 0) { %>
    <div class="mb-4 p-3 bg-red-100 border border-red-300 text-red-700 rounded"><%= error[0] %></div>
    <% } %>

    <table class="w-full text-sm">
        <thead>
            <tr class="text-left text-slate-600">
                <th class="py-2 pr-4">Nama</th>
                <th class="py-2 pr-4">Status</th>
                <th class="py-2 pr-4">Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% (parentQueues || []).forEach(function(pq){ %>
            <tr class="border-t">
                <td class="py-2 pr-4"><%= pq.name %></td>
                <td class="py-2 pr-4"><%= pq.status %></td>
                <td class="py-2 pr-4 flex gap-2">
                    <a href="/packages/parent-queues/<%= pq.id %>/edit" class="px-2 py-1 text-xs rounded border border-slate-300 hover:bg-slate-50 inline-block">Edit</a>
                    <form method="post" action="/packages/parent-queues/<%= pq.id %>/delete" onsubmit="return confirm('Hapus parent ini?');" class="inline">
                        <button type="submit" class="px-2 py-1 text-xs rounded border border-rose-300 text-rose-700 hover:bg-rose-50">Hapus</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>



