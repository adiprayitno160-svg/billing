# ===================================
# BILLING SYSTEM - Environment Configuration
# ===================================
# Copy this file to .env and configure with your settings
# Command: cp env.example .env

# ===================================
# DATABASE CONFIGURATION
# ===================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=billing_user
DB_PASSWORD=your_secure_password_here
DB_NAME=billing
# IMPORTANT: Database name in billing.sql is 'billing', not 'billing_system'

# ===================================
# SERVER CONFIGURATION
# ===================================
PORT=3000
NODE_ENV=production
# For development use: NODE_ENV=development

# ===================================
# SESSION CONFIGURATION
# ===================================
SESSION_SECRET=change_this_to_random_long_string_minimum_32_characters
# Generate random secret: openssl rand -base64 32

# ===================================
# MIKROTIK CONFIGURATION (Optional)
# ===================================
MIKROTIK_HOST=192.168.88.1
MIKROTIK_USER=admin
MIKROTIK_PASSWORD=your_mikrotik_password
MIKROTIK_PORT=8728

# ===================================
# PAYMENT GATEWAY CONFIGURATION (Optional)
# ===================================
# Midtrans
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=false

# Xendit
XENDIT_API_KEY=
XENDIT_WEBHOOK_TOKEN=

# Tripay
TRIPAY_API_KEY=
TRIPAY_PRIVATE_KEY=
TRIPAY_MERCHANT_CODE=
TRIPAY_IS_PRODUCTION=false

# ===================================
# TELEGRAM BOT CONFIGURATION (Optional)
# ===================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ===================================
# WHATSAPP CONFIGURATION (Optional)
# ===================================
WA_SESSION_PATH=./whatsapp-session

# ===================================
# EMAIL/SMTP CONFIGURATION (Optional)
# ===================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# ===================================
# LOGGING & SECURITY
# ===================================
LOG_LEVEL=info
ENABLE_RATE_LIMIT=true
ENABLE_HELMET=true

